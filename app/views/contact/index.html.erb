        <div class="bg-white dark:bg-gray-800 rounded-2xl p-6 shadow-lg">
          <h2 class="text-2xl font-bold text-gray-800 dark:text-white mb-6">Send us a message</h2>
          
          <%= form_with(url: "/contact/submit", method: :post, local: true, class: "space-y-6") do |form| %>
            <div>
              <label for="name" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Name</label>
              <%= form.text_field :name, placeholder: "Your name", class: "w-full py-3 px-4 rounded-xl border border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-800 text-gray-900 dark:text-white focus:outline-none focus:ring-2 focus:ring-primary-500 dark:focus:ring-primary-400" %>
            </div>
            
