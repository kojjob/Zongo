<% content_for :body_class, "landing-page" %>
<!-- Hero Section with 3D Elements and Gradient Animations -->
<section class="hero-section relative min-h-screen overflow-hidden">
  <!-- Video Background with Enhanced Overlay -->
  <div class="absolute inset-0 z-0">
    <video class="w-full h-full object-cover hidden md:block" autoplay loop muted playsinline>
      <source src="<%= asset_path('ghanapp.mp4') %>" type="video/mp4">
    </video>
    <!-- Fallback image for mobile -->
    <img src="<%= asset_path('hero_ghana.jpg') %>" alt="Vibrant Ghana marketplace" class="w-full h-full object-cover md:hidden">
    
    <!-- Gradient overlay with enhanced depth -->
    <div class="absolute inset-0 bg-gradient-to-br from-primary-900/95 via-primary-800/90 to-primary-900/85"></div>
    
    <!-- Animated pattern overlay -->
    <div class="absolute inset-0 pattern-grid opacity-10 animate-pulse-slow"></div>
    
    <!-- Floating geometric decorative elements -->
    <div class="absolute top-1/4 right-[15%] w-64 h-64 bg-secondary-500/10 rounded-full filter blur-3xl animate-float"></div>
    <div class="absolute bottom-1/4 left-[10%] w-80 h-80 bg-primary-400/10 rounded-full filter blur-3xl animate-float animation-delay-1000"></div>
    <div class="absolute top-1/3 left-[25%] w-40 h-40 bg-primary-300/5 rounded-full filter blur-2xl animate-float animation-delay-2000"></div>
  </div>

  <!-- Hero Content with Advanced Layout and Animations -->
  <div class="hero-content relative z-10 flex flex-col justify-center min-h-screen">
    <div class="container mx-auto px-4 md:px-8 flex flex-col lg:flex-row items-center gap-8 lg:gap-16">
      <!-- Left Column: Text Content -->
      <div class="w-full lg:w-3/5" data-controller="parallax">
        <!-- Animated Badge with Pulse Effect -->
        <div class="mb-8 inline-flex items-center px-4 py-2 backdrop-blur-md rounded-full bg-white/10 border border-white/20 shadow-xl animate-fade-in-up">
          <span class="flex items-center">
            <span class="h-2.5 w-2.5 rounded-full bg-secondary-400 mr-2 animate-pulse"></span>
            <span class="text-white font-semibold text-sm">Ghana's First All-In-One Super App</span>
          </span>
        </div>

        <!-- Main Heading with 3D Text Effect -->
        <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-extrabold mb-8 animate-fade-in-up animation-delay-200 leading-tight">
          <span class="text-white drop-shadow-xl">Unlock Ghana's</span><br>
          <span class="relative">
            <span class="absolute -inset-1 blur-md bg-gradient-to-r from-secondary-400 to-secondary-300 opacity-50"></span>
            <span class="relative bg-clip-text text-transparent bg-gradient-to-r from-secondary-400 to-secondary-300 drop-shadow-xl">Digital SuperApp</span>
          </span>
        </h1>

        <!-- Enhanced Subtitle with Animated Highlight -->
        <p class="text-xl text-white/90 mb-10 max-w-2xl animate-fade-in-up animation-delay-400 leading-relaxed">
          One app for all your needs - send money, shop, pay bills, access agricultural services, and connect with your community across Ghana.
