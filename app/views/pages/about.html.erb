<script>
  document.addEventListener('turbo:load', function() {
    // Initialize Alpine.js components if they exist
    if (typeof Alpine !== 'undefined') {
      Alpine.start();
    }

    // Fallback for accordion if not using Alpine.js
    const accordionButtons = document.querySelectorAll('[data-action="accordion#toggle"]');

    accordionButtons.forEach(button => {
      button.addEventListener('click', function() {
        const content = this.nextElementSibling;
        const icon = this.querySelector('[data-accordion-target="icon"]');

        if (content.classList.contains('hidden')) {
          content.classList.remove('hidden');
          icon.classList.add('rotate-180');
        } else {
          content.classList.add('hidden');
          icon.classList.remove('rotate-180');
        }
      });
    });
  });
</script>