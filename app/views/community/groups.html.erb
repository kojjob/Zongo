<%# Local Groups Page %>
<div class="bg-gradient-to-b from-green-50 to-white dark:from-gray-900 dark:to-gray-950">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <%# Page Header %>
    <div class="text-center mb-8">
      <h1 class="text-3xl font-extrabold text-gray-900 dark:text-white sm:text-4xl">Local Groups</h1>
      <p class="mt-3 max-w-2xl mx-auto text-lg text-gray-500 dark:text-gray-400">Join local groups based on your interests and connect with like-minded people.</p>
    </div>

    <%# Group Search Form %>
    <div class="max-w-3xl mx-auto bg-white dark:bg-gray-800 rounded-xl shadow-lg overflow-hidden">
      <div class="px-6 py-8">
        <%= form_with url: community_search_groups_path, method: :post, data: { turbo_frame: "search_results" }, class: "space-y-6" do |f| %>
          <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-2">
            <div class="sm:col-span-2">
              <label for="query" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Search for groups</label>
              <div class="mt-1 relative rounded-md shadow-sm">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                  </svg>
                </div>
                <%= f.text_field :query, class: "block w-full pl-10 pr-12 py-3 border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white rounded-md shadow-sm focus:ring-green-500 focus:border-green-500", placeholder: "Enter keywords (e.g. sports, music, technology)" %>
              </div>
            </div>

            <div class="sm:col-span-2">
              <label for="category_id" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Category</label>
              <div class="mt-1">
                <%= f.select :category_id, @categories.map { |c| [c.name, c.id] }, { include_blank: "All Categories" }, { class: "shadow-sm focus:ring-green-500 focus:border-green-500 block w-full sm:text-sm border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white rounded-md" } %>
              </div>
            </div>
          </div>

          <div class="flex items-center justify-end pt-4">
            <button type="submit" class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500">
              Search Groups
              <svg xmlns="http://www.w3.org/2000/svg" class="ml-2 -mr-1 h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
              </svg>
            </button>
          </div>
        <% end %>
      </div>
    </div>

    <%# My Groups (if user is signed in) %>
    <% if user_signed_in? && @my_groups&.any? %>
      <div class="mt-12">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">My Groups</h2>
        <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-4">
          <% @my_groups.each do |group| %>
            <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md overflow-hidden hover:shadow-lg transition-shadow">
              <div class="h-32 bg-gray-200 dark:bg-gray-700 flex items-center justify-center">
                <% if group.image.present? %>
                  <%= image_tag group.image, class: "h-full w-full object-cover" %>
                <% else %>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-gray-400 dark:text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                  </svg>
                <% end %>
              </div>
              <div class="p-4">
                <h3 class="text-lg font-bold text-gray-900 dark:text-white"><%= group.name %></h3>
                <p class="mt-1 text-sm text-gray-600 dark:text-gray-400 line-clamp-2"><%= group.description %></p>
                <div class="mt-3 flex justify-between items-center">
                  <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-green-100 dark:bg-green-900 text-green-800 dark:text-green-200">
                    <%= group.group_category&.name || "General" %>
                  </span>
                  <a href="<%= community_groups_path(group_id: group.id) %>" class="text-green-600 dark:text-green-400 hover:text-green-500 dark:hover:text-green-300 text-sm font-medium">
                    View
                  </a>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <%# Group Categories %>
    <div class="mt-12">
      <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">Browse by Category</h2>
      <div class="grid grid-cols-2 gap-4 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6">
        <% @categories&.each do |category| %>
          <a href="<%= community_groups_path(category_id: category.id) %>" class="bg-white dark:bg-gray-800 rounded-xl shadow-md overflow-hidden hover:shadow-lg transition-shadow text-center p-4">
            <div class="h-12 w-12 mx-auto bg-green-100 dark:bg-green-900 rounded-full flex items-center justify-center">
              <% if category.icon.present? %>
                <%= image_tag category.icon, class: "h-6 w-6" %>
              <% else %>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-green-600 dark:text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                </svg>
              <% end %>
            </div>
            <h3 class="mt-2 text-sm font-medium text-gray-900 dark:text-white"><%= category.name %></h3>
            <p class="mt-1 text-xs text-gray-500 dark:text-gray-400"><%= category.groups_count || 0 %> groups</p>
          </a>
        <% end %>
      </div>
    </div>

    <%# Search Results %>
    <div id="search_results" class="mt-12">
      <% if @groups %>
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">Search Results</h2>
        <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
          <% @groups.each do |group| %>
            <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md overflow-hidden hover:shadow-lg transition-shadow">
              <div class="h-40 bg-gray-200 dark:bg-gray-700 flex items-center justify-center">
                <% if group.image.present? %>
                  <%= image_tag group.image, class: "h-full w-full object-cover" %>
                <% else %>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 text-gray-400 dark:text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                  </svg>
                <% end %>
              </div>
              <div class="p-6">
                <div class="flex items-center">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 dark:bg-green-900 text-green-800 dark:text-green-200">
                    <%= group.group_category&.name || "General" %>
                  </span>
                </div>
                <h3 class="mt-2 text-xl font-bold text-gray-900 dark:text-white"><%= group.name %></h3>
                <p class="mt-2 text-gray-600 dark:text-gray-400 line-clamp-2"><%= group.description %></p>
                <div class="mt-4 flex justify-between items-center">
                  <span class="text-sm text-gray-500 dark:text-gray-400"><%= group.members_count %> members</span>
                  <%= form_with url: community_join_group_path, method: :post, class: "flex" do |f| %>
                    <%= f.hidden_field :group_id, value: group.id %>
                    <button type="submit" class="inline-flex items-center px-3 py-1.5 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500">
                      Join Group
                    </button>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>

    <%# Featured Groups %>
    <div class="mt-12">
      <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">Featured Groups</h2>
      <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
        <% @featured_groups&.each do |group| %>
          <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md overflow-hidden hover:shadow-lg transition-shadow">
            <div class="h-40 bg-gray-200 dark:bg-gray-700 flex items-center justify-center">
              <% if group.image.present? %>
                <%= image_tag group.image, class: "h-full w-full object-cover" %>
              <% else %>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 text-gray-400 dark:text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                </svg>
              <% end %>
            </div>
            <div class="p-6">
              <div class="flex items-center">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 dark:bg-green-900 text-green-800 dark:text-green-200">
                  <%= group.group_category&.name || "General" %>
                </span>
              </div>
              <h3 class="mt-2 text-xl font-bold text-gray-900 dark:text-white"><%= group.name %></h3>
              <p class="mt-2 text-gray-600 dark:text-gray-400 line-clamp-2"><%= group.description %></p>
              <div class="mt-4 flex justify-between items-center">
                <span class="text-sm text-gray-500 dark:text-gray-400"><%= group.members_count %> members</span>
                <%= form_with url: community_join_group_path, method: :post, class: "flex" do |f| %>
                  <%= f.hidden_field :group_id, value: group.id %>
                  <button type="submit" class="inline-flex items-center px-3 py-1.5 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500">
                    Join Group
                  </button>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <%# Popular Groups %>
    <div class="mt-12">
      <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">Popular Groups</h2>
      <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-4">
        <% @popular_groups&.each do |group| %>
          <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md overflow-hidden hover:shadow-lg transition-shadow">
            <div class="h-32 bg-gray-200 dark:bg-gray-700 flex items-center justify-center">
              <% if group.image.present? %>
                <%= image_tag group.image, class: "h-full w-full object-cover" %>
              <% else %>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-gray-400 dark:text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                </svg>
              <% end %>
            </div>
            <div class="p-4">
              <h3 class="text-lg font-bold text-gray-900 dark:text-white"><%= group.name %></h3>
              <p class="mt-1 text-sm text-gray-600 dark:text-gray-400 line-clamp-2"><%= group.description %></p>
              <div class="mt-3 flex justify-between items-center">
                <span class="text-xs text-gray-500 dark:text-gray-400"><%= group.members_count %> members</span>
                <%= form_with url: community_join_group_path, method: :post, class: "flex" do |f| %>
                  <%= f.hidden_field :group_id, value: group.id %>
                  <button type="submit" class="inline-flex items-center px-2 py-1 border border-transparent text-xs font-medium rounded-md shadow-sm text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500">
                    Join
                  </button>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
