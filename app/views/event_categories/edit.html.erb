<% content_for :title, "Edit #{@event_category.name}" %>

<div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <% if notice.present? %>
    <div class="mb-6">
      <%= render 'shared/flash_message', message: notice, type: 'success' %>
    </div>
  <% end %>

  <!-- Breadcrumbs -->
  <nav class="mb-6">
    <ol class="flex items-center space-x-2 text-sm text-gray-500 dark:text-gray-400">
      <li>
        <%= link_to "Home", root_path, class: "hover:text-primary-600 dark:hover:text-primary-400" %>
      </li>
      <li class="flex items-center">
        <svg class="h-4 w-4 mx-1" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
        </svg>
      </li>
      <li>
        <%= link_to "Event Categories", event_categories_path, class: "hover:text-primary-600 dark:hover:text-primary-400" %>
      </li>
      <li class="flex items-center">
        <svg class="h-4 w-4 mx-1" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
        </svg>
      </li>
      <li>
        <%= link_to @event_category.name, @event_category, class: "hover:text-primary-600 dark:hover:text-primary-400" %>
      </li>
      <li class="flex items-center">
        <svg class="h-4 w-4 mx-1" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
        </svg>
      </li>
      <li class="font-medium text-gray-700 dark:text-gray-300">
        Edit
      </li>
    </ol>
  </nav>

  <div class="flex items-center justify-between mb-6">
    <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Edit Category</h1>
    
    <%= link_to @event_category, class: "btn btn-outline" do %>
      <%= icon "eye", class: "w-5 h-5 mr-2" %>
      View Category
    <% end %>
  </div>

  <%= render "form", event_category: @event_category %>
</div>