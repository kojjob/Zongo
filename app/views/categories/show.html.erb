<!-- Category Show Page with modern design matching the app style -->
<div class="min-h-screen bg-gray-50 dark:bg-gray-900 transition-colors duration-200">
  <!-- Hero Section with dynamic color based on category -->
  <section class="relative overflow-hidden" style="background-color: <%= @category.color_code || '#3B82F6' %>;">
    <!-- Background pattern with overlay -->
    <div class="absolute inset-0 opacity-10">
      <svg class="w-full h-full" viewBox="0 0 100 100" preserveAspectRatio="none">
        <defs>
          <pattern id="grid" width="10" height="10" patternUnits="userSpaceOnUse">
            <path d="M 10 0 L 0 0 0 10" fill="none" stroke="white" stroke-width="0.5"/>
          </pattern>
        </defs>
        <rect width="100" height="100" fill="url(#grid)" />
      </svg>
    </div>
    
    <!-- Gradient overlay -->
    <div class="absolute inset-0 bg-gradient-to-t from-black/50 via-transparent to-black/20"></div>
    
    <div class="relative max-w-7xl mx-auto py-16 px-4 sm:px-6 lg:py-24 lg:px-8 z-10">
      <div class="flex flex-col md:flex-row items-center justify-between">
        <div class="space-y-6 text-white text-center md:text-left">
          <!-- Category badge -->
          <div class="inline-flex items-center px-3 py-1.5 rounded-full text-sm font-medium bg-white/20 backdrop-blur-sm text-white border border-white/30 shadow-sm">
            Category
          </div>
          
          <!-- Category title with icon -->
          <div class="flex items-center gap-4">
            <!-- Category Icon -->
            <div class="w-16 h-16 rounded-full flex items-center justify-center bg-white/20 backdrop-blur-sm">
              <% icon_name = @category.icon || "tag" %>
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <% case icon_name %>
                <% when "music" %>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3"></path>
                <% when "activity" %>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                <% when "utensils" %>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
                <% when "code" %>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
                <% when "briefcase" %>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                <% when "book-open" %>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                <% when "users" %>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
                <% when "heart" %>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                <% else %>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
                <% end %>
              </svg>
            </div>
            
            <h1 class="text-4xl md:text-5xl lg:text-6xl font-extrabold tracking-tight leading-none">
              <%= @category.name %>
            </h1>
          </div>
          
          <!-- Category description -->
          <% if @category.respond_to?(:description) && @category.description.present? %>
            <p class="text-xl max-w-2xl text-gray-100 leading-relaxed">
              <%= @category.description %>
            </p>
          <% end %>
          
          <!-- Stats -->
          <div class="flex flex-wrap gap-x-8 gap-y-4 mt-4 bg-black/20 backdrop-blur-sm p-6 rounded-xl max-w-xl border border-white/10">
            <div class="flex items-center">
              <div class="bg-white/20 p-2 rounded-lg mr-3">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
              </div>
              <div>
                <p class="text-xs text-gray-300 uppercase tracking-wide font-medium">Total Events</p>
                <p class="font-bold text-white"><%= @category.events.count %></p>
              </div>
            </div>
            
            <div class="flex items-center">
              <div class="bg-white/20 p-2 rounded-lg mr-3">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <div>
                <p class="text-xs text-gray-300 uppercase tracking-wide font-medium">Upcoming Events</p>
                <p class="font-bold text-white"><%= @category.events.upcoming.count rescue @category.events.count %></p>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Action buttons -->
        <div class="mt-8 md:mt-0 flex flex-col gap-4">
          <a href="<%= events_path(category_id: @category.id) %>" class="px-6 py-3 bg-white hover:bg-gray-50 text-gray-800 font-medium rounded-xl shadow-md hover:shadow-lg transition-all transform hover:-translate-y-1 flex items-center justify-center">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
            </svg>
            View All Events
          </a>
          
          <% if defined?(current_user) && current_user && current_user.respond_to?(:admin?) && current_user.admin? %>
            <%= link_to edit_category_path(@category), class: "px-6 py-3 bg-black/20 hover:bg-black/30 backdrop-blur-sm text-white rounded-xl font-medium border border-white/30 hover:border-white/50 transition-all transform hover:-translate-y-1 flex items-center justify-center" do %>
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
              </svg>
              Edit Category
            <% end %>
            
            <%= button_to category_path(@category), method: :delete, data: { confirm: "Are you sure you want to delete this category? This will remove the category from all associated events." }, class: "px-6 py-3 bg-red-500/20 hover:bg-red-500/30 backdrop-blur-sm text-white rounded-xl font-medium border border-red-400/30 hover:border-red-400/50 transition-all transform hover:-translate-y-1 flex items-center justify-center w-full" do %>
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
              </svg>
              Delete Category
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </section>

  <!-- Main content -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-8 pb-16">
    <!-- Events in this category -->
    <div class="mb-8">
      <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6 flex items-center">
        <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" style="color: <%= @category.color_code || '#3B82F6' %>;">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
        </svg>
        Upcoming Events in <%= @category.name %>
      </h2>
      
      <% if @events.present? %>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <% @events.each do |event| %>
            <%= render partial: 'events/event_card', locals: { event: event } %>
          <% end %>
        </div>
        
        <!-- Pagination -->
        <div class="mt-8 flex justify-center">
          <%= will_paginate @events, class: "pagination", inner_window: 2, outer_window: 1 %>
        </div>
      <% else %>
        <div class="bg-white dark:bg-gray-800 rounded-xl p-8 text-center border border-gray-200 dark:border-gray-700">
          <svg class="w-16 h-16 mx-auto text-gray-400 dark:text-gray-500 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
          <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2">No Events Found</h3>
          <p class="text-gray-600 dark:text-gray-400 mb-6">There are no upcoming events in this category yet.</p>
          <a href="<%= new_event_path(category_id: @category.id) %>" class="inline-flex items-center px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg transition-colors">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
            </svg>
            Create an Event
          </a>
        </div>
      <% end %>
    </div>
    
    <!-- Back to categories link -->
    <div class="mt-8">
      <a href="<%= categories_path %>" class="inline-flex items-center text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300 transition-colors">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Back to All Categories
      </a>
    </div>
  </div>
</div>
