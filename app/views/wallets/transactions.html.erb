<%# Transaction History Page %>
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8" data-controller="transactions-filter">
  <div class="flex items-center mb-6">
    <a href="<%= wallet_path %>" class="text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 mr-2">
      <%= icon "arrow-left", class: "w-5 h-5" %>
    </a>
    <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Transaction History</h1>
  </div>

  <%# Enhanced Filters Section with vibrant colors and visual cues %>
  <div class="bg-gradient-to-r from-blue-500/10 to-indigo-500/10 dark:from-blue-900/30 dark:to-indigo-900/30 rounded-xl shadow-lg p-6 mb-8 border border-blue-100 dark:border-blue-700 relative overflow-hidden">
    <!-- Decorative elements -->
    <div class="absolute top-0 right-0 w-40 h-40 bg-blue-500/5 dark:bg-blue-500/10 rounded-full -mt-20 -mr-20"></div>
    <div class="absolute bottom-0 left-0 w-32 h-32 bg-indigo-500/5 dark:bg-indigo-500/10 rounded-full -mb-16 -ml-16"></div>

    <div class="relative">
      <div class="flex items-center mb-4">
        <div class="w-12 h-12 rounded-full bg-blue-100 dark:bg-blue-800 flex items-center justify-center text-blue-600 dark:text-blue-300 mr-3 shadow-md border border-blue-200 dark:border-blue-700">
          <%= icon "filter", class: "w-6 h-6" %>
        </div>
        <h3 class="text-xl font-bold text-blue-900 dark:text-blue-200">Filter Transactions</h3>
      </div>

      <%= form_with url: transactions_wallet_path, method: :get, class: "space-y-6", data: { turbo_frame: "transactions_list", turbo: true, action: "transactions-filter#applyFilters" } do |f| %>
        <div class="grid grid-cols-1 md:grid-cols-4 gap-5">
          <div class="bg-white/90 dark:bg-gray-800 rounded-lg p-5 shadow-md border border-blue-100 dark:border-blue-700 hover:shadow-lg transition-shadow">
            <label for="type" class="flex items-center text-base font-semibold text-blue-800 dark:text-blue-200 mb-3">
              <div class="w-8 h-8 rounded-full bg-blue-100 dark:bg-blue-800 flex items-center justify-center text-blue-600 dark:text-blue-300 mr-2 shadow-sm border border-blue-200 dark:border-blue-700">
                <%= icon "tag", class: "w-4 h-4" %>
              </div>
              Transaction Type
            </label>
            <%= f.select :type,
                [
                  ['All Types', ''],
                  ['Deposits', 'deposit'],
                  ['Withdrawals', 'withdrawal'],
                  ['Transfers', 'transfer'],
                  ['Payments', 'payment']
                ],
                { selected: @filter_type },
                { class: "block w-full py-3 px-4 border-2 border-blue-200 dark:border-blue-700 bg-white dark:bg-gray-700 text-gray-800 dark:text-white rounded-lg focus:ring-blue-500 focus:border-blue-500 shadow-sm font-medium",
                  data: { action: "change->transactions-filter#submitOnChange" } }
            %>
          </div>

          <div class="bg-white/90 dark:bg-gray-800 rounded-lg p-5 shadow-md border border-blue-100 dark:border-blue-700 hover:shadow-lg transition-shadow">
            <label for="status" class="flex items-center text-base font-semibold text-blue-800 dark:text-blue-200 mb-3">
              <div class="w-8 h-8 rounded-full bg-blue-100 dark:bg-blue-800 flex items-center justify-center text-blue-600 dark:text-blue-300 mr-2 shadow-sm border border-blue-200 dark:border-blue-700">
                <%= icon "check-circle", class: "w-4 h-4" %>
              </div>
              Status
            </label>
            <%= f.select :status,
                [
                  ['All Statuses', ''],
                  ['Completed', 'completed'],
                  ['Pending', 'pending'],
                  ['Failed', 'failed'],
                  ['Reversed', 'reversed']
                ],
                { selected: @filter_status },
                { class: "block w-full py-3 px-4 border-2 border-blue-200 dark:border-blue-700 bg-white dark:bg-gray-700 text-gray-800 dark:text-white rounded-lg focus:ring-blue-500 focus:border-blue-500 shadow-sm font-medium",
                  data: { action: "change->transactions-filter#submitOnChange" } }
            %>
          </div>

          <div class="bg-white/90 dark:bg-gray-800 rounded-lg p-5 shadow-md border border-blue-100 dark:border-blue-700 hover:shadow-lg transition-shadow">
            <label for="start_date" class="flex items-center text-base font-semibold text-blue-800 dark:text-blue-200 mb-3">
              <div class="w-8 h-8 rounded-full bg-blue-100 dark:bg-blue-800 flex items-center justify-center text-blue-600 dark:text-blue-300 mr-2 shadow-sm border border-blue-200 dark:border-blue-700">
                <%= icon "calendar", class: "w-4 h-4" %>
              </div>
              Start Date
            </label>
            <%= f.date_field :start_date,
                value: @filter_start_date,
                max: Date.current,
                class: "block w-full py-3 px-4 border-2 border-blue-200 dark:border-blue-700 bg-white dark:bg-gray-700 text-gray-800 dark:text-white rounded-lg focus:ring-blue-500 focus:border-blue-500 shadow-sm font-medium",
                data: { transactions_filter_target: "startDate", action: "change->transactions-filter#validateDates" }
            %>
          </div>

          <div class="bg-white/90 dark:bg-gray-800 rounded-lg p-5 shadow-md border border-blue-100 dark:border-blue-700 hover:shadow-lg transition-shadow">
            <label for="end_date" class="flex items-center text-base font-semibold text-blue-800 dark:text-blue-200 mb-3">
              <div class="w-8 h-8 rounded-full bg-blue-100 dark:bg-blue-800 flex items-center justify-center text-blue-600 dark:text-blue-300 mr-2 shadow-sm border border-blue-200 dark:border-blue-700">
                <%= icon "calendar", class: "w-4 h-4" %>
              </div>
              End Date
            </label>
            <%= f.date_field :end_date,
                value: @filter_end_date,
                max: Date.current,
                class: "block w-full py-3 px-4 border-2 border-blue-200 dark:border-blue-700 bg-white dark:bg-gray-700 text-gray-800 dark:text-white rounded-lg focus:ring-blue-500 focus:border-blue-500 shadow-sm font-medium",
                data: { transactions_filter_target: "endDate", action: "change->transactions-filter#validateDates" }
            %>
          </div>
        </div>

        <div class="flex flex-col sm:flex-row justify-between items-center gap-4 pt-4">
          <button type="button" class="flex items-center px-5 py-3 bg-white dark:bg-gray-800 text-blue-700 dark:text-blue-300 rounded-lg hover:bg-blue-50 dark:hover:bg-blue-900/20 transition-colors shadow-md border border-blue-200 dark:border-blue-800 font-medium w-full sm:w-auto justify-center" data-action="transactions-filter#resetFilters">
            <%= icon "refresh-ccw", class: "w-5 h-5 mr-2" %>
            Reset All Filters
          </button>

          <button type="submit" class="flex items-center px-6 py-3 bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-700 hover:to-indigo-700 text-white font-bold rounded-lg shadow-md hover:shadow-lg transition-all transform hover:-translate-y-1 w-full sm:w-auto justify-center border border-blue-700">
            <%= icon "filter", class: "w-5 h-5 mr-2" %>
            Apply Filters
          </button>
        </div>
      <% end %>
    </div>
  </div>

  <%# Enhanced Summary Cards with vibrant colors and visual cues %>
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
    <div class="bg-gradient-to-br from-indigo-500/10 to-purple-500/10 dark:from-indigo-900/20 dark:to-purple-900/20 rounded-xl shadow-lg p-6 border border-indigo-100 dark:border-indigo-800/30 relative overflow-hidden transform transition-all hover:-translate-y-1 hover:shadow-xl">
      <!-- Decorative elements -->
      <div class="absolute top-0 right-0 w-32 h-32 bg-indigo-500/5 rounded-full -mt-10 -mr-10"></div>
      <div class="absolute bottom-0 left-0 w-24 h-24 bg-purple-500/5 rounded-full -mb-8 -ml-8"></div>

      <div class="relative">
        <div class="flex items-center mb-3">
          <div class="w-14 h-14 rounded-full bg-indigo-100 dark:bg-indigo-900/40 flex items-center justify-center text-indigo-600 dark:text-indigo-400 mr-4 shadow-md">
            <%= icon "wallet", class: "w-7 h-7" %>
          </div>
          <h3 class="text-xl font-bold text-indigo-900 dark:text-indigo-300">Current Balance</h3>
        </div>
        <p class="text-4xl font-extrabold text-indigo-700 dark:text-indigo-300 ml-2"><%= @wallet.formatted_balance %></p>
        <div class="flex items-center mt-3 bg-white/50 dark:bg-black/20 rounded-lg px-3 py-2">
          <%= icon "clock", class: "w-4 h-4 text-indigo-600 dark:text-indigo-400 mr-2" %>
          <p class="text-sm text-indigo-800 dark:text-indigo-300">Updated <%= time_ago_in_words(@wallet.updated_at) %> ago</p>
        </div>
      </div>
    </div>

    <div class="bg-gradient-to-br from-green-500/10 to-emerald-500/10 dark:from-green-900/20 dark:to-emerald-900/20 rounded-xl shadow-lg p-6 border border-green-100 dark:border-green-800/30 relative overflow-hidden transform transition-all hover:-translate-y-1 hover:shadow-xl">
      <!-- Decorative elements -->
      <div class="absolute top-0 right-0 w-32 h-32 bg-green-500/5 rounded-full -mt-10 -mr-10"></div>
      <div class="absolute bottom-0 left-0 w-24 h-24 bg-emerald-500/5 rounded-full -mb-8 -ml-8"></div>

      <div class="relative">
        <div class="flex items-center mb-3">
          <div class="w-14 h-14 rounded-full bg-green-100 dark:bg-green-900/40 flex items-center justify-center text-green-600 dark:text-green-400 mr-4 shadow-md">
            <%= icon "arrow-down", class: "w-7 h-7" %>
          </div>
          <h3 class="text-xl font-bold text-green-900 dark:text-green-300">Money In</h3>
        </div>
        <p class="text-4xl font-extrabold text-green-700 dark:text-green-300 ml-2"><%= @wallet.currency_symbol %><%= @total_incoming.to_f.round(2) %></p>
        <div class="flex items-center mt-3 bg-white/50 dark:bg-black/20 rounded-lg px-3 py-2">
          <%= icon "calendar", class: "w-4 h-4 text-green-600 dark:text-green-400 mr-2" %>
          <p class="text-sm text-green-800 dark:text-green-300">For the selected period</p>
        </div>
      </div>
    </div>

    <div class="bg-gradient-to-br from-red-500/10 to-pink-500/10 dark:from-red-900/20 dark:to-pink-900/20 rounded-xl shadow-lg p-6 border border-red-100 dark:border-red-800/30 relative overflow-hidden transform transition-all hover:-translate-y-1 hover:shadow-xl">
      <!-- Decorative elements -->
      <div class="absolute top-0 right-0 w-32 h-32 bg-red-500/5 rounded-full -mt-10 -mr-10"></div>
      <div class="absolute bottom-0 left-0 w-24 h-24 bg-pink-500/5 rounded-full -mb-8 -ml-8"></div>

      <div class="relative">
        <div class="flex items-center mb-3">
          <div class="w-14 h-14 rounded-full bg-red-100 dark:bg-red-900/40 flex items-center justify-center text-red-600 dark:text-red-400 mr-4 shadow-md">
            <%= icon "arrow-up", class: "w-7 h-7" %>
          </div>
          <h3 class="text-xl font-bold text-red-900 dark:text-red-300">Money Out</h3>
        </div>
        <p class="text-4xl font-extrabold text-red-700 dark:text-red-300 ml-2"><%= @wallet.currency_symbol %><%= @total_outgoing.to_f.round(2) %></p>
        <div class="flex items-center mt-3 bg-white/50 dark:bg-black/20 rounded-lg px-3 py-2">
          <%= icon "calendar", class: "w-4 h-4 text-red-600 dark:text-red-400 mr-2" %>
          <p class="text-sm text-red-800 dark:text-red-300">For the selected period</p>
        </div>
      </div>
    </div>
  </div>

  <%# Transactions List %>
  <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md overflow-hidden">
    <div class="p-6 border-b border-gray-200 dark:border-gray-700">
      <h2 class="text-lg font-semibold text-gray-900 dark:text-white">Transactions</h2>
    </div>

    <div id="transactions_list">
      <div class="overflow-x-auto">
        <table class="w-full">
          <thead class="bg-gray-50 dark:bg-gray-700">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Transaction</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Date</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Details</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Amount</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Status</th>
              <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Action</th>
            </tr>
          </thead>
          <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
            <% if @transactions.empty? %>
              <tr>
                <td colspan="6" class="px-6 py-8 text-center text-gray-500 dark:text-gray-400">
                  <div class="flex flex-col items-center justify-center">
                    <%= icon "empty-list", class: "w-12 h-12 mb-3 text-gray-300 dark:text-gray-600" %>
                    <p>No transactions found</p>
                    <p class="mt-1 text-sm">Try adjusting your filters</p>
                  </div>
                </td>
              </tr>
            <% else %>
              <% @transactions.each do |transaction| %>
                <tr class="hover:bg-gray-50 dark:hover:bg-gray-700 transition">
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="flex items-center">
                      <%
                        icon_name = case transaction.transaction_type
                                    when 'deposit' then 'money-in'
                                    when 'withdrawal' then 'money-out'
                                    when 'transfer' then 'transfer'
                                    when 'payment' then 'shopping'
                                    end

                        icon_color = case transaction.transaction_type
                                     when 'deposit' then 'text-green-500'
                                     when 'withdrawal' then 'text-red-500'
                                     when 'transfer' then 'text-blue-500'
                                     when 'payment' then 'text-purple-500'
                                     end
                      %>
                      <div class="flex-shrink-0 h-8 w-8 rounded-full bg-gray-100 dark:bg-gray-700 flex items-center justify-center <%= icon_color %>">
                        <%= icon icon_name, class: "h-4 w-4" %>
                      </div>
                      <div class="ml-4">
                        <div class="text-sm font-medium text-gray-900 dark:text-white">
                          <%= transaction.transaction_type_description %>
                        </div>
                        <div class="text-xs text-gray-500 dark:text-gray-400">
                          <%= transaction.reference %>
                        </div>
                      </div>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm font-medium text-gray-900 dark:text-gray-100">
                      <%= transaction.created_at.strftime("%b %d, %Y") %>
                    </div>
                    <div class="text-xs text-gray-600 dark:text-gray-300">
                      <%= transaction.created_at.strftime("%I:%M %p") %>
                    </div>
                  </td>
                  <td class="px-6 py-4">
                    <div class="text-sm font-medium text-gray-900 dark:text-gray-100">
                      <% if transaction.description.present? %>
                        <%= transaction.description %>
                      <% else %>
                        <%= transaction.transaction_type_description %>
                      <% end %>
                    </div>
                    <% if transaction.transaction_type == 'transfer' %>
                      <div class="text-xs text-gray-600 dark:text-gray-300 mt-1 flex items-center">
                        <% if transaction.direction_for_user(current_user.id) == :outgoing %>
                          <%= icon "arrow-right", class: "w-3 h-3 mr-1 text-red-500 dark:text-red-400" %>
                          <span>To: <%= transaction.other_party_name(current_user.id) %></span>
                        <% else %>
                          <%= icon "arrow-left", class: "w-3 h-3 mr-1 text-green-500 dark:text-green-400" %>
                          <span>From: <%= transaction.other_party_name(current_user.id) %></span>
                        <% end %>
                      </div>
                    <% end %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <% amount_class = transaction.direction_for_user(current_user.id) == :incoming ? 'text-green-600 dark:text-green-400' : 'text-red-600 dark:text-red-400' %>
                    <div class="text-sm font-medium <%= amount_class %>">
                      <%= transaction.signed_amount_for_user(current_user.id) %>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <%
                      case transaction.status
                      when 'completed'
                        status_class = 'bg-green-100 text-green-800 dark:bg-green-800 dark:text-green-100 border border-green-200 dark:border-green-700'
                        status_icon = 'check-circle'
                      when 'pending'
                        status_class = 'bg-yellow-100 text-yellow-800 dark:bg-yellow-800 dark:text-yellow-100 border border-yellow-200 dark:border-yellow-700'
                        status_icon = 'clock'
                      when 'failed'
                        status_class = 'bg-red-100 text-red-800 dark:bg-red-800 dark:text-red-100 border border-red-200 dark:border-red-700'
                        status_icon = 'alert-triangle'
                      when 'reversed'
                        status_class = 'bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-100 border border-gray-200 dark:border-gray-600'
                        status_icon = 'refresh-ccw'
                      end
                    %>
                    <span class="px-2 py-1 inline-flex items-center text-xs leading-5 font-semibold rounded-full <%= status_class %>">
                      <%= icon status_icon, class: "w-3 h-3 mr-1" %>
                      <%= transaction.status.capitalize %>
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                    <a href="<%= transaction_path(id: transaction.id) %>" class="inline-flex items-center px-3 py-1.5 bg-primary-50 dark:bg-primary-900/30 text-primary-600 dark:text-primary-300 rounded-lg border border-primary-200 dark:border-primary-800 hover:bg-primary-100 dark:hover:bg-primary-800/50 transition-colors">
                      <%= icon "eye", class: "w-4 h-4 mr-1.5" %>
                      View Details
                    </a>
                  </td>
                </tr>
              <% end %>
            <% end %>
          </tbody>
        </table>
      </div>

      <% if @transactions.any? %>
        <div class="py-4 px-6 border-t border-gray-200 dark:border-gray-700 flex flex-col sm:flex-row sm:items-center sm:justify-between">
          <div class="text-sm text-gray-500 dark:text-gray-400 mb-3 sm:mb-0">
            <% if defined?(Pagy) %>
              Showing <%= pagy_info(@pagy) %>
            <% else %>
              Showing <%= @pagy.page %> of <%= @pagy.pages %> pages
            <% end %>
          </div>
          <div class="pagination">
            <% if defined?(Pagy) %>
              <%== pagy_nav(@pagy) %>
            <% else %>
              <div class="flex space-x-2">
                <% if @pagy.page > 1 %>
                  <a href="?page=<%= @pagy.page - 1 %>" class="px-3 py-1 bg-gray-200 dark:bg-gray-700 rounded">Previous</a>
                <% else %>
                  <span class="px-3 py-1 bg-gray-100 dark:bg-gray-800 rounded opacity-50">Previous</span>
                <% end %>

                <span class="px-3 py-1 bg-primary-600 text-white rounded"><%= @pagy.page %></span>

                <% if @pagy.page < @pagy.pages %>
                  <a href="?page=<%= @pagy.page + 1 %>" class="px-3 py-1 bg-gray-200 dark:bg-gray-700 rounded">Next</a>
                <% else %>
                  <span class="px-3 py-1 bg-gray-100 dark:bg-gray-800 rounded opacity-50">Next</span>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
