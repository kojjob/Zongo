<%# Learning Resources Page %>
<div class="bg-gradient-to-b from-indigo-50 to-white dark:from-gray-900 dark:to-gray-950">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <%# Page Header %>
    <div class="text-center mb-8">
      <h1 class="text-3xl font-extrabold text-gray-900 dark:text-white sm:text-4xl">Learning Resources</h1>
      <p class="mt-3 max-w-2xl mx-auto text-lg text-gray-500 dark:text-gray-400">Access educational materials to enhance your learning experience.</p>
    </div>

    <%# Resource Search Form %>
    <div class="max-w-3xl mx-auto bg-white dark:bg-gray-800 rounded-xl shadow-lg overflow-hidden">
      <div class="px-6 py-8">
        <%= form_with url: education_search_resources_path, method: :post, data: { turbo_frame: "search_results" }, class: "space-y-6" do |f| %>
          <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-2">
            <div class="sm:col-span-2">
              <label for="query" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Search for resources</label>
              <div class="mt-1 relative rounded-md shadow-sm">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                  </svg>
                </div>
                <%= f.text_field :query, class: "block w-full pl-10 pr-12 py-3 border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500", placeholder: "Enter keywords (e.g. math, science, history)" %>
              </div>
            </div>

            <div class="sm:col-span-2">
              <label for="category_id" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Category</label>
              <div class="mt-1">
                <%= f.select :category_id, @categories.map { |c| [c.name, c.id] }, { include_blank: "All Categories" }, { class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white rounded-md" } %>
              </div>
            </div>
          </div>

          <div class="flex items-center justify-end pt-4">
            <button type="submit" class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
              Search Resources
              <svg xmlns="http://www.w3.org/2000/svg" class="ml-2 -mr-1 h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
              </svg>
            </button>
          </div>
        <% end %>
      </div>
    </div>

    <%# Resource Categories %>
    <div class="mt-12">
      <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">Browse by Category</h2>
      <div class="grid grid-cols-2 gap-4 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6">
        <% @categories&.each do |category| %>
          <a href="<%= education_resources_path(category_id: category.id) %>" class="bg-white dark:bg-gray-800 rounded-xl shadow-md overflow-hidden hover:shadow-lg transition-shadow text-center p-4">
            <div class="h-12 w-12 mx-auto bg-indigo-100 dark:bg-indigo-900 rounded-full flex items-center justify-center">
              <% if category.icon.present? %>
                <%= image_tag category.icon, class: "h-6 w-6" %>
              <% else %>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-indigo-600 dark:text-indigo-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                </svg>
              <% end %>
            </div>
            <h3 class="mt-2 text-sm font-medium text-gray-900 dark:text-white"><%= category.name %></h3>
            <p class="mt-1 text-xs text-gray-500 dark:text-gray-400"><%= category.resources_count || 0 %> resources</p>
          </a>
        <% end %>
      </div>
    </div>

    <%# Search Results %>
    <div id="search_results" class="mt-12">
      <% if @resources %>
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">Search Results</h2>
        <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
          <% @resources.each do |resource| %>
            <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md overflow-hidden hover:shadow-lg transition-shadow">
              <div class="h-40 bg-gray-200 dark:bg-gray-700 flex items-center justify-center">
                <% if resource.thumbnail.present? %>
                  <%= image_tag resource.thumbnail, class: "h-full w-full object-cover" %>
                <% else %>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 text-gray-400 dark:text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
                  </svg>
                <% end %>
              </div>
              <div class="p-6">
                <div class="flex items-center">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-indigo-100 dark:bg-indigo-900 text-indigo-800 dark:text-indigo-200">
                    <%= resource.resource_category&.name || "General" %>
                  </span>
                  <span class="ml-2 text-xs text-gray-500 dark:text-gray-400"><%= resource.level %></span>
                </div>
                <h3 class="mt-2 text-xl font-bold text-gray-900 dark:text-white"><%= resource.title %></h3>
                <p class="mt-2 text-gray-600 dark:text-gray-400 line-clamp-2"><%= resource.description %></p>
                <div class="mt-4 flex justify-between items-center">
                  <div class="flex items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <span class="ml-1 text-xs text-gray-500 dark:text-gray-400"><%= resource.duration || "Self-paced" %></span>
                  </div>
                  <a href="<%= resource.file_url %>" class="text-indigo-600 dark:text-indigo-400 hover:text-indigo-500 dark:hover:text-indigo-300 text-sm font-medium">
                    View Resource
                    <span aria-hidden="true">â†’</span>
                  </a>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>

    <%# Featured Resources %>
    <div class="mt-12">
      <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">Featured Resources</h2>
      <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
        <% @featured_resources&.each do |resource| %>
          <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md overflow-hidden hover:shadow-lg transition-shadow">
            <div class="h-40 bg-gray-200 dark:bg-gray-700 flex items-center justify-center">
              <% if resource.thumbnail.present? %>
                <%= image_tag resource.thumbnail, class: "h-full w-full object-cover" %>
              <% else %>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 text-gray-400 dark:text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
                </svg>
              <% end %>
            </div>
            <div class="p-6">
              <div class="flex items-center">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-indigo-100 dark:bg-indigo-900 text-indigo-800 dark:text-indigo-200">
                  <%= resource.resource_category&.name || "General" %>
                </span>
                <span class="ml-2 text-xs text-gray-500 dark:text-gray-400"><%= resource.level %></span>
              </div>
              <h3 class="mt-2 text-xl font-bold text-gray-900 dark:text-white"><%= resource.title %></h3>
              <p class="mt-2 text-gray-600 dark:text-gray-400 line-clamp-2"><%= resource.description %></p>
              <div class="mt-4 flex justify-between items-center">
                <div class="flex items-center">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  <span class="ml-1 text-xs text-gray-500 dark:text-gray-400"><%= resource.duration || "Self-paced" %></span>
                </div>
                <a href="<%= resource.file_url %>" class="text-indigo-600 dark:text-indigo-400 hover:text-indigo-500 dark:hover:text-indigo-300 text-sm font-medium">
                  View Resource
                  <span aria-hidden="true">â†’</span>
                </a>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <%# Recent Resources %>
    <div class="mt-12">
      <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">Recently Added</h2>
      <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-4">
        <% @recent_resources&.each do |resource| %>
          <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md overflow-hidden hover:shadow-lg transition-shadow">
            <div class="h-32 bg-gray-200 dark:bg-gray-700 flex items-center justify-center">
              <% if resource.thumbnail.present? %>
                <%= image_tag resource.thumbnail, class: "h-full w-full object-cover" %>
              <% else %>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-gray-400 dark:text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
                </svg>
              <% end %>
            </div>
            <div class="p-4">
              <div class="flex items-center">
                <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-indigo-100 dark:bg-indigo-900 text-indigo-800 dark:text-indigo-200">
                  <%= resource.resource_category&.name || "General" %>
                </span>
              </div>
              <h3 class="mt-2 text-base font-bold text-gray-900 dark:text-white line-clamp-1"><%= resource.title %></h3>
              <p class="mt-1 text-sm text-gray-600 dark:text-gray-400 line-clamp-2"><%= resource.description %></p>
              <div class="mt-3">
                <a href="<%= resource.file_url %>" class="text-indigo-600 dark:text-indigo-400 hover:text-indigo-500 dark:hover:text-indigo-300 text-sm font-medium">
                  View
                  <span aria-hidden="true">â†’</span>
                </a>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
