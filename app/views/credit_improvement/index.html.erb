<div class="container mx-auto px-4 py-8">
  <div class="mb-6">
    <%= link_to credit_score_path, class: "flex items-center text-primary-600 hover:text-primary-700 dark:text-primary-400 dark:hover:text-primary-300" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
      </svg>
      Back to Credit Score
    <% end %>
  </div>

  <div class="max-w-4xl mx-auto">
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden mb-6">
      <div class="p-4 border-b border-gray-200 dark:border-gray-700">
        <h1 class="text-xl font-bold text-gray-900 dark:text-white">Credit Score Improvement</h1>
      </div>
      
      <div class="p-6">
        <% if @current_score.present? %>
          <div class="mb-8">
            <div class="flex flex-col md:flex-row items-center justify-between">
              <div class="flex items-center mb-4 md:mb-0">
                <div class="w-32 h-32 rounded-full flex items-center justify-center text-white font-bold text-3xl
                  <%= @current_score.score >= 700 ? 'bg-gradient-to-r from-green-400 to-green-600' : 
                     (@current_score.score >= 600 ? 'bg-gradient-to-r from-yellow-400 to-yellow-600' : 
                     (@current_score.score >= 500 ? 'bg-gradient-to-r from-orange-400 to-orange-600' : 
                     'bg-gradient-to-r from-red-400 to-red-600')) %>">
                  <%= @current_score.score %>
                </div>
                <div class="ml-6">
                  <h2 class="text-2xl font-bold text-gray-900 dark:text-white">
                    <%= @current_score.score >= 700 ? 'Excellent' : 
                       (@current_score.score >= 600 ? 'Good' : 
                       (@current_score.score >= 500 ? 'Fair' : 'Poor')) %>
                  </h2>
                  <p class="text-gray-500 dark:text-gray-400">
                    Last updated: <%= @current_score.calculated_at.strftime("%B %d, %Y") %>
                  </p>
                  <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">
                    Score range: 300-850
                  </p>
                </div>
              </div>
              
              <% if @plan.present? %>
                <div class="flex flex-col items-center">
                  <div class="text-center mb-2">
                    <span class="text-sm font-medium text-gray-500 dark:text-gray-400">Improvement Progress</span>
                    <div class="text-2xl font-bold text-gray-900 dark:text-white"><%= @progress[:progress_percentage] %>%</div>
                  </div>
                  <div class="w-full bg-gray-200 dark:bg-gray-700 rounded-full h-2.5 mb-2">
                    <div class="bg-primary-600 h-2.5 rounded-full" style="width: <%= @progress[:progress_percentage] %>%"></div>
                  </div>
                  <%= link_to credit_improvement_path(@plan), class: "btn-primary text-sm" do %>
                    View Your Plan
                  <% end %>
                </div>
              <% else %>
                <div>
                  <%= button_to credit_improvement_create_plan_path, method: :post, class: "btn-primary" do %>
                    Create Improvement Plan
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>
          
          <% if @analysis.present? && @analysis[:weak_areas].present? %>
            <div class="mb-8">
              <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Areas to Improve</h2>
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <% @analysis[:weak_areas].each do |weak_area| %>
                  <div class="bg-gray-50 dark:bg-gray-700 p-4 rounded-lg">
                    <h3 class="text-sm font-medium text-gray-700 dark:text-gray-300 mb-2"><%= weak_area.to_s.titleize %></h3>
                    <div class="w-full bg-gray-200 dark:bg-gray-600 rounded-full h-2.5">
                      <div class="bg-red-500 h-2.5 rounded-full" style="width: <%= @analysis[:score_breakdown][weak_area] %>%"></div>
                    </div>
                    <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">
                      <%= @analysis[:score_breakdown][weak_area] %>/100
                    </p>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
          
          <% if @recommendations.present? %>
            <div class="mb-8">
              <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Recommended Actions</h2>
              <div class="space-y-4">
                <% @recommendations.each do |recommendation| %>
                  <div class="bg-gray-50 dark:bg-gray-700 p-4 rounded-lg">
                    <div class="flex items-start">
                      <div class="flex-shrink-0 mt-1">
                        <% case recommendation[:category].to_s %>
                        <% when "account_age" %>
                          <svg class="h-6 w-6 text-primary-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                          </svg>
                        <% when "transaction_history" %>
                          <svg class="h-6 w-6 text-primary-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" />
                          </svg>
                        <% when "loan_history" %>
                          <svg class="h-6 w-6 text-primary-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                          </svg>
                        <% when "verification" %>
                          <svg class="h-6 w-6 text-primary-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                          </svg>
                        <% when "profile" %>
                          <svg class="h-6 w-6 text-primary-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                          </svg>
                        <% else %>
                          <svg class="h-6 w-6 text-primary-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                          </svg>
                        <% end %>
                      </div>
                      <div class="ml-4 flex-1">
                        <h3 class="text-md font-medium text-gray-900 dark:text-white"><%= recommendation[:action] %></h3>
                        <p class="mt-1 text-sm text-gray-500 dark:text-gray-400"><%= recommendation[:description] %></p>
                        <div class="mt-2 flex items-center">
                          <span class="text-xs font-medium text-gray-500 dark:text-gray-400">Impact:</span>
                          <div class="ml-2 flex items-center">
                            <% recommendation[:impact].times do |i| %>
                              <% if i < 5 %>
                                <svg class="h-4 w-4 text-yellow-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                                </svg>
                              <% end %>
                            <% end %>
                          </div>
                          <span class="ml-1 text-xs text-gray-500 dark:text-gray-400">+<%= recommendation[:impact] %> points</span>
                        </div>
                        <div class="mt-1 flex items-center">
                          <span class="text-xs font-medium text-gray-500 dark:text-gray-400">Difficulty:</span>
                          <span class="ml-2 px-2 py-0.5 text-xs rounded-full 
                            <%= recommendation[:difficulty] == :easy ? 'bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200' : 
                               (recommendation[:difficulty] == :medium ? 'bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-200' : 
                               'bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-200') %>">
                            <%= recommendation[:difficulty].to_s.titleize %>
                          </span>
                          <span class="ml-4 text-xs font-medium text-gray-500 dark:text-gray-400">Timeframe:</span>
                          <span class="ml-2 text-xs text-gray-500 dark:text-gray-400">
                            <%= recommendation[:timeframe].to_s.titleize.gsub('_', ' ') %>
                          </span>
                        </div>
                      </div>
                    </div>
                  </div>
                <% end %>
              </div>
              
              <% unless @plan.present? %>
                <div class="mt-6 text-center">
                  <%= button_to credit_improvement_create_plan_path, method: :post, class: "btn-primary" do %>
                    Create Your Improvement Plan
                  <% end %>
                  <p class="mt-2 text-sm text-gray-500 dark:text-gray-400">
                    Get a personalized plan with step-by-step guidance to improve your credit score.
                  </p>
                </div>
              <% end %>
            </div>
          <% end %>
          
          <% if @score_history.present? %>
            <div class="mb-8">
              <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Score History</h2>
              <div class="bg-white dark:bg-gray-800 overflow-hidden">
                <div class="relative" style="height: 200px;">
                  <canvas id="creditScoreChart"></canvas>
                </div>
              </div>
            </div>
          <% end %>
          
        <% else %>
          <div class="bg-gray-50 dark:bg-gray-700 p-6 rounded-lg text-center">
            <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">No Credit Score Available</h2>
            <p class="text-gray-500 dark:text-gray-400 mb-4">
              We haven't calculated your credit score yet. This usually happens after you've been using your account for a while.
            </p>
            <p class="text-gray-500 dark:text-gray-400">
              Continue using your account and apply for loans to build your credit history.
            </p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<% if @score_history.present? %>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const ctx = document.getElementById('creditScoreChart').getContext('2d');
      
      // Prepare data
      const labels = <%= raw @score_history.map { |s| s.calculated_at.strftime("%b %d") }.to_json %>;
      const scores = <%= raw @score_history.map(&:score).to_json %>;
      
      // Create gradient
      const gradient = ctx.createLinearGradient(0, 0, 0, 200);
      gradient.addColorStop(0, 'rgba(79, 70, 229, 0.4)');
      gradient.addColorStop(1, 'rgba(79, 70, 229, 0.0)');
      
      const chart = new Chart(ctx, {
        type: 'line',
        data: {
          labels: labels.reverse(),
          datasets: [{
            label: 'Credit Score',
            data: scores.reverse(),
            borderColor: 'rgb(79, 70, 229)',
            backgroundColor: gradient,
            tension: 0.3,
            fill: true,
            pointBackgroundColor: 'rgb(79, 70, 229)',
            pointBorderColor: '#fff',
            pointBorderWidth: 2,
            pointRadius: 4,
            pointHoverRadius: 6
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          scales: {
            y: {
              min: 300,
              max: 850,
              grid: {
                color: 'rgba(160, 174, 192, 0.1)'
              }
            },
            x: {
              grid: {
                display: false
              }
            }
          },
          plugins: {
            legend: {
              display: false
            },
            tooltip: {
              backgroundColor: 'rgba(17, 24, 39, 0.8)',
              titleColor: '#fff',
              bodyColor: '#fff',
              padding: 12,
              displayColors: false,
              callbacks: {
                title: function(tooltipItems) {
                  return 'Credit Score';
                },
                label: function(context) {
                  return context.parsed.y;
                }
              }
            }
          }
        }
      });
      
      // Update chart colors based on dark mode
      function updateChartColors() {
        const isDarkMode = document.documentElement.classList.contains('dark');
        
        chart.options.scales.y.grid.color = isDarkMode ? 'rgba(75, 85, 99, 0.2)' : 'rgba(160, 174, 192, 0.1)';
        chart.options.scales.y.ticks.color = isDarkMode ? '#9CA3AF' : '#6B7280';
        chart.options.scales.x.ticks.color = isDarkMode ? '#9CA3AF' : '#6B7280';
        
        chart.update();
      }
      
      // Initial update
      updateChartColors();
      
      // Listen for dark mode changes
      const observer = new MutationObserver(function(mutations) {
        mutations.forEach(function(mutation) {
          if (mutation.attributeName === 'class') {
            updateChartColors();
          }
        });
      });
      
      observer.observe(document.documentElement, {
        attributes: true
      });
    });
  </script>
<% end %>
