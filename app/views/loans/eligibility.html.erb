<div class="container mx-auto px-4 py-8">
  <div class="mb-6">
    <%= link_to loans_path, class: "flex items-center text-primary-600 hover:text-primary-700 dark:text-primary-400 dark:hover:text-primary-300" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
      </svg>
      Back to Loans
    <% end %>
  </div>

  <div class="max-w-3xl mx-auto">
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden">
      <div class="p-4 border-b border-gray-200 dark:border-gray-700">
        <h1 class="text-xl font-bold text-gray-900 dark:text-white">Loan Eligibility Check</h1>
      </div>
      
      <div class="p-6">
        <div class="flex items-center mb-6">
          <div class="flex-shrink-0">
            <% if @eligible %>
              <div class="h-12 w-12 rounded-full bg-green-100 dark:bg-green-900 flex items-center justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-green-600 dark:text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
              </div>
            <% else %>
              <div class="h-12 w-12 rounded-full bg-red-100 dark:bg-red-900 flex items-center justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-red-600 dark:text-red-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
              </div>
            <% end %>
          </div>
          <div class="ml-4">
            <h2 class="text-lg font-medium text-gray-900 dark:text-white">
              <% if @eligible %>
                You are eligible for a loan!
              <% else %>
                You are not currently eligible for a loan
              <% end %>
            </h2>
            <p class="text-sm text-gray-500 dark:text-gray-400">
              <% if @eligible %>
                Based on your account history and credit score, you can borrow up to <%= number_to_currency(@loan_limit, unit: "GHS ") %>.
              <% else %>
                Please review the requirements below to become eligible.
              <% end %>
            </p>
          </div>
        </div>
        
        <div class="bg-gray-50 dark:bg-gray-700 rounded-lg p-4 mb-6">
          <h3 class="text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Your Credit Score</h3>
          
          <% if @credit_score.present? %>
            <div class="relative pt-1">
              <div class="flex mb-2 items-center justify-between">
                <div>
                  <span class="text-xs font-semibold inline-block text-primary-600 dark:text-primary-400">
                    <%= @credit_score.score %> / 850
                  </span>
                </div>
                <div class="text-right">
                  <span class="text-xs font-semibold inline-block 
                    <%= case @credit_score.score 
                      when 0..499 then 'text-red-600 dark:text-red-400'
                      when 500..599 then 'text-yellow-600 dark:text-yellow-400'
                      when 600..699 then 'text-blue-600 dark:text-blue-400'
                      else 'text-green-600 dark:text-green-400'
                      end %>">
                    <%= case @credit_score.score 
                      when 0..499 then 'Poor'
                      when 500..599 then 'Fair'
                      when 600..699 then 'Good'
                      else 'Excellent'
                      end %>
                  </span>
                </div>
              </div>
              <div class="overflow-hidden h-2 mb-4 text-xs flex rounded bg-gray-200 dark:bg-gray-600">
                <div style="width:<%= (@credit_score.score / 850.0 * 100).round %>%" class="shadow-none flex flex-col text-center whitespace-nowrap text-white justify-center 
                  <%= case @credit_score.score 
                    when 0..499 then 'bg-red-500'
                    when 500..599 then 'bg-yellow-500'
                    when 600..699 then 'bg-blue-500'
                    else 'bg-green-500'
                    end %>">
                </div>
              </div>
            </div>
            
            <p class="text-xs text-gray-500 dark:text-gray-400 mt-2">
              Last calculated: <%= @credit_score.calculated_at.strftime("%B %d, %Y") %>
            </p>
          <% else %>
            <p class="text-sm text-gray-500 dark:text-gray-400">
              No credit score available. Continue using the app to build your credit history.
            </p>
          <% end %>
        </div>
        
        <% if @reasons.any? %>
          <div class="mb-6">
            <h3 class="text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Eligibility Requirements</h3>
            <ul class="space-y-2">
              <% @reasons.each do |reason| %>
                <li class="flex items-start">
                  <div class="flex-shrink-0">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-red-500 dark:text-red-400" viewBox="0 0 20 20" fill="currentColor">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                    </svg>
                  </div>
                  <span class="ml-2 text-sm text-gray-500 dark:text-gray-400"><%= reason %></span>
                </li>
              <% end %>
            </ul>
          </div>
        <% end %>
        
        <div class="bg-gray-50 dark:bg-gray-700 rounded-lg p-4">
          <h3 class="text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">How to Improve Your Eligibility</h3>
          <ul class="space-y-2">
            <li class="flex items-start">
              <div class="flex-shrink-0">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary-500 dark:text-primary-400" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
              </div>
              <span class="ml-2 text-sm text-gray-500 dark:text-gray-400">Complete your identity verification</span>
            </li>
            <li class="flex items-start">
              <div class="flex-shrink-0">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary-500 dark:text-primary-400" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
              </div>
              <span class="ml-2 text-sm text-gray-500 dark:text-gray-400">Use your wallet regularly for transactions</span>
            </li>
            <li class="flex items-start">
              <div class="flex-shrink-0">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary-500 dark:text-primary-400" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
              </div>
              <span class="ml-2 text-sm text-gray-500 dark:text-gray-400">Maintain a regular deposit pattern</span>
            </li>
            <li class="flex items-start">
              <div class="flex-shrink-0">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary-500 dark:text-primary-400" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
              </div>
              <span class="ml-2 text-sm text-gray-500 dark:text-gray-400">Repay any existing loans on time</span>
            </li>
          </ul>
        </div>
        
        <div class="mt-6 flex justify-end">
          <% if @eligible %>
            <%= link_to "Apply for a Loan", new_loan_path, class: "btn-primary" %>
          <% else %>
            <%= link_to "Back to Loans", loans_path, class: "btn-secondary" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
