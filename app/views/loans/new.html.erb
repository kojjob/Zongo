<div class="container mx-auto px-4 py-8">
  <div class="mb-6">
    <%= link_to loans_path, class: "flex items-center text-primary-600 hover:text-primary-700 dark:text-primary-400 dark:hover:text-primary-300" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
      </svg>
      Back to Loans
    <% end %>
  </div>

  <div class="max-w-3xl mx-auto">
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden">
      <div class="p-4 border-b border-gray-200 dark:border-gray-700">
        <h1 class="text-xl font-bold text-gray-900 dark:text-white">Apply for a Loan</h1>
      </div>
      
      <div class="p-6">
        <%= form_with model: @loan, class: "space-y-6" do |f| %>
          <% if @loan.errors.any? %>
            <div class="bg-red-50 dark:bg-red-900/20 p-4 rounded-md">
              <div class="flex">
                <div class="flex-shrink-0">
                  <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                  </svg>
                </div>
                <div class="ml-3">
                  <h3 class="text-sm font-medium text-red-800 dark:text-red-300">
                    There <%= @loan.errors.count == 1 ? 'is' : 'are' %> <%= pluralize(@loan.errors.count, "error") %> with your application:
                  </h3>
                  <div class="mt-2 text-sm text-red-700 dark:text-red-400">
                    <ul class="list-disc pl-5 space-y-1">
                      <% @loan.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                      <% end %>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
          
          <div>
            <%= f.label :loan_type, class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
            <div class="mt-1">
              <%= f.select :loan_type, @loan_types, { include_blank: "Select loan type" }, { class: "block w-full pl-3 pr-10 py-2 text-base border-gray-300 dark:border-gray-600 dark:bg-gray-800 focus:outline-none focus:ring-primary-500 focus:border-primary-500 sm:text-sm rounded-md dark:text-white", required: true } %>
            </div>
            <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
              Not sure which loan type to choose? <%= link_to "View loan types", types_loans_path, class: "text-primary-600 hover:text-primary-500 dark:text-primary-400" %>
            </p>
          </div>
          
          <div>
            <%= f.label :amount, class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
            <div class="mt-1 relative rounded-md shadow-sm">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <span class="text-gray-500 dark:text-gray-400 sm:text-sm">GHS</span>
              </div>
              <%= f.number_field :amount, min: 50, max: @max_amount, step: 0.01, class: "block w-full pl-12 pr-12 py-2 sm:text-sm border-gray-300 dark:border-gray-600 dark:bg-gray-800 rounded-md focus:ring-primary-500 focus:border-primary-500 dark:text-white", placeholder: "0.00", required: true %>
            </div>
            <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
              Your maximum loan amount is <%= number_to_currency(@max_amount, unit: "GHS ") %>
            </p>
          </div>
          
          <div>
            <%= f.label :term_days, "Loan Term (days)", class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
            <div class="mt-1">
              <%= f.number_field :term_days, min: 7, max: 365, class: "block w-full py-2 px-3 border border-gray-300 dark:border-gray-600 dark:bg-gray-800 rounded-md shadow-sm focus:outline-none focus:ring-primary-500 focus:border-primary-500 sm:text-sm dark:text-white", required: true %>
            </div>
            <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
              Choose between 7 and 365 days
            </p>
          </div>
          
          <div class="bg-gray-50 dark:bg-gray-700 p-4 rounded-md">
            <h3 class="text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Terms and Conditions</h3>
            <div class="text-xs text-gray-500 dark:text-gray-400 space-y-2">
              <p>By submitting this application, you agree to the following terms:</p>
              <ul class="list-disc pl-5 space-y-1">
                <li>The loan amount and interest will be repaid by the due date.</li>
                <li>Late payments may incur additional fees and affect your credit score.</li>
                <li>The loan will be disbursed to your primary wallet upon approval.</li>
                <li>You authorize us to access your transaction history and account information for credit assessment.</li>
                <li>You confirm that all information provided is accurate and complete.</li>
              </ul>
            </div>
            
            <div class="mt-4">
              <div class="flex items-start">
                <div class="flex items-center h-5">
                  <input id="terms" name="terms" type="checkbox" class="focus:ring-primary-500 h-4 w-4 text-primary-600 border-gray-300 dark:border-gray-600 dark:bg-gray-800 rounded" required>
                </div>
                <div class="ml-3 text-sm">
                  <label for="terms" class="font-medium text-gray-700 dark:text-gray-300">I agree to the terms and conditions</label>
                </div>
              </div>
            </div>
          </div>
          
          <div class="flex items-center justify-end">
            <%= link_to "Cancel", loans_path, class: "btn-secondary mr-3" %>
            <%= f.submit "Submit Application", class: "btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
