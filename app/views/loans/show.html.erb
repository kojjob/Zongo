<div class="container mx-auto px-4 py-8">
  <div class="mb-6">
    <%= link_to loans_path, class: "flex items-center text-primary-600 hover:text-primary-700 dark:text-primary-400 dark:hover:text-primary-300" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
      </svg>
      Back to Loans
    <% end %>
  </div>

  <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden mb-6">
    <div class="p-4 border-b border-gray-200 dark:border-gray-700 flex justify-between items-center">
      <h1 class="text-xl font-bold text-gray-900 dark:text-white">
        Loan Details: <%= @loan.reference_number %>
      </h1>
      <div>
        <% case @loan.status %>
        <% when "pending" %>
          <span class="px-3 py-1 inline-flex text-sm leading-5 font-semibold rounded-full bg-yellow-100 text-yellow-800 dark:bg-yellow-800 dark:text-yellow-100">
            Pending Approval
          </span>
        <% when "approved" %>
          <span class="px-3 py-1 inline-flex text-sm leading-5 font-semibold rounded-full bg-blue-100 text-blue-800 dark:bg-blue-800 dark:text-blue-100">
            Approved
          </span>
        <% when "active" %>
          <span class="px-3 py-1 inline-flex text-sm leading-5 font-semibold rounded-full bg-green-100 text-green-800 dark:bg-green-800 dark:text-green-100">
            Active
          </span>
        <% when "completed" %>
          <span class="px-3 py-1 inline-flex text-sm leading-5 font-semibold rounded-full bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300">
            Completed
          </span>
        <% when "defaulted" %>
          <span class="px-3 py-1 inline-flex text-sm leading-5 font-semibold rounded-full bg-red-100 text-red-800 dark:bg-red-800 dark:text-red-100">
            Defaulted
          </span>
        <% when "rejected" %>
          <span class="px-3 py-1 inline-flex text-sm leading-5 font-semibold rounded-full bg-red-100 text-red-800 dark:bg-red-800 dark:text-red-100">
            Rejected
          </span>
        <% else %>
          <span class="px-3 py-1 inline-flex text-sm leading-5 font-semibold rounded-full bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300">
            <%= @loan.status.titleize %>
          </span>
        <% end %>
      </div>
    </div>
    
    <div class="p-6">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Loan Information</h2>
          
          <div class="space-y-3">
            <div class="flex justify-between">
              <span class="text-gray-500 dark:text-gray-400">Loan Type:</span>
              <span class="text-gray-900 dark:text-white font-medium"><%= @loan.loan_type.titleize %></span>
            </div>
            
            <div class="flex justify-between">
              <span class="text-gray-500 dark:text-gray-400">Principal Amount:</span>
              <span class="text-gray-900 dark:text-white font-medium"><%= number_to_currency(@loan.amount, unit: "GHS ") %></span>
            </div>
            
            <div class="flex justify-between">
              <span class="text-gray-500 dark:text-gray-400">Interest Rate:</span>
              <span class="text-gray-900 dark:text-white font-medium"><%= @loan.interest_rate %>%</span>
            </div>
            
            <div class="flex justify-between">
              <span class="text-gray-500 dark:text-gray-400">Processing Fee:</span>
              <span class="text-gray-900 dark:text-white font-medium"><%= number_to_currency(@loan.processing_fee, unit: "GHS ") %></span>
            </div>
            
            <div class="flex justify-between">
              <span class="text-gray-500 dark:text-gray-400">Total Amount Due:</span>
              <span class="text-gray-900 dark:text-white font-medium"><%= number_to_currency(@loan.amount_due, unit: "GHS ") %></span>
            </div>
            
            <div class="flex justify-between">
              <span class="text-gray-500 dark:text-gray-400">Term:</span>
              <span class="text-gray-900 dark:text-white font-medium"><%= @loan.term_days %> days</span>
            </div>
            
            <div class="flex justify-between">
              <span class="text-gray-500 dark:text-gray-400">Due Date:</span>
              <span class="text-gray-900 dark:text-white font-medium"><%= @loan.due_date.strftime("%B %d, %Y") %></span>
            </div>
            
            <% if @loan.disbursed_at.present? %>
              <div class="flex justify-between">
                <span class="text-gray-500 dark:text-gray-400">Disbursed On:</span>
                <span class="text-gray-900 dark:text-white font-medium"><%= @loan.disbursed_at.strftime("%B %d, %Y") %></span>
              </div>
            <% end %>
            
            <% if @loan.active? || @loan.completed? %>
              <div class="flex justify-between">
                <span class="text-gray-500 dark:text-gray-400">Current Balance:</span>
                <span class="text-gray-900 dark:text-white font-medium"><%= number_to_currency(@loan.current_balance, unit: "GHS ") %></span>
              </div>
            <% end %>
            
            <% if @loan.rejected? && @loan.rejection_reason.present? %>
              <div class="mt-4 p-3 bg-red-50 dark:bg-red-900/20 rounded-md">
                <h3 class="text-sm font-medium text-red-800 dark:text-red-300">Rejection Reason:</h3>
                <p class="text-sm text-red-700 dark:text-red-400 mt-1"><%= @loan.rejection_reason %></p>
              </div>
            <% end %>
          </div>
        </div>
        
        <div>
          <% if @loan.active? %>
            <div class="bg-gray-50 dark:bg-gray-700 rounded-lg p-4 mb-6">
              <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Make a Repayment</h3>
              
              <%= form_with url: repay_loan_path(@loan), method: :post, class: "space-y-4" do |f| %>
                <div>
                  <label for="amount" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Amount</label>
                  <div class="mt-1 relative rounded-md shadow-sm">
                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                      <span class="text-gray-500 dark:text-gray-400 sm:text-sm">GHS</span>
                    </div>
                    <%= f.number_field :amount, min: 1, max: @loan.current_balance, step: 0.01, required: true, class: "block w-full pl-12 pr-12 py-2 sm:text-sm border-gray-300 dark:border-gray-600 dark:bg-gray-800 rounded-md focus:ring-primary-500 focus:border-primary-500 dark:text-white", placeholder: "0.00" %>
                  </div>
                </div>
                
                <div class="flex items-center justify-between">
                  <span class="text-sm text-gray-500 dark:text-gray-400">
                    Current Balance: <%= number_to_currency(@loan.current_balance, unit: "GHS ") %>
                  </span>
                  <%= f.submit "Make Payment", class: "btn-primary" %>
                </div>
              <% end %>
            </div>
          <% end %>
          
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Repayment History</h3>
          
          <% if @loan.loan_repayments.successful.any? %>
            <div class="bg-white dark:bg-gray-800 rounded-lg border border-gray-200 dark:border-gray-700 overflow-hidden">
              <ul class="divide-y divide-gray-200 dark:divide-gray-700">
                <% @loan.loan_repayments.successful.order(created_at: :desc).each do |repayment| %>
                  <li class="p-4">
                    <div class="flex justify-between">
                      <div>
                        <p class="text-sm font-medium text-gray-900 dark:text-white">
                          <%= number_to_currency(repayment.amount, unit: "GHS ") %>
                        </p>
                        <p class="text-xs text-gray-500 dark:text-gray-400">
                          <%= repayment.created_at.strftime("%B %d, %Y at %I:%M %p") %>
                        </p>
                      </div>
                      <div class="text-right">
                        <p class="text-xs text-gray-500 dark:text-gray-400">
                          Principal: <%= number_to_currency(repayment.principal_portion, unit: "GHS ") %>
                        </p>
                        <p class="text-xs text-gray-500 dark:text-gray-400">
                          Interest: <%= number_to_currency(repayment.interest_portion, unit: "GHS ") %>
                        </p>
                        <% if repayment.fee_portion && repayment.fee_portion > 0 %>
                          <p class="text-xs text-gray-500 dark:text-gray-400">
                            Fees: <%= number_to_currency(repayment.fee_portion, unit: "GHS ") %>
                          </p>
                        <% end %>
                      </div>
                    </div>
                  </li>
                <% end %>
              </ul>
            </div>
          <% else %>
            <div class="text-center py-4 text-gray-500 dark:text-gray-400">
              <p>No repayments have been made yet.</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  
  <% if @loan.active? || @loan.disbursed? %>
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden mb-6">
      <div class="p-4 border-b border-gray-200 dark:border-gray-700">
        <h2 class="text-lg font-semibold text-gray-900 dark:text-white">Repayment Schedule</h2>
      </div>
      <div class="p-6">
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
            <thead class="bg-gray-50 dark:bg-gray-700">
              <tr>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Installment</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Due Date</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Amount</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Status</th>
              </tr>
            </thead>
            <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
              <% @loan.repayment_schedule.each do |installment| %>
                <tr>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">
                    <%= installment[:installment_number] %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">
                    <%= installment[:due_date].strftime("%B %d, %Y") %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">
                    <%= number_to_currency(installment[:amount], unit: "GHS ") %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <% case installment[:status] %>
                    <% when "paid" %>
                      <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800 dark:bg-green-800 dark:text-green-100">
                        Paid
                      </span>
                    <% when "overdue" %>
                      <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800 dark:bg-red-800 dark:text-red-100">
                        Overdue
                      </span>
                    <% when "upcoming" %>
                      <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-blue-100 text-blue-800 dark:bg-blue-800 dark:text-blue-100">
                        Upcoming
                      </span>
                    <% else %>
                      <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300">
                        <%= installment[:status].titleize %>
                      </span>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  <% end %>
</div>
