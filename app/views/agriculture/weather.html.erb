<%# Weather Forecasts Page %>
<% content_for :title, "Agricultural Weather Forecasts" %>

<!-- Header Section -->
<section class="bg-gradient-to-br from-blue-600 via-blue-500 to-cyan-500 py-12 relative overflow-hidden">
  <!-- Decorative weather elements -->
  <div class="absolute top-0 left-0 w-full h-full overflow-hidden opacity-20 pointer-events-none">
    <div class="absolute top-5 left-10">
      <%= icon "sun", class: "w-16 h-16 text-yellow-300 animate-pulse" %>
    </div>
    <div class="absolute top-20 right-20">
      <%= icon "cloud", class: "w-20 h-20 text-white" %>
    </div>
    <div class="absolute bottom-5 left-1/4">
      <%= icon "cloud-rain", class: "w-12 h-12 text-white" %>
    </div>
    <div class="absolute top-1/3 right-1/3">
      <%= icon "wind", class: "w-14 h-14 text-white" %>
    </div>
  </div>

  <div class="container mx-auto px-4 relative z-10">
    <div class="flex flex-col md:flex-row md:items-center md:justify-between">
      <div>
        <div class="flex items-center">
          <%= icon "cloud-sun", class: "w-10 h-10 text-yellow-300 mr-3" %>
          <h1 class="text-3xl font-bold text-white mb-2">Weather Forecasts</h1>
        </div>
        <p class="text-white/90 ml-13">
          Weather information and agricultural planning recommendations
        </p>
      </div>
      <div class="mt-4 md:mt-0">
        <a href="<%= agriculture_path %>" class="inline-flex items-center px-4 py-2 bg-white/20 backdrop-blur-sm text-white rounded-lg hover:bg-white/30 transition-colors duration-300">
          <%= icon "arrow-left", class: "w-4 h-4 mr-2" %>
          Back to Agriculture
        </a>
      </div>
    </div>
  </div>
</section>

<!-- Main Content -->
<div class="container mx-auto px-4 py-8">
  <!-- Region Selection -->
  <div class="bg-gradient-to-r from-blue-50 to-cyan-50 dark:from-blue-900/30 dark:to-cyan-900/30 rounded-xl shadow-md p-6 mb-8 border border-blue-100 dark:border-blue-800/30">
    <div class="flex items-center mb-4">
      <%= icon "map-pin", class: "w-6 h-6 text-blue-500 dark:text-blue-400 mr-2" %>
      <h2 class="text-xl font-bold text-gray-900 dark:text-white">Select Your Region</h2>
    </div>

    <%= form_with url: agriculture_weather_path, method: :get, class: "flex flex-col md:flex-row md:items-end gap-4", data: { turbo_frame: "weather_results" } do |f| %>
      <div class="flex-grow relative">
        <label for="region_id" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
          <div class="flex items-center">
            <%= icon "location-point", class: "w-4 h-4 text-blue-500 dark:text-blue-400 mr-1" %>
            <span>Region</span>
          </div>
        </label>
        <div class="relative">
          <%= f.select :region_id,
                      @regions.map { |r| [r.name, r.id] },
                      { selected: params[:region_id] || @selected_region&.id },
                      { class: "py-2 px-3 w-full rounded-lg border-blue-200 dark:border-blue-700 bg-white dark:bg-gray-800 dark:text-white shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50 pl-10" } %>
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <%= icon "globe", class: "h-5 w-5 text-blue-500 dark:text-blue-400" %>
          </div>
        </div>
      </div>

      <div>
        <%= f.button type: "submit", class: "px-6 py-2.5 bg-gradient-to-r from-blue-600 to-cyan-600 hover:from-blue-700 hover:to-cyan-700 text-white font-medium rounded-lg shadow-sm hover:shadow-md transition-all duration-300 w-full md:w-auto flex items-center justify-center" do %>
          <%= icon "cloud-sun", class: "w-5 h-5 mr-2" %>
          <span>View Forecast</span>
        <% end %>
      </div>
    <% end %>
  </div>

  <!-- Weather Results -->
  <div id="weather_results">
    <% if @selected_region.present? && @forecasts.present? %>
      <!-- Current Weather -->
      <div class="bg-gradient-to-br from-blue-50 to-cyan-50 dark:from-blue-900/20 dark:to-cyan-900/20 rounded-xl shadow-md overflow-hidden border border-blue-100 dark:border-blue-800/30 mb-8">
        <div class="p-6 border-b border-blue-200 dark:border-blue-800/30 bg-white/50 dark:bg-gray-800/50">
          <div class="flex items-center justify-between">
            <div class="flex items-center">
              <% if @current_weather.present? %>
                <% weather_icon_class = case @current_weather.weather_condition
                   when 'sunny' then "text-yellow-500 dark:text-yellow-400"
                   when 'partly_cloudy' then "text-blue-400 dark:text-blue-300"
                   when 'cloudy' then "text-gray-500 dark:text-gray-400"
                   when 'rainy' then "text-blue-600 dark:text-blue-500"
                   when 'stormy' then "text-purple-600 dark:text-purple-500"
                   when 'windy' then "text-teal-500 dark:text-teal-400"
                   when 'foggy' then "text-gray-400 dark:text-gray-300"
                   when 'snowy' then "text-cyan-500 dark:text-cyan-400"
                   else "text-blue-500 dark:text-blue-400"
                   end %>
                <%= icon @current_weather.weather_icon, class: "w-8 h-8 #{weather_icon_class} mr-3" %>
              <% else %>
                <%= icon "cloud-sun", class: "w-8 h-8 text-blue-500 dark:text-blue-400 mr-3" %>
              <% end %>
              <h2 class="text-2xl font-bold text-gray-900 dark:text-white">Current Weather for <%= @selected_region.name %></h2>
            </div>
            <div class="flex items-center bg-white/70 dark:bg-gray-800/70 px-3 py-1 rounded-full shadow-sm">
              <%= icon "calendar", class: "w-4 h-4 text-blue-500 dark:text-blue-400 mr-2" %>
              <span class="text-sm font-medium text-gray-700 dark:text-gray-300"><%= Date.today.strftime("%A, %B %d") %></span>
            </div>
          </div>
        </div>

        <% if @current_weather.present? %>
          <div class="p-6">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
              <!-- Weather Overview -->
              <div class="flex flex-col items-center justify-center p-6 rounded-xl border border-blue-200 dark:border-blue-800/30 relative overflow-hidden">
                <!-- Background pattern based on weather -->
                <% bg_pattern = case @current_weather.weather_condition
                   when 'sunny'
                     "bg-gradient-to-br from-yellow-50 to-orange-50 dark:from-yellow-900/20 dark:to-orange-900/20"
                   when 'partly_cloudy'
                     "bg-gradient-to-br from-blue-50 to-indigo-50 dark:from-blue-900/20 dark:to-indigo-900/20"
                   when 'cloudy'
                     "bg-gradient-to-br from-gray-50 to-slate-50 dark:from-gray-900/20 dark:to-slate-900/20"
                   when 'rainy'
                     "bg-gradient-to-br from-blue-50 to-indigo-50 dark:from-blue-900/20 dark:to-indigo-900/20"
                   when 'stormy'
                     "bg-gradient-to-br from-purple-50 to-slate-50 dark:from-purple-900/20 dark:to-slate-900/20"
                   when 'windy'
                     "bg-gradient-to-br from-teal-50 to-cyan-50 dark:from-teal-900/20 dark:to-cyan-900/20"
                   when 'foggy'
                     "bg-gradient-to-br from-gray-50 to-slate-50 dark:from-gray-900/20 dark:to-slate-900/20"
                   when 'snowy'
                     "bg-gradient-to-br from-cyan-50 to-blue-50 dark:from-cyan-900/20 dark:to-blue-900/20"
                   else
                     "bg-gradient-to-br from-blue-50 to-cyan-50 dark:from-blue-900/20 dark:to-cyan-900/20"
                   end %>
                <div class="absolute inset-0 <%= bg_pattern %>"></div>

                <!-- Decorative weather elements -->
                <div class="absolute top-0 left-0 w-full h-full overflow-hidden opacity-10 pointer-events-none">
                  <% if @current_weather.sunny? %>
                    <div class="absolute top-2 right-2">
                      <%= icon "sun", class: "w-12 h-12 text-yellow-500" %>
                    </div>
                    <div class="absolute bottom-2 left-2">
                      <%= icon "sun", class: "w-8 h-8 text-yellow-500" %>
                    </div>
                  <% elsif @current_weather.partly_cloudy? %>
                    <div class="absolute top-2 right-2">
                      <%= icon "cloud-sun", class: "w-12 h-12 text-blue-500" %>
                    </div>
                    <div class="absolute bottom-2 left-2">
                      <%= icon "cloud", class: "w-8 h-8 text-blue-500" %>
                    </div>
                  <% elsif @current_weather.cloudy? %>
                    <div class="absolute top-2 right-2">
                      <%= icon "cloud", class: "w-12 h-12 text-gray-500" %>
                    </div>
                    <div class="absolute bottom-2 left-2">
                      <%= icon "cloud", class: "w-8 h-8 text-gray-500" %>
                    </div>
                  <% elsif @current_weather.rainy? %>
                    <div class="absolute top-2 right-2">
                      <%= icon "cloud-rain", class: "w-12 h-12 text-blue-500" %>
                    </div>
                    <div class="absolute bottom-2 left-2">
                      <%= icon "droplet", class: "w-8 h-8 text-blue-500" %>
                    </div>
                  <% elsif @current_weather.stormy? %>
                    <div class="absolute top-2 right-2">
                      <%= icon "cloud-lightning", class: "w-12 h-12 text-purple-500" %>
                    </div>
                    <div class="absolute bottom-2 left-2">
                      <%= icon "cloud-lightning", class: "w-8 h-8 text-purple-500" %>
                    </div>
                  <% elsif @current_weather.windy? %>
                    <div class="absolute top-2 right-2">
                      <%= icon "wind", class: "w-12 h-12 text-teal-500" %>
                    </div>
                    <div class="absolute bottom-2 left-2">
                      <%= icon "wind", class: "w-8 h-8 text-teal-500" %>
                    </div>
                  <% elsif @current_weather.foggy? %>
                    <div class="absolute top-2 right-2">
                      <%= icon "cloud-fog", class: "w-12 h-12 text-gray-500" %>
                    </div>
                    <div class="absolute bottom-2 left-2">
                      <%= icon "cloud-fog", class: "w-8 h-8 text-gray-500" %>
                    </div>
                  <% elsif @current_weather.snowy? %>
                    <div class="absolute top-2 right-2">
                      <%= icon "snowflake", class: "w-12 h-12 text-cyan-500" %>
                    </div>
                    <div class="absolute bottom-2 left-2">
                      <%= icon "snowflake", class: "w-8 h-8 text-cyan-500" %>
                    </div>
                  <% end %>
                </div>

                <!-- Weather icon and data -->
                <div class="relative z-10">
                  <% icon_color = case @current_weather.weather_condition
                     when 'sunny' then "text-yellow-500 dark:text-yellow-400"
                     when 'partly_cloudy' then "text-blue-500 dark:text-blue-400"
                     when 'cloudy' then "text-gray-500 dark:text-gray-400"
                     when 'rainy' then "text-blue-600 dark:text-blue-500"
                     when 'stormy' then "text-purple-600 dark:text-purple-500"
                     when 'windy' then "text-teal-500 dark:text-teal-400"
                     when 'foggy' then "text-gray-500 dark:text-gray-400"
                     when 'snowy' then "text-cyan-500 dark:text-cyan-400"
                     else "text-blue-500 dark:text-blue-400"
                     end %>
                  <%= icon @current_weather.weather_icon, class: "w-28 h-28 #{icon_color} mb-4 drop-shadow-md" %>
                  <div class="text-4xl font-bold text-gray-900 dark:text-white mb-1">
                    <%= ((@current_weather.temperature_high + @current_weather.temperature_low) / 2).round(1) %>°C
                  </div>
                  <div class="text-lg font-medium text-gray-700 dark:text-gray-300 mb-3">
                    <%= @current_weather.weather_condition.titleize %>
                  </div>
                  <div class="flex items-center text-sm text-gray-600 dark:text-gray-400 bg-white/70 dark:bg-gray-800/70 px-3 py-2 rounded-full shadow-sm">
                    <span class="flex items-center mr-3">
                      <%= icon "thermometer", class: "w-4 h-4 text-red-500 dark:text-red-400 mr-1" %>
                      H: <%= @current_weather.temperature_high %>°C
                    </span>
                    <span class="flex items-center">
                      <%= icon "thermometer", class: "w-4 h-4 text-blue-500 dark:text-blue-400 mr-1" %>
                      L: <%= @current_weather.temperature_low %>°C
                    </span>
                  </div>
                </div>
              </div>

              <!-- Weather Details -->
              <div class="p-6 bg-gradient-to-br from-white to-blue-50 dark:from-gray-800 dark:to-blue-900/20 rounded-xl border border-blue-100 dark:border-blue-800/30 relative overflow-hidden">
                <!-- Decorative background elements -->
                <div class="absolute top-0 left-0 w-full h-full overflow-hidden opacity-5 pointer-events-none">
                  <div class="absolute top-5 right-5">
                    <%= icon "droplet", class: "w-16 h-16 text-blue-500" %>
                  </div>
                  <div class="absolute bottom-5 left-5">
                    <%= icon "wind", class: "w-16 h-16 text-blue-500" %>
                  </div>
                </div>

                <div class="relative z-10">
                  <div class="flex items-center mb-6">
                    <%= icon "chart-bar", class: "w-6 h-6 text-blue-500 dark:text-blue-400 mr-2" %>
                    <h3 class="text-lg font-bold text-gray-900 dark:text-white">Weather Details</h3>
                  </div>

                  <div class="space-y-5">
                    <div class="bg-white/80 dark:bg-gray-800/80 rounded-lg p-3 shadow-sm border border-blue-100 dark:border-blue-800/30">
                      <div class="flex items-center justify-between">
                        <div class="flex items-center text-gray-700 dark:text-gray-300">
                          <%= icon "droplet", class: "w-8 h-8 text-blue-500 dark:text-blue-400 mr-3 drop-shadow-sm" %>
                          <div>
                            <span class="font-medium">Precipitation</span>
                            <div class="text-xs text-gray-500 dark:text-gray-400">Chance of rain</div>
                          </div>
                        </div>
                        <div class="text-gray-900 dark:text-white font-medium text-lg">
                          <div class="flex items-center">
                            <span><%= @current_weather.precipitation_chance %>%</span>
                            <% if @current_weather.precipitation_chance > 70 %>
                              <span class="ml-1 text-red-500 dark:text-red-400">●</span>
                            <% elsif @current_weather.precipitation_chance > 30 %>
                              <span class="ml-1 text-yellow-500 dark:text-yellow-400">●</span>
                            <% else %>
                              <span class="ml-1 text-green-500 dark:text-green-400">●</span>
                            <% end %>
                          </div>
                        </div>
                      </div>
                      <!-- Progress bar for precipitation chance -->
                      <div class="mt-2 h-1.5 w-full bg-gray-200 dark:bg-gray-700 rounded-full overflow-hidden">
                        <div class="h-full <%= @current_weather.precipitation_chance > 70 ? 'bg-red-500' : (@current_weather.precipitation_chance > 30 ? 'bg-yellow-500' : 'bg-green-500') %> rounded-full" style="width: <%= @current_weather.precipitation_chance %>%"></div>
                      </div>
                    </div>

                    <div class="bg-white/80 dark:bg-gray-800/80 rounded-lg p-3 shadow-sm border border-blue-100 dark:border-blue-800/30">
                      <div class="flex items-center justify-between">
                        <div class="flex items-center text-gray-700 dark:text-gray-300">
                          <div class="w-8 h-8 flex items-center justify-center text-blue-500 dark:text-blue-400 mr-3">
                            <%= icon "cloud-rain", class: "w-8 h-8 drop-shadow-sm" %>
                          </div>
                          <div>
                            <span class="font-medium">Rainfall</span>
                            <div class="text-xs text-gray-500 dark:text-gray-400">Expected amount</div>
                          </div>
                        </div>
                        <div class="text-gray-900 dark:text-white font-medium text-lg">
                          <div class="flex items-center">
                            <span><%= @current_weather.precipitation_amount %> mm</span>
                            <% if @current_weather.precipitation_amount > 15 %>
                              <span class="ml-1 text-blue-500 dark:text-blue-400">●●●</span>
                            <% elsif @current_weather.precipitation_amount > 5 %>
                              <span class="ml-1 text-blue-500 dark:text-blue-400">●●</span>
                            <% elsif @current_weather.precipitation_amount > 0 %>
                              <span class="ml-1 text-blue-500 dark:text-blue-400">●</span>
                            <% end %>
                          </div>
                        </div>
                      </div>
                    </div>

                    <div class="bg-white/80 dark:bg-gray-800/80 rounded-lg p-3 shadow-sm border border-blue-100 dark:border-blue-800/30">
                      <div class="flex items-center justify-between">
                        <div class="flex items-center text-gray-700 dark:text-gray-300">
                          <%= icon "wind", class: "w-8 h-8 text-teal-500 dark:text-teal-400 mr-3 drop-shadow-sm" %>
                          <div>
                            <span class="font-medium">Wind</span>
                            <div class="text-xs text-gray-500 dark:text-gray-400">Speed & direction</div>
                          </div>
                        </div>
                        <div class="text-gray-900 dark:text-white font-medium text-lg">
                          <div class="flex items-center">
                            <span><%= @current_weather.wind_speed %> km/h</span>
                            <span class="ml-2 text-xs px-2 py-1 bg-teal-100 dark:bg-teal-900/30 text-teal-800 dark:text-teal-200 rounded-full">
                              <%= @current_weather.wind_direction %>
                            </span>
                          </div>
                        </div>
                      </div>
                    </div>

                    <div class="bg-white/80 dark:bg-gray-800/80 rounded-lg p-3 shadow-sm border border-blue-100 dark:border-blue-800/30">
                      <div class="flex items-center justify-between">
                        <div class="flex items-center text-gray-700 dark:text-gray-300">
                          <%= icon "droplets", class: "w-8 h-8 text-indigo-500 dark:text-indigo-400 mr-3 drop-shadow-sm" %>
                          <div>
                            <span class="font-medium">Humidity</span>
                            <div class="text-xs text-gray-500 dark:text-gray-400">Moisture in air</div>
                          </div>
                        </div>
                        <div class="text-gray-900 dark:text-white font-medium text-lg">
                          <%= @current_weather.humidity %>%
                        </div>
                      </div>
                      <!-- Progress bar for humidity -->
                      <div class="mt-2 h-1.5 w-full bg-gray-200 dark:bg-gray-700 rounded-full overflow-hidden">
                        <div class="h-full bg-indigo-500 rounded-full" style="width: <%= @current_weather.humidity %>%"></div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Farming Recommendations -->
              <div class="p-6 bg-gradient-to-br from-white to-green-50 dark:from-gray-800 dark:to-green-900/20 rounded-xl border border-green-100 dark:border-green-800/30 relative overflow-hidden">
                <!-- Decorative background elements -->
                <div class="absolute top-0 left-0 w-full h-full overflow-hidden opacity-5 pointer-events-none">
                  <div class="absolute top-5 right-5">
                    <%= icon "plant", class: "w-20 h-20 text-green-500" %>
                  </div>
                  <div class="absolute bottom-5 left-5">
                    <%= icon "scissors", class: "w-16 h-16 text-amber-500" %>
                  </div>
                </div>

                <div class="relative z-10">
                  <div class="flex items-center mb-6">
                    <%= icon "light-bulb", class: "w-6 h-6 text-green-500 dark:text-green-400 mr-2" %>
                    <h3 class="text-lg font-bold text-gray-900 dark:text-white">Farming Recommendations</h3>
                  </div>

                  <% if @current_weather.weather_alert? %>
                    <div class="mb-6 p-4 bg-red-50 dark:bg-red-900/10 rounded-lg border border-red-200 dark:border-red-800/30 shadow-sm">
                      <div class="flex items-start">
                        <div class="flex-shrink-0">
                          <div class="w-10 h-10 rounded-full bg-red-100 dark:bg-red-900/50 flex items-center justify-center text-red-600 dark:text-red-400">
                            <%= icon "alert-triangle", class: "w-6 h-6" %>
                          </div>
                        </div>
                        <div class="ml-3">
                          <h4 class="text-base font-medium text-red-800 dark:text-red-300">Weather Alert</h4>
                          <p class="mt-1 text-sm text-red-700 dark:text-red-300"><%= @current_weather.weather_alert_message %></p>
                        </div>
                      </div>
                    </div>
                  <% end %>

                  <div class="space-y-6">
                    <div class="bg-white/80 dark:bg-gray-800/80 rounded-lg p-4 shadow-sm border border-green-100 dark:border-green-800/30">
                      <div class="flex items-start">
                        <div class="flex-shrink-0">
                          <div class="w-12 h-12 rounded-full <%= @current_weather.favorable_for_planting? ? 'bg-green-100 dark:bg-green-900/50 text-green-600 dark:text-green-400' : 'bg-gray-100 dark:bg-gray-700 text-gray-500 dark:text-gray-400' %> flex items-center justify-center">
                            <%= icon "plant", class: "w-6 h-6" %>
                          </div>
                        </div>
                        <div class="ml-4">
                          <div class="flex items-center">
                            <h4 class="text-base font-medium text-gray-900 dark:text-white">Planting Conditions</h4>
                            <% if @current_weather.favorable_for_planting? %>
                              <span class="ml-2 px-2 py-1 text-xs font-medium bg-green-100 dark:bg-green-900/30 text-green-800 dark:text-green-300 rounded-full">Favorable</span>
                            <% else %>
                              <span class="ml-2 px-2 py-1 text-xs font-medium bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-300 rounded-full">Not Ideal</span>
                            <% end %>
                          </div>
                          <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">
                            <% if @current_weather.favorable_for_planting? %>
                              Today's conditions are favorable for planting. The soil moisture and temperature are optimal for seed germination.
                            <% else %>
                              Today's conditions are not ideal for planting. Consider waiting for better weather conditions.
                            <% end %>
                          </p>
                        </div>
                      </div>
                    </div>

                    <div class="bg-white/80 dark:bg-gray-800/80 rounded-lg p-4 shadow-sm border border-amber-100 dark:border-amber-800/30">
                      <div class="flex items-start">
                        <div class="flex-shrink-0">
                          <div class="w-12 h-12 rounded-full <%= @current_weather.favorable_for_harvesting? ? 'bg-amber-100 dark:bg-amber-900/50 text-amber-600 dark:text-amber-400' : 'bg-gray-100 dark:bg-gray-700 text-gray-500 dark:text-gray-400' %> flex items-center justify-center">
                            <%= icon "scissors", class: "w-6 h-6" %>
                          </div>
                        </div>
                        <div class="ml-4">
                          <div class="flex items-center">
                            <h4 class="text-base font-medium text-gray-900 dark:text-white">Harvesting Conditions</h4>
                            <% if @current_weather.favorable_for_harvesting? %>
                              <span class="ml-2 px-2 py-1 text-xs font-medium bg-amber-100 dark:bg-amber-900/30 text-amber-800 dark:text-amber-300 rounded-full">Favorable</span>
                            <% else %>
                              <span class="ml-2 px-2 py-1 text-xs font-medium bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-300 rounded-full">Not Ideal</span>
                            <% end %>
                          </div>
                          <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">
                            <% if @current_weather.favorable_for_harvesting? %>
                              Today's conditions are favorable for harvesting. The dry weather will help ensure good crop quality.
                            <% else %>
                              Today's conditions are not ideal for harvesting. Consider postponing harvest activities if possible.
                            <% end %>
                          </p>
                        </div>
                      </div>
                    </div>

                    <div class="bg-white/80 dark:bg-gray-800/80 rounded-lg p-4 shadow-sm border border-blue-100 dark:border-blue-800/30">
                      <div class="flex items-start">
                        <div class="flex-shrink-0">
                          <% irrigation_color = if @current_weather.precipitation_amount < 5 && @current_weather.temperature_high > 30
