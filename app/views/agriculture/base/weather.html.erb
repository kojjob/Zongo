<%# Weather Forecasts Page %>
<% content_for :title, "Agricultural Weather Forecasts" %>

<!-- Header Section -->
<section class="bg-gradient-to-r from-blue-600 to-cyan-500 py-12">
  <div class="container mx-auto px-4">
    <div class="flex flex-col md:flex-row md:items-center md:justify-between">
      <div>
        <h1 class="text-3xl font-bold text-white mb-2">Weather Forecasts</h1>
        <p class="text-white/90">
          Weather information and agricultural planning recommendations
        </p>
      </div>
      <div class="mt-4 md:mt-0">
        <a href="<%= agriculture_path %>" class="inline-flex items-center px-4 py-2 bg-white/20 backdrop-blur-sm text-white rounded-lg hover:bg-white/30 transition-colors duration-300">
          <%= icon "arrow-left", class: "w-4 h-4 mr-2" %>
          Back to Agriculture
        </a>
      </div>
    </div>
  </div>
</section>

<!-- Main Content -->
<div class="container mx-auto px-4 py-8">
  <!-- Region Selection -->
  <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md p-6 mb-8 border border-gray-100 dark:border-gray-700">
    <h2 class="text-xl font-bold text-gray-900 dark:text-white mb-4">Select Region</h2>

    <%= form_with url: agriculture_weather_path, method: :get, class: "flex flex-col md:flex-row md:items-end gap-4", data: { turbo_frame: "weather_results" } do |f| %>
      <div class="flex-grow">
        <label for="region_id" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Region</label>
        <%= f.select :region_id,
                    @regions.map { |r| [r.name, r.id] },
                    { selected: params[:region_id] || @selected_region&.id },
                    { class: "w-full rounded-lg border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50" } %>
      </div>

      <div>
        <%= f.submit "View Forecast", class: "px-6 py-2.5 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg shadow-sm hover:shadow-md transition-all duration-300 w-full md:w-auto" %>
      </div>
    <% end %>
  </div>

  <!-- Weather Results -->
  <div id="weather_results">
    <% if @selected_region.present? && @forecasts.present? %>
      <!-- Current Weather -->
      <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md overflow-hidden border border-gray-100 dark:border-gray-700 mb-8">
        <div class="p-6 border-b border-gray-200 dark:border-gray-700">
          <div class="flex items-center justify-between">
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white">Current Weather for <%= @selected_region.name %></h2>
            <span class="text-sm text-gray-500 dark:text-gray-400"><%= Date.today.strftime("%A, %B %d") %></span>
          </div>
        </div>

        <% if @current_weather.present? %>
          <div class="p-6">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
              <!-- Weather Overview -->
              <div class="flex flex-col items-center justify-center p-6 bg-gradient-to-br from-blue-50 to-cyan-50 dark:from-blue-900/20 dark:to-cyan-900/20 rounded-xl border border-blue-100 dark:border-blue-800/30">
                <%= icon @current_weather.weather_icon, class: "w-24 h-24 text-blue-500 dark:text-blue-400 mb-4" %>
                <div class="text-3xl font-bold text-gray-900 dark:text-white mb-1">
                  <%= ((@current_weather.temperature_high + @current_weather.temperature_low) / 2).round(1) %>°C
                </div>
                <div class="text-lg font-medium text-gray-700 dark:text-gray-300 mb-3">
                  <%= @current_weather.weather_condition.titleize %>
                </div>
                <div class="flex items-center text-sm text-gray-500 dark:text-gray-400">
                  <span class="flex items-center mr-3">
                    <%= icon "thermometer", class: "w-4 h-4 mr-1" %>
                    H: <%= @current_weather.temperature_high %>°C
                  </span>
                  <span class="flex items-center">
                    <%= icon "thermometer", class: "w-4 h-4 mr-1" %>
                    L: <%= @current_weather.temperature_low %>°C
                  </span>
                </div>
              </div>

              <!-- Weather Details -->
              <div class="p-6 bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700">
                <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-4">Details</h3>

                <div class="space-y-4">
                  <div class="flex items-center justify-between">
                    <div class="flex items-center text-gray-700 dark:text-gray-300">
                      <%= icon "droplet", class: "w-5 h-5 text-blue-500 dark:text-blue-400 mr-3" %>
                      <span>Precipitation</span>
                    </div>
                    <div class="text-gray-900 dark:text-white font-medium">
                      <%= @current_weather.precipitation_chance %>% chance
                    </div>
                  </div>

                  <div class="flex items-center justify-between">
                    <div class="flex items-center text-gray-700 dark:text-gray-300">
                      <%= icon "droplet", class: "w-5 h-5 text-blue-500 dark:text-blue-400 mr-3" %>
                      <span>Rainfall</span>
                    </div>
                    <div class="text-gray-900 dark:text-white font-medium">
                      <%= @current_weather.precipitation_amount %> mm
                    </div>
                  </div>

                  <div class="flex items-center justify-between">
                    <div class="flex items-center text-gray-700 dark:text-gray-300">
                      <%= icon "wind", class: "w-5 h-5 text-blue-500 dark:text-blue-400 mr-3" %>
                      <span>Wind</span>
                    </div>
                    <div class="text-gray-900 dark:text-white font-medium">
                      <%= @current_weather.wind_speed %> km/h <%= @current_weather.wind_direction %>
                    </div>
                  </div>

                  <div class="flex items-center justify-between">
                    <div class="flex items-center text-gray-700 dark:text-gray-300">
                      <%= icon "droplets", class: "w-5 h-5 text-blue-500 dark:text-blue-400 mr-3" %>
                      <span>Humidity</span>
                    </div>
                    <div class="text-gray-900 dark:text-white font-medium">
                      <%= @current_weather.humidity %>%
                    </div>
                  </div>
                </div>
              </div>

              <!-- Farming Recommendations -->
              <div class="p-6 bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700">
                <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-4">Farming Recommendations</h3>

                <% if @current_weather.weather_alert? %>
                  <div class="mb-4 p-3 bg-red-50 dark:bg-red-900/10 rounded-lg border border-red-200 dark:border-red-800/30">
                    <div class="flex items-start">
                      <%= icon "alert-triangle", class: "w-5 h-5 text-red-500 dark:text-red-400 mt-0.5 mr-2 flex-shrink-0" %>
                      <p class="text-sm text-red-700 dark:text-red-300"><%= @current_weather.weather_alert_message %></p>
                    </div>
                  </div>
                <% end %>

                <div class="space-y-4">
                  <div>
                    <div class="flex items-center text-gray-900 dark:text-white font-medium mb-2">
                      <%= icon "plant", class: "w-5 h-5 text-green-500 dark:text-green-400 mr-2" %>
                      <span>Planting Conditions</span>
                    </div>
                    <p class="text-sm text-gray-600 dark:text-gray-400">
                      <% if @current_weather.favorable_for_planting? %>
                        Today's conditions are favorable for planting. The soil moisture and temperature are optimal for seed germination.
                      <% else %>
                        Today's conditions are not ideal for planting. Consider waiting for better weather conditions.
                      <% end %>
                    </p>
                  </div>

                  <div>
                    <div class="flex items-center text-gray-900 dark:text-white font-medium mb-2">
                      <%= icon "scissors", class: "w-5 h-5 text-amber-500 dark:text-amber-400 mr-2" %>
                      <span>Harvesting Conditions</span>
                    </div>
                    <p class="text-sm text-gray-600 dark:text-gray-400">
                      <% if @current_weather.favorable_for_harvesting? %>
                        Today's conditions are favorable for harvesting. The dry weather will help ensure good crop quality.
                      <% else %>
                        Today's conditions are not ideal for harvesting. Consider postponing harvest activities if possible.
                      <% end %>
                    </p>
                  </div>

                  <div>
                    <div class="flex items-center text-gray-900 dark:text-white font-medium mb-2">
                      <%= icon "droplet", class: "w-5 h-5 text-blue-500 dark:text-blue-400 mr-2" %>
                      <span>Irrigation Needs</span>
                    </div>
                    <p class="text-sm text-gray-600 dark:text-gray-400">
                      <% if @current_weather.precipitation_amount < 5 && @current_weather.temperature_high > 30 %>
                        Crops will need additional irrigation today due to high temperatures and low rainfall.
                      <% elsif @current_weather.precipitation_amount > 15 %>
                        No irrigation needed today. Natural rainfall is sufficient.
                      <% else %>
                        Light irrigation may be beneficial for sensitive crops.
                      <% end %>
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% else %>
          <div class="p-8 text-center">
            <p class="text-gray-500 dark:text-gray-400">No weather data available for today.</p>
          </div>
        <% end %>
      </div>

      <!-- Weather Alerts -->
      <% if @weather_alerts.present? %>
        <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md overflow-hidden border border-gray-100 dark:border-gray-700 mb-8">
          <div class="p-6 border-b border-gray-200 dark:border-gray-700">
            <div class="flex items-center">
              <%= icon "alert-triangle", class: "w-6 h-6 text-red-500 dark:text-red-400 mr-3" %>
              <h2 class="text-xl font-bold text-gray-900 dark:text-white">Weather Alerts</h2>
            </div>
          </div>

          <div class="p-6">
            <div class="space-y-4">
              <% @weather_alerts.each do |alert| %>
                <div class="p-4 bg-red-50 dark:bg-red-900/10 rounded-lg border border-red-200 dark:border-red-800/30">
                  <div class="flex">
                    <div class="flex-shrink-0">
                      <div class="w-10 h-10 rounded-full bg-red-100 dark:bg-red-900/50 flex items-center justify-center text-red-600 dark:text-red-400">
                        <%= icon alert.stormy? ? "cloud-lightning" : (alert.temperature_high > 35 ? "sun" : "snowflake"), class: "w-5 h-5" %>
                      </div>
                    </div>
                    <div class="ml-4">
                      <h4 class="text-base font-medium text-gray-900 dark:text-white">
                        <%= alert.forecast_date.strftime("%A, %B %d") %>: <%= alert.weather_alert_message.split(':').first %>
                      </h4>
                      <p class="mt-1 text-sm text-gray-600 dark:text-gray-400">
                        <%= alert.weather_alert_message.split(':').last %>
                      </p>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>

      <!-- 7-Day Forecast -->
      <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md overflow-hidden border border-gray-100 dark:border-gray-700 mb-8">
        <div class="p-6 border-b border-gray-200 dark:border-gray-700">
          <h2 class="text-xl font-bold text-gray-900 dark:text-white">7-Day Forecast</h2>
        </div>

        <div class="p-6">
          <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-7 gap-4">
            <% @forecasts.each do |forecast| %>
              <div class="bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 p-4 text-center">
                <div class="text-sm font-medium text-gray-900 dark:text-white mb-2">
                  <%= forecast.forecast_date.strftime("%a") %>
                </div>
                <div class="mb-2">
                  <%= icon forecast.weather_icon, class: "w-10 h-10 mx-auto text-blue-500 dark:text-blue-400" %>
                </div>
                <div class="text-xs text-gray-500 dark:text-gray-400 mb-1">
                  <%= forecast.weather_condition.titleize %>
                </div>
                <div class="flex items-center justify-center space-x-2 text-sm">
                  <span class="font-medium text-gray-900 dark:text-white"><%= forecast.temperature_high %>°</span>
                  <span class="text-gray-500 dark:text-gray-400"><%= forecast.temperature_low %>°</span>
                </div>
                <div class="mt-2 text-xs text-gray-500 dark:text-gray-400">
                  <%= forecast.precipitation_chance %>% rain
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Planting Recommendations -->
      <% if @planting_recommendations.present? %>
        <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md overflow-hidden border border-gray-100 dark:border-gray-700 mb-8">
          <div class="p-6 border-b border-gray-200 dark:border-gray-700">
            <div class="flex items-center">
              <%= icon "plant", class: "w-6 h-6 text-green-500 dark:text-green-400 mr-3" %>
              <h2 class="text-xl font-bold text-gray-900 dark:text-white">Planting Recommendations</h2>
            </div>
          </div>

          <div class="p-6">
            <p class="text-gray-600 dark:text-gray-400 mb-6">
              Based on current weather conditions and seasonal patterns, these crops are recommended for planting now:
            </p>

            <div class="grid grid-cols-1 sm:grid-cols-3 gap-6">
              <% @planting_recommendations.each do |crop| %>
                <div class="bg-gradient-to-br from-green-50 to-lime-50 dark:from-green-900/20 dark:to-lime-900/20 rounded-xl border border-green-200 dark:border-green-800/30 p-4">
                  <div class="flex items-center">
                    <% if crop.image.attached? %>
                      <%= image_tag crop.image, class: "w-12 h-12 rounded-full object-cover mr-4" %>
                    <% else %>
                      <div class="w-12 h-12 rounded-full bg-gradient-to-br from-green-500 to-lime-500 flex items-center justify-center text-white mr-4">
                        <%= icon "plant", class: "w-6 h-6" %>
                      </div>
                    <% end %>

                    <div>
                      <h3 class="font-bold text-gray-900 dark:text-white"><%= crop.name %></h3>
                      <p class="text-sm text-gray-600 dark:text-gray-400"><%= crop.growing_season %></p>
                    </div>
                  </div>

                  <div class="mt-4 text-sm text-gray-600 dark:text-gray-400">
                    <p>Growing time: <%= crop.growing_time %> days</p>
                    <p>Category: <%= crop.category.titleize %></p>
                  </div>

                  <div class="mt-4">
                    <a href="<%= agriculture_crop_prices_path(crop_id: crop.id) %>" class="text-green-600 dark:text-green-400 hover:text-green-700 dark:hover:text-green-300 text-sm font-medium flex items-center">
                      <span>View Crop Details</span>
                      <%= icon "arrow-right", class: "w-4 h-4 ml-1" %>
                    </a>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Harvesting Recommendations -->
      <% if @harvesting_recommendations.present? %>
        <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md overflow-hidden border border-gray-100 dark:border-gray-700">
          <div class="p-6 border-b border-gray-200 dark:border-gray-700">
            <div class="flex items-center">
              <%= icon "scissors", class: "w-6 h-6 text-amber-500 dark:text-amber-400 mr-3" %>
              <h2 class="text-xl font-bold text-gray-900 dark:text-white">Harvesting Recommendations</h2>
            </div>
          </div>

          <div class="p-6">
            <p class="text-gray-600 dark:text-gray-400 mb-6">
              Based on current weather conditions, these crops are recommended for harvesting now:
            </p>

            <div class="grid grid-cols-1 sm:grid-cols-3 gap-6">
              <% @harvesting_recommendations.each do |crop| %>
                <div class="bg-gradient-to-br from-amber-50 to-yellow-50 dark:from-amber-900/20 dark:to-yellow-900/20 rounded-xl border border-amber-200 dark:border-amber-800/30 p-4">
                  <div class="flex items-center">
                    <% if crop.image.attached? %>
                      <%= image_tag crop.image, class: "w-12 h-12 rounded-full object-cover mr-4" %>
                    <% else %>
                      <div class="w-12 h-12 rounded-full bg-gradient-to-br from-amber-500 to-yellow-500 flex items-center justify-center text-white mr-4">
                        <%= icon "plant", class: "w-6 h-6" %>
                      </div>
                    <% end %>

                    <div>
                      <h3 class="font-bold text-gray-900 dark:text-white"><%= crop.name %></h3>
                      <p class="text-sm text-gray-600 dark:text-gray-400"><%= crop.category.titleize %></p>
                    </div>
                  </div>

                  <div class="mt-4 text-sm text-gray-600 dark:text-gray-400">
                    <p>Current market price: GHS <%= crop.current_price %>/kg</p>
                  </div>

                  <div class="mt-4">
                    <a href="<%= agriculture_crop_prices_path(crop_id: crop.id) %>" class="text-amber-600 dark:text-amber-400 hover:text-amber-700 dark:hover:text-amber-300 text-sm font-medium flex items-center">
                      <span>View Market Prices</span>
                      <%= icon "arrow-right", class: "w-4 h-4 ml-1" %>
                    </a>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md p-8 text-center border border-gray-100 dark:border-gray-700">
        <div class="w-20 h-20 mx-auto rounded-full bg-gray-100 dark:bg-gray-700 flex items-center justify-center mb-4">
          <%= icon "map-pin", class: "w-10 h-10 text-gray-400 dark:text-gray-500" %>
        </div>
        <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2">No Region Selected</h3>
        <p class="text-gray-500 dark:text-gray-400 mb-6">Please select a region from the dropdown above to view weather forecasts.</p>
      </div>
    <% end %>
  </div>
</div>
