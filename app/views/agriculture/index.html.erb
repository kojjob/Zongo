<%# Agriculture Services Main Page %>
<% content_for :title, "Agricultural Services" %>

<!-- Hero Section -->
<section class="relative bg-gradient-to-r from-green-600 to-lime-500 py-16 md:py-24">
  <div class="absolute inset-0 overflow-hidden">
    <div class="absolute inset-0 bg-pattern-dots opacity-10"></div>
    <div class="absolute top-0 right-0 w-64 h-64 bg-white/10 rounded-full -mt-24 -mr-24 blur-3xl"></div>
    <div class="absolute bottom-0 left-0 w-48 h-48 bg-white/10 rounded-full -mb-16 -ml-16 blur-2xl"></div>
  </div>

  <div class="container mx-auto px-4 relative z-10">
    <div class="max-w-3xl">
      <h1 class="text-4xl md:text-5xl font-bold text-white mb-6 leading-tight">
        Agricultural Services for Ghana's Farmers
      </h1>
      <p class="text-xl text-white/90 mb-8">
        Access real-time crop prices, weather forecasts, farming resources, and connect with buyers and suppliers to grow your agricultural business.
      </p>
      <div class="flex flex-wrap gap-4">
        <a href="<%= agriculture_crop_prices_path %>" class="px-6 py-3 bg-white text-green-700 font-medium rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1 flex items-center">
          <%= icon "chart-bar", class: "w-5 h-5 mr-2" %>
          <span>Crop Prices</span>
        </a>
        <a href="<%= agriculture_weather_path %>" class="px-6 py-3 bg-white/20 text-white backdrop-blur-sm font-medium rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1 hover:bg-white/30 flex items-center">
          <%= icon "cloud-sun", class: "w-5 h-5 mr-2" %>
          <span>Weather Forecasts</span>
        </a>
        <a href="<%= agriculture_marketplace_path %>" class="px-6 py-3 bg-white/20 text-white backdrop-blur-sm font-medium rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1 hover:bg-white/30 flex items-center">
          <%= icon "shopping-cart", class: "w-5 h-5 mr-2" %>
          <span>Marketplace</span>
        </a>
      </div>
    </div>
  </div>
</section>

<!-- Main Content -->
<div class="container mx-auto px-4 py-12">
  <!-- Featured Crops Section -->
  <section class="mb-16">
    <div class="flex items-center justify-between mb-8">
      <h2 class="text-2xl font-bold text-gray-900 dark:text-white">Featured Crops</h2>
      <a href="<%= agriculture_crop_prices_path %>" class="text-green-600 dark:text-green-400 hover:text-green-700 dark:hover:text-green-300 font-medium flex items-center">
        <span>View All Crops</span>
        <%= icon "arrow-right", class: "w-4 h-4 ml-1" %>
      </a>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-6">
      <% if @featured_crops.present? %>
        <% @featured_crops.each do |crop| %>
          <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md overflow-hidden border border-gray-100 dark:border-gray-700 hover:shadow-lg transition-all duration-300 transform hover:-translate-y-1">
            <% if crop.image.attached? %>
              <div class="h-32 overflow-hidden">
                <%= image_tag crop.image, class: "w-full h-full object-cover" %>
              </div>
            <% else %>
              <div class="h-32 bg-gradient-to-br from-green-100 to-lime-100 dark:from-green-900/30 dark:to-lime-900/30 flex items-center justify-center">
                <%= icon "plant", class: "w-12 h-12 text-green-500 dark:text-green-400" %>
              </div>
            <% end %>

            <div class="p-4">
              <h3 class="font-bold text-gray-900 dark:text-white mb-1"><%= crop.name %></h3>
              <div class="flex items-center justify-between">
                <span class="text-sm text-gray-500 dark:text-gray-400"><%= crop.category.titleize %></span>
                <% if crop.in_season? %>
                  <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-300">
                    In Season
                  </span>
                <% end %>
              </div>
              <div class="mt-3 flex items-center justify-between">
                <div class="text-sm font-medium text-gray-900 dark:text-white">GHS <%= crop.current_price %>/kg</div>
                <% price_change = crop.price_change_percentage %>
                <% if price_change != 0 %>
                  <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium <%= price_change > 0 ? 'bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-300' : 'bg-red-100 text-red-800 dark:bg-red-900/30 dark:text-red-300' %>">
                    <%= icon price_change > 0 ? "trending-up" : "trending-down", class: "w-3 h-3 mr-1" %>
                    <%= price_change > 0 ? '+' : '' %><%= price_change %>%
                  </span>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      <% else %>
        <div class="col-span-full text-center py-8">
          <p class="text-gray-500 dark:text-gray-400">No featured crops available at the moment.</p>
        </div>
      <% end %>
    </div>
  </section>

  <!-- Weather Forecasts Section -->
  <section class="mb-16">
    <div class="flex items-center justify-between mb-8">
      <h2 class="text-2xl font-bold text-gray-900 dark:text-white">Today's Weather</h2>
      <a href="<%= agriculture_weather_path %>" class="text-green-600 dark:text-green-400 hover:text-green-700 dark:hover:text-green-300 font-medium flex items-center">
        <span>View Detailed Forecast</span>
        <%= icon "arrow-right", class: "w-4 h-4 ml-1" %>
      </a>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-5 gap-6">
      <% if @weather_forecasts.present? %>
        <% @weather_forecasts.each do |forecast| %>
          <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md overflow-hidden border border-gray-100 dark:border-gray-700 hover:shadow-lg transition-all duration-300">
            <div class="p-4">
              <div class="flex items-center justify-between mb-3">
                <h3 class="font-bold text-gray-900 dark:text-white"><%= forecast.region&.name || 'Unknown Region' %></h3>
                <span class="text-sm text-gray-500 dark:text-gray-400">Today</span>
              </div>

              <div class="flex items-center justify-center py-4">
                <div class="text-center">
                  <%= icon forecast.weather_icon, class: "w-16 h-16 mx-auto text-blue-500 dark:text-blue-400" %>
                  <div class="mt-2 text-lg font-bold text-gray-900 dark:text-white"><%= forecast.weather_condition.titleize %></div>
                </div>
              </div>

              <div class="flex justify-between items-center mt-3">
                <div class="text-center">
                  <div class="text-sm text-gray-500 dark:text-gray-400">High</div>
                  <div class="text-lg font-bold text-gray-900 dark:text-white"><%= forecast.temperature_high %>°C</div>
                </div>
                <div class="text-center">
                  <div class="text-sm text-gray-500 dark:text-gray-400">Low</div>
                  <div class="text-lg font-bold text-gray-900 dark:text-white"><%= forecast.temperature_low %>°C</div>
                </div>
                <div class="text-center">
                  <div class="text-sm text-gray-500 dark:text-gray-400">Rain</div>
                  <div class="text-lg font-bold text-gray-900 dark:text-white"><%= forecast.precipitation_chance %>%</div>
                </div>
              </div>

              <% if forecast.weather_alert? %>
                <div class="mt-3 p-2 bg-red-50 dark:bg-red-900/10 rounded-lg border border-red-200 dark:border-red-800/30">
                  <div class="flex items-start">
                    <%= icon "alert-triangle", class: "w-4 h-4 text-red-500 dark:text-red-400 mt-0.5 mr-2 flex-shrink-0" %>
                    <p class="text-xs text-red-700 dark:text-red-300"><%= forecast.weather_alert_message %></p>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      <% else %>
        <div class="col-span-full text-center py-8">
          <p class="text-gray-500 dark:text-gray-400">No weather forecasts available at the moment.</p>
        </div>
      <% end %>
    </div>
  </section>

  <!-- Marketplace Section -->
  <section class="mb-16">
    <div class="flex items-center justify-between mb-8">
      <h2 class="text-2xl font-bold text-gray-900 dark:text-white">Marketplace</h2>
      <a href="<%= agriculture_marketplace_path %>" class="text-green-600 dark:text-green-400 hover:text-green-700 dark:hover:text-green-300 font-medium flex items-center">
        <span>Browse All Listings</span>
        <%= icon "arrow-right", class: "w-4 h-4 ml-1" %>
      </a>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
      <% if @recent_listings.present? %>
        <% @recent_listings.each do |listing| %>
          <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md overflow-hidden border border-gray-100 dark:border-gray-700 hover:shadow-lg transition-all duration-300 transform hover:-translate-y-1">
            <% if listing.images.attached? %>
              <div class="h-48 overflow-hidden">
                <%= image_tag listing.images.first, class: "w-full h-full object-cover" %>
              </div>
            <% else %>
              <div class="h-48 bg-gradient-to-br from-gray-100 to-gray-200 dark:from-gray-700 dark:to-gray-800 flex items-center justify-center">
                <%= icon "shopping-bag", class: "w-12 h-12 text-gray-400 dark:text-gray-500" %>
              </div>
            <% end %>

            <div class="p-4">
              <div class="flex items-center justify-between mb-2">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= listing.listing_type == 'selling' ? 'bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-300' : 'bg-blue-100 text-blue-800 dark:bg-blue-900/30 dark:text-blue-300' %>">
                  <%= listing.listing_type.titleize %>
                </span>
                <span class="text-sm text-gray-500 dark:text-gray-400"><%= time_ago_in_words(listing.created_at) %> ago</span>
              </div>

              <h3 class="font-bold text-gray-900 dark:text-white mb-1 truncate"><%= listing.title %></h3>
              <div class="text-sm text-gray-500 dark:text-gray-400 mb-2">
                <%= listing.crop&.name || 'Unknown Crop' %> • <%= listing.region&.name || 'Location not specified' %>
              </div>

              <div class="flex items-center justify-between mt-3">
                <div class="text-lg font-bold text-gray-900 dark:text-white">GHS <%= listing.price %></div>
                <div class="text-sm text-gray-600 dark:text-gray-400"><%= listing.quantity %> <%= listing.unit %></div>
              </div>

              <a href="<%= crop_listing_path(listing) %>" class="mt-4 block w-full text-center px-4 py-2 bg-green-600 hover:bg-green-700 text-white rounded-lg transition-colors duration-300">
                View Details
              </a>
            </div>
          </div>
        <% end %>
      <% else %>
        <div class="col-span-full text-center py-8">
          <p class="text-gray-500 dark:text-gray-400">No marketplace listings available at the moment.</p>
        </div>
      <% end %>
    </div>
  </section>

  <!-- Resources Section -->
  <section class="mb-16">
    <div class="flex items-center justify-between mb-8">
      <h2 class="text-2xl font-bold text-gray-900 dark:text-white">Agricultural Resources</h2>
      <a href="<%= agriculture_resources_path %>" class="text-green-600 dark:text-green-400 hover:text-green-700 dark:hover:text-green-300 font-medium flex items-center">
        <span>View All Resources</span>
        <%= icon "arrow-right", class: "w-4 h-4 ml-1" %>
      </a>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <% if @featured_resources.present? %>
        <% @featured_resources.each do |resource| %>
          <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md overflow-hidden border border-gray-100 dark:border-gray-700 hover:shadow-lg transition-all duration-300 transform hover:-translate-y-1">
            <% if resource.thumbnail.attached? %>
              <div class="h-48 overflow-hidden">
                <%= image_tag resource.thumbnail, class: "w-full h-full object-cover" %>
              </div>
            <% else %>
              <div class="h-48 bg-gradient-to-br from-green-100 to-lime-100 dark:from-green-900/30 dark:to-lime-900/30 flex items-center justify-center">
                <%= icon "book-open", class: "w-12 h-12 text-green-500 dark:text-green-400" %>
              </div>
            <% end %>

            <div class="p-6">
              <div class="flex items-center justify-between mb-3">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-300">
                  <%= resource.resource_type.titleize %>
                </span>
                <span class="text-sm text-gray-500 dark:text-gray-400"><%= resource.reading_time %> min read</span>
              </div>

              <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2"><%= resource.title %></h3>
              <p class="text-gray-600 dark:text-gray-400 mb-4 line-clamp-2"><%= resource.content.truncate(120) %></p>

              <div class="flex items-center justify-between">
                <div class="flex items-center">
                  <%= icon "eye", class: "w-4 h-4 text-gray-400 dark:text-gray-500 mr-1" %>
                  <span class="text-sm text-gray-500 dark:text-gray-400"><%= resource.view_count %> views</span>
                </div>
                <a href="<%= agriculture_resource_path(resource) %>" class="text-green-600 dark:text-green-400 hover:text-green-700 dark:hover:text-green-300 font-medium flex items-center">
                  <span>Read More</span>
                  <%= icon "arrow-right", class: "w-4 h-4 ml-1" %>
                </a>
              </div>
            </div>
          </div>
        <% end %>
      <% else %>
        <div class="col-span-full text-center py-8">
          <p class="text-gray-500 dark:text-gray-400">No featured resources available at the moment.</p>
        </div>
      <% end %>
    </div>
  </section>

  <!-- Call to Action -->
  <section class="bg-gradient-to-r from-green-600 to-lime-500 rounded-2xl overflow-hidden shadow-xl">
    <div class="relative p-8 md:p-12">
      <div class="absolute inset-0 bg-pattern-dots opacity-10"></div>
      <div class="absolute top-0 right-0 w-64 h-64 bg-white/10 rounded-full -mt-24 -mr-24 blur-3xl"></div>
      <div class="absolute bottom-0 left-0 w-48 h-48 bg-white/10 rounded-full -mb-16 -ml-16 blur-2xl"></div>

      <div class="relative z-10 max-w-3xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">Ready to Grow Your Agricultural Business?</h2>
        <p class="text-xl text-white/90 mb-8">
          Join thousands of farmers across Ghana who are using our platform to access market information, connect with buyers, and improve their farming practices.
        </p>
        <div class="flex flex-wrap justify-center gap-4">
          <% if user_signed_in? %>
            <a href="<%= new_crop_listing_path %>" class="px-8 py-3 bg-white text-green-700 font-medium rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1 flex items-center">
              <%= icon "plus-circle", class: "w-5 h-5 mr-2" %>
              <span>Create Listing</span>
            </a>
          <% else %>
            <a href="<%= new_user_registration_path %>" class="px-8 py-3 bg-white text-green-700 font-medium rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1 flex items-center">
              <%= icon "user-plus", class: "w-5 h-5 mr-2" %>
              <span>Sign Up Now</span>
            </a>
          <% end %>
          <a href="<%= agriculture_resources_path %>" class="px-8 py-3 bg-white/20 text-white backdrop-blur-sm font-medium rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1 hover:bg-white/30 flex items-center">
            <%= icon "book-open", class: "w-5 h-5 mr-2" %>
            <span>Learn More</span>
          </a>
        </div>
      </div>
    </div>
  </section>
</div>
