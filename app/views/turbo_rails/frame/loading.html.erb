<turbo-frame id="<%= @frame_id %>">
  <div class="flex items-center justify-center py-8">
    <div class="animate-pulse p-6 max-w-xl w-full">
      <div class="flex space-x-4 items-center mb-4">
        <div class="h-6 w-6 bg-gray-300 dark:bg-gray-700 rounded"></div>
        <div class="h-6 w-40 bg-gray-300 dark:bg-gray-700 rounded"></div>
      </div>
      
      <div class="h-10 w-full bg-gray-300 dark:bg-gray-700 rounded mb-6"></div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% 6.times do %>
          <div class="bg-gray-200 dark:bg-gray-800 rounded-lg h-64 w-full"></div>
        <% end %>
      </div>
      
      <div class="flex justify-center mt-8">
        <div class="w-48 h-8 bg-gray-300 dark:bg-gray-700 rounded"></div>
      </div>
    </div>
  </div>
</turbo-frame>
