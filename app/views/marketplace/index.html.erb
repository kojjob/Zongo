              <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">
                <%= 100 + i * 50 %> Products
              </p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Shop by Brand -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
