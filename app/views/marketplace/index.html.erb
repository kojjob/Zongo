  <!-- Trusted Sellers -->
  <div class="bg-gray-50 dark:bg-gray-800">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <div class="text-center">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white">
          Trusted Marketplace Sellers
        </h2>
        <p class="mt-3 max-w-2xl mx-auto text-sm text-gray-500 dark:text-gray-400">
          Shop with confidence from our verified and trusted sellers
        </p>
      </div>

      <div class="mt-10 grid grid-cols-2 gap-6 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5">
        <% 5.times do |i| %>
          <div class="flex flex-col items-center">
            <div class="inline-flex items-center justify-center h-16 w-16 rounded-full bg-white dark:bg-gray-900 shadow-sm">
              <span class="text-lg font-medium text-indigo-600 dark:text-indigo-400">S<%= i + 1 %></span>
            </div>
            <div class="mt-3 text-center">
              <h3 class="text-sm font-medium text-gray-900 dark:text-white">Seller Name <%= i + 1 %></h3>
              <div class="flex items-center justify-center mt-1">
                <% 5.times do |j| %>
                  <svg class="h-3 w-3 <%= j < 4 ? 'text-yellow-400' : 'text-gray-300 dark:text-gray-600' %>" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
