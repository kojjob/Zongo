<%= form_with(model: venue, class: "contents") do |form| %>
  <% if venue.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(venue.errors.count, "error") %> prohibited this venue from being saved:</h2>

      <ul class="list-disc ml-6">
        <% venue.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": venue.errors[:name].none?, "border-red-400 focus:outline-red-600": venue.errors[:name].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :description %>
