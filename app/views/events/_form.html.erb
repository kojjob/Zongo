<%= form_with(model: event, class: "contents", html: { multipart: true, data: { controller: "event-form", turbo: false } }) do |form| %>
  <% if event.errors.any? %>
    <div class="bg-red-50 dark:bg-red-900/30 border border-red-200 dark:border-red-800 rounded-lg p-4 mb-6">
      <div class="flex">
        <div class="flex-shrink-0">
          <%= icon "exclamation-circle", class: "h-5 w-5 text-red-400" %>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800 dark:text-red-300">
            <%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:
          </h3>
          <div class="mt-2 text-sm text-red-700 dark:text-red-400">
            <ul class="list-disc pl-5 space-y-1">
              <% event.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md overflow-hidden border border-indigo-100 dark:border-indigo-900/30 hover:shadow-lg transition-shadow duration-300">
    <div class="p-6 border-b border-gray-200 dark:border-gray-700 bg-gradient-to-r from-indigo-50 to-purple-50 dark:from-indigo-900/20 dark:to-purple-900/20">
      <div class="flex items-center">
        <div class="w-12 h-12 rounded-xl bg-indigo-100 dark:bg-indigo-900/50 flex items-center justify-center mr-4 shadow-md text-indigo-600 dark:text-indigo-300">
          <%= icon "info", class: "w-6 h-6" %>
        </div>
        <div>
          <h3 class="text-xl font-bold text-gray-900 dark:text-white">Basic Information</h3>
          <p class="text-sm text-gray-600 dark:text-gray-400">Required fields are marked with an asterisk (*)</p>
        </div>
      </div>
    </div>

    <div class="p-6 space-y-6">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="col-span-2">
          <div class="relative">
            <%= form.label :title, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" do %>
              Event Title <span class="text-red-500">*</span>
            <% end %>
            <div class="relative rounded-md shadow-sm">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <%= icon "type", class: "h-5 w-5 text-gray-400 dark:text-gray-500" %>
              </div>
              <%= form.text_field :title, class: "pl-10 block w-full rounded-md border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-indigo-500 focus:border-indigo-500 px-3 py-3 shadow-sm", required: true, autofocus: true, placeholder: "Give your event a descriptive title", data: { event_form_target: "title", action: "input->event-form#updateSlug" } %>
            </div>
            <p class="mt-2 text-sm text-indigo-600 dark:text-indigo-400 flex items-center">
              <%= icon "info", class: "h-4 w-4 mr-1" %>
              This will be the main title for your event (5-100 characters)
            </p>
          </div>
        </div>

        <div class="col-span-2">
          <div class="relative">
            <%= form.label :short_description, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" do %>
              Short Description <span class="text-red-500">*</span>
            <% end %>
            <div class="relative rounded-md shadow-sm">
              <div class="absolute top-3 left-3 flex items-start pointer-events-none">
                <%= icon "align-left", class: "h-5 w-5 text-gray-400 dark:text-gray-500" %>
              </div>
              <%= form.text_area :short_description, rows: 2, class: "pl-10 block w-full rounded-md border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-indigo-500 focus:border-indigo-500 px-3 py-3 shadow-sm", required: true, placeholder: "Brief summary of your event (1-2 sentences)" %>
            </div>
            <p class="mt-2 text-sm text-indigo-600 dark:text-indigo-400 flex items-center">
              <%= icon "info", class: "h-4 w-4 mr-1" %>
              This will be displayed in event cards and previews (100-150 characters recommended)
            </p>
          </div>
        </div>

        <div class="col-span-2">
          <div class="relative">
            <%= form.label :description, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" do %>
              Full Description <span class="text-red-500">*</span>
            <% end %>
            <div class="relative rounded-md shadow-sm">
              <div class="absolute top-3 left-3 flex items-start pointer-events-none">
                <%= icon "file-text", class: "h-5 w-5 text-gray-400 dark:text-gray-500" %>
              </div>
              <%= form.text_area :description, rows: 6, class: "pl-10 block w-full rounded-md border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-indigo-500 focus:border-indigo-500 px-3 py-3 shadow-sm", required: true, placeholder: "Provide all the details about your event - what attendees can expect, special instructions, etc." %>
            </div>
            <div class="mt-2 flex items-center justify-between">
              <p class="text-sm text-indigo-600 dark:text-indigo-400 flex items-center">
                <%= icon "info", class: "h-4 w-4 mr-1" %>
                Use this space to fully describe your event
              </p>
              <p class="text-xs text-gray-500 dark:text-gray-400 italic">Basic HTML formatting supported</p>
            </div>
          </div>
        </div>

        <div>
          <div class="relative">
            <%= form.label :event_category_id, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" do %>
              Category <span class="text-red-500">*</span>
            <% end %>
            <div class="relative rounded-md shadow-sm">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <%= icon "tag", class: "h-5 w-5 text-gray-400 dark:text-gray-500" %>
              </div>
              <% if @event_categories.present? %>
                <%= form.collection_select :event_category_id, @event_categories, :id, :name,
                    { include_blank: 'Select a category' },
                    { class: "pl-10 block w-full rounded-md border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-indigo-500 focus:border-indigo-500 px-3 py-3 shadow-sm", required: true } %>
              <% else %>
                <%= form.hidden_field :event_category_id, value: EventCategory.first_or_create!(name: 'General').id %>
                <div class="pl-10 block w-full rounded-md border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white px-3 py-3 shadow-sm">
                  General (Default)
                </div>
              <% end %>
            </div>
            <p class="mt-2 text-sm text-indigo-600 dark:text-indigo-400 flex items-center">
              <%= icon "info", class: "h-4 w-4 mr-1" %>
              Categorizing your event helps attendees find it
            </p>
          </div>
        </div>

        <div>
          <div class="relative">
            <%= form.label :venue_id, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" do %>
              Venue <span class="text-red-500">*</span>
            <% end %>
            <div class="relative rounded-md shadow-sm">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <%= icon "map-pin", class: "h-5 w-5 text-gray-400 dark:text-gray-500" %>
              </div>
              <%= form.collection_select :venue_id, @venues, :id, :name,
                  { include_blank: 'Select a venue' },
                  { class: "pl-10 block w-full rounded-md border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-indigo-500 focus:border-indigo-500 px-3 py-3 shadow-sm", required: true, data: { event_form_target: "venueSelect", action: "change->event-form#toggleVenueForm" } } %>
            </div>
            <div class="mt-2 flex items-center">
              <button type="button" class="text-sm text-indigo-600 dark:text-indigo-400 hover:text-indigo-700 dark:hover:text-indigo-300 flex items-center bg-indigo-50 dark:bg-indigo-900/30 px-3 py-1.5 rounded-lg transition-colors" data-action="click->event-form#showNewVenueForm">
                <%= icon "plus-circle", class: "h-4 w-4 mr-1" %>
                Add New Venue
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- New Venue Form (initially hidden) -->
  <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md overflow-hidden mt-6 hidden border border-blue-100 dark:border-blue-900/30 hover:shadow-lg transition-shadow duration-300" data-event-form-target="venueForm">
    <div class="p-6 border-b border-gray-200 dark:border-gray-700 bg-gradient-to-r from-blue-50 to-cyan-50 dark:from-blue-900/20 dark:to-cyan-900/20">
      <div class="flex items-center">
        <div class="w-12 h-12 rounded-xl bg-blue-100 dark:bg-blue-900/50 flex items-center justify-center mr-4 shadow-md text-blue-600 dark:text-blue-300">
          <%= icon "map", class: "w-6 h-6" %>
        </div>
        <div>
          <h3 class="text-xl font-bold text-gray-900 dark:text-white">New Venue Information</h3>
          <p class="text-sm text-gray-600 dark:text-gray-400">Add details about the new venue</p>
        </div>
      </div>
    </div>

    <div class="p-6 space-y-6">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="col-span-2">
          <div class="relative">
            <label for="venue_name" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
              Venue Name <span class="text-red-500">*</span>
            </label>
            <div class="relative rounded-md shadow-sm">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <%= icon "home", class: "h-5 w-5 text-gray-400 dark:text-gray-500" %>
              </div>
              <input type="text" id="venue_name" name="venue[name]" data-event-form-target="venueName" class="pl-10 block w-full rounded-md border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-blue-500 focus:border-blue-500 px-3 py-3 shadow-sm" placeholder="Enter venue name">
            </div>
          </div>
        </div>

        <div class="col-span-2">
          <div class="relative">
            <label for="venue_address" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
              Address <span class="text-red-500">*</span>
            </label>
            <div class="relative rounded-md shadow-sm">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <%= icon "map-pin", class: "h-5 w-5 text-gray-400 dark:text-gray-500" %>
              </div>
              <input type="text" id="venue_address" name="venue[address]" data-event-form-target="venueAddress" class="pl-10 block w-full rounded-md border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-blue-500 focus:border-blue-500 px-3 py-3 shadow-sm" placeholder="Full address">
            </div>
          </div>
        </div>

        <div class="col-span-1">
          <div class="relative">
            <label for="venue_city" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
              City <span class="text-red-500">*</span>
            </label>
            <div class="relative rounded-md shadow-sm">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <%= icon "navigation", class: "h-5 w-5 text-gray-400 dark:text-gray-500" %>
              </div>
              <input type="text" id="venue_city" name="venue[city]" data-event-form-target="venueCity" class="pl-10 block w-full rounded-md border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-blue-500 focus:border-blue-500 px-3 py-3 shadow-sm" value="Accra">
            </div>
          </div>
        </div>

        <div class="col-span-1">
          <div class="relative">
            <label for="venue_region" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
              Region
            </label>
            <div class="relative rounded-md shadow-sm">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <%= icon "globe", class: "h-5 w-5 text-gray-400 dark:text-gray-500" %>
              </div>
              <input type="text" id="venue_region" name="venue[region]" data-event-form-target="venueRegion" class="pl-10 block w-full rounded-md border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-blue-500 focus:border-blue-500 px-3 py-3 shadow-sm" placeholder="Greater Accra">
            </div>
          </div>
        </div>

        <div class="col-span-2">
          <div class="relative">
            <label for="venue_phone" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
              Phone
            </label>
            <div class="relative rounded-md shadow-sm">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <%= icon "phone", class: "h-5 w-5 text-gray-400 dark:text-gray-500" %>
              </div>
              <input type="tel" id="venue_phone" name="venue[phone]" data-event-form-target="venuePhone" class="pl-10 block w-full rounded-md border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-blue-500 focus:border-blue-500 px-3 py-3 shadow-sm" placeholder="+233 XX XXX XXXX">
            </div>
          </div>
        </div>

        <div class="col-span-1">
          <div class="relative">
            <label for="venue_capacity" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
              Capacity
            </label>
            <div class="relative rounded-md shadow-sm">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <%= icon "users", class: "h-5 w-5 text-gray-400 dark:text-gray-500" %>
              </div>
              <input type="number" id="venue_capacity" name="venue[capacity]" data-event-form-target="venueCapacity" min="1" class="pl-10 block w-full rounded-md border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-blue-500 focus:border-blue-500 px-3 py-3 shadow-sm" placeholder="Maximum capacity">
            </div>
          </div>
        </div>
      </div>

      <div class="flex justify-end">
        <button type="button" class="flex items-center px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-800 hover:bg-gray-50 dark:hover:bg-gray-700 mr-3 shadow-sm transition-colors" data-action="click->event-form#hideVenueForm">
          <%= icon "x", class: "h-4 w-4 mr-1" %>
          Cancel
        </button>
        <button type="button" class="flex items-center px-5 py-2 bg-gradient-to-r from-blue-600 to-cyan-600 text-white rounded-lg hover:from-blue-700 hover:to-cyan-700 shadow-md hover:shadow-lg transition-all transform hover:-translate-y-0.5" data-action="click->event-form#createVenue">
          <%= icon "plus", class: "h-4 w-4 mr-1" %>
          Add Venue
        </button>
      </div>
    </div>
  </div>

  <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md overflow-hidden mt-6 border border-purple-100 dark:border-purple-900/30 hover:shadow-lg transition-shadow duration-300">
    <div class="p-6 border-b border-gray-200 dark:border-gray-700 bg-gradient-to-r from-purple-50 to-fuchsia-50 dark:from-purple-900/20 dark:to-fuchsia-900/20">
      <div class="flex items-center">
        <div class="w-12 h-12 rounded-xl bg-purple-100 dark:bg-purple-900/50 flex items-center justify-center mr-4 shadow-md text-purple-600 dark:text-purple-300">
          <%= icon "image", class: "w-6 h-6" %>
        </div>
        <div>
          <h3 class="text-xl font-bold text-gray-900 dark:text-white">Event Media</h3>
          <p class="text-sm text-gray-600 dark:text-gray-400">Upload images for your event</p>
        </div>
      </div>
    </div>

    <div class="p-6 space-y-6">
      <div>
        <%= form.label :images, "Main Event Image", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" do %>
          Main Event Image
        <% end %>
        <div class="mt-2 flex justify-center px-6 pt-5 pb-6 border-2 border-purple-200 dark:border-purple-800 border-dashed rounded-lg bg-purple-50 dark:bg-purple-900/10 hover:bg-purple-100 dark:hover:bg-purple-900/20 transition-colors duration-200" data-event-form-target="mainImageDropzone">
          <div class="space-y-3 text-center">
            <div class="mx-auto h-20 w-20 text-purple-500 dark:text-purple-400 bg-white dark:bg-gray-800 rounded-full p-4 shadow-md flex items-center justify-center">
              <%= icon "upload-cloud", class: "h-12 w-12" %>
            </div>
            <div class="flex flex-col sm:flex-row items-center justify-center text-sm text-gray-600 dark:text-gray-400">
              <label for="event_images" class="relative cursor-pointer bg-white dark:bg-gray-800 rounded-md font-medium text-purple-600 dark:text-purple-400 hover:text-purple-500 dark:hover:text-purple-300 focus-within:outline-none px-3 py-1.5 shadow-sm">
                <span>Upload files</span>
                <%= form.file_field :images, multiple: true, id: "event_images", accept: 'image/*', class: "sr-only", data: { event_form_target: "imageInput", action: "change->event-form#previewImages" } %>
              </label>
              <p class="pl-1 mt-2 sm:mt-0">or drag and drop</p>
            </div>
            <p class="text-sm text-purple-600 dark:text-purple-400 flex items-center justify-center">
              <%= icon "info", class: "h-4 w-4 mr-1" %>
              PNG, JPG, GIF up to 5MB
            </p>
          </div>
        </div>
        <div class="mt-4 bg-white dark:bg-gray-800 rounded-lg p-4 border border-purple-100 dark:border-purple-900/30" data-event-form-target="imagePreview">
          <!-- Image previews will be displayed here via JavaScript -->
          <p class="text-center text-gray-500 dark:text-gray-400 text-sm italic">Image previews will appear here</p>
        </div>
      </div>

      <% if event.persisted? && event.event_media.present? %>
        <div class="mt-6 bg-white dark:bg-gray-800 rounded-lg p-4 border border-purple-100 dark:border-purple-900/30">
          <h4 class="text-base font-medium text-gray-800 dark:text-gray-200 mb-3 flex items-center">
            <%= icon "image", class: "h-5 w-5 mr-2 text-purple-500 dark:text-purple-400" %>
            Current Images
          </h4>
          <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-4">
            <% event.event_media.each do |media| %>
              <div class="relative group overflow-hidden rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300">
                <img src="<%= media.url %>" alt="Event image" class="h-32 w-full object-cover">
                <div class="absolute inset-0 bg-gradient-to-t from-black/70 to-black/20 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-all duration-300">
                  <%= link_to "#", class: "text-white bg-red-600 hover:bg-red-700 p-2.5 rounded-full transform transition-transform duration-300 hover:scale-110 shadow-lg" do %>
                    <%= icon "trash-2", class: "w-5 h-5" %>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md overflow-hidden mt-6 border border-amber-100 dark:border-amber-900/30 hover:shadow-lg transition-shadow duration-300">
    <div class="p-6 border-b border-gray-200 dark:border-gray-700 bg-gradient-to-r from-amber-50 to-orange-50 dark:from-amber-900/20 dark:to-orange-900/20">
      <div class="flex items-center">
        <div class="w-12 h-12 rounded-xl bg-amber-100 dark:bg-amber-900/50 flex items-center justify-center mr-4 shadow-md text-amber-600 dark:text-amber-300">
          <%= icon "calendar", class: "w-6 h-6" %>
        </div>
        <div>
          <h3 class="text-xl font-bold text-gray-900 dark:text-white">Date & Time</h3>
          <p class="text-sm text-gray-600 dark:text-gray-400">When will your event take place?</p>
        </div>
      </div>
    </div>

    <div class="p-6 space-y-6">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <div class="relative">
            <%= form.label :start_time, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" do %>
              Start Date & Time <span class="text-red-500">*</span>
            <% end %>
            <div class="relative rounded-md shadow-sm">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <%= icon "calendar-plus", class: "h-5 w-5 text-gray-400 dark:text-gray-500" %>
              </div>
              <%= form.datetime_field :start_time, class: "pl-10 block w-full rounded-md border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-amber-500 focus:border-amber-500 px-3 py-3 shadow-sm", required: true, min: Date.today, data: { event_form_target: "startTime", action: "change->event-form#validateDates" } %>
            </div>
            <p class="mt-2 text-sm text-amber-600 dark:text-amber-400 flex items-center">
              <%= icon "info", class: "h-4 w-4 mr-1" %>
              When does your event start?
            </p>
          </div>
        </div>

        <div>
          <div class="relative">
            <%= form.label :end_time, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" do %>
              End Date & Time <span class="text-red-500">*</span>
            <% end %>
            <div class="relative rounded-md shadow-sm">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <%= icon "calendar-check", class: "h-5 w-5 text-gray-400 dark:text-gray-500" %>
              </div>
              <%= form.datetime_field :end_time, class: "pl-10 block w-full rounded-md border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-amber-500 focus:border-amber-500 px-3 py-3 shadow-sm", required: true, data: { event_form_target: "endTime", action: "change->event-form#validateDates" } %>
            </div>
            <p class="mt-2 text-sm text-amber-600 dark:text-amber-400 flex items-center">
              <%= icon "info", class: "h-4 w-4 mr-1" %>
              When does your event end?
            </p>
          </div>
        </div>

        <div>
          <div class="relative">
            <%= form.label :recurrence_type, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" %>
            <div class="relative rounded-md shadow-sm">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <%= icon "repeat", class: "h-5 w-5 text-gray-400 dark:text-gray-500" %>
              </div>
              <%= form.select :recurrence_type, [["One-time", 0], ["Daily", 1], ["Weekly", 2], ["Monthly", 3], ["Custom", 4]], {},
                  class: "pl-10 block w-full rounded-md border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-amber-500 focus:border-amber-500 px-3 py-3 shadow-sm",
                  data: { event_form_target: "recurrenceType", action: "change->event-form#toggleRecurrencePattern" } %>
            </div>
            <p class="mt-2 text-sm text-amber-600 dark:text-amber-400 flex items-center">
              <%= icon "info", class: "h-4 w-4 mr-1" %>
              Is this a recurring event?
            </p>
          </div>
        </div>

        <div class="hidden" data-event-form-target="recurrencePatternField">
          <div class="relative">
            <%= form.label :recurrence_pattern, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" %>
            <div class="relative rounded-md shadow-sm">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <%= icon "code", class: "h-5 w-5 text-gray-400 dark:text-gray-500" %>
              </div>
              <%= form.text_field :recurrence_pattern, class: "pl-10 block w-full rounded-md border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-amber-500 focus:border-amber-500 px-3 py-3 shadow-sm" %>
            </div>
            <p class="mt-2 text-sm text-amber-600 dark:text-amber-400 flex items-center">
              <%= icon "info", class: "h-4 w-4 mr-1" %>
              For custom recurrence patterns (e.g., "FREQ=WEEKLY;BYDAY=MO,WE,FR")
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md overflow-hidden mt-6 border border-green-100 dark:border-green-900/30 hover:shadow-lg transition-shadow duration-300">
    <div class="p-6 border-b border-gray-200 dark:border-gray-700 bg-gradient-to-r from-green-50 to-emerald-50 dark:from-green-900/20 dark:to-emerald-900/20">
      <div class="flex items-center">
        <div class="w-12 h-12 rounded-xl bg-green-100 dark:bg-green-900/50 flex items-center justify-center mr-4 shadow-md text-green-600 dark:text-green-300">
          <%= icon "ticket", class: "w-6 h-6" %>
        </div>
        <div>
          <h3 class="text-xl font-bold text-gray-900 dark:text-white">Tickets & Capacity</h3>
          <p class="text-sm text-gray-600 dark:text-gray-400">Set up pricing and attendance limits</p>
        </div>
      </div>
    </div>

    <div class="p-6 space-y-6">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <fieldset class="bg-white dark:bg-gray-800 p-4 rounded-lg border border-green-100 dark:border-green-900/30 shadow-sm">
            <legend class="text-sm font-medium text-gray-800 dark:text-gray-200 px-2 bg-white dark:bg-gray-800 rounded-md">Ticket Type</legend>
            <div class="space-y-3">
              <div class="flex items-center p-3 rounded-lg hover:bg-green-50 dark:hover:bg-green-900/10 transition-colors cursor-pointer">
                <%= form.radio_button :price, 0, class: "h-5 w-5 border-gray-300 text-green-600 focus:ring-green-500", checked: event.free?, data: { event_form_target: "freeTicket", action: "change->event-form#togglePriceField" } %>
                <%= form.label :price_0, "Free Event", class: "ml-3 block text-base text-gray-700 dark:text-gray-300 font-medium" %>
              </div>
              <div class="flex items-center p-3 rounded-lg hover:bg-green-50 dark:hover:bg-green-900/10 transition-colors cursor-pointer">
                <%= form.radio_button :price, 1, class: "h-5 w-5 border-gray-300 text-green-600 focus:ring-green-500", checked: !event.free?, data: { event_form_target: "paidTicket", action: "change->event-form#togglePriceField" } %>
                <%= form.label :price_1, "Paid Event", class: "ml-3 block text-base text-gray-700 dark:text-gray-300 font-medium" %>
              </div>
            </div>
          </fieldset>
        </div>

        <div id="price_field" class="<%= event.free? ? 'hidden' : '' %>" data-event-form-target="priceField">
          <div class="relative">
            <%= form.label :price, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" do %>
              Price (GHS) <span class="text-red-500">*</span>
            <% end %>
            <div class="relative rounded-md shadow-sm">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <span class="text-gray-500 dark:text-gray-400 font-medium">â‚µ</span>
              </div>
              <%= form.number_field :price, min: 0, step: 0.01, value: event.free? ? nil : event.price,
                  class: "pl-7 block w-full rounded-md border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-green-500 focus:border-green-500 px-3 py-3 shadow-sm",
                  data: { event_form_target: "priceInput" } %>
            </div>
            <p class="mt-2 text-sm text-green-600 dark:text-green-400 flex items-center">
              <%= icon "info", class: "h-4 w-4 mr-1" %>
              Enter the ticket price in Ghana Cedis
            </p>
          </div>
        </div>

        <div class="col-span-2 md:col-span-1">
          <div class="relative">
            <%= form.label :capacity, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" %>
            <div class="relative rounded-md shadow-sm">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <%= icon "users", class: "h-5 w-5 text-gray-400 dark:text-gray-500" %>
              </div>
              <%= form.number_field :capacity, min: 1, class: "pl-10 block w-full rounded-md border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-green-500 focus:border-green-500 px-3 py-3 shadow-sm", placeholder: "Maximum number of attendees" %>
            </div>
            <p class="mt-2 text-sm text-green-600 dark:text-green-400 flex items-center">
              <%= icon "info", class: "h-4 w-4 mr-1" %>
              Leave blank for unlimited capacity
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md overflow-hidden mt-6 border border-gray-200 dark:border-gray-700 hover:shadow-lg transition-shadow duration-300">
    <div class="p-6 border-b border-gray-200 dark:border-gray-700 bg-gradient-to-r from-gray-50 to-slate-50 dark:from-gray-800/50 dark:to-slate-800/50">
      <div class="flex items-center">
        <div class="w-12 h-12 rounded-xl bg-gray-100 dark:bg-gray-700 flex items-center justify-center mr-4 shadow-md text-gray-600 dark:text-gray-300">
          <%= icon "settings", class: "w-6 h-6" %>
        </div>
        <div>
          <h3 class="text-xl font-bold text-gray-900 dark:text-white">Settings</h3>
          <p class="text-sm text-gray-600 dark:text-gray-400">Configure additional event options</p>
        </div>
      </div>
    </div>

    <div class="p-6 space-y-6">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <div class="relative">
            <%= form.label :status, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" %>
            <div class="relative rounded-md shadow-sm">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <%= icon "activity", class: "h-5 w-5 text-gray-400 dark:text-gray-500" %>
              </div>
              <%= form.select :status, [["Draft", 0], ["Active", 1], ["Pending", 2]], {}, class: "pl-10 block w-full rounded-md border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-gray-500 focus:border-gray-500 px-3 py-3 shadow-sm" %>
            </div>
            <p class="mt-2 text-sm text-gray-600 dark:text-gray-400 flex items-center">
              <%= icon "info", class: "h-4 w-4 mr-1" %>
              Draft events won't be visible to the public
            </p>
          </div>
        </div>

        <div>
          <div class="relative">
            <%= form.label :slug, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" %>
            <div class="relative rounded-md shadow-sm">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <%= icon "link", class: "h-5 w-5 text-gray-400 dark:text-gray-500" %>
              </div>
              <%= form.text_field :slug, class: "pl-10 block w-full rounded-md border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-gray-500 focus:border-gray-500 px-3 py-3 shadow-sm", data: { event_form_target: "slug" } %>
            </div>
            <p class="mt-2 text-sm text-gray-600 dark:text-gray-400 flex items-center">
              <%= icon "info", class: "h-4 w-4 mr-1" %>
              URL-friendly name (auto-generated if left blank)
            </p>
          </div>
        </div>
      </div>

      <div class="flex flex-col sm:flex-row gap-6 bg-gray-50 dark:bg-gray-700/50 p-4 rounded-lg border border-gray-200 dark:border-gray-700">
        <div class="flex items-center p-2 hover:bg-white dark:hover:bg-gray-700 rounded-lg transition-colors">
          <%= form.check_box :is_featured, class: "h-5 w-5 rounded border-gray-300 text-indigo-600 focus:ring-indigo-500" %>
          <%= form.label :is_featured, class: "ml-2 block text-sm font-medium text-gray-700 dark:text-gray-300" %>
        </div>

        <div class="flex items-center p-2 hover:bg-white dark:hover:bg-gray-700 rounded-lg transition-colors">
          <%= form.check_box :is_private, class: "h-5 w-5 rounded border-gray-300 text-indigo-600 focus:ring-indigo-500", data: { event_form_target: "privateCheck", action: "change->event-form#toggleAccessCode" } %>
          <%= form.label :is_private, class: "ml-2 block text-sm font-medium text-gray-700 dark:text-gray-300" %>
        </div>
      </div>

      <div id="private_event_settings" class="<%= event.is_private? ? '' : 'hidden' %> bg-indigo-50 dark:bg-indigo-900/20 p-4 rounded-lg border border-indigo-100 dark:border-indigo-900/30" data-event-form-target="accessCodeField">
        <div class="relative">
          <%= form.label :access_code, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" do %>
            Access Code <span class="text-red-500">*</span>
          <% end %>
          <div class="relative rounded-md shadow-sm">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <%= icon "key", class: "h-5 w-5 text-gray-400 dark:text-gray-500" %>
            </div>
            <%= form.text_field :access_code, class: "pl-10 block w-full rounded-md border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-indigo-500 focus:border-indigo-500 px-3 py-3 shadow-sm", data: { event_form_target: "accessCodeInput" } %>
          </div>
          <p class="mt-2 text-sm text-indigo-600 dark:text-indigo-400 flex items-center">
            <%= icon "lock", class: "h-4 w-4 mr-1" %>
            Required for private events - attendees will need this code to register
          </p>
        </div>
      </div>
    </div>
  </div>

  <div class="flex flex-col sm:flex-row justify-between items-center mt-10 gap-6">
    <div>
      <% if event.persisted? %>
        <%= button_tag type: "button", class: "flex items-center px-5 py-2.5 bg-gradient-to-r from-red-500 to-pink-500 hover:from-red-600 hover:to-pink-600 text-white font-bold rounded-lg shadow-md hover:shadow-lg transition-all transform hover:-translate-y-0.5 border border-red-600", data: { controller: "confirm", action: "confirm#show",
            confirm_title_value: "Delete Event",
            confirm_body_value: "Are you sure you want to delete this event? This action cannot be undone.",
            confirm_confirm_value: "Delete",
            confirm_cancel_value: "Cancel",
            confirm_url_value: event_path(event),
            confirm_method_value: "delete" } do %>
          <%= icon "trash-2", class: "w-5 h-5 mr-2" %>
          Delete Event
        <% end %>
      <% end %>
    </div>
    <div class="flex flex-col sm:flex-row gap-4 w-full sm:w-auto">
      <%= link_to event.persisted? ? event_path(event) : events_path, class: "flex items-center justify-center px-6 py-3 bg-white dark:bg-gray-800 text-gray-700 dark:text-gray-300 font-medium rounded-lg shadow-md hover:shadow-lg transition-all transform hover:-translate-y-0.5 border border-gray-300 dark:border-gray-600 w-full sm:w-auto" do %>
        <%= icon "x", class: "w-5 h-5 mr-2" %>
        Cancel
      <% end %>
      <% if event.persisted? %>
        <%= button_tag type: "submit", class: "flex items-center justify-center px-6 py-3 bg-gradient-to-r from-indigo-600 to-purple-600 hover:from-indigo-700 hover:to-purple-700 text-white font-bold rounded-lg shadow-md hover:shadow-lg transition-all transform hover:-translate-y-0.5 border border-indigo-700 w-full sm:w-auto" do %>
          <%= icon "save", class: "w-5 h-5 mr-2" %>
          Update Event
        <% end %>
      <% else %>
        <div class="flex flex-col sm:flex-row gap-4 w-full">
          <%= button_tag type: "submit", name: "draft", value: "1", class: "flex items-center justify-center px-6 py-3 bg-gradient-to-r from-gray-500 to-slate-500 hover:from-gray-600 hover:to-slate-600 text-white font-bold rounded-lg shadow-md hover:shadow-lg transition-all transform hover:-translate-y-0.5 border border-gray-600 w-full sm:w-auto" do %>
            <%= icon "file", class: "w-5 h-5 mr-2" %>
            Save as Draft
          <% end %>
          <%= button_tag type: "submit", class: "flex items-center justify-center px-6 py-3 bg-gradient-to-r from-indigo-600 to-purple-600 hover:from-indigo-700 hover:to-purple-700 text-white font-bold rounded-lg shadow-md hover:shadow-lg transition-all transform hover:-translate-y-0.5 border border-indigo-700 w-full sm:w-auto" do %>
            <%= icon "send", class: "w-5 h-5 mr-2" %>
            Publish Event
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // The Stimulus controller will handle all the interactive form functionality
  });
</script>