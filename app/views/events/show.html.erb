                case @event.category.name.downcase
                when /music/
                  related_tags += ["Concerts", "Live Music", "Bands", "Performances", "Festivals", "Nightlife"]
                when /food/
                  related_tags += ["Restaurants", "Cuisine", "Dining", "Gourmet", "Tasting", "Chefs"]
                when /art/
                  related_tags += ["Exhibitions", "Galleries", "Museums", "Paintings", "Sculptures", "Photography"]
                when /tech/
                  related_tags += ["Innovation", "Startups", "Digital", "Software", "Hardware", "AI"]
                when /sport/
                  related_tags += ["Athletics", "Competition", "Teams", "Fitness", "Games", "Tournament"]
                when /business/
                  related_tags += ["Networking", "Entrepreneurship", "Startups", "Marketing", "Finance", "Leadership"]
                else
                  related_tags += ["Community", "Local", "Social", "Entertainment", "Culture", "Lifestyle"]
                end
              end

              # Add more specific tags based on title and description
              event_text = [@event.title, @event.description].join(" ").downcase

              # Music-related tags
              if event_text =~ /jazz|blues|soul/
                related_tags += ["Jazz", "Blues", "Soul"]
              elsif event_text =~ /rock|metal|punk/
                related_tags += ["Rock", "Alternative", "Indie"]
              elsif event_text =~ /hip hop|rap/
                related_tags += ["Hip Hop", "Rap", "Urban"]
              elsif event_text =~ /classical|orchestra|symphony/
                related_tags += ["Classical", "Orchestra", "Symphony"]
              elsif event_text =~ /dance|electronic|dj/
                related_tags += ["Electronic", "Dance", "DJ"]
              end

              # Food-related tags
              if event_text =~ /wine|beer|spirits/
                related_tags += ["Wine", "Beer", "Drinks", "Tasting"]
              elsif event_text =~ /chef|cook|bake/
                related_tags += ["Cooking", "Culinary", "Chefs"]
              end

              # Activity-related tags
              if event_text =~ /workshop|class|learn/
                related_tags += ["Workshop", "Learning", "Education", "Skills"]
              elsif event_text =~ /conference|talk|speaker/
                related_tags += ["Conference", "Talks", "Speakers", "Presentations"]
              elsif event_text =~ /networking|meet|connect/
                related_tags += ["Networking", "Connections", "Professional"]
