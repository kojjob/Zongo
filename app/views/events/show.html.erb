                related_tags += ["Family", "Kids", "Children", "All Ages"]
              elsif event_text =~ /adult|18\+/
                related_tags += ["Adults", "18+", "Mature"]
              end

              # Randomize and limit tags
              related_tags = related_tags.shuffle.uniq.take(12)

              # Create tag objects for the view
              tags = related_tags.map { |name| OpenStruct.new(name: name) }
            %>
