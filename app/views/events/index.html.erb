<div class="min-h-screen bg-gray-50 dark:bg-gray-900 transition-colors duration-200">

  <!-- Hero Section - Improved with more modern design -->
  <% if @featured_event.present? %>
  <section class="relative overflow-hidden bg-gradient-to-r from-blue-600 via-indigo-600 to-purple-700">
    <!-- Background pattern with overlay -->
    <div class="absolute inset-0 opacity-10">
      <svg class="w-full h-full" viewBox="0 0 100 100" preserveAspectRatio="none">
        <defs>
          <pattern id="grid" width="10" height="10" patternUnits="userSpaceOnUse">
            <path d="M 10 0 L 0 0 0 10" fill="none" stroke="white" stroke-width="0.5"/>
          </pattern>
        </defs>
        <rect width="100" height="100" fill="url(#grid)" />
      </svg>
    </div>
    
    <!-- Event image overlay -->
    <% if @featured_event.event_media.present? %>
      <div class="absolute inset-0 opacity-20" 
           style="background-image: url('<%= @featured_event.event_media.first.url %>'); 
                  background-size: cover; background-position: center;">
      </div>
    <% end %>
    
    <!-- Gradient overlay -->
    <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-transparent to-black/30"></div>
    
    <div class="relative max-w-7xl mx-auto py-16 px-4 sm:px-6 lg:py-24 lg:px-8 z-10">
      <div class="lg:grid lg:grid-cols-2 lg:gap-12 items-center">
        <div class="space-y-6">
          <!-- Event badge with pulsing animation -->
          <div class="inline-flex items-center px-3 py-1.5 rounded-full text-sm font-medium bg-white/20 backdrop-blur-sm text-white border border-white/30 shadow-sm relative">
            Featured Event
            <span class="absolute right-0 top-0 -mr-1 -mt-1 flex h-3 w-3">
              <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-purple-400 opacity-75"></span>
              <span class="relative inline-flex rounded-full h-3 w-3 bg-purple-500"></span>
            </span>
          </div>
          
          <!-- Event title with better typography -->
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-extrabold tracking-tight leading-none text-white">
            <%= @featured_event.title %>
          </h1>
          
          <!-- Event description -->
          <p class="text-xl max-w-2xl text-gray-100 leading-relaxed">
            <%= @featured_event.short_description %>
          </p>
          
          <!-- Action buttons with hover effects -->
          <div class="flex flex-wrap gap-4 pt-4">
            <%= link_to "Get Tickets", @featured_event, class: "px-8 py-4 bg-white hover:bg-gray-50 text-blue-700 hover:text-blue-800 font-medium rounded-xl shadow-md hover:shadow-lg transition-all transform hover:-translate-y-1 focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-blue-600" %>
            
            <%= link_to "Learn More", @featured_event, class: "px-8 py-4 bg-black/20 hover:bg-black/30 backdrop-blur-sm text-white font-medium rounded-xl border border-white/30 hover:border-white/50 transition-all transform hover:-translate-y-1 focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-blue-600" %>
          </div>
          
          <!-- Event Details with improved visual style -->
          <div class="flex flex-wrap gap-x-8 gap-y-4 mt-8 bg-black/20 backdrop-blur-sm p-6 rounded-xl max-w-xl border border-white/10">
            <div class="flex items-center">
              <div class="bg-white/20 p-2 rounded-lg mr-3">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
              </div>
              <div>
                <p class="text-xs text-gray-300 uppercase tracking-wide font-medium">Date</p>
                <p class="font-bold text-white"><%= @featured_event.start_time.strftime("%A, %B %d, %Y") %></p>
              </div>
            </div>
            
            <div class="flex items-center">
              <div class="bg-white/20 p-2 rounded-lg mr-3">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <div>
                <p class="text-xs text-gray-300 uppercase tracking-wide font-medium">Time</p>
                <p class="font-bold text-white"><%= @featured_event.start_time.strftime("%I:%M %p") %> - <%= @featured_event.end_time.strftime("%I:%M %p") %></p>
              </div>
            </div>
            
            <div class="flex items-center">
              <div class="bg-white/20 p-2 rounded-lg mr-3">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              </div>
              <div>
                <p class="text-xs text-gray-300 uppercase tracking-wide font-medium">Location</p>
                <p class="font-bold text-white"><%= @featured_event.venue&.name || 'Venue TBA' %></p>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Featured image with artistic elements -->
        <div class="hidden lg:flex items-center justify-center mt-10 lg:mt-0">
          <div class="relative w-full max-w-md">
            <!-- Decorative elements -->
            <div class="absolute -top-6 -right-6 w-32 h-32 bg-gradient-to-br from-pink-500 to-purple-500 rounded-full opacity-60 blur-2xl"></div>
            <div class="absolute -bottom-6 -left-6 w-32 h-32 bg-gradient-to-br from-yellow-500 to-orange-500 rounded-full opacity-60 blur-2xl"></div>
            
            <!-- Featured image -->
            <div class="relative bg-white bg-opacity-5 backdrop-filter backdrop-blur-lg p-1 rounded-2xl border border-white/20 shadow-2xl overflow-hidden transform rotate-2 hover:rotate-0 transition-transform duration-500">
              <% if @featured_event.event_media.present? %>
                <img 
                  src="<%= @featured_event.event_media.first.url %>" 
                  alt="<%= @featured_event.title %>" 
                  class="w-full h-80 object-cover rounded-xl"
                >
              <% else %>
                <div class="w-full h-80 bg-gradient-to-br from-purple-600 to-blue-500 rounded-xl flex items-center justify-center">
                  <svg class="w-24 h-24 text-white/70" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21 21l-6-6m-5-2a7 7 0 110-14 7 7 0 010 14z" />
                  </svg>
                </div>
              <% end %>
              
              <!-- Badge with glass morphism effect -->
              <div class="absolute top-4 right-4 bg-white/90 dark:bg-black/80 backdrop-blur-sm text-gray-900 dark:text-white px-3 py-1.5 rounded-full text-sm font-medium shadow-lg">
                <% if @featured_event.attendances.count > 0 %>
                  <%= @featured_event.attendances.count %> attending
                <% else %>
                  Be the first to join!
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <% else %>
  <!-- Fallback Banner with modern design -->
  <section class="bg-gradient-to-r from-blue-600 via-indigo-600 to-purple-700 text-white relative overflow-hidden">
    <!-- Pattern background -->
    <div class="absolute inset-0 opacity-10">
      <svg class="w-full h-full" viewBox="0 0 100 100" preserveAspectRatio="none">
        <defs>
          <pattern id="grid" width="10" height="10" patternUnits="userSpaceOnUse">
            <path d="M 10 0 L 0 0 0 10" fill="none" stroke="white" stroke-width="0.5"/>
          </pattern>
        </defs>
        <rect width="100" height="100" fill="url(#grid)" />
      </svg>
    </div>
    
    <div class="max-w-7xl mx-auto py-16 px-4 sm:px-6 lg:px-8 relative z-10">
      <div class="lg:flex lg:items-center lg:justify-between">
        <div class="lg:max-w-2xl">
          <h2 class="text-3xl font-extrabold mb-2 sm:text-4xl lg:text-5xl tracking-tight">
            Discover Events Near You
          </h2>
          <p class="text-xl mb-6 text-gray-100 max-w-2xl">Find the best events happening around you and connect with like-minded individuals in your community.</p>
          <div class="flex gap-4 flex-wrap">
            <a href="/events/new" class="px-6 py-3 bg-white hover:bg-gray-50 text-blue-700 hover:text-blue-800 rounded-xl font-medium shadow-md hover:shadow-lg transition-all transform hover:-translate-y-1">
              Create an Event
            </a>
            <a href="#" class="px-6 py-3 bg-black/20 hover:bg-black/30 backdrop-blur-sm text-white rounded-xl font-medium border border-white/30 hover:border-white/50 transition-all transform hover:-translate-y-1">
              Explore Categories
            </a>
          </div>
        </div>
        <div class="mt-10 lg:mt-0 lg:max-w-md">
          <div class="grid grid-cols-2 gap-4">
            <div class="rounded-xl p-4 bg-white/10 backdrop-blur-sm border border-white/20 flex flex-col items-center justify-center text-center">
              <span class="text-3xl font-bold mb-1"><%= Event.upcoming.count rescue "300+" %></span>
              <span class="text-sm opacity-80">Upcoming Events</span>
            </div>
            <div class="rounded-xl p-4 bg-white/10 backdrop-blur-sm border border-white/20 flex flex-col items-center justify-center text-center">
              <span class="text-3xl font-bold mb-1"><%= @categories.count rescue "20+" %></span>
              <span class="text-sm opacity-80">Categories</span>
            </div>
            <div class="rounded-xl p-4 bg-white/10 backdrop-blur-sm border border-white/20 flex flex-col items-center justify-center text-center">
              <span class="text-3xl font-bold mb-1"><%= User.count rescue "5K+" %></span>
              <span class="text-sm opacity-80">Active Users</span>
            </div>
            <div class="rounded-xl p-4 bg-white/10 backdrop-blur-sm border border-white/20 flex flex-col items-center justify-center text-center">
              <span class="text-3xl font-bold mb-1"><%= Venue.count rescue "100+" %></span>
              <span class="text-sm opacity-80">Venues</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <% end %>

  <!-- Main content -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-8 pb-16">
    <!-- Tab navigation with modern styling -->
    <div class="border-b border-gray-200 dark:border-gray-800 mb-8">
      <div class="flex flex-wrap -mb-px">
        <a href="/groups" class="px-6 py-3 text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors border-b-2 border-transparent hover:border-gray-300 dark:hover:border-gray-700 font-medium">
          Groups
        </a>
        <a href="/events" class="px-6 py-3 text-blue-600 dark:text-blue-400 font-medium border-b-2 border-blue-600 dark:border-blue-500">
          Events
        </a>
        <a href="/chats" class="px-6 py-3 text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors border-b-2 border-transparent hover:border-gray-300 dark:hover:border-gray-700 font-medium">
          Chats
        </a>
      </div>
    </div>

    <!-- Main grid layout with improved spacing -->
    <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
      <!-- Sidebar with filters - Upgraded design -->
      <div class="hidden lg:block lg:col-span-1 space-y-6">
        <%= render "filters" %>
        
        <% if @popular_events.present? %>
        <div class="bg-white dark:bg-gray-800 rounded-xl p-5 shadow-sm border border-gray-200 dark:border-gray-700">
          <h3 class="text-lg font-bold mb-4 text-gray-900 dark:text-white flex items-center">
            <svg class="w-5 h-5 mr-2 text-orange-500 dark:text-orange-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path>
            </svg>
            Popular Events
          </h3>
          <div class="space-y-3">
            <% @popular_events.take(5).each do |event| %>
              <%= link_to event, class: "flex items-start p-2.5 -mx-2.5 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors group" do %>
                <div class="h-12 w-12 rounded-md bg-gray-200 dark:bg-gray-700 overflow-hidden flex-shrink-0">
                  <% if event.event_media.present? %>
                    <img src="<%= event.event_media.first.url %>" alt="<%= event.title %>" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300">
                  <% end %>
                </div>
                <div class="ml-3 flex-1 min-w-0">
                  <p class="text-sm font-medium text-gray-900 dark:text-white group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors truncate">
                    <%= event.title %>
                  </p>
                  <p class="text-xs text-gray-500 dark:text-gray-400 flex items-center mt-1">
                    <svg class="h-3 w-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    </svg>
                    <%= pluralize(event.attendances.count, 'attendee') %>
                  </p>
                  <p class="text-xs text-gray-500 dark:text-gray-400 flex items-center mt-1">
                    <svg class="h-3 w-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                    </svg>
                    <%= event.start_time.strftime("%a, %b %d") %>
                  </p>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
        <% end %>
      </div>
      
      <!-- Main content area with improved layout -->
      <div class="lg:col-span-3">
        <!-- Search Form with improved design -->
        <%= render 'search_form' %>

        <!-- Turbo frame for the events list -->
        <%= turbo_frame_tag "events_results", loading: "lazy" do %>
          <!-- All Upcoming Events section - Enhanced design -->
          <section class="mb-10">
            <div class="flex justify-between items-center mb-6">
              <h2 class="flex items-center text-2xl font-bold text-gray-900 dark:text-white">
                <svg class="h-6 w-6 mr-2 text-blue-500 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
                <%= params[:category_id].present? ? @categories.find(params[:category_id]).name : "Events" %>
                <% if params[:date_range].present? && params[:date_range] != "upcoming" %>
                  <span class="ml-2 text-sm font-normal text-gray-500 dark:text-gray-400 px-2.5 py-1 bg-gray-100 dark:bg-gray-700 rounded-full">
                    <%= params[:date_range].humanize %>
                  </span>
                <% end %>
              </h2>
            </div>
            
            <!-- Event List with enhanced design -->
            <%= render 'event_list', events: @upcoming_events, pagy: @pagy %>
          </section>
        <% end %>

        <!-- This weekend section - Enhanced cards -->
        <% if @weekend_events.present? && params[:date_range] != "weekend" %>
        <section class="mb-10">
          <div class="flex justify-between items-center mb-6">
            <h2 class="flex items-center text-2xl font-bold text-gray-900 dark:text-white">
              <svg class="h-6 w-6 mr-2 text-purple-500 dark:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 15.546c-.523 0-1.046.151-1.5.454a2.704 2.704 0 01-3 0 2.704 2.704 0 00-3 0 2.704 2.704 0 01-3 0 2.704 2.704 0 00-3 0 2.704 2.704 0 01-3 0 2.701 2.701 0 00-1.5-.454M9 6v2m3-2v2m3-2v2M9 3h.01M12 3h.01M15 3h.01M21 21v-7a2 2 0 00-2-2H5a2 2 0 00-2 2v7h18zm-3-9v-2a2 2 0 00-2-2H8a2 2 0 00-2 2v2h12z"></path>
              </svg>
              This Weekend
            </h2>
            <a href="<%= events_path(date_range: 'weekend') %>" class="text-blue-600 dark:text-blue-400 text-sm font-medium hover:text-blue-800 dark:hover:text-blue-300 transition-colors flex items-center">
              View all
              <svg class="ml-1 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
          
          <!-- Contained Event Card Container with glass morphism effect -->
          <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm p-6 border border-gray-200 dark:border-gray-700">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
              <% @weekend_events.each do |event| %>
                <%= render partial: 'event_card', locals: { event: event } %>
              <% end %>
            </div>
          </div>
        </section>
        <% end %>

        <!-- Music & Art section - Enhanced cards -->
        <% if @music_events.present? && (params[:category_id].blank? || params[:category_id] != music_category&.id.to_s) %>
        <section class="mb-10">
          <div class="flex justify-between items-center mb-6">
            <h2 class="flex items-center text-2xl font-bold text-gray-900 dark:text-white">
              <svg class="h-6 w-6 mr-2 text-pink-500 dark:text-pink-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3"></path>
              </svg>
              Music & Art
            </h2>
            <a href="<%= events_path(category_id: music_category&.id) %>" class="text-pink-600 dark:text-pink-400 text-sm font-medium hover:text-pink-800 dark:hover:text-pink-300 transition-colors flex items-center">
              View all
              <svg class="ml-1 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
          
          <!-- Visually enhanced container -->
          <div class="bg-gradient-to-r from-pink-50 to-purple-50 dark:from-pink-900/10 dark:to-purple-900/10 rounded-xl shadow-sm p-6 border border-pink-100 dark:border-pink-900/20">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
              <% @music_events.each do |event| %>
                <%= render partial: 'event_card', locals: { event: event } %>
              <% end %>
            </div>
          </div>
        </section>
        <% end %>

        <!-- Sports section - Enhanced cards -->
        <% if @sports_events.present? && (params[:category_id].blank? || params[:category_id] != sports_category&.id.to_s) %>
        <section class="mb-10">
          <div class="flex justify-between items-center mb-6">
            <h2 class="flex items-center text-2xl font-bold text-gray-900 dark:text-white">
              <svg class="h-6 w-6 mr-2 text-blue-500 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 11.5V14m0-2.5v-6a1.5 1.5 0 113 0m-3 6a1.5 1.5 0 00-3 0v2a7.5 7.5 0 0015 0v-5a1.5 1.5 0 00-3 0m-6-3V11m0-5.5v-1a1.5 1.5 0 013 0v1m0 0V11m0-5.5a1.5 1.5 0 013 0v3m0 0V11"></path>
              </svg>
              Sports
            </h2>
            <a href="<%= events_path(category_id: sports_category&.id) %>" class="text-blue-600 dark:text-blue-400 text-sm font-medium hover:text-blue-800 dark:hover:text-blue-300 transition-colors flex items-center">
              View all
              <svg class="ml-1 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
          
          <!-- Visually enhanced container -->
          <div class="bg-gradient-to-r from-blue-50 to-cyan-50 dark:from-blue-900/10 dark:to-cyan-900/10 rounded-xl shadow-sm p-6 border border-blue-100 dark:border-blue-900/20">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
              <% @sports_events.each do |event| %>
                <%= render partial: 'event_card', locals: { event: event } %>
              <% end %>
            </div>
          </div>
        </section>
        <% end %>

        <!-- Food & Drink section - Enhanced cards -->
        <% if @food_events.present? && (params[:category_id].blank? || params[:category_id] != food_category&.id.to_s) %>
        <section class="mb-10">
          <div class="flex justify-between items-center mb-6">
