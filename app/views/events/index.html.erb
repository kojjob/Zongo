<div class="min-h-screen bg-gray-50 dark:bg-gray-900 transition-colors duration-200">

  <!-- Enhanced Hero Section with Immersive Design -->
  <% if @featured_event.present? %>
  <section class="relative overflow-hidden min-h-[600px] flex items-center">
    <!-- Full-screen background image with parallax effect -->
    <% if @featured_event.event_media.present? %>
      <div class="absolute inset-0 w-full h-full bg-cover bg-center bg-fixed transform scale-105"
           style="background-image: url('<%= @featured_event.event_media.first.image_url %>');"
           data-controller="parallax">
      </div>
    <% else %>
      <div class="absolute inset-0 w-full h-full bg-gradient-to-br from-indigo-600 via-purple-600 to-pink-600"></div>
    <% end %>

    <!-- Animated pattern overlay -->
    <div class="absolute inset-0 opacity-30 mix-blend-overlay">
      <svg class="w-full h-full" viewBox="0 0 100 100" preserveAspectRatio="none">
        <defs>
          <pattern id="grid" width="10" height="10" patternUnits="userSpaceOnUse">
            <path d="M 10 0 L 0 0 0 10" fill="none" stroke="white" stroke-width="0.8"/>
          </pattern>
        </defs>
        <rect width="100" height="100" fill="url(#grid)" />
      </svg>
    </div>

    <!-- Decorative elements -->
    <div class="absolute top-0 left-0 w-full h-full overflow-hidden pointer-events-none">
      <!-- Animated circles -->
      <div class="absolute top-[10%] left-[5%] w-64 h-64 rounded-full bg-gradient-to-br from-purple-500/20 to-pink-500/20 blur-3xl animate-pulse-slow"></div>
      <div class="absolute bottom-[15%] right-[10%] w-80 h-80 rounded-full bg-gradient-to-br from-blue-500/20 to-indigo-500/20 blur-3xl animate-pulse-slow animation-delay-2000"></div>
      <div class="absolute top-[40%] right-[20%] w-40 h-40 rounded-full bg-gradient-to-br from-amber-500/20 to-orange-500/20 blur-3xl animate-pulse-slow animation-delay-1000"></div>
    </div>

    <!-- Enhanced gradient overlay with depth -->
    <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/40 to-black/30"></div>
    <div class="absolute inset-0 bg-gradient-to-r from-black/60 via-transparent to-transparent"></div>

    <div class="relative max-w-7xl mx-auto py-20 px-4 sm:px-6 lg:py-28 lg:px-8 z-10">
      <div class="lg:grid lg:grid-cols-2 lg:gap-16 items-center">
        <div class="space-y-8">
          <!-- Enhanced Event badge with 3D effect -->
          <div class="inline-flex items-center px-4 py-2 rounded-full text-sm font-bold bg-gradient-to-r from-purple-500/80 to-pink-500/80 backdrop-blur-md text-white border border-white/30 shadow-lg relative transform hover:scale-105 transition-all">
            <span class="mr-2">✦</span>
            Featured Event
            <span class="absolute right-0 top-0 -mr-1 -mt-1 flex h-3 w-3">
              <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-yellow-400 opacity-75"></span>
              <span class="relative inline-flex rounded-full h-3 w-3 bg-yellow-500"></span>
            </span>
          </div>

          <!-- Event title with enhanced typography and animation -->
          <h1 class="text-5xl md:text-6xl lg:text-7xl font-black tracking-tight leading-none text-transparent bg-clip-text bg-gradient-to-r from-white via-blue-100 to-white animate-text-shimmer">
            <%= @featured_event.title %>
          </h1>

          <!-- Event description with enhanced styling -->
          <p class="text-xl md:text-2xl max-w-2xl text-blue-50 leading-relaxed font-light drop-shadow-md">
            <%= @featured_event.short_description %>
          </p>

          <!-- Enhanced Action buttons with 3D effects -->
          <div class="flex flex-wrap gap-5 pt-6">
            <%= link_to @featured_event, class: "group relative px-8 py-4 bg-gradient-to-r from-pink-600 to-purple-600 text-white font-bold rounded-xl shadow-[0_8px_30px_rgb(0,0,0,0.12)] hover:shadow-[0_8px_30px_rgba(219,39,119,0.3)] transition-all duration-300 transform hover:-translate-y-1 overflow-hidden" do %>
              <span class="relative z-10 flex items-center">
                <%= icon "ticket", class: "w-5 h-5 mr-2" %>
                Get Tickets
              </span>
              <div class="absolute inset-0 -translate-y-full group-hover:translate-y-0 bg-gradient-to-r from-purple-600 to-pink-600 transition-transform duration-300 ease-in-out"></div>
            <% end %>

            <%= link_to @featured_event, class: "group relative px-8 py-4 bg-white/10 backdrop-blur-md text-white font-bold rounded-xl border border-white/30 hover:border-white/50 shadow-[0_8px_30px_rgb(0,0,0,0.12)] hover:shadow-[0_8px_30px_rgba(255,255,255,0.2)] transition-all duration-300 transform hover:-translate-y-1 overflow-hidden" do %>
              <span class="relative z-10 flex items-center">
                <%= icon "info", class: "w-5 h-5 mr-2" %>
                Learn More
              </span>
              <div class="absolute inset-0 -translate-y-full group-hover:translate-y-0 bg-white/20 transition-transform duration-300 ease-in-out"></div>
            <% end %>
          </div>

          <!-- Enhanced Event Details with glassmorphism -->
          <div class="flex flex-wrap gap-x-8 gap-y-6 mt-10 bg-black/30 backdrop-blur-xl p-8 rounded-2xl max-w-xl border border-white/20 shadow-[0_8px_30px_rgb(0,0,0,0.12)]">
            <div class="flex items-center">
              <div class="bg-gradient-to-br from-blue-500/80 to-indigo-500/80 p-3 rounded-xl mr-4 shadow-lg transform hover:scale-105 transition-transform duration-300">
                <%= icon "calendar", class: "w-6 h-6 text-white" %>
              </div>
              <div>
                <p class="text-xs text-blue-200 uppercase tracking-widest font-semibold">Date</p>
                <p class="font-bold text-white text-lg"><%= @featured_event.start_time.strftime("%A, %B %d, %Y") %></p>
              </div>
            </div>

            <div class="flex items-center">
              <div class="bg-gradient-to-br from-purple-500/80 to-pink-500/80 p-3 rounded-xl mr-4 shadow-lg transform hover:scale-105 transition-transform duration-300">
                <%= icon "clock", class: "w-6 h-6 text-white" %>
              </div>
              <div>
                <p class="text-xs text-blue-200 uppercase tracking-widest font-semibold">Time</p>
                <p class="font-bold text-white text-lg"><%= @featured_event.start_time.strftime("%I:%M %p") %> - <%= @featured_event.end_time.strftime("%I:%M %p") %></p>
              </div>
            </div>

            <div class="flex items-center">
              <div class="bg-gradient-to-br from-amber-500/80 to-orange-500/80 p-3 rounded-xl mr-4 shadow-lg transform hover:scale-105 transition-transform duration-300">
                <%= icon "map-pin", class: "w-6 h-6 text-white" %>
              </div>
              <div>
                <p class="text-xs text-blue-200 uppercase tracking-widest font-semibold">Location</p>
                <p class="font-bold text-white text-lg"><%= @featured_event.venue&.name || 'Venue TBA' %></p>
              </div>
            </div>

            <!-- Added attendee count with animation -->
            <div class="flex items-center">
              <div class="bg-gradient-to-br from-green-500/80 to-emerald-500/80 p-3 rounded-xl mr-4 shadow-lg transform hover:scale-105 transition-transform duration-300">
                <%= icon "users", class: "w-6 h-6 text-white" %>
              </div>
              <div>
                <p class="text-xs text-blue-200 uppercase tracking-widest font-semibold">Attendees</p>
                <p class="font-bold text-white text-lg">
                  <span class="inline-flex items-center">
                    <%= @featured_event.attendances.count %>
                    <span class="ml-2 px-2 py-1 text-xs bg-white/20 rounded-full animate-pulse">Join now!</span>
                  </span>
                </p>
              </div>
            </div>
          </div>
        </div>

        <!-- Enhanced Featured image with 3D and artistic elements -->
        <div class="hidden lg:flex items-center justify-center mt-10 lg:mt-0">
          <div class="relative w-full max-w-md">
            <!-- Enhanced decorative elements with animation -->
            <div class="absolute -top-10 -right-10 w-40 h-40 bg-gradient-to-br from-pink-500 to-purple-500 rounded-full opacity-60 blur-2xl animate-pulse-slow"></div>
            <div class="absolute -bottom-10 -left-10 w-40 h-40 bg-gradient-to-br from-yellow-500 to-orange-500 rounded-full opacity-60 blur-2xl animate-pulse-slow animation-delay-1000"></div>
            <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-60 h-60 bg-gradient-to-br from-blue-500 to-indigo-500 rounded-full opacity-40 blur-3xl animate-pulse-slow animation-delay-2000"></div>

            <!-- Floating elements -->
            <div class="absolute -top-8 left-10 w-16 h-16 bg-gradient-to-br from-purple-500 to-pink-500 rounded-xl opacity-80 shadow-xl transform rotate-12 animate-float"></div>
            <div class="absolute -bottom-4 right-10 w-12 h-12 bg-gradient-to-br from-amber-500 to-orange-500 rounded-full opacity-80 shadow-xl animate-float animation-delay-1000"></div>
            <div class="absolute top-1/4 -right-6 w-10 h-10 bg-gradient-to-br from-blue-500 to-indigo-500 rounded-lg opacity-80 shadow-xl transform -rotate-12 animate-float animation-delay-2000"></div>

            <!-- Enhanced Featured image with 3D effect -->
            <div class="relative bg-white/10 backdrop-blur-xl p-2 rounded-2xl border border-white/30 shadow-[0_35px_60px_-15px_rgba(0,0,0,0.5)] overflow-hidden transform rotate-3 hover:rotate-0 transition-all duration-500 hover:scale-105">
              <% if @featured_event.event_media.present? %>
                <img
                  src="<%= @featured_event.event_media.first.image_url %>"
                  alt="<%= @featured_event.title %>"
                  class="w-full h-96 object-cover rounded-xl shadow-inner"
                >
              <% else %>
                <div class="w-full h-96 bg-gradient-to-br from-purple-600 to-blue-500 rounded-xl flex items-center justify-center">
                  <%= icon "image", class: "w-24 h-24 text-white/70" %>
                </div>
              <% end %>

              <!-- Enhanced Badge with 3D glass morphism effect -->
              <div class="absolute top-4 right-4 bg-gradient-to-r from-white/80 to-white/60 dark:from-black/80 dark:to-black/60 backdrop-blur-md text-gray-900 dark:text-white px-4 py-2 rounded-full text-sm font-bold shadow-lg border border-white/50 dark:border-white/10 transform hover:scale-105 transition-transform">
                <% if @featured_event.attendances.count > 0 %>
                  <span class="flex items-center">
                    <%= icon "users", class: "w-4 h-4 mr-1.5 text-indigo-600 dark:text-indigo-400" %>
                    <%= @featured_event.attendances.count %> attending
                  </span>
                <% else %>
                  <span class="flex items-center">
                    <%= icon "user-plus", class: "w-4 h-4 mr-1.5 text-indigo-600 dark:text-indigo-400" %>
                    Be the first to join!
                  </span>
                <% end %>
              </div>

              <!-- Category badge -->
              <% if @featured_event.category.present? %>
                <div class="absolute top-4 left-4 bg-gradient-to-r from-indigo-600/90 to-purple-600/90 backdrop-blur-md text-white px-4 py-2 rounded-full text-sm font-bold shadow-lg border border-indigo-400/30 transform hover:scale-105 transition-transform">
                  <span class="flex items-center">
                    <%= icon "tag", class: "w-4 h-4 mr-1.5" %>
                    <%= @featured_event.category.name %>
                  </span>
                </div>
              <% end %>

              <!-- Price badge -->
              <div class="absolute bottom-4 left-4 bg-gradient-to-r <%= @featured_event.free? ? 'from-green-600/90 to-emerald-600/90' : 'from-blue-600/90 to-cyan-600/90' %> backdrop-blur-md text-white px-4 py-2 rounded-full text-sm font-bold shadow-lg border <%= @featured_event.free? ? 'border-green-400/30' : 'border-blue-400/30' %> transform hover:scale-105 transition-transform">
                <span class="flex items-center">
                  <%= icon @featured_event.free? ? "gift" : "credit-card", class: "w-4 h-4 mr-1.5" %>
                  <%= @featured_event.free? ? "Free Event" : "₵#{@featured_event.price}" %>
                </span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <% else %>
  <!-- Enhanced Fallback Banner with immersive design -->
  <section class="relative overflow-hidden min-h-[500px] flex items-center">
    <!-- Dynamic background with animated gradient -->
    <div class="absolute inset-0 bg-gradient-to-br from-indigo-600 via-purple-600 to-pink-600 animate-gradient-slow">
      <!-- Animated pattern overlay with better visibility -->
      <div class="absolute inset-0 opacity-30 mix-blend-overlay">
        <svg class="w-full h-full" viewBox="0 0 100 100" preserveAspectRatio="none">
          <defs>
            <pattern id="grid" width="10" height="10" patternUnits="userSpaceOnUse">
              <path d="M 10 0 L 0 0 0 10" fill="none" stroke="white" stroke-width="0.8"/>
            </pattern>
          </defs>
          <rect width="100" height="100" fill="url(#grid)" />
        </svg>
      </div>
    </div>

    <!-- Decorative elements -->
    <div class="absolute top-0 left-0 w-full h-full overflow-hidden pointer-events-none">
      <!-- Animated circles with different sizes and positions -->
      <div class="absolute top-[15%] left-[10%] w-72 h-72 rounded-full bg-gradient-to-br from-purple-500/20 to-pink-500/20 blur-3xl animate-pulse-slow"></div>
      <div class="absolute bottom-[20%] right-[5%] w-96 h-96 rounded-full bg-gradient-to-br from-blue-500/20 to-indigo-500/20 blur-3xl animate-pulse-slow animation-delay-2000"></div>
      <div class="absolute top-[40%] right-[25%] w-48 h-48 rounded-full bg-gradient-to-br from-amber-500/20 to-orange-500/20 blur-3xl animate-pulse-slow animation-delay-1000"></div>

      <!-- Floating geometric shapes -->
      <div class="absolute top-[20%] right-[15%] w-16 h-16 bg-white/10 backdrop-blur-sm rounded-lg border border-white/30 shadow-xl transform rotate-12 animate-float"></div>
      <div class="absolute bottom-[30%] left-[20%] w-20 h-20 bg-white/10 backdrop-blur-sm rounded-full border border-white/30 shadow-xl animate-float animation-delay-1000"></div>
      <div class="absolute top-[60%] right-[30%] w-12 h-12 bg-white/10 backdrop-blur-sm rounded-lg border border-white/30 shadow-xl transform -rotate-12 animate-float animation-delay-2000"></div>
    </div>

    <div class="max-w-7xl mx-auto py-20 px-4 sm:px-6 lg:px-8 relative z-10">
      <div class="lg:flex lg:items-center lg:justify-between gap-16">
        <div class="lg:max-w-2xl">
          <!-- Enhanced heading with text effects -->
          <h2 class="text-4xl sm:text-5xl lg:text-6xl font-black mb-4 tracking-tight text-transparent bg-clip-text bg-gradient-to-r from-white via-blue-100 to-white animate-text-shimmer">
            Discover Amazing Events Near You
          </h2>
          <p class="text-xl md:text-2xl mb-8 text-blue-50 max-w-2xl font-light drop-shadow-md leading-relaxed">
            Find the best events happening around you and connect with like-minded individuals in your community.
          </p>

          <!-- Enhanced action buttons with 3D effects -->
          <div class="flex gap-5 flex-wrap">
            <% if user_signed_in? %>
              <a href="/events/new" class="group relative px-8 py-4 bg-gradient-to-r from-pink-600 to-purple-600 text-white font-bold rounded-xl shadow-[0_8px_30px_rgb(0,0,0,0.12)] hover:shadow-[0_8px_30px_rgba(219,39,119,0.3)] transition-all duration-300 transform hover:-translate-y-1 overflow-hidden">
                <span class="relative z-10 flex items-center">
                  <%= icon "plus-circle", class: "w-5 h-5 mr-2" %>
                  Create an Event
                </span>
                <div class="absolute inset-0 -translate-y-full group-hover:translate-y-0 bg-gradient-to-r from-purple-600 to-pink-600 transition-transform duration-300 ease-in-out"></div>
              </a>
            <% else %>
              <%= link_to new_user_session_path, class: "group relative px-8 py-4 bg-gradient-to-r from-pink-600 to-purple-600 text-white font-bold rounded-xl shadow-[0_8px_30px_rgb(0,0,0,0.12)] hover:shadow-[0_8px_30px_rgba(219,39,119,0.3)] transition-all duration-300 transform hover:-translate-y-1 overflow-hidden tooltip-container" do %>
                <span class="relative z-10 flex items-center">
                  <%= icon "plus-circle", class: "w-5 h-5 mr-2" %>
                  Create an Event
                </span>
                <div class="absolute inset-0 -translate-y-full group-hover:translate-y-0 bg-gradient-to-r from-purple-600 to-pink-600 transition-transform duration-300 ease-in-out"></div>
                <span class="tooltip tooltip-enhanced">Sign in to create an event</span>
              <% end %>
            <% end %>

            <a href="#" class="group relative px-8 py-4 bg-white/10 backdrop-blur-md text-white font-bold rounded-xl border border-white/30 hover:border-white/50 shadow-[0_8px_30px_rgb(0,0,0,0.12)] hover:shadow-[0_8px_30px_rgba(255,255,255,0.2)] transition-all duration-300 transform hover:-translate-y-1 overflow-hidden">
              <span class="relative z-10 flex items-center">
                <%= icon "tag", class: "w-5 h-5 mr-2" %>
                Explore Categories
              </span>
              <div class="absolute inset-0 -translate-y-full group-hover:translate-y-0 bg-white/20 transition-transform duration-300 ease-in-out"></div>
            </a>
          </div>
        </div>

        <!-- Enhanced stats cards with 3D effects and animations -->
        <div class="mt-12 lg:mt-0 lg:max-w-md">
          <div class="grid grid-cols-2 gap-5">
            <div class="rounded-xl p-5 bg-white/10 backdrop-blur-md border border-white/30 flex flex-col items-center justify-center text-center shadow-[0_8px_30px_rgb(0,0,0,0.12)] hover:shadow-[0_8px_30px_rgba(255,255,255,0.1)] transition-all duration-300 transform hover:-translate-y-1 group">
              <div class="w-12 h-12 rounded-full bg-gradient-to-br from-blue-500 to-indigo-500 flex items-center justify-center mb-3 shadow-lg group-hover:scale-110 transition-transform">
                <%= icon "calendar", class: "w-6 h-6 text-white" %>
              </div>
              <span class="text-3xl font-bold mb-1 bg-clip-text text-transparent bg-gradient-to-r from-blue-200 to-indigo-200"><%= Event.upcoming.count rescue "300+" %></span>
              <span class="text-sm text-blue-100">Upcoming Events</span>
            </div>

            <div class="rounded-xl p-5 bg-white/10 backdrop-blur-md border border-white/30 flex flex-col items-center justify-center text-center shadow-[0_8px_30px_rgb(0,0,0,0.12)] hover:shadow-[0_8px_30px_rgba(255,255,255,0.1)] transition-all duration-300 transform hover:-translate-y-1 group">
              <div class="w-12 h-12 rounded-full bg-gradient-to-br from-purple-500 to-pink-500 flex items-center justify-center mb-3 shadow-lg group-hover:scale-110 transition-transform">
                <%= icon "tag", class: "w-6 h-6 text-white" %>
              </div>
              <span class="text-3xl font-bold mb-1 bg-clip-text text-transparent bg-gradient-to-r from-purple-200 to-pink-200"><%= @categories.count rescue "20+" %></span>
              <span class="text-sm text-blue-100">Categories</span>
            </div>

            <div class="rounded-xl p-5 bg-white/10 backdrop-blur-md border border-white/30 flex flex-col items-center justify-center text-center shadow-[0_8px_30px_rgb(0,0,0,0.12)] hover:shadow-[0_8px_30px_rgba(255,255,255,0.1)] transition-all duration-300 transform hover:-translate-y-1 group">
              <div class="w-12 h-12 rounded-full bg-gradient-to-br from-amber-500 to-orange-500 flex items-center justify-center mb-3 shadow-lg group-hover:scale-110 transition-transform">
                <%= icon "users", class: "w-6 h-6 text-white" %>
              </div>
              <span class="text-3xl font-bold mb-1 bg-clip-text text-transparent bg-gradient-to-r from-amber-200 to-orange-200"><%= User.count rescue "5K+" %></span>
              <span class="text-sm text-blue-100">Active Users</span>
            </div>

            <div class="rounded-xl p-5 bg-white/10 backdrop-blur-md border border-white/30 flex flex-col items-center justify-center text-center shadow-[0_8px_30px_rgb(0,0,0,0.12)] hover:shadow-[0_8px_30px_rgba(255,255,255,0.1)] transition-all duration-300 transform hover:-translate-y-1 group">
              <div class="w-12 h-12 rounded-full bg-gradient-to-br from-green-500 to-emerald-500 flex items-center justify-center mb-3 shadow-lg group-hover:scale-110 transition-transform">
                <%= icon "map-pin", class: "w-6 h-6 text-white" %>
              </div>
              <span class="text-3xl font-bold mb-1 bg-clip-text text-transparent bg-gradient-to-r from-green-200 to-emerald-200"><%= Venue.count rescue "100+" %></span>
              <span class="text-sm text-blue-100">Venues</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <% end %>

  <!-- Main content -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-8 pb-16">
    <!-- Tab navigation with modern styling -->
    <div class="border-b border-gray-200 dark:border-gray-800 mb-8">
      <div class="flex flex-wrap -mb-px">
        <a href="/groups" class="px-6 py-3 text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors border-b-2 border-transparent hover:border-gray-300 dark:hover:border-gray-700 font-medium">
          Groups
        </a>
        <a href="/events" class="px-6 py-3 text-blue-600 dark:text-blue-400 font-medium border-b-2 border-blue-600 dark:border-blue-500">
          Events
        </a>
        <a href="/chats" class="px-6 py-3 text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors border-b-2 border-transparent hover:border-gray-300 dark:hover:border-gray-700 font-medium">
          Chats
        </a>
      </div>
    </div>

    <!-- Main grid layout with improved spacing -->
    <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
      <!-- Sidebar with filters - Upgraded design -->
      <div class="hidden lg:block lg:col-span-1 space-y-6">
        <%= render "filters" %>

        <% if @popular_events.present? %>
        <div class="bg-white dark:bg-gray-800 rounded-xl p-5 shadow-sm border border-gray-200 dark:border-gray-700">
          <h3 class="text-lg font-bold mb-4 text-gray-900 dark:text-white flex items-center">
            <svg class="w-5 h-5 mr-2 text-orange-500 dark:text-orange-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path>
            </svg>
            Popular Events
          </h3>
          <div class="space-y-3">
            <% @popular_events.take(5).each do |event| %>
              <%= link_to event, class: "flex items-start p-2.5 -mx-2.5 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors group" do %>
                <div class="h-12 w-12 rounded-md bg-gray-200 dark:bg-gray-700 overflow-hidden flex-shrink-0">
                  <% if event.event_media.present? %>
                    <img src="<%= event.event_media.first.image_url %>" alt="<%= event.title %>" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300">
                  <% end %>
                </div>
