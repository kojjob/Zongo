<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
  <% count.times do %>
    <div class="bg-white dark:bg-gray-800 rounded-xl overflow-hidden shadow-sm h-[360px] animate-pulse">
      <!-- Image placeholder -->
      <div class="h-52 bg-gray-200 dark:bg-gray-700 w-full"></div>
      
      <!-- Content placeholders -->
      <div class="p-5 space-y-3">
        <!-- Date placeholder -->
        <div class="flex">
          <div class="h-4 w-4 bg-gray-200 dark:bg-gray-700 rounded mr-2"></div>
          <div class="h-4 bg-gray-200 dark:bg-gray-700 rounded w-1/3"></div>
        </div>
        
        <!-- Title placeholder -->
        <div class="h-5 bg-gray-200 dark:bg-gray-700 rounded-md w-3/4"></div>
        <div class="h-5 bg-gray-200 dark:bg-gray-700 rounded-md w-2/4"></div>
        
        <!-- Location placeholder -->
        <div class="flex">
          <div class="h-4 w-4 bg-gray-200 dark:bg-gray-700 rounded mr-2"></div>
          <div class="h-4 bg-gray-200 dark:bg-gray-700 rounded w-2/3"></div>
        </div>
        
        <!-- Stats placeholder -->
        <div class="flex justify-between mt-2">
          <div class="h-4 bg-gray-200 dark:bg-gray-700 rounded w-1/4"></div>
          <div class="h-4 bg-gray-200 dark:bg-gray-700 rounded w-1/4"></div>
        </div>
        
        <!-- Attendees placeholder -->
        <div class="flex items-center mt-4 pt-2">
          <div class="flex space-x-1">
            <% 3.times do %>
              <div class="h-6 w-6 rounded-full bg-gray-200 dark:bg-gray-700"></div>
            <% end %>
          </div>
          <div class="h-4 bg-gray-200 dark:bg-gray-700 rounded w-1/3 ml-2"></div>
        </div>
      </div>
    </div>
  <% end %>
</div>
