<%# Scheduled Transactions Index Page %>
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6 sm:py-8">
  <div class="flex items-center mb-6">
    <a href="<%= wallet_path %>" class="text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 mr-2 p-1 rounded-full hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors">
      <%= icon "arrow-left", class: "w-5 h-5" %>
    </a>
    <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Scheduled Transactions</h1>
  </div>

  <%# Filter Section %>
  <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md p-4 sm:p-6 mb-6 sm:mb-8">
    <div class="flex items-center justify-between mb-4">
      <h2 class="text-lg font-semibold text-gray-900 dark:text-white flex items-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-primary-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z" />
        </svg>
        Filter Transactions
      </h2>
      <div class="hidden sm:block">
        <%= link_to new_scheduled_transaction_path, class: "btn btn-primary" do %>
          <%= icon "plus", class: "w-4 h-4 mr-1" %>
          New Transaction
        <% end %>
      </div>
    </div>

    <%= form_with url: scheduled_transactions_path, method: :get, class: "space-y-4" do |f| %>
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
        <div class="w-full">
          <label for="type" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Transaction Type</label>
          <div class="relative">
            <%= f.select :type,
                [
                  ['All Types', ''],
                  ['Transfers', 'transfer'],
                  ['Deposits', 'deposit'],
                  ['Withdrawals', 'withdrawal'],
                  ['Payments', 'payment']
                ],
                { selected: params[:type] },
                { class: "block w-full border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white rounded-lg focus:ring-primary-500 focus:border-primary-500 pr-10",
                  onchange: "this.form.submit();" }
            %>
            <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700 dark:text-gray-300">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
              </svg>
            </div>
          </div>
        </div>

        <div class="w-full">
          <label for="status" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Status</label>
          <div class="relative">
            <%= f.select :status,
                [
                  ['All Statuses', ''],
                  ['Active', 'active'],
                  ['Paused', 'paused'],
                  ['Completed', 'completed'],
                  ['Cancelled', 'cancelled'],
                  ['Failed', 'failed']
                ],
                { selected: params[:status] },
                { class: "block w-full border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white rounded-lg focus:ring-primary-500 focus:border-primary-500 pr-10",
                  onchange: "this.form.submit();" }
            %>
            <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700 dark:text-gray-300">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
              </svg>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <div class="mt-6 sm:hidden">
      <%= link_to new_scheduled_transaction_path, class: "btn btn-primary w-full flex items-center justify-center" do %>
        <%= icon "plus", class: "w-4 h-4 mr-1" %>
        New Scheduled Transaction
      <% end %>
    </div>
  </div>

  <%# Transactions List %>
  <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md overflow-hidden">
    <div class="p-4 sm:p-6 border-b border-gray-200 dark:border-gray-700">
      <h2 class="text-lg font-semibold text-gray-900 dark:text-white flex items-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-primary-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        Scheduled Transactions
      </h2>
    </div>

    <% if @scheduled_transactions.empty? %>
      <div class="p-6 sm:p-8 text-center">
        <div class="bg-gray-50 dark:bg-gray-700 h-24 w-24 rounded-full mx-auto mb-6 flex items-center justify-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-gray-400 dark:text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">No scheduled transactions</h3>
        <p class="text-gray-500 dark:text-gray-400 mb-6 max-w-md mx-auto">
          Create a new scheduled transaction to automate your recurring payments, transfers, deposits, or withdrawals.
        </p>
        <%= link_to new_scheduled_transaction_path, class: "btn btn-primary inline-flex items-center" do %>
          <%= icon "plus", class: "w-4 h-4 mr-1" %>
          Create Scheduled Transaction
        <% end %>
      </div>
    <% else %>
      <%# Mobile view - Card layout %>
      <div class="block sm:hidden">
        <div class="divide-y divide-gray-200 dark:divide-gray-700">
          <% @scheduled_transactions.each do |scheduled_transaction| %>
            <%
              icon_name = case scheduled_transaction.transaction_type
                            when 'deposit' then 'money-in'
                            when 'withdrawal' then 'money-out'
                            when 'transfer' then 'transfer'
                            when 'payment' then 'shopping'
                            end

              icon_color = case scheduled_transaction.transaction_type
                             when 'deposit' then 'text-green-500 bg-green-100 dark:bg-green-900/30'
                             when 'withdrawal' then 'text-red-500 bg-red-100 dark:bg-red-900/30'
                             when 'transfer' then 'text-blue-500 bg-blue-100 dark:bg-blue-900/30'
                             when 'payment' then 'text-purple-500 bg-purple-100 dark:bg-purple-900/30'
                             end

              status_class = case scheduled_transaction.status
                              when 'active' then 'bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300'
                              when 'paused' then 'bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-300'
                              when 'completed' then 'bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-300'
                              when 'cancelled' then 'bg-gray-100 text-gray-800 dark:bg-gray-900 dark:text-gray-300'
                              when 'failed' then 'bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-300'
                              end
            %>
            <div class="p-4">
              <div class="flex items-start mb-3">
                <div class="flex-shrink-0 h-10 w-10 rounded-full <%= icon_color %> flex items-center justify-center shadow-sm">
                  <%= icon icon_name, class: "h-5 w-5" %>
                </div>
                <div class="ml-3 flex-1 min-w-0">
                  <div class="flex justify-between items-start">
                    <div>
                      <p class="text-sm font-medium text-gray-900 dark:text-white truncate">
                        <%= scheduled_transaction.transaction_type_description %>
                      </p>
                      <p class="text-xs text-gray-500 dark:text-gray-400 mt-0.5 truncate">
                        <%= scheduled_transaction.description || "No description" %>
                      </p>
                    </div>
                    <span class="px-2 py-1 inline-flex text-xs leading-5 font-semibold rounded-full <%= status_class %>">
                      <%= scheduled_transaction.status.capitalize %>
                    </span>
                  </div>
                </div>
              </div>

              <div class="grid grid-cols-2 gap-2 mb-3 bg-gray-50 dark:bg-gray-700/50 p-3 rounded-lg">
                <div>
                  <span class="text-xs text-gray-500 dark:text-gray-400">Next Date</span>
                  <p class="text-sm text-gray-900 dark:text-white">
                    <%= scheduled_transaction.next_occurrence.strftime("%b %d, %Y") %>
                  </p>
                  <p class="text-xs text-gray-500 dark:text-gray-400">
                    <%= distance_of_time_in_words(Time.current, scheduled_transaction.next_occurrence) %> from now
                  </p>
                </div>
                <div>
                  <span class="text-xs text-gray-500 dark:text-gray-400">Amount</span>
                  <p class="text-sm font-medium text-gray-900 dark:text-white">
                    <%= scheduled_transaction.formatted_amount %>
                  </p>
                  <p class="text-xs text-gray-500 dark:text-gray-400 truncate">
                    <% case scheduled_transaction.transaction_type %>
                    <% when 'transfer' %>
                      To: <%= scheduled_transaction.recipient&.display_name || "Unknown" %>
                    <% when 'deposit' %>
                      Via: <%= scheduled_transaction.payment_method %>
                    <% when 'withdrawal' %>
                      Via: <%= scheduled_transaction.payment_method %>
                    <% when 'payment' %>
                      To: <%= scheduled_transaction.payment_destination %>
                    <% end %>
                  </p>
                </div>
                <div>
                  <span class="text-xs text-gray-500 dark:text-gray-400">Frequency</span>
                  <p class="text-sm text-gray-900 dark:text-white">
                    <%= scheduled_transaction.frequency_description %>
                  </p>
                  <% if scheduled_transaction.occurrences_limit.present? %>
                    <p class="text-xs text-gray-500 dark:text-gray-400">
                      <%= scheduled_transaction.occurrences_count %> of <%= scheduled_transaction.occurrences_limit %> completed
                    </p>
                  <% end %>
                </div>
              </div>

              <div class="flex space-x-2">
                <%= link_to scheduled_transaction_path(scheduled_transaction), class: "btn btn-sm btn-primary-outline flex-1 justify-center" do %>
                  <%= icon "eye", class: "w-4 h-4 mr-1" %>
                  View
                <% end %>

                <% if scheduled_transaction.active? %>
                  <%= button_to pause_scheduled_transaction_path(scheduled_transaction), method: :post, class: "btn btn-sm btn-warning-outline flex-1 justify-center" do %>
                    <%= icon "pause", class: "w-4 h-4 mr-1" %>
                    Pause
                  <% end %>
                <% elsif scheduled_transaction.paused? %>
                  <%= button_to resume_scheduled_transaction_path(scheduled_transaction), method: :post, class: "btn btn-sm btn-success-outline flex-1 justify-center" do %>
                    <%= icon "play", class: "w-4 h-4 mr-1" %>
                    Resume
                  <% end %>
                <% end %>

                <div class="dropdown relative" data-controller="dropdown">
                  <button class="btn btn-sm btn-white" data-action="dropdown#toggle">
                    <%= icon "dots-vertical", class: "w-4 h-4" %>
                  </button>
                  <div class="dropdown-menu hidden right-0 z-50 w-40" data-dropdown-target="menu">
                    <% if ['active', 'paused'].include?(scheduled_transaction.status) %>
                      <%= link_to edit_scheduled_transaction_path(scheduled_transaction), class: "dropdown-item" do %>
                        <%= icon "pencil", class: "w-4 h-4 mr-2" %>
                        Edit
                      <% end %>

                      <%= button_to scheduled_transaction_path(scheduled_transaction),
                                   method: :delete,
                                   form: { data: { turbo_confirm: "Are you sure you want to cancel this scheduled transaction?" } },
                                   class: "dropdown-item w-full text-left text-red-600 dark:text-red-400" do %>
                        <%= icon "trash", class: "w-4 h-4 mr-2" %>
                        Cancel
                      <% end %>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <%# Desktop view - Table layout %>
      <div class="hidden sm:block overflow-x-auto">
        <table class="w-full">
          <thead class="bg-gray-50 dark:bg-gray-700">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Transaction</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Next Date</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Frequency</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Amount</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Status</th>
              <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Action</th>
            </tr>
          </thead>
          <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
            <% @scheduled_transactions.each do |scheduled_transaction| %>
              <tr class="hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors duration-150">
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center">
                    <%
                      icon_name = case scheduled_transaction.transaction_type
                                    when 'deposit' then 'money-in'
                                    when 'withdrawal' then 'money-out'
                                    when 'transfer' then 'transfer'
                                    when 'payment' then 'shopping'
                                    end

                      icon_color = case scheduled_transaction.transaction_type
                                     when 'deposit' then 'text-green-500'
                                     when 'withdrawal' then 'text-red-500'
                                     when 'transfer' then 'text-blue-500'
                                     when 'payment' then 'text-purple-500'
                                     end
                    %>
                    <div class="flex-shrink-0 h-8 w-8 rounded-full bg-gray-100 dark:bg-gray-700 flex items-center justify-center <%= icon_color %>">
                      <%= icon icon_name, class: "h-4 w-4" %>
                    </div>
                    <div class="ml-4">
                      <div class="text-sm font-medium text-gray-900 dark:text-white">
                        <%= scheduled_transaction.transaction_type_description %>
                      </div>
                      <div class="text-xs text-gray-500 dark:text-gray-400">
                        <%= scheduled_transaction.description || "No description" %>
                      </div>
                    </div>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm text-gray-900 dark:text-white">
                    <%= scheduled_transaction.next_occurrence.strftime("%b %d, %Y") %>
                  </div>
                  <div class="text-xs text-gray-500 dark:text-gray-400">
                    <%= distance_of_time_in_words(Time.current, scheduled_transaction.next_occurrence) %> from now
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm text-gray-900 dark:text-white">
                    <%= scheduled_transaction.frequency_description %>
                  </div>
                  <% if scheduled_transaction.occurrences_limit.present? %>
                    <div class="text-xs text-gray-500 dark:text-gray-400">
                      <%= scheduled_transaction.occurrences_count %> of <%= scheduled_transaction.occurrences_limit %> completed
                    </div>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm font-medium text-gray-900 dark:text-white">
                    <%= scheduled_transaction.formatted_amount %>
                  </div>
                  <div class="text-xs text-gray-500 dark:text-gray-400">
                    <% case scheduled_transaction.transaction_type %>
                    <% when 'transfer' %>
                      To: <%= scheduled_transaction.recipient&.display_name || "Unknown" %>
                    <% when 'deposit' %>
                      Via: <%= scheduled_transaction.payment_method %>
                    <% when 'withdrawal' %>
                      Via: <%= scheduled_transaction.payment_method %>
                    <% when 'payment' %>
                      To: <%= scheduled_transaction.payment_destination %>
                    <% end %>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <%
                    status_class = case scheduled_transaction.status
                                    when 'active' then 'bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300'
                                    when 'paused' then 'bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-300'
                                    when 'completed' then 'bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-300'
                                    when 'cancelled' then 'bg-gray-100 text-gray-800 dark:bg-gray-900 dark:text-gray-300'
                                    when 'failed' then 'bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-300'
                                    end
                  %>
                  <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= status_class %>">
                    <%= scheduled_transaction.status.capitalize %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                  <div class="flex justify-end space-x-2">
                    <%= link_to scheduled_transaction_path(scheduled_transaction), class: "text-primary-600 hover:text-primary-900 dark:text-primary-400 dark:hover:text-primary-300 flex items-center" do %>
                      <%= icon "eye", class: "w-4 h-4" %>
                    <% end %>

                    <% if scheduled_transaction.active? %>
                      <%= button_to pause_scheduled_transaction_path(scheduled_transaction), method: :post, class: "text-yellow-600 hover:text-yellow-900 dark:text-yellow-400 dark:hover:text-yellow-300 flex items-center" do %>
                        <%= icon "pause", class: "w-4 h-4" %>
                      <% end %>
                    <% elsif scheduled_transaction.paused? %>
                      <%= button_to resume_scheduled_transaction_path(scheduled_transaction), method: :post, class: "text-green-600 hover:text-green-900 dark:text-green-400 dark:hover:text-green-300 flex items-center" do %>
                        <%= icon "play", class: "w-4 h-4" %>
                      <% end %>
                    <% end %>

                    <div class="dropdown relative" data-controller="dropdown">
                      <button class="text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 p-1" data-action="dropdown#toggle">
                        <%= icon "dots-vertical", class: "w-4 h-4" %>
                      </button>
                      <div class="dropdown-menu hidden right-0 z-50 w-40" data-dropdown-target="menu">
                        <% if ['active', 'paused'].include?(scheduled_transaction.status) %>
                          <%= link_to edit_scheduled_transaction_path(scheduled_transaction), class: "dropdown-item" do %>
                            <%= icon "pencil", class: "w-4 h-4 mr-2" %>
                            Edit
                          <% end %>

                          <%= button_to scheduled_transaction_path(scheduled_transaction),
                                       method: :delete,
                                       form: { data: { turbo_confirm: "Are you sure you want to cancel this scheduled transaction?" } },
                                       class: "dropdown-item w-full text-left text-red-600 dark:text-red-400" do %>
                            <%= icon "trash", class: "w-4 h-4 mr-2" %>
                            Cancel
                          <% end %>
                        <% end %>
                      </div>
                    </div>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% end %>
  </div>
</div>
