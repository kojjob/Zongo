<%# Enhanced New Scheduled Transaction Page %>
<div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="flex items-center mb-6">
    <a href="<%= scheduled_transactions_path %>" class="text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 mr-2 transition-colors duration-200 flex items-center">
      <%= icon "arrow-left", class: "w-5 h-5" %>
      <span class="ml-1 text-sm">Back</span>
    </a>
    <h1 class="text-2xl font-bold text-gray-900 dark:text-white ml-2">New Scheduled Transaction</h1>
  </div>

  <div class="bg-gradient-to-br from-blue-50 to-indigo-50 dark:from-gray-800 dark:to-gray-900 rounded-xl shadow-lg overflow-hidden border border-blue-100 dark:border-gray-700 mb-6">
    <div class="p-6 border-b border-blue-100 dark:border-gray-700 bg-white/50 dark:bg-gray-800/50">
      <div class="flex items-center">
        <div class="w-10 h-10 rounded-full bg-blue-100 dark:bg-blue-900/30 flex items-center justify-center text-blue-600 dark:text-blue-400 mr-3">
          <%= icon "clock", class: "w-5 h-5" %>
        </div>
        <div>
          <h2 class="text-lg font-semibold text-gray-900 dark:text-white">Schedule a Recurring Transaction</h2>
          <p class="text-sm text-gray-600 dark:text-gray-400">Set up automatic transactions on your preferred schedule</p>
        </div>
      </div>
    </div>

    <div class="p-6 bg-white dark:bg-gray-800">
      <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-6">
        <div class="bg-green-50 dark:bg-green-900/20 rounded-lg p-4 flex flex-col items-center justify-center text-center transition-transform hover:scale-105 cursor-pointer <%= @scheduled_transaction.transaction_type == 'deposit' ? 'ring-2 ring-green-500 dark:ring-green-400' : '' %>"
             onclick="document.getElementById('scheduled_transaction_transaction_type').value = 'deposit'; updateTransactionTypeUI('deposit');">
          <div class="w-12 h-12 rounded-full bg-green-100 dark:bg-green-800 flex items-center justify-center text-green-600 dark:text-green-400 mb-2">
            <%= icon "money-in", class: "w-6 h-6" %>
          </div>
          <h3 class="font-medium text-green-800 dark:text-green-300">Deposit</h3>
          <p class="text-xs text-green-700 dark:text-green-400 mt-1">Add funds to your wallet</p>
        </div>

        <div class="bg-red-50 dark:bg-red-900/20 rounded-lg p-4 flex flex-col items-center justify-center text-center transition-transform hover:scale-105 cursor-pointer <%= @scheduled_transaction.transaction_type == 'withdrawal' ? 'ring-2 ring-red-500 dark:ring-red-400' : '' %>"
             onclick="document.getElementById('scheduled_transaction_transaction_type').value = 'withdrawal'; updateTransactionTypeUI('withdrawal');">
          <div class="w-12 h-12 rounded-full bg-red-100 dark:bg-red-800 flex items-center justify-center text-red-600 dark:text-red-400 mb-2">
            <%= icon "money-out", class: "w-6 h-6" %>
          </div>
          <h3 class="font-medium text-red-800 dark:text-red-300">Withdrawal</h3>
          <p class="text-xs text-red-700 dark:text-red-400 mt-1">Withdraw funds from wallet</p>
        </div>

        <div class="bg-blue-50 dark:bg-blue-900/20 rounded-lg p-4 flex flex-col items-center justify-center text-center transition-transform hover:scale-105 cursor-pointer <%= @scheduled_transaction.transaction_type == 'transfer' ? 'ring-2 ring-blue-500 dark:ring-blue-400' : '' %>"
             onclick="document.getElementById('scheduled_transaction_transaction_type').value = 'transfer'; updateTransactionTypeUI('transfer');">
          <div class="w-12 h-12 rounded-full bg-blue-100 dark:bg-blue-800 flex items-center justify-center text-blue-600 dark:text-blue-400 mb-2">
            <%= icon "transfer", class: "w-6 h-6" %>
          </div>
          <h3 class="font-medium text-blue-800 dark:text-blue-300">Transfer</h3>
          <p class="text-xs text-blue-700 dark:text-blue-400 mt-1">Send money to others</p>
        </div>

        <div class="bg-purple-50 dark:bg-purple-900/20 rounded-lg p-4 flex flex-col items-center justify-center text-center transition-transform hover:scale-105 cursor-pointer <%= @scheduled_transaction.transaction_type == 'payment' ? 'ring-2 ring-purple-500 dark:ring-purple-400' : '' %>"
             onclick="document.getElementById('scheduled_transaction_transaction_type').value = 'payment'; updateTransactionTypeUI('payment');">
          <div class="w-12 h-12 rounded-full bg-purple-100 dark:bg-purple-800 flex items-center justify-center text-purple-600 dark:text-purple-400 mb-2">
            <%= icon "shopping", class: "w-6 h-6" %>
          </div>
          <h3 class="font-medium text-purple-800 dark:text-purple-300">Payment</h3>
          <p class="text-xs text-purple-700 dark:text-purple-400 mt-1">Pay bills and services</p>
        </div>
      </div>

      <%= render 'form', scheduled_transaction: @scheduled_transaction %>
    </div>
  </div>

  <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md p-6 border border-gray-200 dark:border-gray-700">
    <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-4 flex items-center">
      <%= icon "information-circle", class: "w-5 h-5 mr-2 text-blue-500 dark:text-blue-400" %>
      Tips for Scheduled Transactions
    </h3>
    <ul class="space-y-3 text-sm text-gray-600 dark:text-gray-400">
      <li class="flex items-start">
        <span class="flex-shrink-0 w-5 h-5 rounded-full bg-green-100 dark:bg-green-900/30 flex items-center justify-center text-green-600 dark:text-green-400 mr-2">
          <%= icon "check", class: "w-3 h-3" %>
        </span>
        <span>Set up <strong>recurring bills</strong> as scheduled payments to avoid late fees</span>
      </li>
      <li class="flex items-start">
        <span class="flex-shrink-0 w-5 h-5 rounded-full bg-green-100 dark:bg-green-900/30 flex items-center justify-center text-green-600 dark:text-green-400 mr-2">
          <%= icon "check", class: "w-3 h-3" %>
        </span>
        <span>Schedule <strong>regular transfers</strong> to savings accounts to build your financial future</span>
      </li>
      <li class="flex items-start">
        <span class="flex-shrink-0 w-5 h-5 rounded-full bg-green-100 dark:bg-green-900/30 flex items-center justify-center text-green-600 dark:text-green-400 mr-2">
          <%= icon "check", class: "w-3 h-3" %>
        </span>
        <span>You can <strong>pause or cancel</strong> scheduled transactions at any time</span>
      </li>
    </ul>
  </div>
</div>

<script>
  // Function to update UI based on transaction type selection
  function updateTransactionTypeUI(type) {
    // Hide all type-specific sections first
    document.querySelectorAll('[data-transaction-type]').forEach(el => {
      el.classList.add('hidden');
    });

    // Show the relevant section for the selected type
    document.querySelectorAll(`[data-transaction-type="${type}"]`).forEach(el => {
      el.classList.remove('hidden');
    });

    // Update visual selection in the type cards
    document.querySelectorAll('.ring-2').forEach(el => {
      el.classList.remove('ring-2', 'ring-green-500', 'ring-red-500', 'ring-blue-500', 'ring-purple-500',
                           'dark:ring-green-400', 'dark:ring-red-400', 'dark:ring-blue-400', 'dark:ring-purple-400');
    });

    // Add ring to selected type
    const ringClass = {
      'deposit': 'ring-2 ring-green-500 dark:ring-green-400',
      'withdrawal': 'ring-2 ring-red-500 dark:ring-red-400',
      'transfer': 'ring-2 ring-blue-500 dark:ring-blue-400',
      'payment': 'ring-2 ring-purple-500 dark:ring-purple-400'
    }[type];

    document.querySelector(`.bg-${type === 'deposit' ? 'green' : type === 'withdrawal' ? 'red' : type === 'transfer' ? 'blue' : 'purple'}-50`).classList.add(...ringClass.split(' '));
  }

  // Initialize UI on page load
  document.addEventListener('DOMContentLoaded', function() {
    const currentType = document.getElementById('scheduled_transaction_transaction_type').value;
    if (currentType) {
      updateTransactionTypeUI(currentType);
    }
  });
</script>