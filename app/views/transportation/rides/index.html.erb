<%# Ride Booking Page %>
<div class="bg-gradient-to-b from-primary-50 to-white dark:from-gray-900 dark:to-gray-950">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <%# Hero Section %>
    <div class="text-center mb-8">
      <h1 class="text-3xl font-extrabold text-gray-900 dark:text-white sm:text-4xl">Book a Ride</h1>
      <p class="mt-3 max-w-2xl mx-auto text-lg text-gray-500 dark:text-gray-400">Get to your destination safely and comfortably with our trusted drivers.</p>
    </div>

    <%# Ride Booking Form %>
    <div class="max-w-3xl mx-auto bg-white dark:bg-gray-800 rounded-xl shadow-lg overflow-hidden">
      <div class="px-6 py-8">
        <%= form_with url: transportation_search_rides_path, method: :post, data: { turbo_frame: "search_results" }, class: "space-y-6" do |f| %>
          <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-2">
            <div class="sm:col-span-2">
              <label for="origin" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Pickup Location</label>
              <div class="mt-1 relative rounded-md shadow-sm">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
                  </svg>
                </div>
                <%= f.text_field :origin, class: "block w-full pl-10 pr-12 py-3 border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white rounded-md shadow-sm focus:ring-primary-500 focus:border-primary-500", placeholder: "Enter pickup location", required: true %>
              </div>
            </div>

            <div class="sm:col-span-2">
              <label for="destination" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Destination</label>
              <div class="mt-1 relative rounded-md shadow-sm">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
                  </svg>
                </div>
                <%= f.text_field :destination, class: "block w-full pl-10 pr-12 py-3 border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white rounded-md shadow-sm focus:ring-primary-500 focus:border-primary-500", placeholder: "Enter destination", required: true %>
              </div>
            </div>

            <div>
              <label for="date" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Date</label>
              <div class="mt-1 relative rounded-md shadow-sm">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                  </svg>
                </div>
                <%= f.date_field :date, class: "block w-full pl-10 py-3 border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white rounded-md shadow-sm focus:ring-primary-500 focus:border-primary-500", value: Date.today, min: Date.today, required: true %>
              </div>
            </div>

            <div>
              <label for="time" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Time</label>
              <div class="mt-1 relative rounded-md shadow-sm">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
                <%= f.time_field :time, class: "block w-full pl-10 py-3 border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white rounded-md shadow-sm focus:ring-primary-500 focus:border-primary-500", value: Time.now.strftime("%H:%M"), required: true %>
              </div>
            </div>
          </div>

          <div class="flex items-center justify-between pt-4">
            <div class="flex items-center">
              <input id="schedule-later" name="schedule_later" type="checkbox" class="h-4 w-4 text-primary-600 focus:ring-primary-500 border-gray-300 dark:border-gray-600 dark:bg-gray-700 rounded">
              <label for="schedule-later" class="ml-2 block text-sm text-gray-700 dark:text-gray-300">Schedule for later</label>
            </div>
            <button type="submit" class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500">
              Find Rides
              <svg xmlns="http://www.w3.org/2000/svg" class="ml-2 -mr-1 h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
              </svg>
            </button>
          </div>
        <% end %>
      </div>
    </div>

    <%# Recent Locations (if user is signed in) %>
    <% if user_signed_in? && @recent_locations&.any? %>
      <div class="mt-8 max-w-3xl mx-auto">
        <h2 class="text-lg font-medium text-gray-900 dark:text-white">Recent Locations</h2>
        <div class="mt-3 grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">
          <% @recent_locations.each do |location| %>
            <button type="button" class="relative rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 px-4 py-3 shadow-sm flex items-center space-x-3 hover:border-gray-400 dark:hover:border-gray-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500">
              <div class="flex-shrink-0">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <div class="flex-1 min-w-0">
                <p class="text-sm font-medium text-gray-900 dark:text-white truncate"><%= location.name %></p>
                <p class="text-xs text-gray-500 dark:text-gray-400 truncate"><%= location.address %></p>
              </div>
            </button>
          <% end %>
        </div>
      </div>
    <% end %>

    <%# Search Results %>
    <div id="search_results" class="mt-12">
      <% if @rides %>
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">Available Rides</h2>
        <div class="space-y-4">
          <% @rides.each do |ride| %>
            <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md overflow-hidden hover:shadow-lg transition-shadow">
              <div class="p-6">
                <div class="flex items-center justify-between">
                  <div class="flex items-center">
                    <div class="flex-shrink-0 h-12 w-12 rounded-full bg-primary-100 dark:bg-primary-900 flex items-center justify-center">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary-600 dark:text-primary-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                      </svg>
                    </div>
                    <div class="ml-4">
                      <h3 class="text-lg font-medium text-gray-900 dark:text-white"><%= ride[:ride_type] %> Ride</h3>
                      <div class="flex items-center mt-1">
                        <p class="text-sm text-gray-500 dark:text-gray-400"><%= ride[:distance] %> â€¢ <%= ride[:duration] %></p>
                      </div>
                    </div>
                  </div>
                  <div class="text-right">
                    <p class="text-xl font-bold text-gray-900 dark:text-white"><%= ride[:currency] %> <%= sprintf('%.2f', ride[:price]) %></p>
                    <p class="text-sm text-gray-500 dark:text-gray-400">Arrives in <%= distance_of_time_in_words(Time.now, ride[:pickup_time]) %></p>
                  </div>
                </div>

                <div class="mt-6 border-t border-gray-200 dark:border-gray-700 pt-4">
                  <div class="flex items-center justify-between">
                    <div class="flex items-center">
                      <div class="flex-shrink-0">
                        <div class="h-10 w-10 rounded-full bg-gray-200 dark:bg-gray-700"></div>
                      </div>
                      <div class="ml-3">
                        <p class="text-sm font-medium text-gray-900 dark:text-white"><%= ride[:driver_name] %></p>
                        <div class="flex items-center mt-1">
                          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
                            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                          </svg>
                          <span class="ml-1 text-xs text-gray-500 dark:text-gray-400"><%= ride[:driver_rating] %></span>
                        </div>
                      </div>
                    </div>
                    <div class="text-sm text-gray-500 dark:text-gray-400">
                      <p><%= ride[:vehicle_color] %> <%= ride[:vehicle] %></p>
                      <p><%= ride[:license_plate] %></p>
                    </div>
                  </div>
                </div>

                <div class="mt-6">
                  <%= form_with url: transportation_book_ride_path, method: :post, class: "flex justify-end" do |f| %>
                    <%= f.hidden_field :ride_id, value: ride[:id] %>
                    <%= f.hidden_field :payment_method, value: "wallet" %>
                    <button type="submit" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500">
                      Book Now
                    </button>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>

    <%# Features Section %>
    <div class="mt-16">
      <h2 class="text-2xl font-bold text-gray-900 dark:text-white text-center">Why Book With Us?</h2>
      <div class="mt-8 grid gap-8 md:grid-cols-3">
        <div class="bg-white dark:bg-gray-800 rounded-xl p-6 shadow-md">
          <div class="rounded-full bg-primary-100 dark:bg-primary-900 w-12 h-12 flex items-center justify-center mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary-600 dark:text-primary-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 dark:text-white">Safe & Secure</h3>
          <p class="mt-2 text-gray-600 dark:text-gray-400">All our drivers and vehicles are vetted for safety. Your security is our top priority.</p>
        </div>

        <div class="bg-white dark:bg-gray-800 rounded-xl p-6 shadow-md">
          <div class="rounded-full bg-primary-100 dark:bg-primary-900 w-12 h-12 flex items-center justify-center mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary-600 dark:text-primary-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 dark:text-white">Affordable Prices</h3>
          <p class="mt-2 text-gray-600 dark:text-gray-400">Competitive pricing with no hidden fees. Pay directly from your wallet for convenience.</p>
        </div>

        <div class="bg-white dark:bg-gray-800 rounded-xl p-6 shadow-md">
          <div class="rounded-full bg-primary-100 dark:bg-primary-900 w-12 h-12 flex items-center justify-center mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary-600 dark:text-primary-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 dark:text-white">Fast & Reliable</h3>
          <p class="mt-2 text-gray-600 dark:text-gray-400">Quick booking process and reliable service. Get to your destination on time, every time.</p>
        </div>
      </div>
    </div>
  </div>
</div>
