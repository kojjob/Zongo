<%# Travel Tickets Page %>
<div class="bg-gradient-to-b from-secondary-50 to-white dark:from-gray-900 dark:to-gray-950">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <%# Hero Section %>
    <div class="text-center mb-8">
      <h1 class="text-3xl font-extrabold text-gray-900 dark:text-white sm:text-4xl">Travel Tickets</h1>
      <p class="mt-3 max-w-2xl mx-auto text-lg text-gray-500 dark:text-gray-400">Book bus, train, and ferry tickets to your destination with ease and convenience.</p>
    </div>

    <%# Ticket Booking Form %>
    <div class="max-w-3xl mx-auto bg-white dark:bg-gray-800 rounded-xl shadow-lg overflow-hidden">
      <div class="px-6 py-8">
        <%= form_with url: transportation_search_tickets_path, method: :post, data: { turbo_frame: "search_results" }, class: "space-y-6" do |f| %>
          <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-2">
            <div>
              <label for="origin" class="block text-sm font-medium text-gray-700 dark:text-gray-300">From</label>
              <div class="mt-1 relative rounded-md shadow-sm">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
                  </svg>
                </div>
                <%= f.text_field :origin, class: "block w-full pl-10 pr-12 py-3 border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white rounded-md shadow-sm focus:ring-secondary-500 focus:border-secondary-500", placeholder: "Enter origin city", required: true %>
              </div>
            </div>

            <div>
              <label for="destination" class="block text-sm font-medium text-gray-700 dark:text-gray-300">To</label>
              <div class="mt-1 relative rounded-md shadow-sm">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
                  </svg>
                </div>
                <%= f.text_field :destination, class: "block w-full pl-10 pr-12 py-3 border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white rounded-md shadow-sm focus:ring-secondary-500 focus:border-secondary-500", placeholder: "Enter destination city", required: true %>
              </div>
            </div>

            <div>
              <label for="date" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Date</label>
              <div class="mt-1 relative rounded-md shadow-sm">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                  </svg>
                </div>
                <%= f.date_field :date, class: "block w-full pl-10 py-3 border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white rounded-md shadow-sm focus:ring-secondary-500 focus:border-secondary-500", value: Date.today, min: Date.today, required: true %>
              </div>
            </div>

            <div>
              <label for="passengers" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Passengers</label>
              <div class="mt-1 relative rounded-md shadow-sm">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
                  </svg>
                </div>
                <%= f.number_field :passengers, class: "block w-full pl-10 py-3 border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white rounded-md shadow-sm focus:ring-secondary-500 focus:border-secondary-500", value: 1, min: 1, max: 10, required: true %>
              </div>
            </div>

            <div class="sm:col-span-2">
              <label for="transport_type" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Transport Type</label>
              <div class="mt-1">
                <div class="grid grid-cols-3 gap-3">
                  <div>
                    <label class="flex items-center justify-center h-12 rounded-md border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 px-4 py-2 text-sm font-medium text-gray-700 dark:text-gray-300 shadow-sm hover:bg-gray-50 dark:hover:bg-gray-600 cursor-pointer">
                      <%= f.radio_button :transport_type, "all", class: "sr-only", checked: true %>
                      <span>All</span>
                    </label>
                  </div>
                  <div>
                    <label class="flex items-center justify-center h-12 rounded-md border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 px-4 py-2 text-sm font-medium text-gray-700 dark:text-gray-300 shadow-sm hover:bg-gray-50 dark:hover:bg-gray-600 cursor-pointer">
                      <%= f.radio_button :transport_type, "bus", class: "sr-only" %>
                      <span>Bus</span>
                    </label>
                  </div>
                  <div>
                    <label class="flex items-center justify-center h-12 rounded-md border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 px-4 py-2 text-sm font-medium text-gray-700 dark:text-gray-300 shadow-sm hover:bg-gray-50 dark:hover:bg-gray-600 cursor-pointer">
                      <%= f.radio_button :transport_type, "train", class: "sr-only" %>
                      <span>Train</span>
                    </label>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="flex items-center justify-end pt-4">
            <button type="submit" class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-secondary-600 hover:bg-secondary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-secondary-500">
              Search Tickets
              <svg xmlns="http://www.w3.org/2000/svg" class="ml-2 -mr-1 h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
              </svg>
            </button>
          </div>
        <% end %>
      </div>
    </div>

    <%# Popular Routes %>
    <div class="mt-12 max-w-3xl mx-auto">
      <h2 class="text-xl font-bold text-gray-900 dark:text-white">Popular Routes</h2>
      <div class="mt-4 overflow-hidden bg-white dark:bg-gray-800 shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
            <% @popular_routes&.each do |route| %>
              <div class="relative rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 px-4 py-3 shadow-sm flex items-center space-x-3 hover:border-gray-400 dark:hover:border-gray-500">
                <div class="flex-1 min-w-0">
                  <p class="text-sm font-medium text-gray-900 dark:text-white"><%= route[:from] %> to <%= route[:to] %></p>
                  <p class="text-sm text-gray-500 dark:text-gray-400">From GHS <%= route[:price] %></p>
                </div>
                <div class="flex-shrink-0">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-secondary-100 dark:bg-secondary-900 text-secondary-800 dark:text-secondary-200">
                    <%= route[:transport_type] %>
                  </span>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <%# Search Results %>
    <div id="search_results" class="mt-12">
      <% if @tickets %>
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">Available Tickets</h2>
        <div class="space-y-4">
          <% @tickets.each do |ticket| %>
            <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md overflow-hidden hover:shadow-lg transition-shadow">
              <div class="p-6">
                <div class="flex items-center justify-between">
                  <div class="flex items-center">
                    <div class="flex-shrink-0 h-12 w-12 rounded-full bg-secondary-100 dark:bg-secondary-900 flex items-center justify-center">
                      <% if ticket[:transport_type] == "Bus" %>
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-secondary-600 dark:text-secondary-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4" />
                        </svg>
                      <% elsif ticket[:transport_type] == "Train" %>
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-secondary-600 dark:text-secondary-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8" />
                        </svg>
                      <% else %>
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-secondary-600 dark:text-secondary-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                        </svg>
                      <% end %>
                    </div>
                    <div class="ml-4">
                      <h3 class="text-lg font-medium text-gray-900 dark:text-white"><%= ticket[:company] %></h3>
                      <div class="flex items-center mt-1">
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-secondary-100 dark:bg-secondary-900 text-secondary-800 dark:text-secondary-200">
                          <%= ticket[:transport_type] %>
                        </span>
                        <p class="ml-2 text-sm text-gray-500 dark:text-gray-400"><%= ticket[:duration] %></p>
                      </div>
                    </div>
                  </div>
                  <div class="text-right">
                    <p class="text-xl font-bold text-gray-900 dark:text-white"><%= ticket[:currency] %> <%= sprintf('%.2f', ticket[:price]) %></p>
                    <p class="text-sm text-gray-500 dark:text-gray-400"><%= ticket[:available_seats] %> seats available</p>
                  </div>
                </div>

                <div class="mt-6 grid grid-cols-2 gap-6">
                  <div>
                    <div class="flex items-center">
                      <div class="flex-shrink-0 h-10 w-10 rounded-full bg-secondary-100 dark:bg-secondary-900 flex items-center justify-center">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-secondary-600 dark:text-secondary-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                      </div>
                      <div class="ml-3">
                        <p class="text-sm font-medium text-gray-900 dark:text-white">Departure</p>
                        <p class="text-sm text-gray-500 dark:text-gray-400"><%= ticket[:departure_time].strftime("%I:%M %p") %></p>
                      </div>
                    </div>
                  </div>
                  <div>
                    <div class="flex items-center">
                      <div class="flex-shrink-0 h-10 w-10 rounded-full bg-secondary-100 dark:bg-secondary-900 flex items-center justify-center">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-secondary-600 dark:text-secondary-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                      </div>
                      <div class="ml-3">
                        <p class="text-sm font-medium text-gray-900 dark:text-white">Arrival</p>
                        <p class="text-sm text-gray-500 dark:text-gray-400"><%= ticket[:arrival_time].strftime("%I:%M %p") %></p>
                      </div>
                    </div>
                  </div>
                </div>

                <div class="mt-6 border-t border-gray-200 dark:border-gray-700 pt-4">
                  <div class="flex items-center justify-between">
                    <div class="flex flex-wrap gap-2">
                      <% ticket[:amenities].each do |amenity| %>
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 dark:bg-gray-800 text-gray-800 dark:text-gray-200">
                          <%= amenity %>
                        </span>
                      <% end %>
                    </div>
                    <%= form_with url: transportation_book_ticket_path, method: :post, class: "flex" do |f| %>
                      <%= f.hidden_field :ticket_id, value: ticket[:id] %>
                      <%= f.hidden_field :payment_method, value: "wallet" %>
                      <%= f.hidden_field :passengers, value: params[:passengers] || 1 %>
                      <button type="submit" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-secondary-600 hover:bg-secondary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-secondary-500">
                        Book Now
                      </button>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>

    <%# Features Section %>
    <div class="mt-16">
      <h2 class="text-2xl font-bold text-gray-900 dark:text-white text-center">Why Book With Us?</h2>
      <div class="mt-8 grid gap-8 md:grid-cols-3">
        <div class="bg-white dark:bg-gray-800 rounded-xl p-6 shadow-md">
          <div class="rounded-full bg-secondary-100 dark:bg-secondary-900 w-12 h-12 flex items-center justify-center mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-secondary-600 dark:text-secondary-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 dark:text-white">Instant Confirmation</h3>
          <p class="mt-2 text-gray-600 dark:text-gray-400">Get your tickets instantly after booking. No need to wait in line or visit a ticket counter.</p>
        </div>

        <div class="bg-white dark:bg-gray-800 rounded-xl p-6 shadow-md">
          <div class="rounded-full bg-secondary-100 dark:bg-secondary-900 w-12 h-12 flex items-center justify-center mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-secondary-600 dark:text-secondary-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 dark:text-white">Secure Payment</h3>
          <p class="mt-2 text-gray-600 dark:text-gray-400">Pay securely with your wallet or other payment methods. All transactions are encrypted and protected.</p>
        </div>

        <div class="bg-white dark:bg-gray-800 rounded-xl p-6 shadow-md">
          <div class="rounded-full bg-secondary-100 dark:bg-secondary-900 w-12 h-12 flex items-center justify-center mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-secondary-600 dark:text-secondary-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 15v-1a4 4 0 00-4-4H8m0 0l3 3m-3-3l3-3m9 14V5a2 2 0 00-2-2H6a2 2 0 00-2 2v16l4-2 4 2 4-2 4 2z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 dark:text-white">Easy Cancellation</h3>
          <p class="mt-2 text-gray-600 dark:text-gray-400">Plans changed? No problem. Cancel your tickets easily and get a refund according to the cancellation policy.</p>
        </div>
      </div>
    </div>
  </div>
</div>
