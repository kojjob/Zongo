<%= content_for :title, "Transportation" %>
<div class="bg-gradient-to-b from-primary-50 to-white dark:from-gray-900 dark:to-gray-950">
  <%# Enhanced Hero Section with Dynamic Background %>
  <div class="relative overflow-hidden bg-gradient-to-r from-primary-600 to-blue-700 dark:from-primary-800 dark:to-blue-900">
    <%# Decorative Elements for visual appeal %>
    <div class="absolute top-0 left-0 w-full h-full overflow-hidden opacity-10">
      <div class="absolute -top-24 -left-24 w-96 h-96 bg-white rounded-full mix-blend-overlay blur-3xl"></div>
      <div class="absolute top-1/2 -right-24 w-96 h-96 bg-blue-300 rounded-full mix-blend-overlay blur-3xl"></div>
      <div class="absolute -bottom-24 left-1/3 w-96 h-96 bg-cyan-500 rounded-full mix-blend-overlay blur-3xl"></div>

      <%# Decorative transportation-related pattern %>
      <div class="absolute inset-0 opacity-10">
        <svg width="100%" height="100%">
          <defs>
            <pattern id="transport-pattern" width="60" height="60" patternUnits="userSpaceOnUse">
              <%# Simple road/path pattern %>
              <path d="M0 30 L60 30" stroke="white" stroke-width="4" stroke-dasharray="4 4" />
              <circle cx="15" cy="30" r="4" fill="white" />
              <circle cx="45" cy="30" r="4" fill="white" />
            </pattern>
          </defs>
          <rect width="100%" height="100%" fill="url(#transport-pattern)" />
        </svg>
      </div>
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 sm:py-20 relative z-10">
      <div class="text-center">
        <div class="inline-block mb-6 p-2 bg-white/20 backdrop-blur-sm rounded-full">
          <div class="bg-white dark:bg-gray-800 rounded-full p-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4" />
            </svg>
          </div>
        </div>

        <h1 class="text-4xl font-extrabold text-white sm:text-5xl lg:text-6xl tracking-tight drop-shadow-md">
          Transportation Services
        </h1>

        <p class="mt-6 max-w-2xl mx-auto text-xl text-white/90 font-medium">
          Book rides, buy tickets, and plan your travel - all in one place.
        </p>
      </div>
    </div>

    <%# Wave Divider %>
    <div class="absolute bottom-0 left-0 right-0">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 120" class="w-full h-auto" preserveAspectRatio="none">
        <path fill="currentColor" class="text-primary-50 dark:text-gray-900" fill-opacity="1" d="M0,64L80,69.3C160,75,320,85,480,80C640,75,800,53,960,48C1120,43,1280,53,1360,58.7L1440,64L1440,120L1360,120C1280,120,1120,120,960,120C800,120,640,120,480,120C320,120,160,120,80,120L0,120Z"></path>
      </svg>
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 sm:py-16">
    <%# Tabs Navigation for Service Categories %>
    <div class="mb-10 bg-white dark:bg-gray-800 rounded-xl shadow-md overflow-hidden">
      <div class="flex flex-wrap">
        <%= link_to transportation_rides_path, class: "py-4 px-6 text-primary-600 dark:text-primary-400 border-b-2 border-primary-600 dark:border-primary-500 font-medium flex items-center space-x-2" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
            <path d="M8 16.5a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0zM15 16.5a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0z" />
            <path d="M3 4a1 1 0 00-1 1v10a1 1 0 001 1h1.05a2.5 2.5 0 014.9 0H10a1 1 0 001-1v-5h2V9H3V4zm12 8a1 1 0 011 1v1h1a1 1 0 011 1v3a1 1 0 01-1 1h-1a2.5 2.5 0 01-5 0h-2.05a2.5 2.5 0 01-4.9 0H3a1 1 0 01-1-1v-4a1 1 0 011-1h9v3h3z" />
          </svg>
          <span>Local Rides</span>
        <% end %>

        <% if current_user&.admin? %>
          <%= link_to transportation_analytics_path, class: "py-4 px-6 text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 border-b-2 border-transparent hover:border-gray-300 dark:hover:border-gray-700 font-medium flex items-center space-x-2" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
              <path d="M2 11a1 1 0 011-1h2a1 1 0 011 1v5a1 1 0 01-1 1H3a1 1 0 01-1-1v-5zM8 7a1 1 0 011-1h2a1 1 0 011 1v9a1 1 0 01-1 1H9a1 1 0 01-1-1V7zM14 4a1 1 0 011-1h2a1 1 0 011 1v12a1 1 0 01-1 1h-2a1 1 0 01-1-1V4z" />
            </svg>
            <span>Analytics</span>
          <% end %>
        <% end %>
        <%= link_to transportation_tickets_path, class: "py-4 px-6 text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 border-b-2 border-transparent hover:border-gray-300 dark:hover:border-gray-700 font-medium flex items-center space-x-2" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
            <path d="M4 3a2 2 0 100 4h12a2 2 0 100-4H4z" />
            <path fill-rule="evenodd" d="M3 8h14v7a2 2 0 01-2 2H5a2 2 0 01-2-2V8zm5 3a1 1 0 011-1h2a1 1 0 110 2H9a1 1 0 01-1-1z" clip-rule="evenodd" />
          </svg>
          <span>Bus Tickets</span>
        <% end %>
        <a href="#" class="py-4 px-6 text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 border-b-2 border-transparent hover:border-gray-300 dark:hover:border-gray-700 font-medium flex items-center space-x-2">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M12 1.586l-4 4v12.828l4-4V1.586zM3.707 3.293A1 1 0 002 4v10a1 1 0 00.293.707L6 18.414V5.586L3.707 3.293zM17.707 5.293L14 1.586v12.828l2.293 2.293A1 1 0 0018 16V6a1 1 0 00-.293-.707z" clip-rule="evenodd" />
          </svg>
          <span>Travel Packages</span>
        </a>
        <a href="#" class="py-4 px-6 text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 border-b-2 border-transparent hover:border-gray-300 dark:hover:border-gray-700 font-medium flex items-center space-x-2">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M6.672 1.911a1 1 0 10-1.932.518l.259.966a1 1 0 001.932-.518l-.26-.966zM2.429 4.74a1 1 0 10-.517 1.932l.966.259a1 1 0 00.517-1.932l-.966-.26zm8.814-.569a1 1 0 00-1.415-1.414l-.707.707a1 1 0 101.415 1.415l.707-.708zm-7.071 7.072l.707-.707A1 1 0 003.465 9.12l-.708.707a1 1 0 001.415 1.415zm3.2-5.171a1 1 0 00-1.3 1.3l4 10a1 1 0 001.823.075l1.38-2.759 3.018 3.02a1 1 0 001.414-1.415l-3.019-3.02 2.76-1.379a1 1 0 00-.076-1.822l-10-4z" clip-rule="evenodd" />
          </svg>
          <span>Special Offers</span>
        </a>
      </div>
    </div>

    <%# Booking Form - Designed for easy use %>
    <div class="mb-12 bg-white dark:bg-gray-800 rounded-2xl shadow-xl border border-gray-100 dark:border-gray-700 overflow-hidden">
      <div class="bg-primary-600 dark:bg-primary-700 py-6 px-6 sm:px-8">
        <h2 class="text-xl font-bold text-white flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          Book a Ride Now
        </h2>
        <p class="text-primary-100 text-sm mt-1">Fill in the details below to book your ride</p>
      </div>

      <div class="p-6 sm:p-8">
        <%= form_with url: transportation_search_rides_path, method: :post, class: "space-y-6", data: { turbo: true } do |form| %>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <%# Origin Field with Visual Cues %>
            <div>
              <label for="origin" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
                <div class="flex items-center">
                  <div class="p-1 bg-green-100 dark:bg-green-900/30 rounded-full mr-2">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-green-600 dark:text-green-400" viewBox="0 0 20 20" fill="currentColor">
                      <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
                    </svg>
                  </div>
                  Pickup Location
                </div>
              </label>
              <div class="mt-1 relative rounded-md shadow-sm">
                <%= form.text_field :origin, class: "focus:ring-primary-500 focus:border-primary-500 block w-full pl-10 pr-3 py-3 sm:text-sm border-gray-300 dark:border-gray-700 dark:bg-gray-800 dark:text-white rounded-md", placeholder: "Enter pickup address" %>
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                  <span class="text-gray-500 dark:text-gray-400 sm:text-sm">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                      <circle cx="10" cy="10" r="7" class="fill-green-500 dark:fill-green-600" />
                      <circle cx="10" cy="10" r="3" class="fill-white" />
                    </svg>
                  </span>
                </div>
              </div>
            </div>

            <%# Destination Field with Visual Cues %>
            <div>
              <label for="destination" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
                <div class="flex items-center">
                  <div class="p-1 bg-red-100 dark:bg-red-900/30 rounded-full mr-2">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-red-600 dark:text-red-400" viewBox="0 0 20 20" fill="currentColor">
                      <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
                    </svg>
                  </div>
                  Destination
                </div>
              </label>
              <div class="mt-1 relative rounded-md shadow-sm">
                <%= form.text_field :destination, class: "focus:ring-primary-500 focus:border-primary-500 block w-full pl-10 pr-3 py-3 sm:text-sm border-gray-300 dark:border-gray-700 dark:bg-gray-800 dark:text-white rounded-md", placeholder: "Enter destination address" %>
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                  <span class="text-gray-500 dark:text-gray-400 sm:text-sm">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                      <circle cx="10" cy="10" r="7" class="fill-red-500 dark:fill-red-600" />
                      <circle cx="10" cy="10" r="3" class="fill-white" />
                    </svg>
                  </span>
                </div>
              </div>
            </div>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <%# Date Field %>
            <div>
              <label for="date" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
                <div class="flex items-center">
                  <div class="p-1 bg-blue-100 dark:bg-blue-900/30 rounded-full mr-2">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-blue-600 dark:text-blue-400" viewBox="0 0 20 20" fill="currentColor">
                      <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd" />
                    </svg>
                  </div>
                  Date
                </div>
              </label>
              <div class="mt-1 relative rounded-md shadow-sm">
                <%= form.date_field :date, class: "focus:ring-primary-500 focus:border-primary-500 block w-full py-3 sm:text-sm border-gray-300 dark:border-gray-700 dark:bg-gray-800 dark:text-white rounded-md", value: Date.today.strftime('%Y-%m-%d') %>
              </div>
            </div>

            <%# Time Field %>
            <div>
              <label for="time" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
                <div class="flex items-center">
                  <div class="p-1 bg-blue-100 dark:bg-blue-900/30 rounded-full mr-2">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-blue-600 dark:text-blue-400" viewBox="0 0 20 20" fill="currentColor">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
                    </svg>
                  </div>
                  Time
                </div>
              </label>
              <div class="mt-1 relative rounded-md shadow-sm">
                <%= form.time_field :time, class: "focus:ring-primary-500 focus:border-primary-500 block w-full py-3 sm:text-sm border-gray-300 dark:border-gray-700 dark:bg-gray-800 dark:text-white rounded-md", value: Time.now.strftime('%H:%M') %>
              </div>
            </div>

            <%# Passengers Field %>
            <div>
              <label for="passengers" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
                <div class="flex items-center">
                  <div class="p-1 bg-purple-100 dark:bg-purple-900/30 rounded-full mr-2">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-purple-600 dark:text-purple-400" viewBox="0 0 20 20" fill="currentColor">
                      <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3zM6 8a2 2 0 11-4 0 2 2 0 014 0zM16 18v-3a5.972 5.972 0 00-.75-2.906A3.005 3.005 0 0119 15v3h-3zM4.75 12.094A5.973 5.973 0 004 15v3H1v-3a3 3 0 013.75-2.906z" />
                    </svg>
                  </div>
                  Passengers
                </div>
              </label>
              <div class="mt-1 relative rounded-md shadow-sm">
                <%= form.select :passengers,
                  options_for_select([
                    ["1 person", 1],
                    ["2 people", 2],
                    ["3 people", 3],
                    ["4 people", 4],
                    ["5 people", 5],
                    ["6+ people", 6]
                  ]),
                  {},
                  { class: "focus:ring-primary-500 focus:border-primary-500 block w-full py-3 sm:text-sm border-gray-300 dark:border-gray-700 dark:bg-gray-800 dark:text-white rounded-md" }
                %>
              </div>
            </div>
          </div>

          <%# Submit Button - Large and Visual %>
          <div class="pt-4">
            <%= form.button type: "submit", class: "w-full flex justify-center py-4 px-4 border border-transparent rounded-xl shadow-sm text-lg font-bold text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 transition transform hover:scale-[1.01]" do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
              </svg>
              Find Available Rides
            <% end %>
          </div>
        <% end %>
      </div>
    </div>

    <%# Search Results Container %>
    <div id="search_results"></div>

    <%# Transportation Options Section %>
    <div class="mb-12">
      <div class="text-center mb-10">
        <div class="inline-flex items-center px-4 py-2 rounded-full text-sm font-bold bg-gradient-to-r from-blue-500/10 to-primary-500/10 dark:from-blue-500/20 dark:to-primary-500/20 text-primary-700 dark:text-primary-300 mb-4">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
            <path d="M11 17a1 1 0 001.447.894l4-2A1 1 0 0017 15V9.236a1 1 0 00-1.447-.894l-4 2a1 1 0 00-.553.894V17zM15.211 6.276a1 1 0 000-1.788l-4.764-2.382a1 1 0 00-.894 0L4.789 4.488a1 1 0 000 1.788l4.764 2.382a1 1 0 00.894 0l4.764-2.382zM4.447 8.342A1 1 0 003 9.236V15a1 1 0 00.553.894l4 2A1 1 0 009 17v-5.764a1 1 0 00-.553-.894l-4-2z" />
          </svg>
          Transportation Options
        </div>
        <h2 class="text-3xl font-bold text-gray-900 dark:text-white">Choose How You Travel</h2>
        <p class="mt-4 max-w-2xl mx-auto text-lg text-gray-600 dark:text-gray-400">Select from our range of comfortable and affordable travel options.</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <%# Taxi Option Card %>
        <div class="relative group">
          <div class="absolute -inset-1 bg-gradient-to-r from-yellow-500 to-yellow-600 rounded-2xl blur opacity-25 group-hover:opacity-75 transition duration-300"></div>
          <div class="relative bg-white dark:bg-gray-800 rounded-2xl shadow-xl overflow-hidden group-hover:shadow-2xl transition-all duration-300">
            <div class="h-48 overflow-hidden">
              <img
                src="https://source.unsplash.com/random/600x400/?taxi,cab"
                alt="Taxi Service"
                class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
                loading="lazy"
              >
              <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent"></div>
              <div class="absolute bottom-4 left-4 right-4">
                <div class="flex items-center">
                  <div class="p-2 bg-yellow-500 rounded-full mr-3">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4" />
                    </svg>
                  </div>
                  <h3 class="text-xl font-bold text-white">Taxi Service</h3>
                </div>
              </div>
            </div>
            <div class="p-5">
              <div class="flex flex-col space-y-3">
                <div class="flex items-start space-x-3">
                  <div class="p-1 bg-yellow-100 dark:bg-yellow-900/30 rounded-full">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-yellow-600 dark:text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                    </svg>
                  </div>
                  <span class="text-sm text-gray-600 dark:text-gray-400">Door-to-door service</span>
                </div>
                <div class="flex items-start space-x-3">
                  <div class="p-1 bg-yellow-100 dark:bg-yellow-900/30 rounded-full">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-yellow-600 dark:text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                    </svg>
                  </div>
                  <span class="text-sm text-gray-600 dark:text-gray-400">Available 24/7</span>
                </div>
                <div class="flex items-start space-x-3">
                  <div class="p-1 bg-yellow-100 dark:bg-yellow-900/30 rounded-full">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-yellow-600 dark:text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                    </svg>
                  </div>
                  <span class="text-sm text-gray-600 dark:text-gray-400">Cash or mobile payment</span>
                </div>
              </div>

              <div class="mt-8">
                <div class="flex justify-between items-center mb-3">
                  <span class="text-sm text-gray-500 dark:text-gray-400">Starting from</span>
                  <span class="text-lg font-bold text-gray-900 dark:text-white">₵15</span>
                </div>
                <%= link_to transportation_rides_path, class: "block w-full py-3 px-4 bg-yellow-500 hover:bg-yellow-600 rounded-xl text-white font-bold text-center transition transform hover:scale-[1.02]" do %>
                  Book a Taxi
                <% end %>
              </div>
            </div>
          </div>
        </div>

        <%# Bus Option Card %>
        <div class="relative group">
          <div class="absolute -inset-1 bg-gradient-to-r from-blue-500 to-blue-600 rounded-2xl blur opacity-25 group-hover:opacity-75 transition duration-300"></div>
          <div class="relative bg-white dark:bg-gray-800 rounded-2xl shadow-xl overflow-hidden group-hover:shadow-2xl transition-all duration-300">
            <div class="h-48 overflow-hidden">
              <img
                src="https://source.unsplash.com/random/600x400/?bus,coach"
                alt="Bus Service"
                class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
                loading="lazy"
              >
