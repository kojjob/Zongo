<%# User Security Settings %>
<div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-4 sm:py-8">
  <%# Page Header with Visual Elements - Updated with teal-emerald colors and improved mobile responsiveness %>
  <div class="mb-6 sm:mb-8">
    <div class="bg-gradient-to-r from-teal-600 to-emerald-600 rounded-xl sm:rounded-2xl shadow-md text-white relative overflow-hidden p-4 sm:p-6 md:p-8">
      <!-- Decorative elements -->
      <div class="absolute top-0 right-0 w-32 sm:w-48 h-32 sm:h-48 bg-white/10 rounded-full -mt-16 sm:-mt-24 -mr-16 sm:-mr-24 blur-xl sm:blur-2xl"></div>
      <div class="absolute bottom-0 left-0 w-24 sm:w-32 h-24 sm:h-32 bg-white/10 rounded-full -mb-12 sm:-mb-16 -ml-12 sm:-ml-16 blur-lg sm:blur-xl"></div>
      <div class="absolute inset-0 bg-pattern-dots opacity-5"></div>

      <div class="relative flex flex-col items-center text-center">
        <div class="w-16 h-16 sm:w-20 sm:h-20 rounded-full bg-white/20 flex items-center justify-center mb-3 sm:mb-4 shadow-lg backdrop-blur-sm">
          <%= icon "shield-check", class: "w-8 h-8 sm:w-10 sm:h-10 text-white" %>
        </div>

        <h1 class="text-xl sm:text-2xl md:text-3xl font-bold text-white mb-1 sm:mb-2">Security Settings</h1>
        <p class="mt-1 text-sm sm:text-base text-white/90 max-w-2xl">
          Manage your password, two-factor authentication and security preferences
        </p>
      </div>
    </div>
  </div>

  <%# Tabs Navigation - Using shared component for better mobile responsiveness %>
  <%= render 'shared/settings_tabs' %>

  <%# Change Password Form - Updated with teal-emerald colors %>
  <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg overflow-hidden mb-8 border border-gray-100 dark:border-gray-700 transform transition-all duration-300 hover:shadow-xl">
    <div class="bg-gradient-to-r from-teal-500/10 to-emerald-500/10 dark:from-teal-500/20 dark:to-emerald-500/20 px-6 py-4 border-b border-gray-200 dark:border-gray-700">
      <div class="flex items-center justify-between">
        <div class="flex items-center">
          <%= icon "key", class: "w-6 h-6 mr-2 text-teal-600 dark:text-teal-400" %>
          <h2 class="text-xl font-bold text-gray-900 dark:text-white">Change Password</h2>
        </div>
      </div>
    </div>
    <div class="p-6">
      <%= form_with url: user_settings_update_security_path, method: :patch, local: true, class: "space-y-6", data: { controller: "profile", profile_target: "form", action: "submit->profile#submitForm" } do |form| %>
        <div class="hidden h-1 bg-teal-500 absolute top-0 left-0 transition-all duration-300" data-profile-target="saveIndicator"></div>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div class="md:col-span-2">
            <label for="current_password" class="flex items-center text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
              <%= icon "lock-closed", class: "w-4 h-4 mr-2 text-teal-500" %>
              Current Password
            </label>
            <div class="relative">
              <%= form.password_field :current_password, class: "py-3 px-4 form-input w-full rounded-lg border-2 border-gray-300 dark:border-gray-600 shadow-sm focus:border-teal-500 focus:ring focus:ring-teal-200 focus:ring-opacity-50 transition-colors duration-200", placeholder: "Enter your current password" %>
              <button type="button" class="absolute inset-y-0 right-0 pr-3 flex items-center text-gray-400 hover:text-gray-600 cursor-pointer" onclick="togglePasswordVisibility(this)">
                <%= icon "eye", class: "w-5 h-5" %>
              </button>
            </div>
          </div>

          <div>
            <label for="user_password" class="flex items-center text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
              <%= icon "lock-open", class: "w-4 h-4 mr-2 text-teal-500" %>
              New Password
            </label>
            <div class="relative">
              <%= form.password_field :user_password, class: "py-3 px-4 form-input w-full rounded-lg border-2 border-gray-300 dark:border-gray-600 shadow-sm focus:border-teal-500 focus:ring focus:ring-teal-200 focus:ring-opacity-50 transition-colors duration-200", placeholder: "Enter new password" %>
              <button type="button" class="absolute inset-y-0 right-0 pr-3 flex items-center text-gray-400 hover:text-gray-600 cursor-pointer" onclick="togglePasswordVisibility(this)">
                <%= icon "eye", class: "w-5 h-5" %>
              </button>
            </div>
            <div class="mt-2 text-xs text-gray-500 dark:text-gray-400">
              <p class="flex items-center"><%= icon "check-circle", class: "w-3 h-3 mr-1 text-teal-500" %> At least 8 characters</p>
              <p class="flex items-center"><%= icon "check-circle", class: "w-3 h-3 mr-1 text-teal-500" %> Include uppercase & lowercase letters</p>
              <p class="flex items-center"><%= icon "check-circle", class: "w-3 h-3 mr-1 text-teal-500" %> Include at least one number</p>
            </div>
          </div>

          <div>
            <label for="user_password_confirmation" class="flex items-center text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
              <%= icon "check", class: "w-4 h-4 mr-2 text-teal-500" %>
              Confirm New Password
            </label>
            <div class="relative">
              <%= form.password_field :user_password_confirmation, class: "py-3 px-4 form-input w-full rounded-lg border-2 border-gray-300 dark:border-gray-600 shadow-sm focus:border-teal-500 focus:ring focus:ring-teal-200 focus:ring-opacity-50 transition-colors duration-200", placeholder: "Confirm new password" %>
              <button type="button" class="absolute inset-y-0 right-0 pr-3 flex items-center text-gray-400 hover:text-gray-600 cursor-pointer" onclick="togglePasswordVisibility(this)">
                <%= icon "eye", class: "w-5 h-5" %>
              </button>
            </div>
          </div>
        </div>

        <div class="flex flex-col sm:flex-row justify-between items-center mt-8 border-t border-gray-200 dark:border-gray-700 pt-6">
          <div class="flex space-x-4 mb-4 sm:mb-0">
            <%= form.submit "Update Password", class: "px-6 py-3 bg-gradient-to-r from-teal-500 to-emerald-500 hover:from-teal-600 hover:to-emerald-600 text-white font-medium rounded-lg shadow-md transition-colors duration-200 flex items-center", data: { profile_target: "submitButton" } %>
            <%= link_to "Cancel", user_settings_path, class: "px-6 py-3 bg-white hover:bg-gray-50 dark:bg-gray-700 dark:hover:bg-gray-600 text-gray-700 dark:text-gray-200 font-medium rounded-lg shadow-sm border border-gray-300 dark:border-gray-600 transition-colors duration-200 flex items-center", data: { action: "click->profile#showLinkLoading" } %>
          </div>
          <p class="text-sm text-gray-500 dark:text-gray-400">
            <%= icon "shield-check", class: "w-4 h-4 mr-1 text-teal-500" %>
            Your password is securely stored and encrypted
          </p>
        </div>
      <% end %>
    </div>
  </div>

  <script>
    function togglePasswordVisibility(button) {
      const input = button.parentElement.querySelector('input');
      const icon = button.querySelector('i');

      if (input.type === 'password') {
        input.type = 'text';
        icon.classList.remove('fa-eye');
        icon.classList.add('fa-eye-slash');
      } else {
        input.type = 'password';
        icon.classList.remove('fa-eye-slash');
        icon.classList.add('fa-eye');
      }
    }
  </script>

  <%# Two-Factor Authentication - Updated with teal-emerald colors %>
  <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg overflow-hidden mb-8 border border-gray-100 dark:border-gray-700 transform transition-all duration-300 hover:shadow-xl">
    <div class="bg-gradient-to-r from-teal-500/10 to-emerald-500/10 dark:from-teal-500/20 dark:to-emerald-500/20 px-6 py-4 border-b border-gray-200 dark:border-gray-700">
      <div class="flex items-center justify-between">
        <div class="flex items-center">
          <%= icon "shield-exclamation", class: "w-6 h-6 mr-2 text-teal-600 dark:text-teal-400" %>
          <h2 class="text-xl font-bold text-gray-900 dark:text-white">Two-Factor Authentication</h2>
        </div>
        <div class="flex items-center">
          <span class="flex items-center text-sm text-red-600 dark:text-red-400 font-medium">
            <%= icon "x-circle", class: "w-4 h-4 mr-1" %>
            Not Enabled
          </span>
        </div>
      </div>
    </div>
    <div class="p-6">
      <div class="flex flex-col md:flex-row items-start md:items-center justify-between">
        <div class="mb-4 md:mb-0 md:mr-6 max-w-2xl">
          <p class="text-gray-600 dark:text-gray-300 mb-4">
            Two-factor authentication adds an extra layer of security to your account. In addition to your password, you'll need to enter a code from your phone to log in.
          </p>
          <div class="flex flex-col space-y-2 mb-4">
            <div class="flex items-start">
              <div class="flex-shrink-0 mt-1">
                <%= icon "check-circle", class: "w-4 h-4 text-teal-500" %>
              </div>
              <p class="ml-2 text-sm text-gray-600 dark:text-gray-300">
                <span class="font-medium">Enhanced Security:</span> Protect your account even if your password is compromised
              </p>
            </div>
            <div class="flex items-start">
              <div class="flex-shrink-0 mt-1">
                <%= icon "check-circle", class: "w-4 h-4 text-teal-500" %>
              </div>
              <p class="ml-2 text-sm text-gray-600 dark:text-gray-300">
                <span class="font-medium">Easy Setup:</span> Use any authenticator app on your smartphone
              </p>
            </div>
            <div class="flex items-start">
              <div class="flex-shrink-0 mt-1">
                <%= icon "check-circle", class: "w-4 h-4 text-teal-500" %>
              </div>
              <p class="ml-2 text-sm text-gray-600 dark:text-gray-300">
                <span class="font-medium">Backup Codes:</span> Access your account even without your phone
              </p>
            </div>
          </div>
        </div>
        <div class="flex-shrink-0">
          <button type="button" class="px-6 py-3 bg-gradient-to-r from-teal-500 to-emerald-500 hover:from-teal-600 hover:to-emerald-600 text-white font-medium rounded-lg shadow-md transition-colors duration-200 flex items-center" data-action="click->profile#showLinkLoading">
            <%= icon "lock-closed", class: "w-4 h-4 mr-2" %>
            Enable Two-Factor
          </button>
        </div>
      </div>
    </div>
  </div>

  <%# Login History - Updated with teal-emerald colors %>
  <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg overflow-hidden mb-8 border border-gray-100 dark:border-gray-700 transform transition-all duration-300 hover:shadow-xl">
    <div class="bg-gradient-to-r from-teal-500/10 to-emerald-500/10 dark:from-teal-500/20 dark:to-emerald-500/20 px-6 py-4 border-b border-gray-200 dark:border-gray-700">
      <div class="flex items-center justify-between">
        <div class="flex items-center">
          <%= icon "clock", class: "w-6 h-6 mr-2 text-teal-600 dark:text-teal-400" %>
          <h2 class="text-xl font-bold text-gray-900 dark:text-white">Login History</h2>
        </div>
        <button type="button" class="text-teal-600 hover:text-teal-800 dark:text-teal-400 dark:hover:text-teal-300 font-medium text-sm flex items-center" data-action="click->profile#showLinkLoading">
          <%= icon "refresh", class: "w-4 h-4 mr-1" %>
          Refresh
        </button>
      </div>
    </div>
    <div class="p-6">
      <div class="mb-4 bg-teal-50 dark:bg-teal-900/20 rounded-lg p-4 border border-teal-100 dark:border-teal-800/30">
        <p class="text-sm text-gray-600 dark:text-gray-300 flex items-start">
          <%= icon "information-circle", class: "w-5 h-5 mt-0.5 mr-2 text-teal-500" %>
          We keep track of your login activity to help protect your account. If you see any suspicious activity, please change your password immediately and contact support.
        </p>
      </div>

      <div class="overflow-x-auto rounded-lg border border-gray-200 dark:border-gray-700">
        <table class="min-w-full bg-white dark:bg-gray-800">
          <thead>
            <tr class="bg-gray-50 dark:bg-gray-700/50 border-b border-gray-200 dark:border-gray-700">
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
                <div class="flex items-center">
                  <%= icon "calendar", class: "w-4 h-4 mr-2 text-teal-500" %>
                  Date
                </div>
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
                <div class="flex items-center">
                  <%= icon "location-marker", class: "w-4 h-4 mr-2 text-teal-500" %>
                  Location
                </div>
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
                <div class="flex items-center">
                  <%= icon "desktop-computer", class: "w-4 h-4 mr-2 text-teal-500" %>
                  Device
                </div>
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
                <div class="flex items-center">
                  <%= icon "server", class: "w-4 h-4 mr-2 text-teal-500" %>
                  IP Address
                </div>
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
                <div class="flex items-center">
                  <%= icon "check-circle", class: "w-4 h-4 mr-2 text-teal-500" %>
                  Status
                </div>
              </th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200 dark:divide-gray-700">
            <tr class="hover:bg-gray-50 dark:hover:bg-gray-700/30 transition-colors duration-150">
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-white">
                <div class="flex items-center">
                  <div class="h-2 w-2 rounded-full bg-teal-500 mr-2"></div>
                  <%= current_user.current_sign_in_at&.strftime("%b %d, %Y %I:%M %p") || "N/A" %>
                  <span class="ml-2 px-2 py-0.5 text-xs rounded-full bg-teal-100 text-teal-800 dark:bg-teal-900 dark:text-teal-200">Current</span>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-white">
                <div class="flex items-center">
                  <img src="https://flagcdn.com/w20/gh.png" alt="Ghana" class="mr-2 h-4 rounded">
                  Accra, Ghana
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-white">
                <div class="flex items-center">
                  <svg class="w-4 h-4 mr-2 text-teal-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 17.93c-3.95-.49-7-3.85-7-7.93 0-.62.08-1.21.21-1.79L9 15v1c0 1.1.9 2 2 2v1.93zm6.9-2.54c-.26-.81-1-1.39-1.9-1.39h-1v-3c0-.55-.45-1-1-1H8v-2h2c.55 0 1-.45 1-1V7h2c1.1 0 2-.9 2-2v-.41c2.93 1.19 5 4.06 5 7.41 0 2.08-.8 3.97-2.1 5.39z"/>
                  </svg>
                  Chrome on Windows
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-white">
                <%= current_user.current_sign_in_ip || "N/A" %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="px-2 py-1 inline-flex items-center text-xs leading-5 font-semibold rounded-full bg-teal-100 text-teal-800 dark:bg-teal-900 dark:text-teal-200">
                  <%= icon "check-circle", class: "w-3 h-3 mr-1" %>
                  Success
                </span>
              </td>
            </tr>
            <tr class="hover:bg-gray-50 dark:hover:bg-gray-700/30 transition-colors duration-150">
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-white">
                <div class="flex items-center">
                  <div class="h-2 w-2 rounded-full bg-gray-300 mr-2"></div>
                  <%= current_user.last_sign_in_at&.strftime("%b %d, %Y %I:%M %p") || "N/A" %>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-white">
                <div class="flex items-center">
                  <img src="https://flagcdn.com/w20/gh.png" alt="Ghana" class="mr-2 h-4 rounded">
                  Accra, Ghana
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-white">
                <div class="flex items-center">
                  <svg class="w-4 h-4 mr-2 text-teal-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 17.93c-3.95-.49-7-3.85-7-7.93 0-.62.08-1.21.21-1.79L9 15v1c0 1.1.9 2 2 2v1.93zm6.9-2.54c-.26-.81-1-1.39-1.9-1.39h-1v-3c0-.55-.45-1-1-1H8v-2h2c.55 0 1-.45 1-1V7h2c1.1 0 2-.9 2-2v-.41c2.93 1.19 5 4.06 5 7.41 0 2.08-.8 3.97-2.1 5.39z"/>
                  </svg>
                  Chrome on Windows
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-white">
                <%= current_user.last_sign_in_ip || "N/A" %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="px-2 py-1 inline-flex items-center text-xs leading-5 font-semibold rounded-full bg-teal-100 text-teal-800 dark:bg-teal-900 dark:text-teal-200">
                  <%= icon "check-circle", class: "w-3 h-3 mr-1" %>
                  Success
                </span>
              </td>
            </tr>
          </tbody>
        </table>
      </div>

      <div class="mt-4 flex justify-end">
        <button type="button" class="text-teal-600 hover:text-teal-800 dark:text-teal-400 dark:hover:text-teal-300 font-medium text-sm flex items-center" data-action="click->profile#showLinkLoading">
          <%= icon "download", class: "w-4 h-4 mr-1" %>
          Download Full History
        </button>
      </div>
    </div>
  </div>

  <%# Additional Security Settings - Updated with teal-emerald colors %>
  <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg overflow-hidden mb-8 border border-gray-100 dark:border-gray-700 transform transition-all duration-300 hover:shadow-xl">
    <div class="bg-gradient-to-r from-teal-500/10 to-emerald-500/10 dark:from-teal-500/20 dark:to-emerald-500/20 px-6 py-4 border-b border-gray-200 dark:border-gray-700">
      <div class="flex items-center justify-between">
        <div class="flex items-center">
          <%= icon "shield-check", class: "w-6 h-6 mr-2 text-teal-600 dark:text-teal-400" %>
          <h2 class="text-xl font-bold text-gray-900 dark:text-white">Additional Security Settings</h2>
        </div>
      </div>
    </div>
    <div class="p-6">
      <div class="space-y-6">
        <%# Transaction PIN %>
        <div class="flex flex-col md:flex-row md:items-center justify-between py-4 border-b border-gray-200 dark:border-gray-700">
          <div class="mb-4 md:mb-0 md:mr-6">
            <div class="flex items-center">
              <%= icon "key", class: "w-5 h-5 mr-2 text-teal-500" %>
              <h3 class="text-lg font-medium text-gray-900 dark:text-white">Transaction PIN</h3>
            </div>
            <p class="mt-1 text-sm text-gray-600 dark:text-gray-300 ml-7">
              Require PIN for all financial transactions to prevent unauthorized access
            </p>
          </div>
          <button type="button" class="px-5 py-2 bg-white hover:bg-teal-50 border-2 border-teal-500 text-teal-600 font-medium rounded-lg shadow-sm transition-colors duration-200 flex items-center" data-modal-target="pin-modal" data-action="click->modal#open click->profile#showLinkLoading">
            <%= icon "cog", class: "w-4 h-4 mr-2" %>
            Manage PIN
          </button>
        </div>

        <%# Login Notifications %>
        <div class="flex flex-col md:flex-row md:items-center justify-between py-4 border-b border-gray-200 dark:border-gray-700">
          <div class="mb-4 md:mb-0 md:mr-6">
            <div class="flex items-center">
              <%= icon "bell", class: "w-5 h-5 mr-2 text-teal-500" %>
              <h3 class="text-lg font-medium text-gray-900 dark:text-white">Login Notifications</h3>
            </div>
            <p class="mt-1 text-sm text-gray-600 dark:text-gray-300 ml-7">
              Get notified when someone logs into your account from a new device or location
            </p>
          </div>
          <div class="relative inline-block w-14 align-middle select-none">
            <input type="checkbox" name="login_alerts" id="login_alerts" checked class="toggle-checkbox absolute block w-7 h-7 rounded-full bg-white dark:bg-gray-200 border-4 border-gray-300 dark:border-gray-500 appearance-none cursor-pointer transition-transform duration-200 ease-in transform translate-x-0 shadow-sm"/>
            <label for="login_alerts" class="toggle-label block overflow-hidden h-7 rounded-full bg-gray-300 dark:bg-gray-600 cursor-pointer"></label>
          </div>
        </div>

        <%# Trusted Devices %>
        <div class="flex flex-col md:flex-row md:items-center justify-between py-4 border-b border-gray-200 dark:border-gray-700">
          <div class="mb-4 md:mb-0 md:mr-6">
            <div class="flex items-center">
              <%= icon "device-mobile", class: "w-5 h-5 mr-2 text-teal-500" %>
              <h3 class="text-lg font-medium text-gray-900 dark:text-white">Trusted Devices</h3>
            </div>
            <p class="mt-1 text-sm text-gray-600 dark:text-gray-300 ml-7">
              Manage devices that can access your account without additional verification
            </p>
          </div>
          <button type="button" class="px-5 py-2 bg-white hover:bg-teal-50 border-2 border-teal-500 text-teal-600 font-medium rounded-lg shadow-sm transition-colors duration-200 flex items-center" data-modal-target="devices-modal" data-action="click->modal#open click->profile#showLinkLoading">
            <%= icon "device-tablet", class: "w-4 h-4 mr-2" %>
            Manage Devices
          </button>
        </div>

        <%# Session Timeout %>
        <div class="flex flex-col md:flex-row md:items-center justify-between py-4">
          <div class="mb-4 md:mb-0 md:mr-6">
            <div class="flex items-center">
              <%= icon "clock", class: "w-5 h-5 mr-2 text-teal-500" %>
              <h3 class="text-lg font-medium text-gray-900 dark:text-white">Session Timeout</h3>
            </div>
            <p class="mt-1 text-sm text-gray-600 dark:text-gray-300 ml-7">
              Automatically log out after a period of inactivity for better security
            </p>
          </div>
          <div class="relative">
