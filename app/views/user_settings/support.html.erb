  <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md overflow-hidden">
    <div class="p-6">
      <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-6">Help Resources</h2>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <a href="#" class="group flex items-start p-4 rounded-lg border border-gray-200 dark:border-gray-700 hover:border-primary-500 dark:hover:border-primary-500 transition">
          <div class="h-10 w-10 rounded-full bg-primary-100 dark:bg-primary-900 flex items-center justify-center text-primary-600 dark:text-primary-400 mr-4">
            <%= icon "book-open", class: "h-5 w-5" %>
          </div>
