        </a>
        
        <a href="#" class="group flex items-start p-4 rounded-lg border border-gray-200 dark:border-gray-700 hover:border-primary-500 dark:hover:border-primary-500 transition">
          <div class="h-10 w-10 rounded-full bg-green-100 dark:bg-green-900 flex items-center justify-center text-green-600 dark:text-green-400 mr-4">
            <%= icon "video", class: "h-5 w-5" %>
          </div>
          <div>
            <h3 class="text-base font-medium text-gray-900 dark:text-white group-hover:text-primary-600 dark:group-hover:text-primary-400 transition">Video Tutorials</h3>
            <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Step-by-step video guides for common tasks</p>
          </div>
        </a>
        
        <a href="#" class="group flex items-start p-4 rounded-lg border border-gray-200 dark:border-gray-700 hover:border-primary-500 dark:hover:border-primary-500 transition">
          <div class="h-10 w-10 rounded-full bg-blue-100 dark:bg-blue-900 flex items-center justify-center text-blue-600 dark:text-blue-400 mr-4">
            <%= icon "information-circle", class: "h-5 w-5" %>
          </div>
          <div>
            <h3 class="text-base font-medium text-gray-900 dark:text-white group-hover:text-primary-600 dark:group-hover:text-primary-400 transition">Knowledge Base</h3>
            <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Browse articles on specific topics and features</p>
          </div>
        </a>
        
        <a href="#" class="group flex items-start p-4 rounded-lg border border-gray-200 dark:border-gray-700 hover:border-primary-500 dark:hover:border-primary-500 transition">
          <div class="h-10 w-10 rounded-full bg-purple-100 dark:bg-purple-900 flex items-center justify-center text-purple-600 dark:text-purple-400 mr-4">
            <%= icon "community", class: "h-5 w-5" %>
          </div>
          <div>
            <h3 class="text-base font-medium text-gray-900 dark:text-white group-hover:text-primary-600 dark:group-hover:text-primary-400 transition">Community Forum</h3>
            <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Connect with other users and share experiences</p>
          </div>
        </a>
      </div>
    </div>
  </div>
</div>

<script>
  // Accordion Controller
  import { Controller } from "@hotwired/stimulus"

  export default class extends Controller {
    static targets = ["item1", "item2", "item3", "item4", "item5"]
    
    toggle(event) {
      const target = event.currentTarget.getAttribute('data-accordion-target')
      const content = document.getElementById(target)
      const arrow = event.currentTarget.querySelector('svg')
      
      if (content.classList.contains('hidden')) {
        content.classList.remove('hidden')
        arrow.classList.add('rotate-180')
      } else {
        content.classList.add('hidden')
        arrow.classList.remove('rotate-180')
      }
    }
  }
</script>
