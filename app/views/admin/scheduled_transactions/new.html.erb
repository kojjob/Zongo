<% content_for :title, "Create New Scheduled Transaction" %>

<div class="container mx-auto px-4 py-8">
  <!-- Header with gradient background -->
  <div class="bg-gradient-to-r from-indigo-600 to-purple-600 dark:from-indigo-800 dark:to-purple-800 rounded-xl shadow-lg mb-8 overflow-hidden relative">
    <!-- Decorative elements -->
    <div class="absolute top-0 right-0 w-64 h-64 bg-white opacity-10 rounded-full -mt-32 -mr-32"></div>
    <div class="absolute bottom-0 left-0 w-40 h-40 bg-white opacity-10 rounded-full -mb-20 -ml-20"></div>

    <div class="relative z-10 px-8 py-6 md:py-8">
      <div class="flex flex-col md:flex-row md:items-center md:justify-between">
        <div class="flex items-center mb-4 md:mb-0">
          <%= link_to admin_scheduled_transactions_path, class: "mr-4 text-white/80 hover:text-white transition-colors flex items-center" do %>
            <%= icon "arrow-left", class: "w-5 h-5 mr-2" %> Back
          <% end %>
          <h1 class="text-2xl md:text-3xl font-bold text-white">Create New Scheduled Transaction</h1>
        </div>

        <div class="flex items-center space-x-2">
          <div class="bg-white/20 backdrop-blur-sm rounded-lg px-4 py-2 text-white text-sm">
            <span class="font-medium">Automate your finances</span>
          </div>
        </div>
      </div>

      <p class="mt-2 text-white/80 max-w-2xl">
        Set up recurring transactions to automate payments, transfers, and deposits on a schedule that works for you.
      </p>
    </div>
  </div>

  <!-- Main content card with subtle shadow and border -->
  <div class="bg-white dark:bg-gray-800 rounded-xl shadow-xl border border-gray-100 dark:border-gray-700 overflow-hidden">
    <!-- Card header with subtle gradient -->
    <div class="bg-gradient-to-r from-gray-50 to-white dark:from-gray-800 dark:to-gray-750 px-6 py-4 border-b border-gray-100 dark:border-gray-700">
      <div class="flex items-center">
        <%= icon "clock", class: "w-5 h-5 text-indigo-500 dark:text-indigo-400 mr-2" %>
        <h2 class="text-lg font-semibold text-gray-900 dark:text-white">Transaction Details</h2>
      </div>
      <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
        Fill in the details below to create a new scheduled transaction
      </p>
    </div>

    <!-- Form content with improved spacing -->
    <div class="p-6 md:p-8">
      <%= render 'form', scheduled_transaction: @scheduled_transaction %>
    </div>
  </div>

  <!-- Help section -->
  <div class="mt-8 bg-indigo-50 dark:bg-indigo-900/20 rounded-xl p-6 border border-indigo-100 dark:border-indigo-800/30">
    <div class="flex items-start">
      <div class="flex-shrink-0 bg-indigo-100 dark:bg-indigo-800/50 rounded-full p-2">
        <%= icon "information-circle", class: "w-6 h-6 text-indigo-600 dark:text-indigo-400" %>
      </div>
      <div class="ml-4">
        <h3 class="text-lg font-medium text-indigo-800 dark:text-indigo-300">Tips for Scheduled Transactions</h3>
        <ul class="mt-2 text-sm text-indigo-700 dark:text-indigo-400 space-y-2">
          <li class="flex items-start">
            <span class="inline-block w-4 h-4 bg-indigo-200 dark:bg-indigo-700 rounded-full mr-2 mt-0.5 flex-shrink-0"></span>
            <span>Ensure sufficient funds are available in the source wallet for recurring transactions.</span>
          </li>
          <li class="flex items-start">
            <span class="inline-block w-4 h-4 bg-indigo-200 dark:bg-indigo-700 rounded-full mr-2 mt-0.5 flex-shrink-0"></span>
            <span>Set a limit on the number of occurrences for temporary payment arrangements.</span>
          </li>
          <li class="flex items-start">
            <span class="inline-block w-4 h-4 bg-indigo-200 dark:bg-indigo-700 rounded-full mr-2 mt-0.5 flex-shrink-0"></span>
            <span>You can pause a scheduled transaction at any time from the transaction details page.</span>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>
