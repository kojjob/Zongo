<% content_for :title, "Edit Scheduled Transaction" %>

<div class="container mx-auto px-4 py-8">
  <div class="flex items-center mb-6">
    <%= link_to admin_scheduled_transaction_path(@scheduled_transaction), class: "mr-4 text-indigo-600 hover:text-indigo-800 dark:text-indigo-400 dark:hover:text-indigo-300" do %>
      <%= icon "arrow-left", class: "w-5 h-5 mr-1" %> Back to Scheduled Transaction
    <% end %>
    <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Edit Scheduled Transaction</h1>
  </div>

  <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
    <%= render 'form', scheduled_transaction: @scheduled_transaction %>
  </div>
</div>
