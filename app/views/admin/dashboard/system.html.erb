<% content_for :title, "System Health" %>

<div class="space-y-8">
  <!-- System Overview -->
  <section>
    <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">System Overview</h2>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      <!-- Database Size -->
      <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0 w-12 h-12 rounded-full admin-gradient-primary flex items-center justify-center">
            <%= icon "database", class: "w-6 h-6 text-white" %>
          </div>
          <div class="ml-4">
            <h3 class="text-sm font-medium text-gray-500 dark:text-gray-400">Database Size</h3>
            <p class="text-2xl font-bold text-gray-900 dark:text-white"><%= @db_size_mb %> MB</p>
          </div>
        </div>
      </div>
      
      <!-- Storage Usage -->
      <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0 w-12 h-12 rounded-full admin-gradient-secondary flex items-center justify-center">
            <%= icon "cloud", class: "w-6 h-6 text-white" %>
          </div>
          <div class="ml-4">
            <h3 class="text-sm font-medium text-gray-500 dark:text-gray-400">Storage Usage</h3>
            <p class="text-2xl font-bold text-gray-900 dark:text-white"><%= @total_storage_mb %> MB</p>
            <p class="text-xs text-gray-500 dark:text-gray-400"><%= @total_blobs %> files</p>
          </div>
        </div>
      </div>
      
      <!-- Background Jobs -->
      <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0 w-12 h-12 rounded-full admin-gradient-tertiary flex items-center justify-center">
            <%= icon "clock", class: "w-6 h-6 text-white" %>
          </div>
          <div class="ml-4">
            <h3 class="text-sm font-medium text-gray-500 dark:text-gray-400">Background Jobs</h3>
            <% if defined?(Sidekiq::Stats) %>
              <p class="text-2xl font-bold text-gray-900 dark:text-white"><%= @enqueued_jobs %></p>
              <p class="text-xs text-gray-500 dark:text-gray-400">
                <%= @processed_jobs %> processed, <%= @failed_jobs %> failed
              </p>
            <% else %>
              <p class="text-lg font-medium text-gray-900 dark:text-white">Not Available</p>
            <% end %>
          </div>
        </div>
      </div>
      
      <!-- System Status -->
      <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0 w-12 h-12 rounded-full admin-gradient-quaternary flex items-center justify-center">
            <%= icon "status-online", class: "w-6 h-6 text-white" %>
          </div>
          <div class="ml-4">
            <h3 class="text-sm font-medium text-gray-500 dark:text-gray-400">System Status</h3>
            <p class="text-2xl font-bold text-green-600 dark:text-green-400">Healthy</p>
            <p class="text-xs text-gray-500 dark:text-gray-400">All services operational</p>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Resource Monitoring -->
  <section>
    <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">Resource Monitoring</h2>
    
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      <!-- Database Tables -->
      <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md overflow-hidden">
        <div class="p-6 border-b border-gray-200 dark:border-gray-700">
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Database Tables</h3>
        </div>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
            <thead class="bg-gray-50 dark:bg-gray-700">
              <tr>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
                  Table Name
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
                  Records
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
                  Size
                </th>
              </tr>
            </thead>
            <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
              <% @table_stats.each do |table| %>
                <tr class="hover:bg-gray-50 dark:hover:bg-gray-700 transition">
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900 dark:text-white">
                    <%= table[:name] %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">
                    <%= number_with_delimiter(table[:count]) %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">
                    <%= table[:size] %> MB
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
      
      <!-- Storage Usage -->
      <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md overflow-hidden">
        <div class="p-6 border-b border-gray-200 dark:border-gray-700">
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Storage Usage by Type</h3>
        </div>
        <div class="p-6">
          <div class="space-y-4">
            <% @storage_by_type.each do |type, data| %>
              <div>
                <div class="flex justify-between items-center mb-1">
                  <span class="text-sm font-medium text-gray-900 dark:text-white"><%= type.titleize %></span>
                  <span class="text-sm text-gray-500 dark:text-gray-400"><%= data[:size_mb] %> MB (<%= data[:percentage] %>%)</span>
                </div>
                <div class="w-full bg-gray-200 dark:bg-gray-700 rounded-full h-2">
                  <div class="h-2 rounded-full" 
                       style="width: <%= data[:percentage] %>%; background-color: <%= data[:color] %>;"></div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Recent Errors -->
  <section>
    <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">Recent Errors</h2>
    
    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md overflow-hidden">
      <% if @recent_errors && @recent_errors.any? %>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
            <thead class="bg-gray-50 dark:bg-gray-700">
              <tr>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
                  Time
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
                  Error Type
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
                  Message
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
                  User
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
                  IP Address
                </th>
              </tr>
            </thead>
            <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
              <% @recent_errors.each do |error| %>
                <tr class="hover:bg-gray-50 dark:hover:bg-gray-700 transition">
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">
                    <%= error.created_at.strftime("%b %d, %Y %H:%M:%S") %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-300">
                      <%= error.error_type %>
                    </span>
                  </td>
                  <td class="px-6 py-4 text-sm text-gray-900 dark:text-white">
                    <%= error.message %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">
                    <%= error.user ? error.user.username : "Guest" %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">
                    <%= error.ip_address %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="p-8 text-center">
          <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-green-100 dark:bg-green-900 text-green-600 dark:text-green-300 mb-4">
            <%= icon "check-circle", class: "w-8 h-8" %>
          </div>
          <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-2">No Recent Errors</h3>
          <p class="text-gray-500 dark:text-gray-400">The system is running smoothly with no reported errors.</p>
        </div>
      <% end %>
    </div>
  </section>
  
  <!-- System Actions -->
  <section>
    <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">System Actions</h2>
    
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
      <button type="button" class="bg-white dark:bg-gray-800 rounded-xl shadow-md p-6 hover:shadow-lg transition flex items-center">
        <div class="w-12 h-12 rounded-full bg-indigo-100 dark:bg-indigo-900 flex items-center justify-center text-indigo-600 dark:text-indigo-300">
          <%= icon "refresh", class: "w-6 h-6" %>
        </div>
        <div class="ml-4">
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Clear Cache</h3>
          <p class="text-sm text-gray-500 dark:text-gray-400">Refresh system cache</p>
        </div>
      </button>
      
      <button type="button" class="bg-white dark:bg-gray-800 rounded-xl shadow-md p-6 hover:shadow-lg transition flex items-center">
        <div class="w-12 h-12 rounded-full bg-blue-100 dark:bg-blue-900 flex items-center justify-center text-blue-600 dark:text-blue-300">
          <%= icon "download", class: "w-6 h-6" %>
        </div>
        <div class="ml-4">
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Backup Database</h3>
          <p class="text-sm text-gray-500 dark:text-gray-400">Create a full backup</p>
        </div>
      </button>
      
      <button type="button" class="bg-white dark:bg-gray-800 rounded-xl shadow-md p-6 hover:shadow-lg transition flex items-center">
        <div class="w-12 h-12 rounded-full bg-green-100 dark:bg-green-900 flex items-center justify-center text-green-600 dark:text-green-300">
          <%= icon "server", class: "w-6 h-6" %>
        </div>
        <div class="ml-4">
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Run Maintenance</h3>
          <p class="text-sm text-gray-500 dark:text-gray-400">Optimize database</p>
        </div>
      </button>
      
      <button type="button" class="bg-white dark:bg-gray-800 rounded-xl shadow-md p-6 hover:shadow-lg transition flex items-center">
        <div class="w-12 h-12 rounded-full bg-red-100 dark:bg-red-900 flex items-center justify-center text-red-600 dark:text-red-300">
          <%= icon "trash", class: "w-6 h-6" %>
        </div>
        <div class="ml-4">
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Clear Logs</h3>
          <p class="text-sm text-gray-500 dark:text-gray-400">Delete old log files</p>
        </div>
      </button>
    </div>
  </section>
</div>
