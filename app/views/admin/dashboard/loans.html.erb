<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Loan Management Dashboard</h1>
    <div>
      <%= link_to admin_dashboard_path, class: "btn-secondary" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
        </svg>
        Back to Dashboard
      <% end %>
    </div>
  </div>

  <!-- Loan Stats Cards -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mb-6">
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0 w-12 h-12 rounded-lg bg-blue-100 dark:bg-blue-900/30 flex items-center justify-center text-blue-600 dark:text-blue-400">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <div class="ml-4">
          <h2 class="text-sm font-medium text-gray-500 dark:text-gray-400">Total Loan Amount</h2>
          <p class="text-2xl font-bold text-gray-900 dark:text-white">GHS <%= number_with_delimiter((@total_loan_amount.nil? ? 0.0 : @total_loan_amount.to_f).round(2)) %></p>
        </div>
      </div>
    </div>

    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0 w-12 h-12 rounded-lg bg-green-100 dark:bg-green-900/30 flex items-center justify-center text-green-600 dark:text-green-400">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <div class="ml-4">
          <h2 class="text-sm font-medium text-gray-500 dark:text-gray-400">Active Loans</h2>
          <p class="text-2xl font-bold text-gray-900 dark:text-white"><%= @active_loans %></p>
          <p class="text-sm text-gray-500 dark:text-gray-400">GHS <%= number_with_delimiter((@active_loan_amount.nil? ? 0.0 : @active_loan_amount.to_f).round(2)) %></p>
        </div>
      </div>
    </div>

    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0 w-12 h-12 rounded-lg bg-yellow-100 dark:bg-yellow-900/30 flex items-center justify-center text-yellow-600 dark:text-yellow-400">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <div class="ml-4">
          <h2 class="text-sm font-medium text-gray-500 dark:text-gray-400">Pending Loans</h2>
          <p class="text-2xl font-bold text-gray-900 dark:text-white"><%= @pending_loans %></p>
          <p class="text-sm text-gray-500 dark:text-gray-400">GHS <%= number_with_delimiter((@pending_loan_amount.nil? ? 0.0 : @pending_loan_amount.to_f).round(2)) %></p>
        </div>
      </div>
    </div>

    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0 w-12 h-12 rounded-lg bg-red-100 dark:bg-red-900/30 flex items-center justify-center text-red-600 dark:text-red-400">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
          </svg>
        </div>
        <div class="ml-4">
          <h2 class="text-sm font-medium text-gray-500 dark:text-gray-400">Defaulted Loans</h2>
          <p class="text-2xl font-bold text-gray-900 dark:text-white"><%= @defaulted_loans %></p>
        </div>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-6">
    <!-- Loan Type Distribution -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden lg:col-span-2">
      <div class="p-4 border-b border-gray-200 dark:border-gray-700">
        <h2 class="text-lg font-semibold text-gray-900 dark:text-white">Loan Type Distribution</h2>
      </div>
      <div class="p-4">
        <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
          <% (defined?(Loan) && Loan.respond_to?(:loan_types) ? Loan.loan_types.keys : []).each do |loan_type| %>
            <div class="bg-gray-50 dark:bg-gray-700 p-4 rounded-lg">
              <h3 class="text-sm font-medium text-gray-700 dark:text-gray-300 mb-2"><%= loan_type.titleize %></h3>
              <div class="flex justify-between items-center">
                <span class="text-2xl font-bold text-gray-900 dark:text-white"><%= @loan_types_distribution.nil? ? 0 : (@loan_types_distribution[loan_type] || 0) %></span>
                <span class="text-sm text-gray-500 dark:text-gray-400">
                  <%= number_to_percentage((@loan_types_distribution.nil? ? 0 : (@loan_types_distribution[loan_type] || 0)).to_f / ((@total_loans || 0) > 0 ? (@total_loans || 0) : 1) * 100, precision: 1) %>
                </span>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Recent Loan Applications -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden">
      <div class="p-4 border-b border-gray-200 dark:border-gray-700">
        <h2 class="text-lg font-semibold text-gray-900 dark:text-white">Recent Applications</h2>
      </div>
      <div class="divide-y divide-gray-200 dark:divide-gray-700">
        <% if @recent_loan_applications.present? && @recent_loan_applications.any? %>
          <% @recent_loan_applications.each do |loan| %>
            <div class="p-4 hover:bg-gray-50 dark:hover:bg-gray-700">
              <div class="flex justify-between">
                <div>
                  <p class="text-sm font-medium text-gray-900 dark:text-white">
                    <%= loan.user.display_name %>
                  </p>
                  <p class="text-xs text-gray-500 dark:text-gray-400">
                    <%= loan.loan_type.titleize %> - GHS <%= number_with_delimiter(loan.amount) %>
                  </p>
                </div>
                <div class="text-right">
                  <p class="text-xs text-gray-500 dark:text-gray-400">
                    <%= time_ago_in_words(loan.created_at) %> ago
                  </p>
                  <%= link_to "Review", admin_loan_path(loan), class: "text-xs text-primary-600 hover:text-primary-900 dark:text-primary-400 dark:hover:text-primary-300" %>
                </div>
              </div>
            </div>
          <% end %>
        <% else %>
          <div class="p-4 text-center text-gray-500 dark:text-gray-400">
            No pending loan applications
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Loan Filters -->
  <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden mb-6">
    <div class="p-4 border-b border-gray-200 dark:border-gray-700">
      <h2 class="text-lg font-semibold text-gray-900 dark:text-white">Loan Filters</h2>
    </div>
    <div class="p-4">
      <div class="flex flex-wrap gap-2">
        <%= link_to "All Loans", admin_loans_path, class: "px-3 py-1 rounded-full text-sm font-medium #{params[:status].blank? ? 'bg-primary-100 text-primary-800 dark:bg-primary-900 dark:text-primary-200' : 'bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-200 hover:bg-gray-200 dark:hover:bg-gray-600'}" %>

        <%= link_to "Pending", admin_loans_path(status: 'pending'), class: "px-3 py-1 rounded-full text-sm font-medium #{params[:status] == 'pending' ? 'bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-200' : 'bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-200 hover:bg-gray-200 dark:hover:bg-gray-600'}" %>

        <%= link_to "Approved", admin_loans_path(status: 'approved'), class: "px-3 py-1 rounded-full text-sm font-medium #{params[:status] == 'approved' ? 'bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200' : 'bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-200 hover:bg-gray-200 dark:hover:bg-gray-600'}" %>

        <%= link_to "Active", admin_loans_path(status: 'active'), class: "px-3 py-1 rounded-full text-sm font-medium #{params[:status] == 'active' ? 'bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200' : 'bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-200 hover:bg-gray-200 dark:hover:bg-gray-600'}" %>

        <%= link_to "Completed", admin_loans_path(status: 'completed'), class: "px-3 py-1 rounded-full text-sm font-medium #{params[:status] == 'completed' ? 'bg-gray-200 text-gray-800 dark:bg-gray-600 dark:text-gray-200' : 'bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-200 hover:bg-gray-200 dark:hover:bg-gray-600'}" %>

        <%= link_to "Defaulted", admin_loans_path(status: 'defaulted'), class: "px-3 py-1 rounded-full text-sm font-medium #{params[:status] == 'defaulted' ? 'bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-200' : 'bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-200 hover:bg-gray-200 dark:hover:bg-gray-600'}" %>
      </div>
    </div>
  </div>

  <!-- Loans Table -->
  <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden">
    <div class="p-4 border-b border-gray-200 dark:border-gray-700">
      <h2 class="text-lg font-semibold text-gray-900 dark:text-white">
        <%= params[:status].present? ? "#{params[:status].titleize} Loans" : "All Loans" %>
      </h2>
    </div>

    <% if @loans.present? && @loans.any? %>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
          <thead class="bg-gray-50 dark:bg-gray-700">
            <tr>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Reference</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">User</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Type</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Amount</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Due Date</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Status</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Applied</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
            <% @loans.each do |loan| %>
              <tr>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900 dark:text-white">
                  <%= loan.reference_number %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">
                  <%= loan.user.display_name %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">
                  <%= loan.loan_type.titleize %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">
                  <%= number_to_currency(loan.amount, unit: "GHS ") %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">
                  <%= loan.due_date.strftime("%b %d, %Y") %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <% case loan.status %>
                  <% when "pending" %>
                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-yellow-100 text-yellow-800 dark:bg-yellow-800 dark:text-yellow-100">
                      Pending
                    </span>
                  <% when "approved" %>
                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-blue-100 text-blue-800 dark:bg-blue-800 dark:text-blue-100">
                      Approved
                    </span>
                  <% when "active" %>
                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800 dark:bg-green-800 dark:text-green-100">
                      Active
                    </span>
                  <% when "completed" %>
                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300">
                      Completed
                    </span>
                  <% when "defaulted" %>
                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800 dark:bg-red-800 dark:text-red-100">
                      Defaulted
                    </span>
                  <% when "rejected" %>
                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800 dark:bg-red-800 dark:text-red-100">
                      Rejected
                    </span>
                  <% else %>
                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300">
                      <%= loan.status.titleize %>
                    </span>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">
                  <%= time_ago_in_words(loan.created_at) %> ago
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">
                  <%= link_to "View", admin_loan_path(loan), class: "text-primary-600 hover:text-primary-900 dark:text-primary-400 dark:hover:text-primary-300" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <% if defined?(@pagy) && @pagy.present? && @pagy.pages > 1 %>
        <div class="px-6 py-4 bg-gray-50 dark:bg-gray-700 border-t border-gray-200 dark:border-gray-800">
          <%== pagy_nav(@pagy) if defined?(pagy_nav) %>
        </div>
      <% end %>
    <% else %>
      <div class="p-6 text-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 mx-auto text-gray-400 dark:text-gray-500 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
        </svg>
        <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-2">No Loans Found</h3>
        <p class="text-gray-500 dark:text-gray-400">
          <%= params[:status].present? ? "There are no loans with status '#{params[:status]}'." : "There are no loans in the system yet." %>
        </p>
      </div>
    <% end %>
  </div>
</div>
