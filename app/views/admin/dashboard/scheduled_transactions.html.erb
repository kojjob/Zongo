<% content_for :title, "Scheduled Transactions" %>

<div class="space-y-6">
  <!-- Header with Actions -->
  <div class="flex flex-col md:flex-row md:items-center md:justify-between">
    <div>
      <h2 class="text-2xl font-bold text-gray-900 dark:text-white">Scheduled Transactions</h2>
      <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
        Manage recurring payments and transfers
      </p>
    </div>

    <div class="mt-4 md:mt-0 flex flex-col sm:flex-row gap-3">
      <button type="button" class="btn btn-primary" data-controller="dropdown">
        <%= icon "plus", class: "w-5 h-5 mr-2" %>
        New Scheduled Transaction
      </button>

      <button type="button" class="btn btn-outline" data-controller="dropdown">
        <%= icon "filter", class: "w-5 h-5 mr-2" %>
        Filter
        <%= icon "chevron-down", class: "w-4 h-4 ml-2" %>
      </button>
    </div>
  </div>

  <!-- Search and Filters -->
  <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md p-6">
    <%= form_with url: admin_scheduled_transactions_path, method: :get, class: "space-y-4" do |f| %>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div>
          <label for="search" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Search</label>
          <div class="relative rounded-md shadow-sm">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <%= icon "search", class: "h-5 w-5 text-gray-400" %>
            </div>
            <%= f.text_field :search, placeholder: "Search by description or user", class: "pl-10 block w-full rounded-md border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
          </div>
        </div>

        <div>
          <label for="type" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Type</label>
          <%= f.select :type,
              [
                ["All Types", ""],
                ["Deposit", "deposit"],
                ["Withdrawal", "withdrawal"],
                ["Transfer", "transfer"]
              ],
              {},
              { class: "block w-full rounded-md border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" }
          %>
        </div>

        <div>
          <label for="status" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Status</label>
          <%= f.select :status,
              [
                ["All Statuses", ""],
                ["Active", "active"],
                ["Paused", "paused"],
                ["Completed", "completed"],
                ["Cancelled", "cancelled"]
              ],
              {},
              { class: "block w-full rounded-md border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" }
          %>
        </div>
      </div>

      <div class="flex justify-end">
        <%= link_to "Clear Filters", admin_scheduled_transactions_path, class: "btn btn-outline mr-3" %>
        <%= f.submit "Apply Filters", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>

  <!-- Scheduled Transactions Stats -->
  <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0 w-12 h-12 rounded-full bg-gradient-to-br from-indigo-500 to-purple-600 flex items-center justify-center text-white">
          <%= icon "clock", class: "w-6 h-6" %>
        </div>
        <div class="ml-4">
          <h3 class="text-sm font-medium text-gray-500 dark:text-gray-400">Total Scheduled</h3>
          <p class="text-2xl font-bold text-gray-900 dark:text-white"><%= @total_scheduled || 0 %></p>
        </div>
      </div>
    </div>

    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0 w-12 h-12 rounded-full bg-gradient-to-br from-green-500 to-emerald-600 flex items-center justify-center text-white">
          <%= icon "check-circle", class: "w-6 h-6" %>
        </div>
        <div class="ml-4">
          <h3 class="text-sm font-medium text-gray-500 dark:text-gray-400">Active</h3>
          <p class="text-2xl font-bold text-gray-900 dark:text-white"><%= @active_scheduled || 0 %></p>
        </div>
      </div>
    </div>

    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0 w-12 h-12 rounded-full bg-gradient-to-br from-blue-500 to-cyan-600 flex items-center justify-center text-white">
          <%= icon "calendar", class: "w-6 h-6" %>
        </div>
        <div class="ml-4">
          <h3 class="text-sm font-medium text-gray-500 dark:text-gray-400">Due Today</h3>
          <p class="text-2xl font-bold text-gray-900 dark:text-white"><%= @due_today || 0 %></p>
        </div>
      </div>
    </div>

    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0 w-12 h-12 rounded-full bg-gradient-to-br from-orange-500 to-amber-600 flex items-center justify-center text-white">
          <%= icon "currency-dollar", class: "w-6 h-6" %>
        </div>
        <div class="ml-4">
          <h3 class="text-sm font-medium text-gray-500 dark:text-gray-400">Monthly Volume</h3>
          <p class="text-2xl font-bold text-gray-900 dark:text-white">â‚µ<%= number_with_delimiter((@monthly_volume.nil? ? 0.0 : @monthly_volume.to_f).round(2)) %></p>
        </div>
      </div>
    </div>
  </div>

  <!-- Scheduled Transactions Table -->
  <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md overflow-hidden">
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
        <thead class="bg-gray-50 dark:bg-gray-700">
          <tr>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
              Description
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
              Type
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
              User
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
              Amount
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
              Frequency
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
              Next Date
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
              Status
            </th>
            <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
              Actions
            </th>
          </tr>
        </thead>
        <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
          <% if @scheduled_transactions && @scheduled_transactions.any? %>
            <% @scheduled_transactions.each do |scheduled| %>
              <tr class="hover:bg-gray-50 dark:hover:bg-gray-700 transition">
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm font-medium text-gray-900 dark:text-white"><%= scheduled.description %></div>
                  <div class="text-xs text-gray-500 dark:text-gray-400">Created <%= time_ago_in_words(scheduled.created_at) %> ago</div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                    <%= case scheduled.transaction_type
                        when 'deposit'
                          'bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300'
                        when 'withdrawal'
                          'bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-300'
                        when 'transfer'
                          'bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-300'
                        else
                          'bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300'
                        end %>">
                    <%= scheduled.transaction_type.to_s.capitalize %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center">
                    <div class="flex-shrink-0 h-8 w-8">
                      <% if scheduled.source_wallet && scheduled.source_wallet.user.respond_to?(:avatar) && scheduled.source_wallet.user.avatar.attached? %>
                        <%= image_tag scheduled.source_wallet.user.avatar, class: "h-8 w-8 rounded-full", alt: "User avatar" %>
                      <% else %>
                        <div class="h-8 w-8 rounded-full bg-indigo-100 dark:bg-indigo-900 flex items-center justify-center text-indigo-600 dark:text-indigo-300 font-semibold text-sm">
                          <%= scheduled.source_wallet && scheduled.source_wallet.user ? (scheduled.source_wallet.user.username.presence || scheduled.source_wallet.user.email[0]).first.upcase : '?' %>
                        </div>
                      <% end %>
                    </div>
                    <div class="ml-3">
                      <% if scheduled.source_wallet && scheduled.source_wallet.user %>
                        <div class="text-sm font-medium text-gray-900 dark:text-white"><%= scheduled.source_wallet.user.username.presence || scheduled.source_wallet.user.email %></div>
                        <div class="text-xs text-gray-500 dark:text-gray-400"><%= scheduled.source_wallet.user.email %></div>
                      <% else %>
                        <div class="text-sm font-medium text-gray-900 dark:text-white">Unknown User</div>
                        <div class="text-xs text-gray-500 dark:text-gray-400">No user associated</div>
                      <% end %>
                    </div>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm font-medium text-gray-900 dark:text-white">
                    â‚µ<%= number_with_delimiter((scheduled.amount.nil? ? 0.0 : scheduled.amount.to_f).round(2)) %>
                  </div>
                  <div class="text-xs text-gray-500 dark:text-gray-400">
                    <%= scheduled.occurrences_count %> of <%= scheduled.occurrences_limit || 'âˆž' %> occurrences
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm text-gray-900 dark:text-white">
                    <%= scheduled.frequency.to_s.titleize %>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm text-gray-900 dark:text-white">
                    <% if scheduled.next_occurrence %>
                      <%= scheduled.next_occurrence.strftime("%b %d, %Y") %>
                    <% else %>
                      Not scheduled
                    <% end %>
                  </div>
                  <div class="text-xs text-gray-500 dark:text-gray-400">
                    <% if scheduled.next_occurrence %>
                      <%= distance_of_time_in_words_to_now(scheduled.next_occurrence) %> from now
                    <% else %>
                      No upcoming occurrence
                    <% end %>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                    <%= case scheduled.status
                        when 'active'
                          'bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300'
                        when 'paused'
                          'bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-300'
                        when 'completed'
                          'bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-300'
                        when 'cancelled'
                          'bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-300'
                        else
                          'bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300'
                        end %>">
                    <%= scheduled.status.to_s.capitalize %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                  <div class="flex justify-end space-x-2">
                    <%= link_to "#", class: "text-indigo-600 hover:text-indigo-900 dark:text-indigo-400 dark:hover:text-indigo-300" do %>
                      <%= icon "eye", class: "w-5 h-5" %>
                    <% end %>

                    <% if scheduled.status == 'active' %>
                      <button type="button" class="text-yellow-600 hover:text-yellow-900 dark:text-yellow-400 dark:hover:text-yellow-300">
                        <%= icon "pause", class: "w-5 h-5" %>
                      </button>
                    <% elsif scheduled.status == 'paused' %>
                      <button type="button" class="text-green-600 hover:text-green-900 dark:text-green-400 dark:hover:text-green-300">
                        <%= icon "play", class: "w-5 h-5" %>
                      </button>
                    <% end %>

                    <button type="button" class="text-red-600 hover:text-red-900 dark:text-red-400 dark:hover:text-red-300">
                      <%= icon "x", class: "w-5 h-5" %>
                    </button>
                  </div>
                </td>
              </tr>
            <% end %>
          <% else %>
            <tr>
              <td colspan="8" class="px-6 py-10 text-center">
                <div class="flex flex-col items-center">
                  <div class="w-16 h-16 rounded-full bg-gray-100 dark:bg-gray-700 flex items-center justify-center text-gray-500 dark:text-gray-400 mb-4">
                    <%= icon "clock", class: "w-8 h-8" %>
                  </div>
                  <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-1">No Scheduled Transactions</h3>
                  <p class="text-gray-500 dark:text-gray-400 mb-4">There are no scheduled transactions to display.</p>
                  <button type="button" class="btn btn-primary">
                    <%= icon "plus", class: "w-5 h-5 mr-2" %>
                    Create Scheduled Transaction
                  </button>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <% if @pagy && @pagy.pages > 1 %>
      <!-- Pagination -->
      <div class="bg-gray-50 dark:bg-gray-700 px-6 py-4 flex items-center justify-between">
        <div class="flex-1 flex justify-between sm:hidden">
          <% if @pagy.prev %>
            <%= link_to "Previous", url_for(page: @pagy.prev), class: "relative inline-flex items-center px-4 py-2 border border-gray-300 dark:border-gray-600 text-sm font-medium rounded-md text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-800 hover:bg-gray-50 dark:hover:bg-gray-700" %>
          <% else %>
            <span class="relative inline-flex items-center px-4 py-2 border border-gray-300 dark:border-gray-600 text-sm font-medium rounded-md text-gray-400 dark:text-gray-500 bg-white dark:bg-gray-800 cursor-not-allowed">Previous</span>
          <% end %>

          <% if @pagy.next %>
            <%= link_to "Next", url_for(page: @pagy.next), class: "ml-3 relative inline-flex items-center px-4 py-2 border border-gray-300 dark:border-gray-600 text-sm font-medium rounded-md text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-800 hover:bg-gray-50 dark:hover:bg-gray-700" %>
          <% else %>
            <span class="ml-3 relative inline-flex items-center px-4 py-2 border border-gray-300 dark:border-gray-600 text-sm font-medium rounded-md text-gray-400 dark:text-gray-500 bg-white dark:bg-gray-800 cursor-not-allowed">Next</span>
          <% end %>
        </div>
        <div class="hidden sm:flex-1 sm:flex sm:items-center sm:justify-between">
          <div>
            <p class="text-sm text-gray-700 dark:text-gray-300">
              Showing <span class="font-medium"><%= @pagy.from %></span> to <span class="font-medium"><%= @pagy.to %></span> of <span class="font-medium"><%= @pagy.count %></span> scheduled transactions
            </p>
          </div>
          <div>
            <nav class="relative z-0 inline-flex rounded-md shadow-sm -space-x-px" aria-label="Pagination">
              <% (1..@pagy.pages).each do |page| %>
                <% if page == @pagy.page %>
                  <span class="relative inline-flex items-center px-4 py-2 border border-primary-500 bg-primary-50 text-sm font-medium text-primary-600 dark:bg-primary-900/20 dark:text-primary-400 dark:border-primary-500">
                    <%= page %>
                  </span>
                <% else %>
                  <%= link_to page, url_for(page: page), class: "relative inline-flex items-center px-4 py-2 border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 text-sm font-medium text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700" %>
                <% end %>
              <% end %>
            </nav>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
