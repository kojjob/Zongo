<div class="container mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-6">
    <%= link_to admin_products_path, class: "inline-flex items-center text-sm text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300" do %>
      <%= icon "arrow-left", class: "h-4 w-4 mr-1" %>
      Back to Products
    <% end %>
  </div>

  <div class="flex items-center justify-between mb-6">
    <h1 class="text-2xl font-bold text-gray-900 dark:text-white"><%= @product.name %></h1>
    <div class="flex items-center space-x-3">
      <% if @product.status == 'pending' %>
        <%= button_to approve_admin_product_path(@product), method: :post, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" do %>
          <%= icon "check-circle", class: "h-4 w-4 mr-1.5" %>
          Approve
        <% end %>
        <%= button_to reject_admin_product_path(@product), method: :post, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" do %>
          <%= icon "x-circle", class: "h-4 w-4 mr-1.5" %>
          Reject
        <% end %>
      <% elsif @product.status == 'active' %>
        <%= button_to reject_admin_product_path(@product), method: :post, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" do %>
          <%= icon "x-circle", class: "h-4 w-4 mr-1.5" %>
          Deactivate
        <% end %>
      <% else %>
        <%= button_to approve_admin_product_path(@product), method: :post, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" do %>
          <%= icon "check-circle", class: "h-4 w-4 mr-1.5" %>
          Activate
        <% end %>
      <% end %>

      <% if @product.featured? %>
        <%= button_to unfeature_admin_product_path(@product), method: :post, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-yellow-600 hover:bg-yellow-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-yellow-500" do %>
          <%= icon "star", class: "h-4 w-4 mr-1.5" %>
          Unfeature
        <% end %>
      <% else %>
        <%= button_to feature_admin_product_path(@product), method: :post, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-yellow-600 hover:bg-yellow-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-yellow-500" do %>
          <%= icon "star", class: "h-4 w-4 mr-1.5" %>
          Feature
        <% end %>
      <% end %>

      <%= link_to edit_admin_product_path(@product), class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500" do %>
        <%= icon "pencil", class: "h-4 w-4 mr-1.5" %>
        Edit
      <% end %>
      <%= button_to admin_product_path(@product), method: :delete, form: { data: { turbo_confirm: "Are you sure you want to delete this product?" } }, class: "inline-flex items-center px-4 py-2 border border-gray-300 dark:border-gray-600 text-sm font-medium rounded-md shadow-sm text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500" do %>
        <%= icon "trash", class: "h-4 w-4 mr-1.5" %>
        Delete
      <% end %>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <div class="lg:col-span-2">
      <div class="bg-white dark:bg-gray-800 shadow overflow-hidden sm:rounded-lg">
        <div class="px-4 py-5 sm:px-6 border-b border-gray-200 dark:border-gray-700">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <% if @product.images.attached? %>
                <%= image_tag @product.images.first.variant(resize_to_fill: [48, 48]), class: "h-12 w-12 rounded-md object-cover" %>
              <% else %>
                <div class="h-12 w-12 rounded-md bg-gray-200 dark:bg-gray-700 flex items-center justify-center">
                  <%= icon "image", class: "h-6 w-6 text-gray-400 dark:text-gray-500" %>
                </div>
              <% end %>
            </div>
            <div class="ml-4">
              <h3 class="text-lg font-medium leading-6 text-gray-900 dark:text-white flex items-center">
                <%= @product.name %>
                <% if @product.featured? %>
                  <span class="ml-2 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 dark:bg-yellow-900 text-yellow-800 dark:text-yellow-300">
                    Featured
                  </span>
                <% end %>
                <% case @product.status %>
                <% when 'active' %>
                  <span class="ml-2 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 dark:bg-green-900 text-green-800 dark:text-green-300">
                    Active
                  </span>
                <% when 'inactive' %>
                  <span class="ml-2 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 dark:bg-red-900 text-red-800 dark:text-red-300">
                    Inactive
                  </span>
                <% when 'pending' %>
                  <span class="ml-2 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-300">
                    Pending
                  </span>
                <% end %>
              </h3>
              <p class="mt-1 max-w-2xl text-sm text-gray-500 dark:text-gray-400">
                SKU: <%= @product.sku %>
              </p>
            </div>
          </div>
        </div>
        <div class="border-t border-gray-200 dark:border-gray-700 px-4 py-5 sm:px-6">
          <dl class="grid grid-cols-1 gap-x-4 gap-y-8 sm:grid-cols-2">
            <div class="sm:col-span-2">
              <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Description</dt>
              <dd class="mt-1 text-sm text-gray-900 dark:text-white">
                <%= @product.description %>
              </dd>
            </div>
            <div class="sm:col-span-1">
              <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Price</dt>
              <dd class="mt-1 text-sm text-gray-900 dark:text-white">
                GHS <%= @product.price %>
                <% if @product.original_price.present? && @product.original_price > @product.price %>
                  <span class="ml-2 line-through text-gray-500 dark:text-gray-400">GHS <%= @product.original_price %></span>
                  <span class="ml-2 text-green-600 dark:text-green-400">
                    <%= (((@product.original_price - @product.price) / @product.original_price) * 100).round %>% off
                  </span>
                <% end %>
              </dd>
            </div>
            <div class="sm:col-span-1">
              <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Stock Quantity</dt>
              <dd class="mt-1 text-sm text-gray-900 dark:text-white">
                <%= @product.stock_quantity || 'Unlimited' %>
              </dd>
            </div>
            <div class="sm:col-span-1">
              <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Category</dt>
              <dd class="mt-1 text-sm text-gray-900 dark:text-white">
                <% if @product.shop_category %>
                  <%= @product.shop_category.name %>
                <% else %>
                  None
                <% end %>
              </dd>
            </div>
            <div class="sm:col-span-1">
              <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Seller</dt>
              <dd class="mt-1 text-sm text-gray-900 dark:text-white">
                <% if @product.user %>
                  <%= link_to @product.user.username, admin_user_path(@product.user), class: "text-primary-600 dark:text-primary-400 hover:text-primary-900 dark:hover:text-primary-300" %>
                <% else %>
                  None
                <% end %>
              </dd>
            </div>
            <div class="sm:col-span-1">
              <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Brand</dt>
              <dd class="mt-1 text-sm text-gray-900 dark:text-white">
                <%= @product.brand || 'None' %>
              </dd>
            </div>
            <div class="sm:col-span-1">
              <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Created At</dt>
              <dd class="mt-1 text-sm text-gray-900 dark:text-white">
                <%= @product.created_at.strftime("%B %d, %Y %I:%M %p") %>
              </dd>
            </div>
            <div class="sm:col-span-1">
              <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Updated At</dt>
              <dd class="mt-1 text-sm text-gray-900 dark:text-white">
                <%= @product.updated_at.strftime("%B %d, %Y %I:%M %p") %>
              </dd>
            </div>
            <% if @product.specifications.present? && @product.specifications.any? %>
              <div class="sm:col-span-2">
                <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Specifications</dt>
                <dd class="mt-1 text-sm text-gray-900 dark:text-white">
                  <div class="border border-gray-200 dark:border-gray-700 rounded-md overflow-hidden">
                    <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
                      <tbody class="divide-y divide-gray-200 dark:divide-gray-700">
                        <% @product.specifications.each do |key, value| %>
                          <tr>
                            <td class="px-4 py-2 whitespace-nowrap text-sm font-medium text-gray-900 dark:text-white bg-gray-50 dark:bg-gray-800 w-1/3"><%= key %></td>
                            <td class="px-4 py-2 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400"><%= value %></td>
                          </tr>
                        <% end %>
                      </tbody>
                    </table>
                  </div>
                </dd>
              </div>
            <% end %>
            <% if @product.tags.present? && @product.tags.any? %>
              <div class="sm:col-span-2">
                <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Tags</dt>
                <dd class="mt-1 text-sm text-gray-900 dark:text-white">
                  <div class="flex flex-wrap gap-2">
                    <% @product.tags.each do |tag| %>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-300">
                        <%= tag %>
                      </span>
                    <% end %>
                  </div>
                </dd>
              </div>
            <% end %>
            <% if @product.weight.present? || @product.length.present? || @product.width.present? || @product.height.present? %>
              <div class="sm:col-span-2">
                <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Dimensions & Weight</dt>
                <dd class="mt-1 text-sm text-gray-900 dark:text-white">
                  <div class="flex flex-wrap gap-4">
                    <% if @product.weight.present? %>
                      <div>
                        <span class="font-medium">Weight:</span> <%= @product.weight %> <%= @product.weight_unit || 'kg' %>
                      </div>
                    <% end %>
                    <% if @product.length.present? && @product.width.present? && @product.height.present? %>
                      <div>
                        <span class="font-medium">Dimensions:</span> <%= @product.length %> × <%= @product.width %> × <%= @product.height %> <%= @product.dimension_unit || 'cm' %>
                      </div>
                    <% end %>
                  </div>
                </dd>
              </div>
            <% end %>
          </dl>
        </div>
      </div>

      <% if @product.images.attached? %>
        <div class="mt-6 bg-white dark:bg-gray-800 shadow overflow-hidden sm:rounded-lg">
          <div class="px-4 py-5 sm:px-6 border-b border-gray-200 dark:border-gray-700">
            <h3 class="text-lg font-medium leading-6 text-gray-900 dark:text-white">Product Images</h3>
          </div>
          <div class="p-4">
            <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-4">
              <% @product.images.each do |image| %>
                <div class="relative group">
                  <%= image_tag image.variant(resize_to_limit: [300, 300]), class: "w-full h-32 object-cover rounded-md" %>
                  <div class="absolute inset-0 bg-black bg-opacity-0 group-hover:bg-opacity-30 transition-opacity flex items-center justify-center opacity-0 group-hover:opacity-100">
                    <%= link_to image, target: "_blank", class: "p-2 bg-white dark:bg-gray-800 rounded-full" do %>
                      <%= icon "eye", class: "h-5 w-5 text-primary-600 dark:text-primary-400" %>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <div class="lg:col-span-1 space-y-6">
      <% if @reviews.any? %>
        <div class="bg-white dark:bg-gray-800 shadow overflow-hidden sm:rounded-lg">
          <div class="px-4 py-5 sm:px-6 border-b border-gray-200 dark:border-gray-700 flex justify-between items-center">
            <h3 class="text-lg font-medium leading-6 text-gray-900 dark:text-white">Recent Reviews</h3>
            <%= link_to "View All", "#", class: "text-sm text-primary-600 dark:text-primary-400 hover:text-primary-900 dark:hover:text-primary-300" %>
          </div>
          <ul class="divide-y divide-gray-200 dark:divide-gray-700">
            <% @reviews.each do |review| %>
              <li class="px-4 py-4">
                <div class="flex items-start">
                  <div class="flex-shrink-0">
                    <% if review.user&.avatar&.attached? %>
                      <%= image_tag review.user.avatar, class: "h-10 w-10 rounded-full" %>
                    <% else %>
                      <div class="h-10 w-10 rounded-full bg-primary-100 dark:bg-primary-900 flex items-center justify-center">
                        <span class="text-primary-600 dark:text-primary-400 font-medium"><%= review.user&.username&.first&.upcase || 'U' %></span>
                      </div>
                    <% end %>
                  </div>
                  <div class="ml-3 flex-1">
                    <div class="flex items-center justify-between">
                      <h4 class="text-sm font-medium text-gray-900 dark:text-white"><%= review.user&.username || 'Anonymous' %></h4>
                      <p class="text-xs text-gray-500 dark:text-gray-400"><%= time_ago_in_words(review.created_at) %> ago</p>
                    </div>
                    <div class="flex items-center mt-1">
                      <div class="flex items-center">
                        <% review.rating.to_i.times do %>
                          <%= icon "star-filled", class: "h-4 w-4 text-yellow-400" %>
                        <% end %>
                        <% (5 - review.rating.to_i).times do %>
                          <%= icon "star", class: "h-4 w-4 text-gray-300 dark:text-gray-600" %>
                        <% end %>
                      </div>
                      <span class="ml-2 text-sm text-gray-500 dark:text-gray-400"><%= review.rating %>/5</span>
                    </div>
                    <p class="mt-2 text-sm text-gray-700 dark:text-gray-300"><%= review.comment %></p>
                  </div>
                </div>
              </li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <% if @orders.any? %>
        <div class="bg-white dark:bg-gray-800 shadow overflow-hidden sm:rounded-lg">
          <div class="px-4 py-5 sm:px-6 border-b border-gray-200 dark:border-gray-700 flex justify-between items-center">
            <h3 class="text-lg font-medium leading-6 text-gray-900 dark:text-white">Recent Orders</h3>
            <%= link_to "View All", "#", class: "text-sm text-primary-600 dark:text-primary-400 hover:text-primary-900 dark:hover:text-primary-300" %>
          </div>
          <ul class="divide-y divide-gray-200 dark:divide-gray-700">
            <% @orders.each do |order| %>
              <li class="px-4 py-4">
                <div class="flex justify-between">
                  <div>
                    <h4 class="text-sm font-medium text-gray-900 dark:text-white">
                      <%= link_to "Order ##{order.id}", admin_order_path(order), class: "text-primary-600 dark:text-primary-400 hover:text-primary-900 dark:hover:text-primary-300" %>
                    </h4>
                    <p class="mt-1 text-xs text-gray-500 dark:text-gray-400"><%= order.created_at.strftime("%b %d, %Y") %></p>
                    <p class="mt-1 text-sm text-gray-700 dark:text-gray-300">
                      <%= order.user&.username || 'Guest' %>
                    </p>
                  </div>
                  <div class="text-right">
                    <p class="text-sm font-medium text-gray-900 dark:text-white">GHS <%= order.total_amount %></p>
                    <p class="mt-1 text-xs inline-flex items-center px-2.5 py-0.5 rounded-full font-medium
                      <% case order.status %>
                      <% when 'pending' %>
                        bg-yellow-100 dark:bg-yellow-900 text-yellow-800 dark:text-yellow-300
                      <% when 'processing' %>
                        bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-300
                      <% when 'completed' %>
                        bg-green-100 dark:bg-green-900 text-green-800 dark:text-green-300
                      <% when 'cancelled' %>
                        bg-red-100 dark:bg-red-900 text-red-800 dark:text-red-300
                      <% else %>
                        bg-gray-100 dark:bg-gray-800 text-gray-800 dark:text-gray-300
                      <% end %>
                    ">
                      <%= order.status&.titleize %>
                    </p>
                  </div>
                </div>
              </li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>
  </div>
</div>
