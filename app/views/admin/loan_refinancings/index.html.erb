<div class="container mx-auto px-4 py-8">
  <div class="mb-6 flex flex-col md:flex-row md:items-center md:justify-between">
    <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Loan Refinancing Applications</h1>
    <div class="mt-4 md:mt-0 flex space-x-2">
      <%= link_to admin_loans_path, class: "btn-secondary" do %>
        <i class="fas fa-list mr-1"></i>
        Manage Loans
      <% end %>
      <%= link_to admin_dashboard_path, class: "btn-secondary" do %>
        <i class="fas fa-tachometer-alt mr-1"></i>
        Dashboard
      <% end %>
    </div>
  </div>

  <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden mb-6">
    <div class="p-4 border-b border-gray-200 dark:border-gray-700 flex flex-wrap items-center justify-between">
      <h2 class="text-lg font-semibold text-gray-900 dark:text-white">Filter Applications</h2>
      <div class="flex space-x-2 mt-2 sm:mt-0">
        <%= link_to admin_loan_refinancings_path, class: "px-3 py-1 rounded-md text-sm font-medium #{params[:status].blank? ? 'bg-primary-100 dark:bg-primary-900/50 text-primary-700 dark:text-primary-300' : 'bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-600'}" do %>
          All
        <% end %>
        <%= link_to admin_loan_refinancings_path(status: 'pending'), class: "px-3 py-1 rounded-md text-sm font-medium #{params[:status] == 'pending' ? 'bg-yellow-100 dark:bg-yellow-900/50 text-yellow-700 dark:text-yellow-300' : 'bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-600'}" do %>
          Pending
        <% end %>
        <%= link_to admin_loan_refinancings_path(status: 'approved'), class: "px-3 py-1 rounded-md text-sm font-medium #{params[:status] == 'approved' ? 'bg-green-100 dark:bg-green-900/50 text-green-700 dark:text-green-300' : 'bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-600'}" do %>
          Approved
        <% end %>
        <%= link_to admin_loan_refinancings_path(status: 'rejected'), class: "px-3 py-1 rounded-md text-sm font-medium #{params[:status] == 'rejected' ? 'bg-red-100 dark:bg-red-900/50 text-red-700 dark:text-red-300' : 'bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-600'}" do %>
          Rejected
        <% end %>
        <%= link_to admin_loan_refinancings_path(status: 'cancelled'), class: "px-3 py-1 rounded-md text-sm font-medium #{params[:status] == 'cancelled' ? 'bg-gray-300 dark:bg-gray-600 text-gray-700 dark:text-gray-300' : 'bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-600'}" do %>
          Cancelled
        <% end %>
      </div>
    </div>
  </div>

  <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden">
    <% if @refinancings.present? %>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
          <thead class="bg-gray-50 dark:bg-gray-700">
            <tr>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">ID</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">User</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Original Loan</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Amount</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Rate Change</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Savings</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Status</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Date</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
            <% @refinancings.each do |refinancing| %>
              <tr>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900 dark:text-white">
                  REF-<%= refinancing.id %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center">
                    <div class="flex-shrink-0 h-10 w-10">
                      <% if refinancing.user.avatar.attached? %>
                        <%= image_tag refinancing.user.avatar, class: "h-10 w-10 rounded-full" %>
                      <% else %>
                        <div class="h-10 w-10 rounded-full bg-gray-200 dark:bg-gray-700 flex items-center justify-center">
                          <i class="fas fa-user text-gray-400 dark:text-gray-500"></i>
                        </div>
                      <% end %>
                    </div>
                    <div class="ml-4">
                      <div class="text-sm font-medium text-gray-900 dark:text-white">
                        <%= refinancing.user.display_name %>
                      </div>
                      <div class="text-sm text-gray-500 dark:text-gray-400">
                        <%= refinancing.user.email %>
                      </div>
                    </div>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">
                  <%= link_to refinancing.original_loan.reference_number, admin_loan_path(refinancing.original_loan), class: "text-primary-600 hover:text-primary-900 dark:text-primary-400 dark:hover:text-primary-300" %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">
                  <%= number_to_currency(refinancing.requested_amount, unit: "GHS ") %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">
                  <span class="text-green-600 dark:text-green-400">
                    <%= number_to_percentage(refinancing.original_rate, precision: 2) %> â†’ <%= number_to_percentage(refinancing.requested_rate, precision: 2) %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">
                  <span class="text-green-600 dark:text-green-400">
                    <%= number_to_currency(refinancing.estimated_savings, unit: "GHS ") %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <% case refinancing.status %>
                  <% when "pending" %>
                    <span class="px-2 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-200">
                      Pending
                    </span>
                  <% when "approved" %>
                    <span class="px-2 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200">
                      Approved
                    </span>
                  <% when "rejected" %>
                    <span class="px-2 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-200">
                      Rejected
                    </span>
                  <% when "cancelled" %>
                    <span class="px-2 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300">
                      Cancelled
                    </span>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">
                  <%= refinancing.created_at.strftime("%b %d, %Y") %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">
                  <%= link_to "View", admin_loan_refinancing_path(refinancing), class: "text-primary-600 hover:text-primary-900 dark:text-primary-400 dark:hover:text-primary-300" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      
      <div class="px-6 py-4 border-t border-gray-200 dark:border-gray-700">
        <%= paginate @refinancings %>
      </div>
    <% else %>
      <div class="p-6 text-center">
        <div class="mx-auto flex items-center justify-center h-12 w-12 rounded-full bg-gray-100 dark:bg-gray-700">
          <svg class="h-6 w-6 text-gray-600 dark:text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <h3 class="mt-3 text-lg font-medium text-gray-900 dark:text-white">No refinancing applications found</h3>
        <p class="mt-2 text-sm text-gray-500 dark:text-gray-400">
          There are no refinancing applications matching your filter criteria.
        </p>
      </div>
    <% end %>
  </div>
</div>
