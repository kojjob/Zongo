<% content_for :title, "Edit Event: #{@event.title}" %>

<div class="container mx-auto px-4 py-8">
  <div class="flex items-center mb-6">
    <%= link_to admin_event_path(@event), class: "mr-4 text-indigo-600 hover:text-indigo-800 dark:text-indigo-400 dark:hover:text-indigo-300" do %>
      <i class="fas fa-arrow-left"></i> Back to Event
    <% end %>
    <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Edit Event: <%= @event.title %></h1>
  </div>

  <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
    <%= render 'form', event: @event %>
  </div>
</div>
