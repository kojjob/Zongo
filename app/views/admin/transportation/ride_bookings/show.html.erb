<%# Ride Booking Show Page %>
<div class="bg-white dark:bg-gray-900 shadow-sm rounded-lg overflow-hidden">
  <div class="px-4 py-5 sm:px-6 flex justify-between items-center border-b border-gray-200 dark:border-gray-700">
    <div>
      <h1 class="text-xl font-semibold text-gray-900 dark:text-white">Ride Booking #<%= @ride_booking.id %></h1>
      <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
        Created <%= time_ago_in_words(@ride_booking.created_at) %> ago
      </p>
    </div>
    <div class="flex space-x-2">
      <%= link_to edit_admin_transportation_ride_booking_path(@ride_booking), class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" viewBox="0 0 20 20" fill="currentColor">
          <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
        </svg>
        Edit
      <% end %>
      <%= button_to admin_transportation_ride_booking_path(@ride_booking), method: :delete, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500", form: { data: { turbo_confirm: "Are you sure you want to delete this ride booking?" } } do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
        </svg>
        Delete
      <% end %>
    </div>
  </div>
  
  <div class="px-4 py-5 sm:p-6">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-4">Booking Details</h3>
        
        <div class="bg-gray-50 dark:bg-gray-800 rounded-lg p-4 mb-6">
          <div class="grid grid-cols-2 gap-4">
            <div>
              <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Status</p>
              <% status_color = case @ride_booking.status
                 when "pending" then "yellow"
                 when "confirmed" then "blue"
                 when "in_progress" then "indigo"
                 when "completed" then "green"
                 when "cancelled" then "red"
                 else "gray"
                 end %>
              <p class="mt-1">
                <span class="px-2 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-<%= status_color %>-100 dark:bg-<%= status_color %>-900 text-<%= status_color %>-800 dark:text-<%= status_color %>-200">
                  <%= @ride_booking.status.titleize %>
                </span>
              </p>
            </div>
            <div>
              <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Ride Type</p>
              <p class="mt-1 text-sm text-gray-900 dark:text-white"><%= @ride_booking.ride_type.titleize %></p>
            </div>
            <div>
              <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Price</p>
              <p class="mt-1 text-sm text-gray-900 dark:text-white"><%= number_to_currency(@ride_booking.price, unit: "â‚µ") %></p>
            </div>
            <div>
              <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Payment Status</p>
              <p class="mt-1 text-sm text-gray-900 dark:text-white"><%= @ride_booking.payment_status.titleize %></p>
            </div>
            <div>
              <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Pickup Time</p>
              <p class="mt-1 text-sm text-gray-900 dark:text-white"><%= @ride_booking.pickup_time.strftime("%b %d, %Y %H:%M") rescue "N/A" %></p>
            </div>
            <div>
              <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Dropoff Time</p>
              <p class="mt-1 text-sm text-gray-900 dark:text-white"><%= @ride_booking.dropoff_time.strftime("%b %d, %Y %H:%M") rescue "Not completed" %></p>
            </div>
          </div>
        </div>
        
        <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-4">Route Information</h3>
        
        <div class="bg-gray-50 dark:bg-gray-800 rounded-lg p-4 mb-6">
          <div class="mb-4">
            <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Origin</p>
            <p class="mt-1 text-sm text-gray-900 dark:text-white"><%= @ride_booking.origin_address %></p>
          </div>
          <div>
            <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Destination</p>
            <p class="mt-1 text-sm text-gray-900 dark:text-white"><%= @ride_booking.destination_address %></p>
          </div>
        </div>
      </div>
      
      <div>
        <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-4">User Information</h3>
        
        <div class="bg-gray-50 dark:bg-gray-800 rounded-lg p-4 mb-6">
          <div class="flex items-center mb-4">
            <div class="flex-shrink-0 h-10 w-10 rounded-full bg-primary-100 dark:bg-primary-900 flex items-center justify-center text-primary-600 dark:text-primary-300 font-semibold text-sm">
              <%= @ride_booking.user.name.first(2).upcase rescue "U" %>
            </div>
            <div class="ml-3">
              <p class="text-sm font-medium text-gray-900 dark:text-white"><%= @ride_booking.user.name rescue "Unknown User" %></p>
              <p class="text-sm text-gray-500 dark:text-gray-400"><%= @ride_booking.user.email rescue "No email" %></p>
            </div>
          </div>
          <div class="grid grid-cols-2 gap-4">
            <div>
              <p class="text-sm font-medium text-gray-500 dark:text-gray-400">User ID</p>
              <p class="mt-1 text-sm text-gray-900 dark:text-white"><%= @ride_booking.user_id %></p>
            </div>
            <div>
              <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Phone</p>
              <p class="mt-1 text-sm text-gray-900 dark:text-white"><%= @ride_booking.user.phone rescue "No phone" %></p>
            </div>
          </div>
        </div>
        
        <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-4">Driver Information</h3>
        
        <div class="bg-gray-50 dark:bg-gray-800 rounded-lg p-4 mb-6">
          <div class="grid grid-cols-2 gap-4">
            <div>
              <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Driver Name</p>
              <p class="mt-1 text-sm text-gray-900 dark:text-white"><%= @ride_booking.driver_name || "Not assigned" %></p>
            </div>
            <div>
              <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Driver Phone</p>
              <p class="mt-1 text-sm text-gray-900 dark:text-white"><%= @ride_booking.driver_phone || "Not available" %></p>
            </div>
            <div>
              <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Vehicle</p>
              <p class="mt-1 text-sm text-gray-900 dark:text-white"><%= @ride_booking.vehicle_model || "Not assigned" %></p>
            </div>
            <div>
              <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Vehicle Color</p>
              <p class="mt-1 text-sm text-gray-900 dark:text-white"><%= @ride_booking.vehicle_color || "Not assigned" %></p>
            </div>
            <div>
              <p class="text-sm font-medium text-gray-500 dark:text-gray-400">License Plate</p>
              <p class="mt-1 text-sm text-gray-900 dark:text-white"><%= @ride_booking.license_plate || "Not assigned" %></p>
            </div>
          </div>
        </div>
        
        <% if @ride_booking.notes.present? %>
          <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-4">Notes</h3>
          
          <div class="bg-gray-50 dark:bg-gray-800 rounded-lg p-4">
            <p class="text-sm text-gray-900 dark:text-white"><%= @ride_booking.notes %></p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="mt-6">
  <%= link_to admin_transportation_ride_bookings_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 dark:border-gray-600 shadow-sm text-sm font-medium rounded-md text-gray-700 dark:text-gray-200 bg-white dark:bg-gray-800 hover:bg-gray-50 dark:hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500" do %>
    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" viewBox="0 0 20 20" fill="currentColor">
      <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
    </svg>
    Back to Ride Bookings
  <% end %>
</div>
