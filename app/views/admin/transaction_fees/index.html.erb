<%# Admin Transaction Fees Index %>
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="flex items-center justify-between mb-6">
    <div>
      <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Transaction Fees</h1>
      <p class="text-gray-600 dark:text-gray-400 mt-1">
        Manage transaction fees for different transaction types
      </p>
    </div>
    <div>
      <%= link_to new_admin_transaction_fee_path, class: "btn btn-primary" do %>
        <%= icon "plus", class: "w-5 h-5 mr-2" %>
        New Fee
      <% end %>
    </div>
  </div>

  <div class="bg-white dark:bg-gray-800 shadow rounded-lg overflow-hidden">
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
        <thead class="bg-gray-50 dark:bg-gray-750">
          <tr>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
              Name
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
              Transaction Type
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
              Fee Type
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
              Fee Details
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
              Status
            </th>
            <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
              Actions
            </th>
          </tr>
        </thead>
        <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
          <% if @transaction_fees.any? %>
            <% @transaction_fees.each do |fee| %>
              <tr class="hover:bg-gray-50 dark:hover:bg-gray-750">
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm font-medium text-gray-900 dark:text-white"><%= fee.name %></div>
                  <div class="text-xs text-gray-500 dark:text-gray-400"><%= fee.description.truncate(50) if fee.description.present? %></div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <% case fee.transaction_type %>
                  <% when "deposit" %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-400">
                      <%= icon "arrow-down", class: "w-3 h-3 mr-1" %>
                      Deposit
                    </span>
                  <% when "withdrawal" %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800 dark:bg-red-900/30 dark:text-red-400">
                      <%= icon "arrow-up", class: "w-3 h-3 mr-1" %>
                      Withdrawal
                    </span>
                  <% when "transfer" %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800 dark:bg-blue-900/30 dark:text-blue-400">
                      <%= icon "arrow-right", class: "w-3 h-3 mr-1" %>
                      Transfer
                    </span>
                  <% when "payment" %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-800 dark:bg-purple-900/30 dark:text-purple-400">
                      <%= icon "credit-card", class: "w-3 h-3 mr-1" %>
                      Payment
                    </span>
                  <% else %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300">
                      <%= icon "globe", class: "w-3 h-3 mr-1" %>
                      All Types
                    </span>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <% case fee.fee_type %>
                  <% when "fixed" %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-indigo-100 text-indigo-800 dark:bg-indigo-900/30 dark:text-indigo-400">
                      Fixed
                    </span>
                  <% when "percentage" %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800 dark:bg-yellow-900/30 dark:text-yellow-400">
                      Percentage
                    </span>
                  <% when "hybrid" %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-teal-100 text-teal-800 dark:bg-teal-900/30 dark:text-teal-400">
                      Hybrid
                    </span>
                  <% end %>
                </td>
                <td class="px-6 py-4">
                  <% case fee.fee_type %>
                  <% when "fixed" %>
                    <div class="text-sm text-gray-900 dark:text-white">₵<%= number_with_precision(fee.fixed_amount, precision: 2) %></div>
                  <% when "percentage" %>
                    <div class="text-sm text-gray-900 dark:text-white"><%= number_with_precision(fee.percentage, precision: 2) %>%</div>
                  <% when "hybrid" %>
                    <div class="text-sm text-gray-900 dark:text-white"><%= number_with_precision(fee.percentage, precision: 2) %>%</div>
                    <div class="text-xs text-gray-500 dark:text-gray-400">
                      <% if fee.min_fee.present? %>
                        Min: ₵<%= number_with_precision(fee.min_fee, precision: 2) %>
                      <% end %>
                      <% if fee.min_fee.present? && fee.max_fee.present? %>
                        •
                      <% end %>
                      <% if fee.max_fee.present? %>
                        Max: ₵<%= number_with_precision(fee.max_fee, precision: 2) %>
                      <% end %>
                    </div>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <% if fee.active? %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-400">
                      <%= icon "check-circle", class: "w-3 h-3 mr-1" %>
                      Active
                    </span>
                  <% else %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300">
                      <%= icon "x-circle", class: "w-3 h-3 mr-1" %>
                      Inactive
                    </span>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                  <div class="flex items-center justify-end space-x-2">
                    <%= link_to toggle_active_admin_transaction_fee_path(fee), method: :patch, class: "text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-300" do %>
                      <% if fee.active? %>
                        <%= icon "pause", class: "w-5 h-5", title: "Deactivate" %>
                      <% else %>
                        <%= icon "play", class: "w-5 h-5", title: "Activate" %>
                      <% end %>
                    <% end %>
                    
                    <%= link_to edit_admin_transaction_fee_path(fee), class: "text-indigo-600 hover:text-indigo-900 dark:text-indigo-400 dark:hover:text-indigo-300" do %>
                      <%= icon "pencil", class: "w-5 h-5", title: "Edit" %>
                    <% end %>
                    
                    <%= link_to admin_transaction_fee_path(fee), method: :delete, data: { confirm: "Are you sure you want to delete this fee?" }, class: "text-red-600 hover:text-red-900 dark:text-red-400 dark:hover:text-red-300" do %>
                      <%= icon "trash", class: "w-5 h-5", title: "Delete" %>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          <% else %>
            <tr>
              <td colspan="6" class="px-6 py-10 text-center">
                <div class="flex flex-col items-center justify-center">
                  <div class="w-16 h-16 bg-gray-100 dark:bg-gray-700 rounded-full flex items-center justify-center mb-4">
                    <%= icon "currency-dollar", class: "w-8 h-8 text-gray-400 dark:text-gray-500" %>
                  </div>
                  <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-1">No transaction fees configured</h3>
                  <p class="text-gray-500 dark:text-gray-400 mb-4">Create your first transaction fee to start charging for transactions</p>
                  <%= link_to new_admin_transaction_fee_path, class: "btn btn-primary" do %>
                    <%= icon "plus", class: "w-5 h-5 mr-2" %>
                    Create Fee
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
