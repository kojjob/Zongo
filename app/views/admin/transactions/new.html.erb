      <div class="flex justify-end">
        <%= f.submit "Create Transaction", class: "px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition-colors" %>
        <%= link_to "Cancel", admin_transactions_path, class: "ml-2 px-4 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition-colors dark:bg-gray-700 dark:text-gray-300 dark:hover:bg-gray-600" %>
      </div>
    <% end %>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const transactionTypeSelect = document.querySelector('#transaction_transaction_type');
    const depositForm = document.querySelector('.transaction-form-deposit');
    const withdrawalForm = document.querySelector('.transaction-form-withdrawal');
    const transferForm = document.querySelector('.transaction-form-transfer');
    const paymentForm = document.querySelector('.transaction-form-payment');
    
    function showRelevantForm() {
      // Hide all forms first
      depositForm.classList.add('hidden');
      withdrawalForm.classList.add('hidden');
      transferForm.classList.add('hidden');
      paymentForm.classList.add('hidden');
      
      // Show the relevant form based on the selected transaction type
      const selectedType = transactionTypeSelect.value;
      if (selectedType === 'deposit') {
        depositForm.classList.remove('hidden');
      } else if (selectedType === 'withdrawal') {
        withdrawalForm.classList.remove('hidden');
      } else if (selectedType === 'transfer') {
        transferForm.classList.remove('hidden');
      } else if (selectedType === 'payment') {
        paymentForm.classList.remove('hidden');
      }
    }
    
    // Show the relevant form on page load
    showRelevantForm();
    
    // Show the relevant form when the transaction type changes
    transactionTypeSelect.addEventListener('change', showRelevantForm);
  });
</script>
