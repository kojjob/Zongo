<div class="container mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="flex items-center justify-between mb-6">
    <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Flash Sales</h1>
    <%= link_to new_admin_flash_sale_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500" do %>
      <%= icon "plus", class: "h-4 w-4 mr-1.5" %>
      New Flash Sale
    <% end %>
  </div>

  <div class="bg-white dark:bg-gray-800 shadow overflow-hidden sm:rounded-md mb-6">
    <div class="px-4 py-5 sm:p-6">
      <%= form_with url: admin_flash_sales_path, method: :get, class: "space-y-4 sm:flex sm:items-end sm:space-y-0 sm:space-x-4" do |f| %>
        <div class="w-full sm:w-auto">
          <%= f.label :status, "Status", class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
          <div class="mt-1">
            <%= f.select :status, 
                options_for_select([
                  ["All", ""],
                  ["Active", "active"],
                  ["Inactive", "inactive"],
                  ["Current", "current"],
                  ["Upcoming", "upcoming"],
                  ["Past", "past"]
                ], params[:status]), 
                {}, 
                class: "block w-full pl-3 pr-10 py-2 text-base border-gray-300 dark:border-gray-600 focus:outline-none focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:text-white sm:text-sm rounded-md" %>
          </div>
        </div>

        <div class="w-full sm:w-auto">
          <%= f.label :featured, "Featured", class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
          <div class="mt-1">
            <%= f.select :featured, 
                options_for_select([
                  ["All", ""],
                  ["Featured", "true"],
                  ["Not Featured", "false"]
                ], params[:featured]), 
                {}, 
                class: "block w-full pl-3 pr-10 py-2 text-base border-gray-300 dark:border-gray-600 focus:outline-none focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:text-white sm:text-sm rounded-md" %>
          </div>
        </div>

        <div class="sm:mt-6">
          <%= f.submit "Filter", class: "w-full inline-flex justify-center items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 sm:w-auto" %>
          <%= link_to "Clear", admin_flash_sales_path, class: "mt-3 w-full inline-flex justify-center items-center px-4 py-2 border border-gray-300 dark:border-gray-600 shadow-sm text-sm font-medium rounded-md text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 sm:mt-0 sm:ml-3 sm:w-auto" %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="bg-white dark:bg-gray-800 shadow overflow-hidden sm:rounded-md">
    <% if @flash_sales.any? %>
      <ul class="divide-y divide-gray-200 dark:divide-gray-700">
        <% @flash_sales.each do |flash_sale| %>
          <li>
            <div class="px-4 py-4 sm:px-6 hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors">
              <div class="flex items-center justify-between">
                <div class="flex items-center">
                  <div class="flex-shrink-0">
                    <div class="h-10 w-10 rounded-full bg-red-100 dark:bg-red-900 flex items-center justify-center">
                      <%= icon "bolt", class: "h-5 w-5 text-red-600 dark:text-red-400" %>
                    </div>
                  </div>
                  <div class="ml-4">
                    <div class="flex items-center">
                      <h3 class="text-sm font-medium text-gray-900 dark:text-white"><%= flash_sale.name %></h3>
                      <% if flash_sale.featured? %>
                        <span class="ml-2 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 dark:bg-yellow-900 text-yellow-800 dark:text-yellow-300">
                          Featured
                        </span>
                      <% end %>
                      <% if flash_sale.active? %>
                        <span class="ml-2 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 dark:bg-green-900 text-green-800 dark:text-green-300">
                          Active
                        </span>
                      <% else %>
                        <span class="ml-2 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 dark:bg-red-900 text-red-800 dark:text-red-300">
                          Inactive
                        </span>
                      <% end %>
                      <% if flash_sale.upcoming? %>
                        <span class="ml-2 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-300">
                          Upcoming
                        </span>
                      <% elsif flash_sale.expired? %>
                        <span class="ml-2 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 dark:bg-gray-800 text-gray-800 dark:text-gray-300">
                          Expired
                        </span>
                      <% elsif flash_sale.active? %>
                        <span class="ml-2 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-100 dark:bg-purple-900 text-purple-800 dark:text-purple-300">
                          In Progress
                        </span>
                      <% end %>
                    </div>
                    <div class="mt-1 flex items-center text-sm text-gray-500 dark:text-gray-400">
                      <span><%= flash_sale.starts_at.strftime("%b %d, %Y %I:%M %p") %> - <%= flash_sale.ends_at.strftime("%b %d, %Y %I:%M %p") %></span>
                      <% if flash_sale.active? && !flash_sale.expired? %>
                        <span class="ml-2 text-green-600 dark:text-green-400">
                          <% if flash_sale.days_remaining && flash_sale.days_remaining > 0 %>
                            <%= flash_sale.days_remaining %> days left
                          <% elsif flash_sale.hours_remaining && flash_sale.hours_remaining > 0 %>
                            <%= flash_sale.hours_remaining %> hours left
                          <% else %>
                            <%= flash_sale.minutes_remaining %> minutes left
                          <% end %>
                        </span>
                      <% elsif flash_sale.upcoming? %>
                        <span class="ml-2 text-blue-600 dark:text-blue-400">
                          <% if flash_sale.days_remaining && flash_sale.days_remaining > 0 %>
                            Starts in <%= flash_sale.days_remaining %> days
                          <% elsif flash_sale.hours_remaining && flash_sale.hours_remaining > 0 %>
                            Starts in <%= flash_sale.hours_remaining %> hours
                          <% else %>
                            Starts in <%= flash_sale.minutes_remaining %> minutes
                          <% end %>
                        </span>
                      <% end %>
                    </div>
                    <div class="mt-1 flex items-center text-xs text-gray-500 dark:text-gray-400">
                      <span><%= flash_sale.flash_sale_items.count %> products</span>
                      <% if flash_sale.banner_text.present? %>
                        <span class="mx-2">&middot;</span>
                        <span>Banner: "<%= flash_sale.banner_text %>"</span>
                      <% end %>
                    </div>
                  </div>
                </div>
                <div class="flex items-center space-x-2">
                  <%= link_to admin_flash_sale_path(flash_sale), class: "text-primary-600 dark:text-primary-400 hover:text-primary-900 dark:hover:text-primary-300" do %>
                    <%= icon "eye", class: "h-5 w-5" %>
                  <% end %>
                  <%= link_to edit_admin_flash_sale_path(flash_sale), class: "text-primary-600 dark:text-primary-400 hover:text-primary-900 dark:hover:text-primary-300" do %>
                    <%= icon "pencil", class: "h-5 w-5" %>
                  <% end %>
                  <%= button_to admin_flash_sale_path(flash_sale), method: :delete, form: { data: { turbo_confirm: "Are you sure you want to delete this flash sale?" } }, class: "text-red-600 dark:text-red-400 hover:text-red-900 dark:hover:text-red-300" do %>
                    <%= icon "trash", class: "h-5 w-5" %>
                  <% end %>
                </div>
              </div>
              <% if flash_sale.active? && !flash_sale.expired? %>
                <div class="mt-2 relative h-2 bg-gray-200 dark:bg-gray-700 rounded-full overflow-hidden">
                  <div class="absolute top-0 left-0 h-full bg-red-600" style="width: <%= flash_sale.progress_percentage %>%;"></div>
                </div>
              <% end %>
            </div>
          </li>
        <% end %>
      </ul>
      <div class="px-4 py-3 bg-gray-50 dark:bg-gray-700 border-t border-gray-200 dark:border-gray-600 sm:px-6">
        <%== pagy_nav(@pagy) %>
      </div>
    <% else %>
      <div class="px-4 py-12 text-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900 dark:text-white">No flash sales found</h3>
        <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Get started by creating a new flash sale.</p>
        <div class="mt-6">
          <%= link_to new_admin_flash_sale_path, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500" do %>
            <%= icon "plus", class: "h-4 w-4 mr-1.5" %>
            New Flash Sale
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
