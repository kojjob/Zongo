<div class="container mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-6">
    <%= link_to admin_order_path(@order), class: "inline-flex items-center text-sm text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300" do %>
      <%= icon "arrow-left", class: "h-4 w-4 mr-1" %>
      Back to Order
    <% end %>
  </div>

  <div class="flex items-center justify-between mb-6">
    <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Edit Order #<%= @order.id %></h1>
  </div>

  <%= form_with(model: [:admin, @order], local: true, class: "space-y-8") do |form| %>
    <% if @order.errors.any? %>
      <div class="bg-red-50 dark:bg-red-900/20 border-l-4 border-red-500 p-4">
        <div class="flex">
          <div class="flex-shrink-0">
            <%= icon "alert-triangle", class: "h-5 w-5 text-red-400" %>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-red-800 dark:text-red-300">
              <%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:
            </h3>
            <div class="mt-2 text-sm text-red-700 dark:text-red-300">
              <ul class="list-disc pl-5 space-y-1">
                <% @order.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <div class="bg-white dark:bg-gray-800 shadow overflow-hidden sm:rounded-lg">
      <div class="px-4 py-5 sm:px-6 border-b border-gray-200 dark:border-gray-700">
        <h3 class="text-lg font-medium leading-6 text-gray-900 dark:text-white">Order Details</h3>
        <p class="mt-1 max-w-2xl text-sm text-gray-500 dark:text-gray-400">
          Update the order information below.
        </p>
      </div>
      <div class="px-4 py-5 sm:p-6 space-y-6">
        <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
          <div class="sm:col-span-3">
            <%= form.label :status, class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
            <div class="mt-1">
              <%= form.select :status, [
                ["Pending", "pending"],
                ["Processing", "processing"],
                ["Shipped", "shipped"],
                ["Delivered", "delivered"],
                ["Cancelled", "cancelled"],
                ["Refunded", "refunded"]
              ], {}, class: "shadow-sm focus:ring-primary-500 focus:border-primary-500 block w-full sm:text-sm border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white rounded-md" %>
            </div>
          </div>

          <div class="sm:col-span-3">
            <%= form.label :tracking_number, class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
            <div class="mt-1">
              <%= form.text_field :tracking_number, class: "shadow-sm focus:ring-primary-500 focus:border-primary-500 block w-full sm:text-sm border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white rounded-md", placeholder: "Tracking number" %>
            </div>
          </div>

          <div class="sm:col-span-6">
            <%= form.label :shipping_address, class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
            <div class="mt-1">
              <%= form.text_area :shipping_address, rows: 4, class: "shadow-sm focus:ring-primary-500 focus:border-primary-500 block w-full sm:text-sm border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white rounded-md", placeholder: "Shipping address" %>
            </div>
          </div>

          <div class="sm:col-span-6">
            <%= form.label :billing_address, class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
            <div class="mt-1">
              <%= form.text_area :billing_address, rows: 4, class: "shadow-sm focus:ring-primary-500 focus:border-primary-500 block w-full sm:text-sm border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white rounded-md", placeholder: "Billing address (leave blank if same as shipping)" %>
            </div>
          </div>

          <div class="sm:col-span-6">
            <%= form.label :notes, class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
            <div class="mt-1">
              <%= form.text_area :notes, rows: 3, class: "shadow-sm focus:ring-primary-500 focus:border-primary-500 block w-full sm:text-sm border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white rounded-md", placeholder: "Additional notes" %>
            </div>
          </div>
        </div>
      </div>
      <div class="px-4 py-3 bg-gray-50 dark:bg-gray-700 text-right sm:px-6 border-t border-gray-200 dark:border-gray-700">
        <%= link_to "Cancel", admin_order_path(@order), class: "inline-flex justify-center py-2 px-4 border border-gray-300 dark:border-gray-600 shadow-sm text-sm font-medium rounded-md text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-800 hover:bg-gray-50 dark:hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500" %>
        <%= form.submit "Update Order", class: "ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500" %>
      </div>
    </div>
  <% end %>
</div>
