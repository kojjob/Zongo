<div class="bg-white dark:bg-gray-900">
  <!-- Hero Section -->
  <div class="relative overflow-hidden">
    <div class="absolute inset-0 z-0">
      <div class="absolute inset-0 bg-gradient-to-r from-primary-600 to-primary-800 opacity-90"></div>
      <img src="https://images.unsplash.com/photo-1607082348824-0a96f2a4b9da?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80" 
           alt="Shop Hero" class="w-full h-full object-cover">
    </div>
    
    <div class="relative z-10 px-4 py-24 sm:px-6 lg:px-8 max-w-7xl mx-auto">
      <div class="text-center">
        <h1 class="text-4xl font-extrabold tracking-tight text-white sm:text-5xl lg:text-6xl">
          Discover Our Shop
        </h1>
        <p class="mt-6 max-w-2xl mx-auto text-xl text-white">
          Find everything you need, from electronics to fashion, all in one place.
        </p>
        <div class="mt-10 max-w-xl mx-auto">
          <form action="<%= shop_search_path %>" method="get" class="sm:flex">
            <div class="min-w-0 flex-1">
              <label for="q" class="sr-only">Search</label>
              <input id="q" name="q" type="text" placeholder="Search for products..." 
                     class="block w-full px-4 py-3 rounded-md border-0 text-base text-gray-900 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-primary-600 focus:border-primary-600">
            </div>
            <div class="mt-3 sm:mt-0 sm:ml-3">
              <button type="submit" 
                      class="block w-full py-3 px-4 rounded-md shadow bg-primary-500 text-white font-medium hover:bg-primary-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-600 focus:ring-offset-white">
                Search
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- Featured Categories -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <div class="text-center">
      <h2 class="text-3xl font-extrabold tracking-tight text-gray-900 dark:text-white sm:text-4xl">
        Shop by Category
      </h2>
      <p class="mt-4 max-w-2xl mx-auto text-xl text-gray-500 dark:text-gray-400">
        Browse our wide selection of products across various categories.
      </p>
    </div>

    <div class="mt-12 grid gap-6 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
      <% @featured_categories.each do |category| %>
        <a href="<%= shop_category_path(category.slug) %>" class="group">
          <div class="relative overflow-hidden rounded-2xl shadow-lg transition transform hover:scale-105">
            <div class="absolute inset-0 bg-gradient-to-br <%= category.color_code.present? ? "from-#{category.color_code.sub('#', '')}-500 to-#{category.color_code.sub('#', '')}-700" : "from-primary-500 to-primary-700" %> opacity-90"></div>
            <div class="relative p-8">
              <div class="flex items-center justify-center w-16 h-16 rounded-xl bg-white bg-opacity-20 text-white mb-4">
                <% if category.icon.present? %>
                  <%= render partial: "shared/icons/#{category.icon}", locals: { classes: "h-8 w-8" } %>
                <% else %>
                  <%= render partial: "shared/icons/shopping-bag", locals: { classes: "h-8 w-8" } %>
                <% end %>
              </div>
              <h3 class="text-xl font-bold text-white"><%= category.name %></h3>
              <p class="mt-2 text-sm text-white text-opacity-80"><%= category.description %></p>
            </div>
          </div>
        </a>
      <% end %>
    </div>

    <div class="mt-12 text-center">
      <a href="<%= shop_path %>" class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500">
        View All Categories
        <svg xmlns="http://www.w3.org/2000/svg" class="ml-2 -mr-1 h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
      </a>
    </div>
  </div>

  <!-- Featured Products -->
  <div class="bg-gray-50 dark:bg-gray-800">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
      <div class="text-center">
        <h2 class="text-3xl font-extrabold tracking-tight text-gray-900 dark:text-white sm:text-4xl">
          Featured Products
        </h2>
        <p class="mt-4 max-w-2xl mx-auto text-xl text-gray-500 dark:text-gray-400">
          Discover our handpicked selection of top products.
        </p>
      </div>

      <div class="mt-12 grid gap-8 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
        <% @featured_products.each do |product| %>
          <div class="group relative bg-white dark:bg-gray-900 rounded-2xl shadow-md overflow-hidden">
            <div class="relative h-80 w-full overflow-hidden">
              <% if product.images.attached? %>
                <%= image_tag product.images.first, class: "w-full h-full object-center object-cover group-hover:opacity-75 transition-opacity" %>
              <% else %>
                <div class="w-full h-full flex items-center justify-center bg-gray-200 dark:bg-gray-700">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 text-gray-400 dark:text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                  </svg>
                </div>
              <% end %>
              
              <% if product.on_sale? %>
                <div class="absolute top-0 right-0 m-4 bg-red-500 text-white text-xs font-bold px-2 py-1 rounded-md">
                  <%= product.discount_percentage %>% OFF
                </div>
              <% end %>
            </div>
            
            <div class="p-6">
              <h3 class="text-lg font-medium text-gray-900 dark:text-white">
                <a href="<%= product_path(product) %>">
                  <%= product.name %>
                </a>
              </h3>
              
              <div class="mt-2 flex items-center">
                <% (1..5).each do |i| %>
                  <% if i <= product.average_rating.round %>
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                    </svg>
                  <% else %>
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-300 dark:text-gray-600" viewBox="0 0 20 20" fill="currentColor">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                    </svg>
                  <% end %>
                <% end %>
                <span class="ml-2 text-sm text-gray-500 dark:text-gray-400">
                  <%= product.reviews.count %> reviews
                </span>
              </div>
              
              <div class="mt-4 flex justify-between items-center">
                <div>
                  <% if product.on_sale? %>
                    <p class="text-sm text-gray-500 dark:text-gray-400 line-through">
                      GHS <%= product.original_price %>
                    </p>
                  <% end %>
                  <p class="text-xl font-bold text-gray-900 dark:text-white">
                    <%= product.formatted_price %>
                  </p>
                </div>
                
                <%= button_to add_to_cart_path(product_id: product.id), method: :post, class: "inline-flex items-center px-3 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500" do %>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M3 1a1 1 0 000 2h1.22l.305 1.222a.997.997 0 00.01.042l1.358 5.43-.893.892C3.74 11.846 4.632 14 6.414 14H15a1 1 0 000-2H6.414l1-1H14a1 1 0 00.894-.553l3-6A1 1 0 0017 3H6.28l-.31-1.243A1 1 0 005 1H3zM16 16.5a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0zM6.5 18a1.5 1.5 0 100-3 1.5 1.5 0 000 3z" />
                  </svg>
                  Add to Cart
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <div class="mt-12 text-center">
        <a href="<%= shop_path %>" class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500">
          View All Products
          <svg xmlns="http://www.w3.org/2000/svg" class="ml-2 -mr-1 h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
        </a>
      </div>
    </div>
  </div>

  <!-- New Arrivals -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <div class="text-center">
      <h2 class="text-3xl font-extrabold tracking-tight text-gray-900 dark:text-white sm:text-4xl">
        New Arrivals
      </h2>
      <p class="mt-4 max-w-2xl mx-auto text-xl text-gray-500 dark:text-gray-400">
        Check out our latest products added to the store.
      </p>
    </div>

    <div class="mt-12 grid gap-8 grid-cols-1 sm:grid-cols-2 lg:grid-cols-4">
      <% @new_arrivals.each do |product| %>
        <div class="group relative">
          <div class="relative w-full h-80 bg-white dark:bg-gray-800 rounded-lg overflow-hidden shadow-md">
            <% if product.images.attached? %>
              <%= image_tag product.images.first, class: "w-full h-full object-center object-cover group-hover:opacity-75 transition-opacity" %>
            <% else %>
              <div class="w-full h-full flex items-center justify-center bg-gray-200 dark:bg-gray-700">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 text-gray-400 dark:text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
              </div>
            <% end %>
            
            <div class="absolute top-0 left-0 m-4 bg-primary-500 text-white text-xs font-bold px-2 py-1 rounded-md">
              NEW
            </div>
          </div>
          
          <div class="mt-4">
            <h3 class="text-lg font-medium text-gray-900 dark:text-white">
              <a href="<%= product_path(product) %>">
                <%= product.name %>
              </a>
            </h3>
            <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
              <%= product.shop_category.name %>
            </p>
            <p class="mt-1 text-lg font-bold text-gray-900 dark:text-white">
              <%= product.formatted_price %>
            </p>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Best Sellers -->
  <div class="bg-gray-50 dark:bg-gray-800">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
      <div class="text-center">
        <h2 class="text-3xl font-extrabold tracking-tight text-gray-900 dark:text-white sm:text-4xl">
          Best Sellers
        </h2>
        <p class="mt-4 max-w-2xl mx-auto text-xl text-gray-500 dark:text-gray-400">
          Our most popular products based on sales.
        </p>
      </div>

      <div class="mt-12 grid gap-8 grid-cols-1 sm:grid-cols-2 lg:grid-cols-4">
        <% @best_sellers.each do |product| %>
          <div class="group relative">
            <div class="relative w-full h-80 bg-white dark:bg-gray-800 rounded-lg overflow-hidden shadow-md">
              <% if product.images.attached? %>
                <%= image_tag product.images.first, class: "w-full h-full object-center object-cover group-hover:opacity-75 transition-opacity" %>
              <% else %>
                <div class="w-full h-full flex items-center justify-center bg-gray-200 dark:bg-gray-700">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 text-gray-400 dark:text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                  </svg>
                </div>
              <% end %>
              
              <div class="absolute top-0 left-0 m-4 bg-yellow-500 text-white text-xs font-bold px-2 py-1 rounded-md">
                BEST SELLER
              </div>
            </div>
            
            <div class="mt-4">
              <h3 class="text-lg font-medium text-gray-900 dark:text-white">
                <a href="<%= product_path(product) %>">
                  <%= product.name %>
                </a>
              </h3>
              <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
                <%= product.shop_category.name %>
              </p>
              <p class="mt-1 text-lg font-bold text-gray-900 dark:text-white">
                <%= product.formatted_price %>
              </p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Call to Action -->
  <div class="relative bg-primary-700 py-16">
    <div class="absolute inset-x-0 bottom-0">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320" class="text-primary-800 w-full h-32">
        <path fill="currentColor" fill-opacity="1" d="M0,288L48,272C96,256,192,224,288,197.3C384,171,480,149,576,165.3C672,181,768,235,864,250.7C960,267,1056,245,1152,224C1248,203,1344,181,1392,170.7L1440,160L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"></path>
      </svg>
    </div>
    
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
      <div class="text-center">
        <h2 class="text-3xl font-extrabold tracking-tight text-white sm:text-4xl">
          Ready to Shop?
        </h2>
        <p class="mt-4 max-w-2xl mx-auto text-xl text-primary-100">
          Browse our full catalog and find exactly what you're looking for.
        </p>
        
        <div class="mt-8 flex justify-center">
          <div class="inline-flex rounded-md shadow">
            <a href="<%= shop_path %>" class="inline-flex items-center justify-center px-5 py-3 border border-transparent text-base font-medium rounded-md text-primary-700 bg-white hover:bg-primary-50">
              Browse All Products
            </a>
          </div>
          <div class="ml-3 inline-flex">
            <a href="<%= cart_path %>" class="inline-flex items-center justify-center px-5 py-3 border border-transparent text-base font-medium rounded-md text-white bg-primary-800 hover:bg-primary-900">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
                <path d="M3 1a1 1 0 000 2h1.22l.305 1.222a.997.997 0 00.01.042l1.358 5.43-.893.892C3.74 11.846 4.632 14 6.414 14H15a1 1 0 000-2H6.414l1-1H14a1 1 0 00.894-.553l3-6A1 1 0 0017 3H6.28l-.31-1.243A1 1 0 005 1H3zM16 16.5a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0zM6.5 18a1.5 1.5 0 100-3 1.5 1.5 0 000 3z" />
              </svg>
              View Cart
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
