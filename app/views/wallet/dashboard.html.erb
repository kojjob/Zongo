                # Determine transaction icon and color based on type
                tx_type = transaction.transaction_type.to_s.downcase
                icon_name = transaction_type_icon(tx_type)

                # Is this money in or out for visual distinction?
                is_money_in = (tx_type == 'deposit' || (transaction.destination_wallet_id == @wallet&.id && tx_type == 'transfer'))

                # Set gradient colors based on transaction type for visual recognition
                if is_money_in
                  bg_gradient = "bg-gradient-to-r from-emerald-500 to-green-600"
                  amount_color = "text-green-600 dark:text-green-400"
                else
                  bg_gradient = "bg-gradient-to-r from-rose-500 to-red-600"
                  amount_color = "text-red-600 dark:text-red-400"
