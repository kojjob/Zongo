<%= content_for :title, "My Wallet" %>
<%# Enhanced Wallet Dashboard with visual elements for both literate and semi-literate users %>
<div class="bg-gray-50 dark:bg-gray-900 min-h-screen">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4 sm:py-6" data-controller="wallet-dashboard">

    <!-- Balance Display Card - Balanced design with subtle colors -->
    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md overflow-hidden mb-6 border border-gray-100 dark:border-gray-700 relative">
      <!-- Subtle background pattern -->
      <div class="absolute right-0 top-0 w-64 h-64 bg-primary-50/50 dark:bg-primary-900/5 rounded-full -mr-32 -mt-32 opacity-70"></div>
      <div class="absolute left-0 bottom-0 w-48 h-48 bg-primary-50/30 dark:bg-primary-900/5 rounded-full -ml-24 -mb-24 opacity-50"></div>

      <!-- Main balance content -->
      <div class="p-5 sm:p-6 relative">
        <!-- Welcome header with user avatar -->
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-5">
          <div class="flex items-center mb-4 sm:mb-0">
            <div class="w-12 h-12 rounded-full bg-white dark:bg-gray-700 flex items-center justify-center mr-4 border border-primary-200 dark:border-primary-700 shadow-sm overflow-hidden">
              <% if current_user.respond_to?(:avatar) && current_user.avatar.present? %>
                <%= image_tag current_user.avatar, class: "w-full h-full object-cover" %>
              <% else %>
                <%= icon "user", class: "w-6 h-6 text-primary-600 dark:text-primary-400" %>
              <% end %>
            </div>
            <div>
              <h1 class="text-xl sm:text-2xl font-bold text-gray-900 dark:text-white">
                Hello, <%= current_user.first_name || 'Friend' %>!
              </h1>
              <p class="text-gray-500 dark:text-gray-400 text-sm mt-1 flex items-center">
                <%= icon "calendar", class: "w-4 h-4 mr-2" %>
                <%= Time.now.strftime("%A, %d %B %Y") %>
              </p>
            </div>
          </div>

          <!-- Quick action buttons -->
          <div class="flex flex-wrap gap-2">
            <a href="<%= receive_money_path %>" class="btn btn-outline-primary flex items-center">
              <%= icon "arrow-down-circle", class: "w-4 h-4 mr-2" %>
              <span>Receive</span>
            </a>
            <a href="<%= new_transfer_path %>" class="btn btn-primary flex items-center">
              <%= icon "arrow-up-circle", class: "w-4 h-4 mr-2" %>
              <span>Send</span>
            </a>
          </div>
        </div>

        <!-- Balance display with visual toggle -->
        <div class="mt-6 p-5 bg-gradient-to-br from-primary-50/80 to-primary-100/50 dark:from-primary-900/10 dark:to-primary-800/5 rounded-lg border border-primary-100 dark:border-primary-800/20">
          <div class="flex items-center justify-between mb-3">
            <div class="flex items-center">
              <div class="w-10 h-10 rounded-full bg-white dark:bg-gray-700 flex items-center justify-center mr-3 shadow-sm text-primary-600 dark:text-primary-400 border border-primary-200 dark:border-primary-800/30">
                <%= icon "wallet", class: "w-5 h-5" %>
              </div>
              <span class="font-bold text-gray-900 dark:text-white">My Balance</span>
            </div>
            <!-- Balance visibility toggle button -->
            <button data-action="wallet-dashboard#toggleBalance" class="text-gray-500 dark:text-gray-400 hover:bg-white/80 dark:hover:bg-gray-700/80 rounded-full p-2 transition-all duration-200">
              <span data-wallet-dashboard-target="eyeIcon">
                <%= icon "eye", class: "w-5 h-5" %>
              </span>
              <span data-wallet-dashboard-target="eyeOffIcon" class="hidden">
                <%= icon "eye-off", class: "w-5 h-5" %>
              </span>
            </button>
          </div>

          <!-- Balance display -->
          <div class="mb-2">
            <div data-wallet-dashboard-target="balanceDisplay" class="flex items-baseline">
              <span class="text-3xl sm:text-4xl font-bold text-gray-900 dark:text-white tracking-tight">
                <%= @wallet.currency_symbol %><%= number_with_delimiter(@wallet.balance, delimiter: ',') %>
              </span>
              <span class="text-lg font-medium text-gray-500 dark:text-gray-400 ml-2"><%= @wallet.currency %></span>
            </div>
            <div data-wallet-dashboard-target="maskedBalance" class="hidden">
              <span class="text-3xl sm:text-4xl font-bold text-gray-900 dark:text-white tracking-tight">
                <%= @wallet.currency_symbol %> •••••
              </span>
            </div>
          </div>

          <!-- Account ID with visual indicator -->
          <div class="flex items-center mt-4 bg-white dark:bg-gray-800 px-4 py-2 rounded-lg border border-primary-100 dark:border-primary-800/20 shadow-sm">
            <div class="w-6 h-6 rounded-full bg-primary-50 dark:bg-primary-900/20 flex items-center justify-center mr-2 text-primary-600 dark:text-primary-400">
              <%= icon "hash", class: "w-3 h-3" %>
            </div>
            <p class="text-sm text-gray-700 dark:text-gray-300 flex-1">Account ID: <span class="font-medium"><%= @wallet.wallet_id %></span></p>
            <button data-action="wallet-dashboard#copyAccountId" class="ml-2 text-primary-500 dark:text-primary-400 hover:bg-primary-50 dark:hover:bg-primary-900/20 p-1.5 rounded-full transition-all duration-200" title="Copy to clipboard">
              <%= icon "clipboard-copy", class: "w-4 h-4" %>
            </button>
          </div>
        </div>

        <!-- Action buttons footer -->
        <div class="flex flex-wrap gap-2 mt-5">
          <a href="<%= transactions_path %>" class="btn btn-outline-secondary flex items-center flex-1 justify-center">
            <%= icon "clock-rewind", class: "w-4 h-4 mr-2" %>
            <span>Transaction History</span>
          </a>
          <a href="<%= payment_methods_path %>" class="btn btn-outline-secondary flex items-center flex-1 justify-center">
            <%= icon "credit-card", class: "w-4 h-4 mr-2" %>
            <span>Payment Methods</span>
          </a>
        </div>
      </div>
    </div>

    <!-- Quick Actions - Balanced design with subtle colors -->
    <div class="mb-6">
      <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm p-5 border border-gray-100 dark:border-gray-700">
        <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4 flex items-center">
          <div class="w-8 h-8 rounded-full bg-primary-100 dark:bg-primary-900/30 flex items-center justify-center mr-2">
            <%= icon "grid", class: "w-4 h-4 text-primary-600 dark:text-primary-400" %>
          </div>
          Quick Actions
        </h2>

        <div class="grid grid-cols-4 sm:grid-cols-8 gap-3">
        <!-- Send Money -->
        <a href="<%= new_transfer_path %>" class="flex flex-col items-center justify-center p-3 bg-rose-50/70 dark:bg-rose-900/10 rounded-lg border border-rose-100 dark:border-rose-800/20 hover:border-rose-200 dark:hover:border-rose-700/30 hover:shadow-sm transition-all group">
          <div class="w-10 h-10 sm:w-12 sm:h-12 rounded-full bg-white dark:bg-gray-800 flex items-center justify-center text-rose-500 dark:text-rose-400 mb-2 shadow-sm group-hover:shadow">
            <%= icon "arrow-up-circle", class: "w-5 h-5 sm:w-6 sm:h-6" %>
          </div>
          <span class="text-xs font-medium text-gray-900 dark:text-white text-center">Send</span>
        </a>

        <!-- Receive Money -->
        <a href="<%= receive_money_path %>" class="flex flex-col items-center justify-center p-3 bg-emerald-50/70 dark:bg-emerald-900/10 rounded-lg border border-emerald-100 dark:border-emerald-800/20 hover:border-emerald-200 dark:hover:border-emerald-700/30 hover:shadow-sm transition-all group">
          <div class="w-10 h-10 sm:w-12 sm:h-12 rounded-full bg-white dark:bg-gray-800 flex items-center justify-center text-emerald-500 dark:text-emerald-400 mb-2 shadow-sm group-hover:shadow">
            <%= icon "arrow-down-circle", class: "w-5 h-5 sm:w-6 sm:h-6" %>
          </div>
          <span class="text-xs font-medium text-gray-900 dark:text-white text-center">Receive</span>
        </a>

        <!-- Airtime -->
        <a href="<%= pay_bill_path(type: 'airtime') %>" class="flex flex-col items-center justify-center p-3 bg-blue-50/70 dark:bg-blue-900/10 rounded-lg border border-blue-100 dark:border-blue-800/20 hover:border-blue-200 dark:hover:border-blue-700/30 hover:shadow-sm transition-all group">
          <div class="w-10 h-10 sm:w-12 sm:h-12 rounded-full bg-white dark:bg-gray-800 flex items-center justify-center text-blue-500 dark:text-blue-400 mb-2 shadow-sm group-hover:shadow">
            <%= icon "phone", class: "w-5 h-5 sm:w-6 sm:h-6" %>
          </div>
          <span class="text-xs font-medium text-gray-900 dark:text-white text-center">Airtime</span>
        </a>

        <!-- Pay Bills -->
        <a href="<%= wallet_bills_path %>" class="flex flex-col items-center justify-center p-3 bg-amber-50/70 dark:bg-amber-900/10 rounded-lg border border-amber-100 dark:border-amber-800/20 hover:border-amber-200 dark:hover:border-amber-700/30 hover:shadow-sm transition-all group">
          <div class="w-10 h-10 sm:w-12 sm:h-12 rounded-full bg-white dark:bg-gray-800 flex items-center justify-center text-amber-500 dark:text-amber-400 mb-2 shadow-sm group-hover:shadow">
            <%= icon "receipt", class: "w-5 h-5 sm:w-6 sm:h-6" %>
          </div>
          <span class="text-xs font-medium text-gray-900 dark:text-white text-center">Bills</span>
        </a>

        <!-- Scan QR -->
        <a href="#" class="flex flex-col items-center justify-center p-3 bg-purple-50/70 dark:bg-purple-900/10 rounded-lg border border-purple-100 dark:border-purple-800/20 hover:border-purple-200 dark:hover:border-purple-700/30 hover:shadow-sm transition-all group">
          <div class="w-10 h-10 sm:w-12 sm:h-12 rounded-full bg-white dark:bg-gray-800 flex items-center justify-center text-purple-500 dark:text-purple-400 mb-2 shadow-sm group-hover:shadow">
            <%= icon "scan", class: "w-5 h-5 sm:w-6 sm:h-6" %>
          </div>
          <span class="text-xs font-medium text-gray-900 dark:text-white text-center">Scan</span>
        </a>

        <!-- Contacts -->
        <a href="<%= beneficiaries_path %>" class="flex flex-col items-center justify-center p-3 bg-cyan-50/70 dark:bg-cyan-900/10 rounded-lg border border-cyan-100 dark:border-cyan-800/20 hover:border-cyan-200 dark:hover:border-cyan-700/30 hover:shadow-sm transition-all group">
          <div class="w-10 h-10 sm:w-12 sm:h-12 rounded-full bg-white dark:bg-gray-800 flex items-center justify-center text-cyan-500 dark:text-cyan-400 mb-2 shadow-sm group-hover:shadow">
            <%= icon "users", class: "w-5 h-5 sm:w-6 sm:h-6" %>
          </div>
          <span class="text-xs font-medium text-gray-900 dark:text-white text-center">Contacts</span>
        </a>

        <!-- History -->
        <a href="<%= transactions_path %>" class="flex flex-col items-center justify-center p-3 bg-gray-50/70 dark:bg-gray-700/20 rounded-lg border border-gray-200 dark:border-gray-700/30 hover:border-gray-300 dark:hover:border-gray-600/50 hover:shadow-sm transition-all group">
          <div class="w-10 h-10 sm:w-12 sm:h-12 rounded-full bg-white dark:bg-gray-800 flex items-center justify-center text-gray-500 dark:text-gray-400 mb-2 shadow-sm group-hover:shadow">
            <%= icon "history", class: "w-5 h-5 sm:w-6 sm:h-6" %>
          </div>
          <span class="text-xs font-medium text-gray-900 dark:text-white text-center">History</span>
        </a>

        <!-- More -->
        <a href="#" data-action="wallet-dashboard#toggleMoreActions" class="flex flex-col items-center justify-center p-3 bg-pink-50/70 dark:bg-pink-900/10 rounded-lg border border-pink-100 dark:border-pink-800/20 hover:border-pink-200 dark:hover:border-pink-700/30 hover:shadow-sm transition-all group">
          <div class="w-10 h-10 sm:w-12 sm:h-12 rounded-full bg-white dark:bg-gray-800 flex items-center justify-center text-pink-500 dark:text-pink-400 mb-2 shadow-sm group-hover:shadow">
            <%= icon "grid", class: "w-5 h-5 sm:w-6 sm:h-6" %>
          </div>
          <span class="text-xs font-medium text-gray-900 dark:text-white text-center">More</span>
        </a>
      </div>

      <!-- Additional Quick Actions (Hidden by default) -->
      <div data-wallet-dashboard-target="moreActions" class="hidden mt-4 grid grid-cols-4 sm:grid-cols-8 gap-3">
        <!-- Bank Transfer -->
        <a href="#" class="flex flex-col items-center justify-center p-3 bg-indigo-50/70 dark:bg-indigo-900/10 rounded-lg border border-indigo-100 dark:border-indigo-800/20 hover:border-indigo-200 dark:hover:border-indigo-700/30 hover:shadow-sm transition-all group">
          <div class="w-10 h-10 sm:w-12 sm:h-12 rounded-full bg-white dark:bg-gray-800 flex items-center justify-center text-indigo-500 dark:text-indigo-400 mb-2 shadow-sm group-hover:shadow">
            <%= icon "building-bank", class: "w-5 h-5 sm:w-6 sm:h-6" %>
          </div>
          <span class="text-xs font-medium text-gray-900 dark:text-white text-center">Bank</span>
        </a>

        <!-- Savings -->
        <a href="#" class="flex flex-col items-center justify-center p-3 bg-green-50/70 dark:bg-green-900/10 rounded-lg border border-green-100 dark:border-green-800/20 hover:border-green-200 dark:hover:border-green-700/30 hover:shadow-sm transition-all group">
          <div class="w-10 h-10 sm:w-12 sm:h-12 rounded-full bg-white dark:bg-gray-800 flex items-center justify-center text-green-500 dark:text-green-400 mb-2 shadow-sm group-hover:shadow">
            <%= icon "piggy-bank", class: "w-5 h-5 sm:w-6 sm:h-6" %>
          </div>
          <span class="text-xs font-medium text-gray-900 dark:text-white text-center">Savings</span>
        </a>

        <!-- Loans -->
        <a href="#" class="flex flex-col items-center justify-center p-3 bg-yellow-50/70 dark:bg-yellow-900/10 rounded-lg border border-yellow-100 dark:border-yellow-800/20 hover:border-yellow-200 dark:hover:border-yellow-700/30 hover:shadow-sm transition-all group">
          <div class="w-10 h-10 sm:w-12 sm:h-12 rounded-full bg-white dark:bg-gray-800 flex items-center justify-center text-yellow-500 dark:text-yellow-400 mb-2 shadow-sm group-hover:shadow">
            <%= icon "landmark", class: "w-5 h-5 sm:w-6 sm:h-6" %>
          </div>
          <span class="text-xs font-medium text-gray-900 dark:text-white text-center">Loans</span>
        </a>

        <!-- Gift Cards -->
        <a href="#" class="flex flex-col items-center justify-center p-3 bg-violet-50/70 dark:bg-violet-900/10 rounded-lg border border-violet-100 dark:border-violet-800/20 hover:border-violet-200 dark:hover:border-violet-700/30 hover:shadow-sm transition-all group">
          <div class="w-10 h-10 sm:w-12 sm:h-12 rounded-full bg-white dark:bg-gray-800 flex items-center justify-center text-violet-500 dark:text-violet-400 mb-2 shadow-sm group-hover:shadow">
            <%= icon "gift", class: "w-5 h-5 sm:w-6 sm:h-6" %>
          </div>
          <span class="text-xs font-medium text-gray-900 dark:text-white text-center">Gift Cards</span>
        </a>
      </div>
    </div>

    <!-- Financial Summary Cards - Balanced design with subtle colors -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">
      <!-- Money In Card -->
      <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm p-5 border border-gray-100 dark:border-gray-700 relative overflow-hidden">
        <!-- Subtle background pattern -->
        <div class="absolute right-0 top-0 w-32 h-32 bg-emerald-50 dark:bg-emerald-900/10 rounded-full -mr-10 -mt-10 opacity-70"></div>
        <div class="absolute right-0 bottom-0 w-16 h-16 bg-emerald-50 dark:bg-emerald-900/10 rounded-full -mr-4 -mb-4 opacity-50"></div>

        <div class="relative">
          <div class="flex items-center mb-4">
            <div class="w-10 h-10 rounded-full bg-white dark:bg-gray-700 shadow-sm flex items-center justify-center mr-3 text-emerald-500 dark:text-emerald-400 border border-emerald-100 dark:border-emerald-800/30">
              <%= icon "arrow-down-circle", class: "w-5 h-5" %>
            </div>
            <div>
              <h2 class="text-gray-900 dark:text-white font-semibold">Money Coming In</h2>
              <p class="text-gray-500 dark:text-gray-400 text-sm">Your deposits this month</p>
            </div>
          </div>

          <!-- Amount display -->
          <div class="mt-3 mb-4">
            <h3 class="text-2xl sm:text-3xl font-bold text-gray-900 dark:text-white flex items-center">
              <span class="mr-1"><%= @wallet.currency_symbol %></span>
              <%= number_with_delimiter(@savings_total || 0, delimiter: ',') %>
            </h3>
          </div>

          <!-- Change indicator and link -->
          <div class="flex justify-between items-center">
            <% if @savings_change.present? && @savings_change != 0 %>
              <div class="flex items-center px-3 py-1.5 rounded-lg bg-emerald-50/80 dark:bg-emerald-900/20 text-gray-700 dark:text-gray-300 text-sm border border-emerald-100 dark:border-emerald-800/20">
                <%= icon @savings_change > 0 ? "trending-up" : "trending-down", class: "w-4 h-4 mr-2 #{@savings_change > 0 ? 'text-emerald-500' : 'text-red-500'}" %>
                <span><%= number_to_percentage(@savings_change.abs, precision: 1) %> <%= @savings_change > 0 ? 'increase' : 'decrease' %></span>
              </div>
            <% end %>

            <a href="<%= transactions_path(transaction_type: 'deposit') %>" class="btn btn-sm btn-outline-secondary flex items-center">
              <span class="mr-1">Details</span>
              <%= icon "arrow-right", class: "w-4 h-4" %>
            </a>
          </div>
        </div>
      </div>

      <!-- Money Out Card -->
      <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm p-5 border border-gray-100 dark:border-gray-700 relative overflow-hidden">
        <!-- Subtle background pattern -->
        <div class="absolute right-0 top-0 w-32 h-32 bg-rose-50 dark:bg-rose-900/10 rounded-full -mr-10 -mt-10 opacity-70"></div>
        <div class="absolute right-0 bottom-0 w-16 h-16 bg-rose-50 dark:bg-rose-900/10 rounded-full -mr-4 -mb-4 opacity-50"></div>

        <div class="relative">
          <div class="flex items-center mb-4">
            <div class="w-10 h-10 rounded-full bg-white dark:bg-gray-700 shadow-sm flex items-center justify-center mr-3 text-rose-500 dark:text-rose-400 border border-rose-100 dark:border-rose-800/30">
              <%= icon "arrow-up-circle", class: "w-5 h-5" %>
            </div>
            <div>
              <h2 class="text-gray-900 dark:text-white font-semibold">Money Going Out</h2>
              <p class="text-gray-500 dark:text-gray-400 text-sm">Your spending this month</p>
            </div>
          </div>

          <!-- Amount display -->
          <div class="mt-3 mb-4">
            <h3 class="text-2xl sm:text-3xl font-bold text-gray-900 dark:text-white flex items-center">
              <span class="mr-1"><%= @wallet.currency_symbol %></span>
              <%= number_with_delimiter(@spending_total || 0, delimiter: ',') %>
            </h3>
          </div>

          <!-- Change indicator and link -->
          <div class="flex justify-between items-center">
            <% if @spending_change.present? && @spending_change != 0 %>
              <div class="flex items-center px-3 py-1.5 rounded-lg bg-rose-50/80 dark:bg-rose-900/20 text-gray-700 dark:text-gray-300 text-sm border border-rose-100 dark:border-rose-800/20">
                <%= icon @spending_change < 0 ? "trending-down" : "trending-up", class: "w-4 h-4 mr-2 #{@spending_change < 0 ? 'text-emerald-500' : 'text-rose-500'}" %>
                <span><%= number_to_percentage(@spending_change.abs, precision: 1) %> <%= @spending_change < 0 ? 'decrease' : 'increase' %></span>
              </div>
            <% end %>

            <a href="<%= transactions_path(transaction_type: 'withdrawal') %>" class="btn btn-sm btn-outline-secondary flex items-center">
              <span class="mr-1">Details</span>
              <%= icon "arrow-right", class: "w-4 h-4" %>
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- Bill Payments Section - Balanced design with subtle colors -->
    <div class="mb-6 bg-white dark:bg-gray-800 rounded-xl shadow-sm p-5 border border-gray-100 dark:border-gray-700 relative overflow-hidden">
      <!-- Subtle background pattern -->
      <div class="absolute left-0 top-0 w-40 h-40 bg-amber-50/50 dark:bg-amber-900/5 rounded-full -ml-20 -mt-20 opacity-70"></div>

      <div class="relative">
        <div class="flex items-center justify-between mb-4">
          <div class="flex items-center">
            <div class="w-8 h-8 rounded-full bg-white dark:bg-gray-700 shadow-sm flex items-center justify-center mr-2 text-amber-500 dark:text-amber-400 border border-amber-100 dark:border-amber-800/30">
              <%= icon "receipt", class: "w-4 h-4" %>
            </div>
            <h2 class="text-lg font-semibold text-gray-900 dark:text-white">Pay Bills</h2>
          </div>
          <a href="<%= wallet_bills_path %>" class="text-amber-600 dark:text-amber-400 text-sm hover:underline flex items-center">
            <span>View All</span>
            <%= icon "chevron-right", class: "w-4 h-4 ml-1" %>
          </a>
        </div>

        <div class="grid grid-cols-3 sm:grid-cols-6 gap-3">
          <!-- Electricity Bill -->
          <a href="<%= pay_bill_path(type: 'electricity') %>" class="flex flex-col items-center p-3 bg-amber-50/70 dark:bg-amber-900/10 rounded-lg border border-amber-100 dark:border-amber-800/20 hover:border-amber-200 dark:hover:border-amber-700/30 hover:shadow-sm transition-all group">
            <div class="w-10 h-10 sm:w-12 sm:h-12 rounded-full bg-white dark:bg-gray-800 flex items-center justify-center text-yellow-500 dark:text-yellow-400 mb-2 shadow-sm group-hover:shadow border border-yellow-100 dark:border-yellow-800/30">
              <%= icon "zap", class: "w-5 h-5 sm:w-6 sm:h-6" %>
            </div>
            <span class="text-xs font-medium text-gray-900 dark:text-white text-center">Electricity</span>
          </a>

          <!-- Water Bill -->
          <a href="<%= pay_bill_path(type: 'water') %>" class="flex flex-col items-center p-3 bg-blue-50/70 dark:bg-blue-900/10 rounded-lg border border-blue-100 dark:border-blue-800/20 hover:border-blue-200 dark:hover:border-blue-700/30 hover:shadow-sm transition-all group">
            <div class="w-10 h-10 sm:w-12 sm:h-12 rounded-full bg-white dark:bg-gray-800 flex items-center justify-center text-blue-500 dark:text-blue-400 mb-2 shadow-sm group-hover:shadow border border-blue-100 dark:border-blue-800/30">
              <%= icon "droplets", class: "w-5 h-5 sm:w-6 sm:h-6" %>
            </div>
            <span class="text-xs font-medium text-gray-900 dark:text-white text-center">Water</span>
          </a>

          <!-- Internet/Data -->
          <a href="<%= pay_bill_path(type: 'internet') %>" class="flex flex-col items-center p-3 bg-indigo-50/70 dark:bg-indigo-900/10 rounded-lg border border-indigo-100 dark:border-indigo-800/20 hover:border-indigo-200 dark:hover:border-indigo-700/30 hover:shadow-sm transition-all group">
            <div class="w-10 h-10 sm:w-12 sm:h-12 rounded-full bg-white dark:bg-gray-800 flex items-center justify-center text-indigo-500 dark:text-indigo-400 mb-2 shadow-sm group-hover:shadow border border-indigo-100 dark:border-indigo-800/30">
              <%= icon "wifi", class: "w-5 h-5 sm:w-6 sm:h-6" %>
            </div>
            <span class="text-xs font-medium text-gray-900 dark:text-white text-center">Internet</span>
          </a>

