            <div class="flex flex-col sm:flex-row gap-3 justify-center">
              <% case @active_tab %>
              <% when 'deposits' %>
                <a href="<%= receive_money_path %>" class="btn btn-primary flex items-center justify-center">
                  <%= icon "arrow-down-circle", class: "w-4 h-4 mr-2" %>
