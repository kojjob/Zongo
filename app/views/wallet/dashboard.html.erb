                    <!-- Date and time with visual indicators -->
                    <div class="flex items-center text-sm bg-gray-100 dark:bg-gray-700 px-3 py-1 rounded-full text-gray-700 dark:text-gray-300">
                      <%= icon "calendar", class: "w-4 h-4 mr-1" %>
                      <%= transaction.created_at.strftime("%d %b, %Y") %>
                      <span class="mx-2 text-gray-400">•</span>
                      <%= icon "clock", class: "w-4 h-4 mr-1" %>
                      <%= transaction.created_at.strftime("%I:%M %p") %>
                    </div>
                  </div>
                </div>

                <!-- Right side with amount and status -->
                <div class="text-right">
                  <!-- Large amount display with color coding -->
                  <p class="text-2xl font-bold <%= amount_color %> flex items-center justify-end">
                    <% if is_money_in %>
                      <span class="w-6 h-6 rounded-full bg-green-100 dark:bg-green-900/30 flex items-center justify-center text-green-600 dark:text-green-400 mr-2">
                        <span class="text-lg">+</span>
                      </span>
                    <% else %>
                      <span class="w-6 h-6 rounded-full bg-red-100 dark:bg-red-900/30 flex items-center justify-center text-red-600 dark:text-red-400 mr-2">
                        <span class="text-lg">-</span>
                      </span>
                    <% end %>
                    <%= transaction.formatted_amount %>
                  </p>

                  <!-- Status badge with visual cues -->
                  <%
                    # Set status colors
                    if transaction.status.to_s == 'completed'
                      status_bg = "bg-green-100 dark:bg-green-900/30"
                      status_text = "text-green-800 dark:text-green-300"
                      status_icon = "check-circle"
                    elsif transaction.status.to_s == 'pending'
                      status_bg = "bg-yellow-100 dark:bg-yellow-900/30"
                      status_text = "text-yellow-800 dark:text-yellow-300"
                      status_icon = "clock"
                    else
                      status_bg = "bg-red-100 dark:bg-red-900/30"
                      status_text = "text-red-800 dark:text-red-300"
                      status_icon = "x-circle"
                    end
                  %>

                  <div class="mt-2 flex justify-end">
                    <span class="inline-flex items-center px-3 py-1.5 rounded-full text-sm font-medium <%= status_bg %> <%= status_text %>">
                      <%= icon status_icon, class: "w-4 h-4 mr-2" %>
                      <%= transaction.status.titleize %>
                    </span>
                  </div>
                </div>
              </div>
            </div>
          <% end %>

