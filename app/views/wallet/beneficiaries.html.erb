<%# Beneficiaries View %>
<div class="bg-gray-50 dark:bg-gray-900 min-h-screen">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    
    <!-- Header -->
    <div class="mb-8">
      <div class="flex items-center justify-between mb-4">
        <div class="flex items-center">
          <a href="<%= wallet_path %>" class="flex items-center justify-center w-10 h-10 rounded-full bg-gray-100 dark:bg-gray-800 text-gray-500 dark:text-gray-400 hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors mr-3">
            <%= icon "arrow-left", class: "w-5 h-5" %>
          </a>
          <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Beneficiaries</h1>
        </div>
        
        <a href="<%= new_beneficiary_path %>" class="btn btn-primary flex items-center">
          <%= icon "plus", class: "w-5 h-5 mr-2" %>
          Add Beneficiary
        </a>
      </div>
      <p class="text-gray-600 dark:text-gray-400">
        Manage your saved recipients for quick transfers
      </p>
    </div>
    
    <!-- Beneficiary Filters -->
    <div class="bg-white dark:bg-gray-800 rounded-xl shadow p-4 mb-6">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <!-- Transfer Type -->
        <div>
          <label for="transfer_type" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Transfer Type</label>
          <select id="transfer_type" class="form-select block w-full rounded-lg">
            <option value="all" selected>All Types</option>
            <option value="bank">Bank Transfer</option>
            <option value="mobile_money">Mobile Money</option>
            <option value="wallet">Wallet Transfer</option>
          </select>
        </div>
        
        <!-- Sort By -->
        <div>
          <label for="sort_by" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Sort By</label>
          <select id="sort_by" class="form-select block w-full rounded-lg">
            <option value="recent" selected>Recently Added</option>
            <option value="name">Name (A-Z)</option>
            <option value="frequently_used">Frequently Used</option>
          </select>
        </div>
        
        <!-- Search -->
        <div>
          <label for="search" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Search</label>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <%= icon "search", class: "w-5 h-5 text-gray-400" %>
            </div>
            <input type="text" id="search" class="form-input block w-full pl-10 rounded-lg" placeholder="Search beneficiaries...">
          </div>
        </div>
      </div>
    </div>
    
    <!-- Beneficiaries Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      <% if @beneficiaries.present? %>
        <% @beneficiaries.each do |beneficiary| %>
          <div class="bg-white dark:bg-gray-800 rounded-xl shadow overflow-hidden hover:shadow-md transition-shadow">
            <div class="p-6">
              <div class="flex items-start justify-between mb-4">
                <div class="flex items-center">
                  <div class="w-12 h-12 rounded-full bg-gray-200 dark:bg-gray-700 flex items-center justify-center mr-3 overflow-hidden">
                    <% if beneficiary.avatar.present? %>
                      <%= image_tag beneficiary.avatar, class: "w-full h-full object-cover" %>
                    <% else %>
                      <%= icon "user", class: "w-6 h-6 text-gray-500 dark:text-gray-400" %>
                    <% end %>
                  </div>
                  <div>
                    <h3 class="font-semibold text-gray-900 dark:text-white"><%= beneficiary.name %></h3>
                    <p class="text-sm text-gray-500 dark:text-gray-400">
                      <% case beneficiary.transfer_type %>
                      <% when 'bank' %>
                        <%= beneficiary.bank_name %>
                      <% when 'mobile_money' %>
                        Mobile Money
                      <% when 'wallet' %>
                        Wallet Transfer
                      <% end %>
                    </p>
                  </div>
                </div>
                
                <div class="dropdown" data-controller="dropdown">
                  <button data-action="dropdown#toggle" class="text-gray-400 hover:text-gray-600 dark:hover:text-gray-300">
                    <%= icon "more-vertical", class: "w-5 h-5" %>
                  </button>
                  <div data-dropdown-target="menu" class="dropdown-menu hidden right-0 w-48">
                    <a href="<%= edit_beneficiary_path(beneficiary) %>" class="dropdown-item">
                      <%= icon "pencil", class: "w-4 h-4 mr-2" %>
                      Edit
                    </a>
                    <%= button_to delete_beneficiary_path(beneficiary), method: :delete, class: "dropdown-item text-red-600 dark:text-red-400 w-full text-left", data: { confirm: "Are you sure you want to delete this beneficiary?" } do %>
                      <%= icon "trash", class: "w-4 h-4 mr-2" %>
                      Delete
                    <% end %>
                  </div>
                </div>
              </div>
              
              <div class="space-y-2 mb-4">
                <div class="flex justify-between">
                  <span class="text-sm text-gray-500 dark:text-gray-400">Account Number</span>
                  <span class="text-sm font-medium text-gray-900 dark:text-white"><%= beneficiary.account_number %></span>
                </div>
                
                <% if beneficiary.phone_number.present? %>
                  <div class="flex justify-between">
                    <span class="text-sm text-gray-500 dark:text-gray-400">Phone Number</span>
                    <span class="text-sm font-medium text-gray-900 dark:text-white"><%= beneficiary.phone_number %></span>
                  </div>
                <% end %>
                
                <% if beneficiary.last_used_at.present? %>
                  <div class="flex justify-between">
                    <span class="text-sm text-gray-500 dark:text-gray-400">Last Used</span>
                    <span class="text-sm font-medium text-gray-900 dark:text-white"><%= beneficiary.last_used_at.strftime("%d %b, %Y") %></span>
                  </div>
                <% end %>
              </div>
              
              <a href="<%= new_transaction_path(recipient_id: beneficiary.id) %>" class="btn btn-primary w-full">
                Send Money
              </a>
            </div>
          </div>
        <% end %>
      <% else %>
        <div class="col-span-full bg-white dark:bg-gray-800 rounded-xl shadow p-8 text-center">
          <div class="w-16 h-16 mx-auto rounded-full bg-gray-100 dark:bg-gray-700 flex items-center justify-center mb-4">
            <%= icon "users", class: "w-8 h-8 text-gray-400 dark:text-gray-500" %>
          </div>
          <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-1">No beneficiaries yet</h3>
          <p class="text-gray-500 dark:text-gray-400 mb-4">Add your first beneficiary to quickly send money</p>
          <a href="<%= new_beneficiary_path %>" class="btn btn-primary">
            Add Beneficiary
          </a>
        </div>
      <% end %>
    </div>
    
    <!-- Pagination -->
    <% if @beneficiaries.present? && @beneficiaries.total_pages > 1 %>
      <div class="mt-6 flex justify-center">
        <nav class="relative z-0 inline-flex rounded-md shadow-sm -space-x-px" aria-label="Pagination">
          <%= link_to_prev_page @beneficiaries, raw("#{icon('chevron-left', class: 'w-5 h-5')} <span class=\"sr-only\">Previous</span>"), class: "relative inline-flex items-center px-2 py-2 rounded-l-md border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-sm font-medium text-gray-500 dark:text-gray-400 hover:bg-gray-50 dark:hover:bg-gray-650" %>
          
          <% @beneficiaries.total_pages.times do |i| %>
            <% if @beneficiaries.current_page == i + 1 %>
              <span class="relative inline-flex items-center px-4 py-2 border border-primary-500 bg-primary-50 dark:bg-primary-900/30 text-sm font-medium text-primary-600 dark:text-primary-400">
                <%= i + 1 %>
              </span>
            <% else %>
              <%= link_to i + 1, url_for(page: i + 1), class: "relative inline-flex items-center px-4 py-2 border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-sm font-medium text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-650" %>
            <% end %>
          <% end %>
          
          <%= link_to_next_page @beneficiaries, raw("#{icon('chevron-right', class: 'w-5 h-5')} <span class=\"sr-only\">Next</span>"), class: "relative inline-flex items-center px-2 py-2 rounded-r-md border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-sm font-medium text-gray-500 dark:text-gray-400 hover:bg-gray-50 dark:hover:bg-gray-650" %>
        </nav>
      </div>
    <% end %>
  </div>
</div>
