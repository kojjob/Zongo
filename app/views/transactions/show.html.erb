<div class="container mx-auto px-4 py-8">
  <div class="mb-6">
    <div class="flex items-center">
      <%= link_to transactions_path, class: "flex items-center justify-center w-10 h-10 rounded-full bg-lime-100 text-lime-600 hover:bg-lime-200 transition-colors mr-3" do %>
        <%= icon "arrow-left", class: "w-5 h-5" %>
      <% end %>
      <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Transaction Details</h1>
    </div>
  </div>

  <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden">
    <!-- Transaction Status Header -->
    <div class="<%= transaction_status_header_class(@transaction.status) %>">
      <div class="p-6">
        <div class="flex items-center justify-between">
          <div class="flex items-center">
            <div class="<%= transaction_status_icon_class(@transaction.status) %>">
              <%= transaction_status_icon(@transaction.status) %>
            </div>
            <div class="ml-4">
              <h2 class="text-xl font-semibold text-white"><%= @transaction.transaction_type_description %></h2>
              <p class="text-white text-opacity-90">
                <%= transaction_status_message(@transaction) %>
              </p>
            </div>
          </div>
          <div class="text-right">
            <div class="text-2xl font-bold text-white"><%= @transaction.formatted_amount %></div>
            <div class="text-white text-opacity-90 text-sm">
              <%= @transaction.created_at.strftime("%B %d, %Y at %H:%M") %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Transaction Details -->
    <div class="p-6">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- Left Column -->
        <div>
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Transaction Information</h3>
          
          <div class="space-y-4">
            <div class="flex justify-between border-b border-gray-200 dark:border-gray-700 pb-2">
              <span class="text-gray-600 dark:text-gray-400">Reference</span>
              <span class="text-gray-900 dark:text-white font-medium"><%= @transaction.transaction_id %></span>
            </div>
            
            <div class="flex justify-between border-b border-gray-200 dark:border-gray-700 pb-2">
              <span class="text-gray-600 dark:text-gray-400">Type</span>
              <span class="<%= transaction_type_badge_class(@transaction.transaction_type) %>">
                <%= @transaction.transaction_type_description %>
              </span>
            </div>
            
            <div class="flex justify-between border-b border-gray-200 dark:border-gray-700 pb-2">
              <span class="text-gray-600 dark:text-gray-400">Status</span>
              <span class="<%= transaction_status_badge_class(@transaction.status) %>">
                <%= @transaction.status.capitalize %>
              </span>
            </div>
            
            <div class="flex justify-between border-b border-gray-200 dark:border-gray-700 pb-2">
              <span class="text-gray-600 dark:text-gray-400">Amount</span>
              <span class="text-gray-900 dark:text-white font-medium"><%= @transaction.formatted_amount %></span>
            </div>
            
            <% if @transaction.fee && @transaction.fee > 0 %>
              <div class="flex justify-between border-b border-gray-200 dark:border-gray-700 pb-2">
                <span class="text-gray-600 dark:text-gray-400">Fee</span>
                <span class="text-gray-900 dark:text-white"><%= @transaction.currency %> <%= @transaction.fee %></span>
              </div>
            <% end %>
            
            <div class="flex justify-between border-b border-gray-200 dark:border-gray-700 pb-2">
              <span class="text-gray-600 dark:text-gray-400">Date</span>
              <span class="text-gray-900 dark:text-white"><%= @transaction.created_at.strftime("%B %d, %Y at %H:%M") %></span>
            </div>
            
            <% if @transaction.description.present? %>
              <div class="flex justify-between border-b border-gray-200 dark:border-gray-700 pb-2">
                <span class="text-gray-600 dark:text-gray-400">Description</span>
                <span class="text-gray-900 dark:text-white"><%= @transaction.description %></span>
              </div>
            <% end %>
            
            <% if @transaction.payment_method.present? %>
              <div class="flex justify-between border-b border-gray-200 dark:border-gray-700 pb-2">
                <span class="text-gray-600 dark:text-gray-400">Payment Method</span>
                <span class="text-gray-900 dark:text-white"><%= @transaction.payment_method.humanize %></span>
              </div>
            <% end %>
            
            <% if @transaction.provider.present? %>
              <div class="flex justify-between border-b border-gray-200 dark:border-gray-700 pb-2">
                <span class="text-gray-600 dark:text-gray-400">Provider</span>
                <span class="text-gray-900 dark:text-white"><%= @transaction.provider %></span>
              </div>
            <% end %>
            
            <% if @transaction.external_reference.present? %>
              <div class="flex justify-between border-b border-gray-200 dark:border-gray-700 pb-2">
                <span class="text-gray-600 dark:text-gray-400">External Reference</span>
                <span class="text-gray-900 dark:text-white"><%= @transaction.external_reference %></span>
              </div>
            <% end %>
          </div>
        </div>
        
        <!-- Right Column -->
        <div>
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Parties</h3>
          
          <div class="space-y-6">
            <% if @transaction.source_wallet.present? %>
              <div class="bg-gray-50 dark:bg-gray-700 rounded-lg p-4">
                <h4 class="text-sm font-medium text-gray-500 dark:text-gray-400 mb-2">From</h4>
                <div class="flex items-center">
                  <% if @transaction.sender&.avatar.attached? %>
                    <%= image_tag @transaction.sender.avatar.variant(resize_to_fill: [40, 40]), class: "w-10 h-10 rounded-full mr-3" %>
                  <% else %>
                    <div class="w-10 h-10 rounded-full bg-lime-100 dark:bg-lime-900 flex items-center justify-center mr-3">
                      <%= icon "user", class: "w-5 h-5 text-lime-600 dark:text-lime-400" %>
                    </div>
                  <% end %>
                  <div>
                    <div class="text-gray-900 dark:text-white font-medium">
                      <%= @transaction.source_name || "Unknown Sender" %>
                    </div>
                    <div class="text-gray-500 dark:text-gray-400 text-sm">
                      Wallet ID: <%= @transaction.source_wallet.wallet_id %>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
            
            <% if @transaction.destination_wallet.present? %>
              <div class="bg-gray-50 dark:bg-gray-700 rounded-lg p-4">
                <h4 class="text-sm font-medium text-gray-500 dark:text-gray-400 mb-2">To</h4>
                <div class="flex items-center">
                  <% if @transaction.recipient&.avatar.attached? %>
                    <%= image_tag @transaction.recipient.avatar.variant(resize_to_fill: [40, 40]), class: "w-10 h-10 rounded-full mr-3" %>
                  <% else %>
                    <div class="w-10 h-10 rounded-full bg-lime-100 dark:bg-lime-900 flex items-center justify-center mr-3">
                      <%= icon "user", class: "w-5 h-5 text-lime-600 dark:text-lime-400" %>
                    </div>
                  <% end %>
                  <div>
                    <div class="text-gray-900 dark:text-white font-medium">
                      <%= @transaction.recipient_name || "Unknown Recipient" %>
                    </div>
                    <div class="text-gray-500 dark:text-gray-400 text-sm">
                      Wallet ID: <%= @transaction.destination_wallet.wallet_id %>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
            
            <!-- Transaction Timeline -->
            <div class="mt-6">
              <h4 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Timeline</h4>
              
              <div class="space-y-4">
                <div class="flex">
                  <div class="flex flex-col items-center mr-4">
                    <div class="w-3 h-3 rounded-full bg-lime-500"></div>
                    <div class="w-0.5 h-full bg-gray-200 dark:bg-gray-700"></div>
                  </div>
                  <div>
                    <div class="text-sm font-medium text-gray-900 dark:text-white">Transaction Created</div>
                    <div class="text-xs text-gray-500 dark:text-gray-400"><%= @transaction.initiated_at&.strftime("%B %d, %Y at %H:%M") || @transaction.created_at.strftime("%B %d, %Y at %H:%M") %></div>
                  </div>
                </div>
                
                <% if @transaction.status_completed? && @transaction.completed_at.present? %>
                  <div class="flex">
                    <div class="flex flex-col items-center mr-4">
                      <div class="w-3 h-3 rounded-full bg-green-500"></div>
                      <div class="w-0.5 h-full bg-gray-200 dark:bg-gray-700"></div>
                    </div>
                    <div>
                      <div class="text-sm font-medium text-gray-900 dark:text-white">Transaction Completed</div>
                      <div class="text-xs text-gray-500 dark:text-gray-400"><%= @transaction.completed_at.strftime("%B %d, %Y at %H:%M") %></div>
                    </div>
                  </div>
                <% end %>
                
                <% if @transaction.status_failed? && @transaction.failed_at.present? %>
                  <div class="flex">
                    <div class="flex flex-col items-center mr-4">
                      <div class="w-3 h-3 rounded-full bg-red-500"></div>
                      <div class="w-0.5 h-full bg-gray-200 dark:bg-gray-700"></div>
                    </div>
                    <div>
                      <div class="text-sm font-medium text-gray-900 dark:text-white">Transaction Failed</div>
                      <div class="text-xs text-gray-500 dark:text-gray-400"><%= @transaction.failed_at.strftime("%B %d, %Y at %H:%M") %></div>
                      <% if @transaction.metadata && @transaction.metadata["failure_reason"].present? %>
                        <div class="text-xs text-red-500 mt-1">Reason: <%= @transaction.metadata["failure_reason"] %></div>
                      <% end %>
                    </div>
                  </div>
                <% end %>
                
                <% if @transaction.status_reversed? && @transaction.reversed_at.present? %>
                  <div class="flex">
                    <div class="flex flex-col items-center mr-4">
                      <div class="w-3 h-3 rounded-full bg-yellow-500"></div>
                      <div class="w-0.5 h-full bg-gray-200 dark:bg-gray-700"></div>
                    </div>
                    <div>
                      <div class="text-sm font-medium text-gray-900 dark:text-white">Transaction Reversed</div>
                      <div class="text-xs text-gray-500 dark:text-gray-400"><%= @transaction.reversed_at.strftime("%B %d, %Y at %H:%M") %></div>
                      <% if @transaction.metadata && @transaction.metadata["reversal_reason"].present? %>
                        <div class="text-xs text-yellow-600 dark:text-yellow-400 mt-1">Reason: <%= @transaction.metadata["reversal_reason"] %></div>
                      <% end %>
                    </div>
                  </div>
                <% end %>
                
                <% if @transaction.status_blocked? %>
                  <div class="flex">
                    <div class="flex flex-col items-center mr-4">
                      <div class="w-3 h-3 rounded-full bg-red-500"></div>
                      <div class="w-0.5 h-full bg-gray-200 dark:bg-gray-700"></div>
                    </div>
                    <div>
                      <div class="text-sm font-medium text-gray-900 dark:text-white">Transaction Blocked</div>
                      <div class="text-xs text-gray-500 dark:text-gray-400">
                        <% if @transaction.metadata && @transaction.metadata.dig("security_check", "failed_at").present? %>
                          <%= Time.parse(@transaction.metadata.dig("security_check", "failed_at")).strftime("%B %d, %Y at %H:%M") %>
                        <% else %>
                          <%= @transaction.updated_at.strftime("%B %d, %Y at %H:%M") %>
                        <% end %>
                      </div>
                      <% if @transaction.metadata && @transaction.metadata.dig("security_check", "reasons").present? %>
                        <div class="text-xs text-red-500 mt-1">
                          Reason: 
                          <% if @transaction.metadata.dig("security_check", "reasons").is_a?(Array) %>
                            <%= @transaction.metadata.dig("security_check", "reasons").join(", ") %>
                          <% else %>
                            <%= @transaction.metadata.dig("security_check", "reasons") %>
                          <% end %>
                        </div>
                      <% end %>
                    </div>
                  </div>
                <% end %>
                
                <div class="flex">
                  <div class="flex flex-col items-center mr-4">
                    <div class="w-3 h-3 rounded-full bg-gray-300 dark:bg-gray-600"></div>
                  </div>
                  <div>
                    <div class="text-sm font-medium text-gray-500 dark:text-gray-400">End of Timeline</div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Action Buttons -->
      <div class="mt-8 flex flex-wrap gap-4 justify-end">
        <% if @transaction.status_pending? %>
          <%= button_to process_transaction_transaction_path(@transaction), method: :post, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-lime-600 hover:bg-lime-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-lime-500" do %>
            <%= icon "check", class: "w-4 h-4 mr-1" %>
            Process Transaction
          <% end %>
        <% end %>
        
        <% if @transaction.status_completed? %>
          <%= button_to reverse_transaction_path(@transaction), method: :post, data: { confirm: "Are you sure you want to reverse this transaction? This action cannot be undone." }, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-yellow-600 hover:bg-yellow-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-yellow-500" do %>
            <%= icon "arrow-path", class: "w-4 h-4 mr-1" %>
            Reverse Transaction
          <% end %>
        <% end %>
        
        <%= link_to transactions_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 dark:border-gray-600 text-sm font-medium rounded-md shadow-sm text-gray-700 dark:text-gray-200 bg-white dark:bg-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-lime-500" do %>
          <%= icon "arrow-left", class: "w-4 h-4 mr-1" %>
          Back to Transactions
        <% end %>
      </div>
    </div>
  </div>
</div>

