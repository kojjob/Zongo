<%# Notification Preferences Page %>
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="md:flex md:items-center md:justify-between mb-6">
    <div class="flex-1 min-w-0">
      <h1 class="text-2xl font-bold leading-7 text-gray-900 dark:text-white sm:text-3xl sm:truncate">
        Notification Preferences
      </h1>
      <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
        Manage how and when you receive notifications from the application.
      </p>
    </div>
  </div>
  
  <div class="bg-white dark:bg-gray-800 shadow overflow-hidden sm:rounded-lg">
    <%# Notification Channels %>
    <div class="px-4 py-5 sm:px-6 border-b border-gray-200 dark:border-gray-700">
      <h3 class="text-lg leading-6 font-medium text-gray-900 dark:text-white">
        Notification Channels
      </h3>
      <p class="mt-1 max-w-2xl text-sm text-gray-500 dark:text-gray-400">
        Add and manage your notification channels.
      </p>
    </div>
    
    <div class="px-4 py-5 sm:p-6">
      <div id="notification_channels" class="space-y-6">
        <% if @notification_channels.any? %>
          <% @notification_channels.group_by(&:channel_type).each do |channel_type, channels| %>
            <div>
              <h4 class="text-base font-medium text-gray-900 dark:text-white mb-3">
                <%= channel_type.titleize %> Channels
              </h4>
              
              <div class="space-y-3">
                <% channels.each do |channel| %>
                  <%= render 'notification_preferences/channel', channel: channel %>
                <% end %>
              </div>
            </div>
          <% end %>
        <% else %>
          <div class="text-center py-6">
            <svg xmlns="http://www.w3.org/2000/svg" class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
            </svg>
            <h3 class="mt-2 text-sm font-medium text-gray-900 dark:text-white">No notification channels</h3>
            <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
              Add a notification channel to receive notifications.
            </p>
          </div>
        <% end %>
      </div>
      
      <%# Add New Channel Form %>
      <div class="mt-8 border-t border-gray-200 dark:border-gray-700 pt-6">
        <h4 class="text-base font-medium text-gray-900 dark:text-white mb-3">
          Add New Channel
        </h4>
        
        <div id="new_channel_form">
          <%= form_with model: NotificationChannel.new, url: notification_channels_path, class: "space-y-4" do |f| %>
            <div class="grid grid-cols-1 gap-y-4 sm:grid-cols-2 sm:gap-x-4">
              <div>
                <%= f.label :channel_type, class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
                <%= f.select :channel_type, 
                  [
                    ['Email', 'email'],
                    ['SMS', 'sms'],
                    ['Push Notification', 'push']
                  ],
                  { include_blank: 'Select channel type' },
                  { class: "py-2 px-3 mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 dark:border-gray-700 dark:bg-gray-800 focus:outline-none focus:ring-primary-500 focus:border-primary-500 sm:text-sm rounded-md" }
                %>
              </div>
              
              <div>
                <%= f.label :identifier, class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
                <%= f.text_field :identifier, placeholder: "py-2 px-3 Email address, phone number, or device token", class: "mt-1 block w-full border-gray-300 dark:border-gray-700 dark:bg-gray-800 rounded-md shadow-sm focus:ring-primary-500 focus:border-primary-500 sm:text-sm" %>
              </div>
            </div>
            
            <div class="flex justify-end">
              <%= f.submit "Add Channel", class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  
  <%# Notification Preferences %>
  <div class="mt-8 bg-white dark:bg-gray-800 shadow overflow-hidden sm:rounded-lg">
    <div class="px-4 py-5 sm:px-6 border-b border-gray-200 dark:border-gray-700">
      <h3 class="text-lg leading-6 font-medium text-gray-900 dark:text-white">
        Notification Settings
      </h3>
      <p class="mt-1 max-w-2xl text-sm text-gray-500 dark:text-gray-400">
        Choose which notifications you want to receive and how you want to receive them.
      </p>
    </div>
    
    <div class="px-4 py-5 sm:p-6">
      <%= form_with model: @notification_preference, url: notification_preferences_path, method: :patch, class: "space-y-6" do |f| %>
        <%# Global Settings %>
        <div>
          <h4 class="text-base font-medium text-gray-900 dark:text-white mb-3">
            Global Settings
          </h4>
          
          <div class="space-y-4">
            <div class="flex items-center justify-between">
              <div>
                <label for="notification_preference_in_app_enabled" class="text-sm font-medium text-gray-700 dark:text-gray-300">In-App Notifications</label>
                <p class="text-xs text-gray-500 dark:text-gray-400">Receive notifications within the application</p>
              </div>
              <div>
                <%= f.check_box :in_app_enabled, class: "h-4 w-4 text-primary-600 focus:ring-primary-500 border-gray-300 dark:border-gray-700 dark:bg-gray-800 rounded" %>
              </div>
            </div>
            
            <div class="flex items-center justify-between">
              <div>
                <label for="notification_preference_email_enabled" class="text-sm font-medium text-gray-700 dark:text-gray-300">Email Notifications</label>
                <p class="text-xs text-gray-500 dark:text-gray-400">Receive notifications via email</p>
              </div>
              <div>
                <%= f.check_box :email_enabled, class: "h-4 w-4 text-primary-600 focus:ring-primary-500 border-gray-300 dark:border-gray-700 dark:bg-gray-800 rounded" %>
              </div>
            </div>
            
            <div class="flex items-center justify-between">
              <div>
                <label for="notification_preference_sms_enabled" class="text-sm font-medium text-gray-700 dark:text-gray-300">SMS Notifications</label>
                <p class="text-xs text-gray-500 dark:text-gray-400">Receive notifications via SMS</p>
              </div>
              <div>
                <%= f.check_box :sms_enabled, class: "h-4 w-4 text-primary-600 focus:ring-primary-500 border-gray-300 dark:border-gray-700 dark:bg-gray-800 rounded" %>
              </div>
            </div>
            
            <div class="flex items-center justify-between">
              <div>
                <label for="notification_preference_push_enabled" class="text-sm font-medium text-gray-700 dark:text-gray-300">Push Notifications</label>
                <p class="text-xs text-gray-500 dark:text-gray-400">Receive push notifications on your devices</p>
              </div>
              <div>
                <%= f.check_box :push_enabled, class: "h-4 w-4 text-primary-600 focus:ring-primary-500 border-gray-300 dark:border-gray-700 dark:bg-gray-800 rounded" %>
              </div>
            </div>
          </div>
        </div>
        
        <%# Category Settings %>
        <div class="border-t border-gray-200 dark:border-gray-700 pt-6">
          <h4 class="text-base font-medium text-gray-900 dark:text-white mb-3">
            Notification Categories
          </h4>
          
          <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 md:rounded-lg">
            <table class="min-w-full divide-y divide-gray-300 dark:divide-gray-700">
              <thead class="bg-gray-50 dark:bg-gray-700">
                <tr>
                  <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 dark:text-white sm:pl-6">Category</th>
                  <th scope="col" class="px-3 py-3.5 text-center text-sm font-semibold text-gray-900 dark:text-white">In-App</th>
                  <th scope="col" class="px-3 py-3.5 text-center text-sm font-semibold text-gray-900 dark:text-white">Email</th>
                  <th scope="col" class="px-3 py-3.5 text-center text-sm font-semibold text-gray-900 dark:text-white">SMS</th>
                  <th scope="col" class="px-3 py-3.5 text-center text-sm font-semibold text-gray-900 dark:text-white">Push</th>
                </tr>
              </thead>
              <tbody class="divide-y divide-gray-200 dark:divide-gray-700 bg-white dark:bg-gray-800">
                <% %i[general security transaction account system].each do |category| %>
                  <tr>
                    <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 dark:text-white sm:pl-6">
                      <%= category.to_s.titleize %>
                    </td>
                    <td class="whitespace-nowrap px-3 py-4 text-sm text-center">
                      <%= f.check_box "in_app_preferences[#{category}]", checked: @notification_preference.in_app_preferences&.dig(category.to_s) || false, class: "h-4 w-4 text-primary-600 focus:ring-primary-500 border-gray-300 dark:border-gray-700 dark:bg-gray-800 rounded" %>
                    </td>
                    <td class="whitespace-nowrap px-3 py-4 text-sm text-center">
                      <%= f.check_box "email_preferences[#{category}]", checked: @notification_preference.email_preferences&.dig(category.to_s) || false, class: "h-4 w-4 text-primary-600 focus:ring-primary-500 border-gray-300 dark:border-gray-700 dark:bg-gray-800 rounded" %>
                    </td>
                    <td class="whitespace-nowrap px-3 py-4 text-sm text-center">
                      <%= f.check_box "sms_preferences[#{category}]", checked: @notification_preference.sms_preferences&.dig(category.to_s) || false, class: "h-4 w-4 text-primary-600 focus:ring-primary-500 border-gray-300 dark:border-gray-700 dark:bg-gray-800 rounded" %>
                    </td>
                    <td class="whitespace-nowrap px-3 py-4 text-sm text-center">
                      <%= f.check_box "push_preferences[#{category}]", checked: @notification_preference.push_preferences&.dig(category.to_s) || false, class: "h-4 w-4 text-primary-600 focus:ring-primary-500 border-gray-300 dark:border-gray-700 dark:bg-gray-800 rounded" %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
        
        <div class="flex justify-end">
          <%= f.submit "Save Preferences", class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
