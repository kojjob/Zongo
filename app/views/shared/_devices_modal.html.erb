<%# Trusted Devices Management Modal %>
<div id="devices-modal" class="fixed inset-0 z-50 hidden items-center justify-center p-4 sm:p-0 opacity-0" data-controller="modal">
  <div class="fixed inset-0 bg-gray-900 bg-opacity-80 backdrop-blur-sm transition-opacity" data-action="click->modal#close"></div>

  <div class="relative bg-white dark:bg-gray-800 rounded-xl shadow-xl transform transition-all w-full max-w-lg p-6 sm:p-8 overflow-hidden -translate-y-4 opacity-0 border-2 border-gray-200 dark:border-gray-700" data-modal-target="container">
    <div class="absolute top-0 right-0 pt-4 pr-4">
      <button type="button" class="text-gray-400 hover:text-gray-500 dark:text-gray-500 dark:hover:text-gray-400" data-action="modal#close">
        <span class="sr-only">Close</span>
        <%= icon "x", class: "h-6 w-6" %>
      </button>
    </div>

    <div class="sm:flex sm:items-start">
      <div class="mx-auto flex-shrink-0 flex items-center justify-center h-12 w-12 rounded-full bg-indigo-100 dark:bg-indigo-900 sm:mx-0 sm:h-10 sm:w-10">
        <%= icon "device-laptop", class: "h-6 w-6 text-indigo-600 dark:text-indigo-400" %>
      </div>
      <div class="mt-3 text-center sm:mt-0 sm:ml-4 sm:text-left">
        <h3 class="text-lg leading-6 font-medium text-gray-900 dark:text-white" id="modal-title">
          Trusted Devices
        </h3>
        <div class="mt-2">
          <p class="text-sm text-gray-500 dark:text-gray-400">
            Manage devices that can access your account without additional verification.
          </p>
        </div>
      </div>
    </div>

    <div class="mt-6">
      <div class="space-y-4">
        <div class="bg-gray-50 dark:bg-gray-700 rounded-lg p-4 flex items-center justify-between">
          <div class="flex items-center">
            <div class="flex-shrink-0 h-10 w-10 rounded-full bg-green-100 dark:bg-green-900 flex items-center justify-center text-green-600 dark:text-green-400">
              <%= icon "device-mobile", class: "h-5 w-5" %>
            </div>
            <div class="ml-3">
              <div class="text-sm font-medium text-gray-900 dark:text-white">iPhone 13</div>
              <div class="text-xs text-gray-500 dark:text-gray-400">Last used: Today at 10:45 AM</div>
              <div class="text-xs text-gray-500 dark:text-gray-400">Location: Accra, Ghana</div>
            </div>
          </div>
          <div class="flex items-center">
            <span class="px-2 py-1 text-xs rounded-full bg-green-100 dark:bg-green-900 text-green-800 dark:text-green-200 mr-2">Current</span>
            <button type="button" class="text-gray-400 hover:text-red-500 dark:hover:text-red-400">
              <%= icon "trash", class: "h-5 w-5" %>
            </button>
          </div>
        </div>

        <div class="bg-gray-50 dark:bg-gray-700 rounded-lg p-4 flex items-center justify-between">
          <div class="flex items-center">
            <div class="flex-shrink-0 h-10 w-10 rounded-full bg-blue-100 dark:bg-blue-900 flex items-center justify-center text-blue-600 dark:text-blue-400">
              <%= icon "device-laptop", class: "h-5 w-5" %>
            </div>
            <div class="ml-3">
              <div class="text-sm font-medium text-gray-900 dark:text-white">MacBook Pro</div>
              <div class="text-xs text-gray-500 dark:text-gray-400">Last used: Yesterday at 3:20 PM</div>
              <div class="text-xs text-gray-500 dark:text-gray-400">Location: Accra, Ghana</div>
            </div>
          </div>
          <button type="button" class="text-gray-400 hover:text-red-500 dark:hover:text-red-400">
            <%= icon "trash", class: "h-5 w-5" %>
          </button>
        </div>

        <div class="bg-gray-50 dark:bg-gray-700 rounded-lg p-4 flex items-center justify-between">
          <div class="flex items-center">
            <div class="flex-shrink-0 h-10 w-10 rounded-full bg-purple-100 dark:bg-purple-900 flex items-center justify-center text-purple-600 dark:text-purple-400">
              <%= icon "device-tablet", class: "h-5 w-5" %>
            </div>
            <div class="ml-3">
              <div class="text-sm font-medium text-gray-900 dark:text-white">iPad Pro</div>
              <div class="text-xs text-gray-500 dark:text-gray-400">Last used: 3 days ago</div>
              <div class="text-xs text-gray-500 dark:text-gray-400">Location: Kumasi, Ghana</div>
            </div>
          </div>
          <button type="button" class="text-gray-400 hover:text-red-500 dark:hover:text-red-400">
            <%= icon "trash", class: "h-5 w-5" %>
          </button>
        </div>
      </div>

      <div class="mt-6 flex justify-end">
        <button type="button" class="btn btn-white" data-action="modal#close">
          Close
        </button>
      </div>
    </div>
  </div>
</div>
