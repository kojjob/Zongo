<!-- app/views/shared/_fixednavbar.html.erb -->
<header class="sticky top-0 z-50 w-full backdrop-blur-lg bg-white/90 dark:bg-gray-950/90 border-b border-gray-200 dark:border-gray-800 shadow-sm transition-all duration-300" data-controller="fixed-navbar">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16">
      <!-- Logo and branding -->
      <div class="flex items-center shrink-0">
        <a href="/" class="flex items-center">
          <div class="h-10 w-10 rounded-xl bg-gradient-to-r from-primary-600 to-secondary-600 flex items-center justify-center text-white font-bold text-xl shadow-sm">
            SG
          </div>
          <span class="ml-2 text-xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-primary-600 via-secondary-600 to-accent-500">
            Super Ghana
          </span>
        </a>
      </div>
      
      <!-- Desktop navigation - centered -->
      <div class="hidden md:flex md:items-center md:justify-center md:flex-1">
        <div class="flex space-x-1">
          <a href="/dashboard" class="px-3 py-2 text-sm font-medium rounded-lg text-gray-700 dark:text-gray-200 hover:bg-gray-100 dark:hover:bg-gray-800 transition flex items-center">
            <div class="mr-1.5 h-5 w-5 text-primary-600 dark:text-primary-400">
              <%= icon "home" %>
            </div>
            <span>Dashboard</span>
          </a>
          
          <a href="<%= wallet_path %>" class="px-3 py-2 text-sm font-medium rounded-lg text-gray-700 dark:text-gray-200 hover:bg-gray-100 dark:hover:bg-gray-800 transition flex items-center">
            <div class="mr-1.5 h-5 w-5 text-green-600 dark:text-green-400">
              <%= icon "wallet" %>
            </div>
            <span>Wallet</span>
          </a>
          
          <a href="<%= transactions_wallet_path %>" class="px-3 py-2 text-sm font-medium rounded-lg text-gray-700 dark:text-gray-200 hover:bg-gray-100 dark:hover:bg-gray-800 transition flex items-center">
            <div class="mr-1.5 h-5 w-5 text-secondary-600 dark:text-secondary-400">
              <%= icon "history" %>
            </div>
            <span>Transactions</span>
          </a>
          
          <a href="<%= payment_methods_path %>" class="px-3 py-2 text-sm font-medium rounded-lg text-gray-700 dark:text-gray-200 hover:bg-gray-100 dark:hover:bg-gray-800 transition flex items-center">
            <div class="mr-1.5 h-5 w-5 text-accent-600 dark:text-accent-400">
              <%= icon "credit-card" %>
            </div>
            <span>Payment Methods</span>
          </a>
          
          <!-- Services dropdown -->
          <div class="relative" data-controller="dropdown">
            <button class="px-3 py-2 text-sm font-medium rounded-lg text-gray-700 dark:text-gray-200 hover:bg-gray-100 dark:hover:bg-gray-800 transition flex items-center" data-action="dropdown#toggle">
              <div class="mr-1.5 h-5 w-5 text-purple-600 dark:text-purple-400">
                <%= icon "menu" %>
              </div>
              <span>Services</span>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1 transition-transform duration-200" data-dropdown-target="arrow" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
              </svg>
            </button>
            
            <!-- Dropdown menu -->
            <div class="absolute left-0 mt-2 w-56 rounded-xl shadow-lg bg-white dark:bg-gray-800 ring-1 ring-black ring-opacity-5 border border-gray-100 dark:border-gray-700 hidden overflow-hidden z-50" data-dropdown-target="menu">
              <div class="py-1" role="menu" aria-orientation="vertical" aria-labelledby="options-menu">
                <a href="#" class="flex items-center px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700" role="menuitem">
                  <div class="mr-3 h-8 w-8 rounded-full bg-yellow-100 dark:bg-yellow-900 text-yellow-600 dark:text-yellow-400 flex items-center justify-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />
                    </svg>
                  </div>
                  <span>Airtime & Data</span>
                </a>
                <a href="#" class="flex items-center px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700" role="menuitem">
                  <div class="mr-3 h-8 w-8 rounded-full bg-teal-100 dark:bg-teal-900 text-teal-600 dark:text-teal-400 flex items-center justify-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                    </svg>
                  </div>
                  <span>Bill Payments</span>
                </a>
                <a href="#" class="flex items-center px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700" role="menuitem">
                  <div class="mr-3 h-8 w-8 rounded-full bg-orange-100 dark:bg-orange-900 text-orange-600 dark:text-orange-400 flex items-center justify-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
                    </svg>
                  </div>
                  <span>Marketplace</span>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Right side with actions -->
      <div class="flex items-center space-x-3">
        <!-- Theme toggle -->
        <div data-controller="theme">
          <button class="p-2 text-gray-500 dark:text-gray-400 hover:text-primary-600 dark:hover:text-primary-400 rounded-full focus:outline-none transition-transform hover:scale-110" data-action="theme#toggle" aria-label="Toggle theme">
            <svg data-theme-target="darkIcon" xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
            </svg>
            <svg data-theme-target="lightIcon" xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
            </svg>
          </button>
        </div>
        
        <!-- Notifications -->
        <div class="relative" data-controller="dropdown">
          <button class="relative p-2 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-800 rounded-full" data-action="dropdown#toggle">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
            </svg>
            <!-- Badge -->
            <% notification_count = 0 %> 
              <% if notification_count > 0 %>
                <span class="absolute top-0 right-0 block h-4 w-4 rounded-full bg-red-500 ring-2 ring-white dark:ring-gray-900 flex items-center justify-center text-white text-xs font-bold">
                  <%= notification_count > 9 ? '9+' : notification_count %>
                </span>
              <% end %>
          </button>
          
          <!-- Notification dropdown (simplified) -->
          <div class="absolute right-0 mt-2 w-72 rounded-xl shadow-lg bg-white dark:bg-gray-800 ring-1 ring-black ring-opacity-5 border border-gray-100 dark:border-gray-700 hidden overflow-hidden z-50" data-dropdown-target="menu">
            <div class="p-3 border-b border-gray-200 dark:border-gray-700 flex justify-between items-center">
              <h3 class="text-sm font-semibold text-gray-900 dark:text-white">Notifications</h3>
              <a href="#" class="text-xs text-primary-600 dark:text-primary-400 hover:text-primary-800 dark:hover:text-primary-300">
                Mark all as read
              </a>
            </div>
            <div class="max-h-[60vh] overflow-y-auto">
              <!-- Notification items would go here -->
              <div class="p-4 text-sm text-gray-600 dark:text-gray-400 text-center">
                <p>No new notifications</p>
              </div>
            </div>
            <div class="p-2 bg-gray-50 dark:bg-gray-700 text-center border-t border-gray-200 dark:border-gray-600">
              <a href="#" class="text-xs font-medium text-primary-600 dark:text-primary-400 hover:text-primary-800 dark:hover:text-primary-300">
                View all notifications
              </a>
            </div>
          </div>
        </div>
        
        <!-- User profile dropdown -->
        <div class="relative" data-controller="dropdown">
          <button class="flex items-center focus:outline-none" data-action="dropdown#toggle">
            <div class="h-8 w-8 rounded-full overflow-hidden border-2 border-white dark:border-gray-700 shadow-sm">
              <% if current_user && current_user.avatar.attached? %>
                <% begin %>
                  <%= image_tag url_for(current_user.avatar), class: "h-full w-full object-cover" %>
                <% rescue Exception => e %>
                  <div class="h-full w-full bg-gradient-to-br from-primary-600 to-secondary-600 flex items-center justify-center text-white text-sm font-bold">
                    <%= current_user&.initials || "G" %>
                  </div>
                <% end %>
              <% else %>
                <div class="h-full w-full bg-gradient-to-br from-primary-600 to-secondary-600 flex items-center justify-center text-white text-sm font-bold initials-placeholder">
                  <%= current_user&.initials || "G" %>
                </div>
              <% end %>
            </div>
          </button>
          
          <!-- Profile dropdown (simplified) -->
          <div class="absolute right-0 mt-2 w-60 rounded-xl shadow-lg bg-white dark:bg-gray-800 ring-1 ring-black ring-opacity-5 border border-gray-100 dark:border-gray-700 hidden overflow-hidden z-50" data-dropdown-target="menu">
            <div class="p-3 border-b border-gray-200 dark:border-gray-700">
              <p class="text-sm font-medium text-gray-900 dark:text-white">
                <%= current_user&.username || current_user&.email&.split("@")&.first || "Guest" %>
              </p>
              <p class="text-xs text-gray-600 dark:text-gray-400 mt-1 truncate">
                <%= current_user&.email || "" %>
              </p>
            </div>
            
            <div class="py-1">
              <%= link_to user_settings_path, class: "flex items-center px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700" do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-3 text-purple-600 dark:text-purple-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4" />
                </svg>
                Settings
              <% end %>
              
              <%= link_to wallet_path, class: "flex items-center px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700" do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-3 text-green-600 dark:text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                My Wallet
              <% end %>
              
              <%= button_to destroy_user_session_path, method: :delete, class: "flex w-full items-center px-4 py-2 text-sm text-red-600 dark:text-red-400 hover:bg-gray-100 dark:hover:bg-gray-700" do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
                </svg>
                Logout
              <% end %>
            </div>
          </div>
        </div>
        
        <!-- Mobile menu button -->
        <div class="flex md:hidden">
          <button type="button" 
                  class="p-2 rounded-md text-gray-700 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400" 
                  data-action="fixed-navbar#toggleMenu"
                  aria-label="Toggle menu">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </button>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Mobile menu -->
  <div class="md:hidden hidden bg-white dark:bg-gray-950 border-b border-gray-200 dark:border-gray-800" data-fixed-navbar-target="menu">
    <div class="px-4 pt-2 pb-3 space-y-1">
      <a href="/dashboard" class="block px-3 py-2 rounded-lg text-base font-medium text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-800 hover:text-primary-600 dark:hover:text-primary-400">
        Dashboard
      </a>
      <a href="<%= wallet_path %>" class="block px-3 py-2 rounded-lg text-base font-medium text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-800 hover:text-primary-600 dark:hover:text-primary-400">
        Wallet
      </a>
      <a href="<%= transactions_wallet_path %>" class="block px-3 py-2 rounded-lg text-base font-medium text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-800 hover:text-primary-600 dark:hover:text-primary-400">
        Transactions
      </a>
      <a href="<%= payment_methods_path %>" class="block px-3 py-2 rounded-lg text-base font-medium text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-800 hover:text-primary-600 dark:hover:text-primary-400">
        Payment Methods
      </a>
      
      <!-- Services section -->
      <div class="pt-4 pb-3 border-t border-gray-200 dark:border-gray-700">
        <div class="px-3 py-2 text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider">
          Services
        </div>
        
        <a href="#" class="flex items-center px-3 py-2 rounded-lg text-gray-700 dark:text-gray-200 hover:bg-gray-100 dark:hover:bg-gray-800">
          <div class="mr-3 h-8 w-8 rounded-full bg-yellow-100 dark:bg-yellow-900 text-yellow-600 dark:text-yellow-400 flex items-center justify-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />
            </svg>
          </div>
          <span>Airtime & Data</span>
        </a>
        
        <a href="#" class="flex items-center px-3 py-2 rounded-lg text-gray-700 dark:text-gray-200 hover:bg-gray-100 dark:hover:bg-gray-800">
          <div class="mr-3 h-8 w-8 rounded-full bg-teal-100 dark:bg-teal-900 text-teal-600 dark:text-teal-400 flex items-center justify-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
          </div>
          <span>Bill Payments</span>
        </a>
        
        <a href="#" class="flex items-center px-3 py-2 rounded-lg text-gray-700 dark:text-gray-200 hover:bg-gray-100 dark:hover:bg-gray-800">
          <div class="mr-3 h-8 w-8 rounded-full bg-orange-100 dark:bg-orange-900 text-orange-600 dark:text-orange-400 flex items-center justify-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
          </div>
          <span>Marketplace</span>
        </a>
      </div>
    </div>
  </div>
</header>

<script>
  document.addEventListener('turbo:load', function() {
    const navbar = document.querySelector("[data-controller='fixed-navbar']");
    
    if (navbar) {
      window.addEventListener('scroll', () => {
        if (window.scrollY > 20) {
          navbar.classList.add('shadow-md');
          navbar.classList.remove('shadow-sm');
        } else {
          navbar.classList.remove('shadow-md');
          navbar.classList.add('shadow-sm');
        }
      });
    }
  });
</script>