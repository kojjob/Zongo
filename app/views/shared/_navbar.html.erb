<header class="sticky top-0 z-50 w-full backdrop-blur-lg bg-white/0 dark:bg-gray-950/90 border-b border-gray-200 dark:border-gray-800" data-controller="navbar">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16">
      <div class="flex items-center">
        <a href="/" class="flex items-center">
          <div class="h-10 w-10 rounded-xl bg-gradient-to-r from-primary-600 to-secondary-600 flex items-center justify-center text-white font-bold text-xl">
            SG
          </div>
          <span class="ml-2 text-xl font-extrabold bg-clip-text text-transparent bg-gradient-to-r from-primary-600 via-secondary-600 to-accent-500">
            Super Ghana
          </span>
        </a>
      </div>
      
      <div class="hidden md:flex items-center space-x-4">
        <!-- Dashboard Link -->
        <a href="/dashboard" class="px-3 py-2 text-sm font-medium rounded-lg text-gray-700 dark:text-gray-200 hover:text-primary-600 dark:hover:text-primary-400 hover:bg-gray-100 dark:hover:bg-gray-800 transition flex items-center">
          <div class="mr-2 h-5 w-5 text-primary-600 dark:text-primary-400">
            <%= icon "home" %>
          </div>
          Dashboard
        </a>
        
        <!-- Wallet Dropdown -->
        <div class="relative" data-controller="dropdown">
          <button class="px-3 py-2 text-sm font-medium rounded-lg text-gray-700 dark:text-gray-200 hover:text-primary-600 dark:hover:text-primary-400 hover:bg-gray-100 dark:hover:bg-gray-800 transition flex items-center group" data-action="dropdown#toggle">
            <div class="mr-2 h-5 w-5 text-primary-600 dark:text-primary-400">
              <%= icon "wallet" %>
            </div>
            <span>Wallet</span>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1 transform group-hover:rotate-180 transition-transform duration-200" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </button>
          
          <!-- Wallet Dropdown Menu -->
          <div class="absolute left-0 mt-2 w-64 rounded-xl shadow-lg bg-white dark:bg-gray-800 ring-1 ring-black ring-opacity-5 border border-gray-100 dark:border-gray-700 hidden overflow-hidden z-50" data-dropdown-target="menu">
            <div class="p-1">
              <div class="grid grid-cols-1 gap-1">
                <%= link_to wallet_path, class: "group rounded-lg flex items-center p-2 hover:bg-primary-50 dark:hover:bg-primary-900/30 transition" do %>
                  <div class="mr-3 h-8 w-8 rounded-full bg-primary-100 dark:bg-primary-900 text-primary-600 dark:text-primary-400 flex items-center justify-center">
                    <%= icon "wallet", class: "h-5 w-5" %>
                  </div>
                  <div>
                    <p class="font-medium text-gray-900 dark:text-white">Overview</p>
                    <p class="text-xs text-gray-600 dark:text-gray-400">View your wallet</p>
                  </div>
                <% end %>
                
                <%= link_to new_transaction_wallet_path(type: 'transfer'), class: "group rounded-lg flex items-center p-2 hover:bg-green-50 dark:hover:bg-green-900/30 transition" do %>
                  <div class="mr-3 h-8 w-8 rounded-full bg-green-100 dark:bg-green-900 text-green-600 dark:text-green-400 flex items-center justify-center">
                    <%= icon "transfer", class: "h-5 w-5" %>
                  </div>
                  <div>
                    <p class="font-medium text-gray-900 dark:text-white">Send Money</p>
                    <p class="text-xs text-gray-600 dark:text-gray-400">Transfer to others</p>
                  </div>
                <% end %>
                
                <%= link_to new_transaction_wallet_path(type: 'deposit'), class: "group rounded-lg flex items-center p-2 hover:bg-blue-50 dark:hover:bg-blue-900/30 transition" do %>
                  <div class="mr-3 h-8 w-8 rounded-full bg-blue-100 dark:bg-blue-900 text-blue-600 dark:text-blue-400 flex items-center justify-center">
                    <%= icon "money-in", class: "h-5 w-5" %>
                  </div>
                  <div>
                    <p class="font-medium text-gray-900 dark:text-white">Add Money</p>
                    <p class="text-xs text-gray-600 dark:text-gray-400">Deposit funds</p>
                  </div>
                <% end %>
                
                <%= link_to new_transaction_wallet_path(type: 'withdrawal'), class: "group rounded-lg flex items-center p-2 hover:bg-red-50 dark:hover:bg-red-900/30 transition" do %>
                  <div class="mr-3 h-8 w-8 rounded-full bg-red-100 dark:bg-red-900 text-red-600 dark:text-red-400 flex items-center justify-center">
                    <%= icon "money-out", class: "h-5 w-5" %>
                  </div>
                  <div>
                    <p class="font-medium text-gray-900 dark:text-white">Withdraw</p>
                    <p class="text-xs text-gray-600 dark:text-gray-400">Cash out</p>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Transactions Dropdown -->
        <div class="relative" data-controller="dropdown">
          <button class="px-3 py-2 text-sm font-medium rounded-lg text-gray-700 dark:text-gray-200 hover:text-secondary-600 dark:hover:text-secondary-400 hover:bg-gray-100 dark:hover:bg-gray-800 transition flex items-center group" data-action="dropdown#toggle">
            <div class="mr-2 h-5 w-5 text-secondary-600 dark:text-secondary-400">
              <%= icon "history" %>
            </div>
            <span>Transactions</span>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1 transform group-hover:rotate-180 transition-transform duration-200" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </button>
          
          <!-- Transactions Dropdown Menu -->
          <div class="absolute left-0 mt-2 w-64 rounded-xl shadow-lg bg-white dark:bg-gray-800 ring-1 ring-black ring-opacity-5 border border-gray-100 dark:border-gray-700 hidden overflow-hidden z-50" data-dropdown-target="menu">
            <div class="p-1">
              <div class="grid grid-cols-1 gap-1">
                <a href="<%= transactions_wallet_path %>" class="group rounded-lg flex items-center p-2 hover:bg-secondary-50 dark:hover:bg-secondary-900/30 transition">
                  <div class="mr-3 h-8 w-8 rounded-full bg-secondary-100 dark:bg-secondary-900 text-secondary-600 dark:text-secondary-400 flex items-center justify-center">
                    <%= icon "history", class: "h-5 w-5" %>
                  </div>
                  <div>
                    <p class="font-medium text-gray-900 dark:text-white">Transaction History</p>
                    <p class="text-xs text-gray-600 dark:text-gray-400">View all transactions</p>
                  </div>
                </a>
                
                <%= link_to scheduled_transactions_path, class: "group rounded-lg flex items-center p-2 hover:bg-amber-50 dark:hover:bg-amber-900/30 transition" do %>
                  <div class="mr-3 h-8 w-8 rounded-full bg-amber-100 dark:bg-amber-900 text-amber-600 dark:text-amber-400 flex items-center justify-center">
                    <%= icon "repeat", class: "h-5 w-5" %>
                  </div>
                  <div>
                    <p class="font-medium text-gray-900 dark:text-white">Recurring</p>
                    <p class="text-xs text-gray-600 dark:text-gray-400">Scheduled transactions</p>
                  </div>
                <% end %>
                
                <%= link_to new_statement_path, class: "group rounded-lg flex items-center p-2 hover:bg-purple-50 dark:hover:bg-purple-900/30 transition" do %>
                  <div class="mr-3 h-8 w-8 rounded-full bg-purple-100 dark:bg-purple-900 text-purple-600 dark:text-purple-400 flex items-center justify-center">
                    <%= icon "list", class: "h-5 w-5" %>
                  </div>
                  <div>
                    <p class="font-medium text-gray-900 dark:text-white">Reports</p>
                    <p class="text-xs text-gray-600 dark:text-gray-400">Generate statements</p>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Payment Methods Link -->
        <a href="<%= payment_methods_path %>" class="px-3 py-2 text-sm font-medium rounded-lg text-gray-700 dark:text-gray-200 hover:text-accent-600 dark:hover:text-accent-400 hover:bg-gray-100 dark:hover:bg-gray-800 transition flex items-center">
          <div class="mr-2 h-5 w-5 text-accent-600 dark:text-accent-400">
            <%= icon "credit-card" %>
          </div>
          Payment Methods
        </a>
        
        <!-- About Link -->
        <%= link_to about_path, class: "px-3 py-2 text-sm font-medium rounded-lg text-gray-700 dark:text-gray-200 hover:text-teal-600 dark:hover:text-teal-400 hover:bg-gray-100 dark:hover:bg-gray-800 transition flex items-center" do %>
          <div class="mr-2 h-5 w-5 text-teal-600 dark:text-teal-400">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <span>About Us</span>
        <% end %>
        
        <!-- Services Dropdown -->
        <div class="relative" data-controller="dropdown">
          <button class="px-3 py-2 text-sm font-medium rounded-lg text-gray-700 dark:text-gray-200 hover:text-purple-600 dark:hover:text-purple-400 hover:bg-gray-100 dark:hover:bg-gray-800 transition flex items-center group" data-action="dropdown#toggle">
            <div class="mr-2 h-5 w-5 text-purple-600 dark:text-purple-400">
              <%= icon "menu" %>
            </div>
            <span>Services</span>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1 transform group-hover:rotate-180 transition-transform duration-200" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </button>
          
          <!-- Services Dropdown Menu -->
          <div class="absolute right-0 mt-2 w-64 rounded-xl shadow-lg bg-white dark:bg-gray-800 ring-1 ring-black ring-opacity-5 border border-gray-100 dark:border-gray-700 hidden overflow-hidden z-50" data-dropdown-target="menu">
            <div class="p-1">
              <div class="grid grid-cols-1 gap-1">
                <a href="#" class="group rounded-lg flex items-center p-2 hover:bg-yellow-50 dark:hover:bg-yellow-900/30 transition">
                  <div class="mr-3 h-8 w-8 rounded-full bg-yellow-100 dark:bg-yellow-900 text-yellow-600 dark:text-yellow-400 flex items-center justify-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />
                    </svg>
                  </div>
                  <div>
                    <p class="font-medium text-gray-900 dark:text-white">Airtime & Data</p>
                    <p class="text-xs text-gray-600 dark:text-gray-400">Purchase for any network</p>
                  </div>
                </a>
                
                <a href="#" class="group rounded-lg flex items-center p-2 hover:bg-teal-50 dark:hover:bg-teal-900/30 transition">
                  <div class="mr-3 h-8 w-8 rounded-full bg-teal-100 dark:bg-teal-900 text-teal-600 dark:text-teal-400 flex items-center justify-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                    </svg>
                  </div>
                  <div>
                    <p class="font-medium text-gray-900 dark:text-white">Bill Payments</p>
                    <p class="text-xs text-gray-600 dark:text-gray-400">Utilities & subscriptions</p>
                  </div>
                </a>
                
                <a href="#" class="group rounded-lg flex items-center p-2 hover:bg-orange-50 dark:hover:bg-orange-900/30 transition">
                  <div class="mr-3 h-8 w-8 rounded-full bg-orange-100 dark:bg-orange-900 text-orange-600 dark:text-orange-400 flex items-center justify-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
                    </svg>
                  </div>
                  <div>
                    <p class="font-medium text-gray-900 dark:text-white">Marketplace</p>
                    <p class="text-xs text-gray-600 dark:text-gray-400">Shop for products</p>
                  </div>
                </a>
                
                <a href="#" class="group rounded-lg flex items-center p-2 hover:bg-indigo-50 dark:hover:bg-indigo-900/30 transition">
                  <div class="mr-3 h-8 w-8 rounded-full bg-indigo-100 dark:bg-indigo-900 text-indigo-600 dark:text-indigo-400 flex items-center justify-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                  </div>
                  <div>
                    <p class="font-medium text-gray-900 dark:text-white">Financial Services</p>
                    <p class="text-xs text-gray-600 dark:text-gray-400">Loans & savings</p>
                  </div>
                </a>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Theme toggle -->
        <div data-controller="theme">
          <button class="p-2 text-gray-500 dark:text-gray-400 hover:text-primary-600 dark:hover:text-primary-400 rounded-full focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2 dark:focus:ring-offset-gray-900 transition-transform hover:scale-110" data-action="theme#toggle" aria-label="Toggle dark mode">
            <svg data-theme-target="darkIcon" xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 block dark:hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
            </svg>
            <svg data-theme-target="lightIcon" xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 hidden dark:block" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
            </svg>
            <span class="sr-only">Toggle between dark and light mode</span>
          </button>
        </div>
        
        <!-- Notifications Dropdown -->
        <div class="relative" data-controller="dropdown">
          <button class="relative p-2 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-800 rounded-full focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2 dark:focus:ring-offset-gray-900" data-action="dropdown#toggle" aria-label="Notifications" aria-expanded="false" aria-haspopup="true">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
            </svg>
            <!-- Badge -->
            <span class="absolute top-0 right-0 flex h-5 w-5 items-center justify-center rounded-full bg-red-500 text-xs text-white" aria-label="5 unread notifications">5</span>
          </button>
          
          <!-- Notifications Dropdown Panel -->
          <div class="absolute right-0 mt-2 w-80 rounded-xl shadow-lg bg-white dark:bg-gray-800 ring-1 ring-black ring-opacity-5 border border-gray-100 dark:border-gray-700 hidden z-50 overflow-hidden" data-dropdown-target="menu">
            <div class="flex items-center justify-between p-4 border-b border-gray-200 dark:border-gray-700">
              <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Notifications</h3>
              <button class="text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                  <path d="M10 6a2 2 0 110-4 2 2 0 010 4zM10 12a2 2 0 110-4 2 2 0 010 4zM10 18a2 2 0 110-4 2 2 0 010 4z" />
                </svg>
              </button>
            </div>
            
            <div class="max-h-[60vh] overflow-y-auto divide-y divide-gray-200 dark:divide-gray-700">
              <!-- Notification Item 1 -->
              <div class="flex items-start p-4 hover:bg-gray-50 dark:hover:bg-gray-700">
                <div class="flex-shrink-0 mr-3">
                  <div class="w-10 h-10 rounded-full bg-green-100 dark:bg-green-900 flex items-center justify-center text-green-600 dark:text-green-400">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                  </div>
                </div>
                <div class="flex-1 min-w-0">
                  <p class="text-sm font-medium text-gray-900 dark:text-white">Payment Successful</p>
                  <p class="text-sm text-gray-500 dark:text-gray-400 truncate">Your payment of GHS 250 to Accra Grocers has been completed.</p>
                  <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">Just now</p>
                </div>
              </div>
              
              <!-- Notification Item 2 -->
              <div class="flex items-start p-4 hover:bg-gray-50 dark:hover:bg-gray-700">
                <div class="flex-shrink-0 mr-3">
                  <div class="w-10 h-10 rounded-full bg-blue-100 dark:bg-blue-900 flex items-center justify-center text-blue-600 dark:text-blue-400">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                    </svg>
                  </div>
                </div>
                <div class="flex-1 min-w-0">
                  <p class="text-sm font-medium text-gray-900 dark:text-white">Money Received</p>
                  <p class="text-sm text-gray-500 dark:text-gray-400 truncate">Kofi Mensah sent you GHS 100.00</p>
                  <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">2 hours ago</p>
                </div>
              </div>
              
              <!-- Notification Item 3 -->
              <div class="flex items-start p-4 hover:bg-gray-50 dark:hover:bg-gray-700">
                <div class="flex-shrink-0 mr-3">
                  <div class="w-10 h-10 rounded-full bg-yellow-100 dark:bg-yellow-900 flex items-center justify-center text-yellow-600 dark:text-yellow-400">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                    </svg>
                  </div>
                </div>
                <div class="flex-1 min-w-0">
                  <p class="text-sm font-medium text-gray-900 dark:text-white">Low Balance Alert</p>
                  <p class="text-sm text-gray-500 dark:text-gray-400 truncate">Your wallet balance is below GHS 50. Consider adding funds.</p>
                  <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">Yesterday</p>
                </div>
              </div>
              
              <!-- Notification Item 4 -->
              <div class="flex items-start p-4 hover:bg-gray-50 dark:hover:bg-gray-700">
                <div class="flex-shrink-0 mr-3">
                  <div class="w-10 h-10 rounded-full bg-purple-100 dark:bg-purple-900 flex items-center justify-center text-purple-600 dark:text-purple-400">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                    </svg>
                  </div>
                </div>
                <div class="flex-1 min-w-0">
                  <p class="text-sm font-medium text-gray-900 dark:text-white">Profile Updated</p>
                  <p class="text-sm text-gray-500 dark:text-gray-400 truncate">Your profile verification is now complete.</p>
                  <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">2 days ago</p>
                </div>
              </div>
            </div>
            
            <div class="p-3 bg-gray-50 dark:bg-gray-700 text-center border-t border-gray-200 dark:border-gray-600">
              <a href="#" class="text-sm font-medium text-primary-600 dark:text-primary-400 hover:text-primary-800 dark:hover:text-primary-300">
                View all notifications
              </a>
            </div>
          </div>
        </div>
        
        <!-- User Profile Dropdown -->
        <div class="relative" data-controller="dropdown">
          <button class="flex items-center focus:outline-none" data-action="dropdown#toggle">
            <div class="h-10 w-10 rounded-full overflow-hidden border-2 border-white dark:border-gray-700 shadow-sm avatar-container">
              <% if current_user && current_user.avatar.attached? %>
                <% begin %>
                  <%= image_tag url_for(current_user.avatar), class: "h-full w-full object-cover" %>
                <% rescue Exception => e %>
                  <div class="h-full w-full bg-gradient-to-br from-primary-600 to-secondary-600 flex items-center justify-center text-white text-lg font-bold">
                    <%= current_user&.initials || "G" %>
                  </div>
                <% end %>
              <% else %>
                <div class="h-full w-full bg-gradient-to-br from-primary-600 to-secondary-600 flex items-center justify-center text-white text-lg font-bold initials-placeholder">
                  <%= current_user&.initials || "G" %>
                </div>
              <% end %>
            </div>
          </button>
          
          <!-- User Profile Dropdown Panel -->
