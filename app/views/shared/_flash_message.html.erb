<div
  class="<%=
    case type.to_s
    when 'success'
      'bg-green-50 dark:bg-green-900/30 border border-green-200 dark:border-green-800 text-green-800 dark:text-green-200'
    when 'error', 'alert'
      'bg-red-50 dark:bg-red-900/30 border border-red-200 dark:border-red-800 text-red-800 dark:text-red-200'
    when 'warning'
      'bg-yellow-50 dark:bg-yellow-900/30 border border-yellow-200 dark:border-yellow-800 text-yellow-800 dark:text-yellow-200'
    else
      'bg-blue-50 dark:bg-blue-900/30 border border-blue-200 dark:border-blue-800 text-blue-800 dark:text-blue-200'
    end
  %> rounded-lg p-4 mb-4 shadow-md transform transition-all duration-300 ease-in-out"
  data-controller="flash"
  data-flash-delay-value="3000"
  role="alert"
>
  <div class="flex items-center">
    <div class="flex-shrink-0 mr-3">
      <% case type.to_s %>
      <% when 'success' %>
        <svg class="h-5 w-5 text-green-500 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
        </svg>
      <% when 'error', 'alert' %>
        <svg class="h-5 w-5 text-red-500 dark:text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      <% when 'warning' %>
        <svg class="h-5 w-5 text-yellow-500 dark:text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
        </svg>
      <% else %>
        <svg class="h-5 w-5 text-blue-500 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
      <% end %>
    </div>
    <div class="flex-1 text-sm font-medium">
      <%= message %>
    </div>
    <div>
      <button
        type="button"
        class="<%=
          case type.to_s
          when 'success'
            'text-green-500 dark:text-green-400 hover:text-green-600 dark:hover:text-green-300'
          when 'error', 'alert'
            'text-red-500 dark:text-red-400 hover:text-red-600 dark:hover:text-red-300'
          when 'warning'
            'text-yellow-500 dark:text-yellow-400 hover:text-yellow-600 dark:hover:text-yellow-300'
          else
            'text-blue-500 dark:text-blue-400 hover:text-blue-600 dark:hover:text-blue-300'
          end
        %> focus:outline-none rounded-md p-1.5"
        data-action="flash#dismiss"
      >
        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>
  </div>
</div>
