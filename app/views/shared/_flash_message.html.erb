<% 
  # Map flash types to styles
  classes = case type.to_s
  when "success", "notice"
    "bg-green-100 border-green-400 text-green-700 dark:bg-green-900/50 dark:border-green-600 dark:text-green-200"
  when "error", "alert"
    "bg-red-100 border-red-400 text-red-700 dark:bg-red-900/50 dark:border-red-600 dark:text-red-200"
  when "warning"
    "bg-yellow-100 border-yellow-400 text-yellow-700 dark:bg-yellow-900/50 dark:border-yellow-600 dark:text-yellow-200"
  when "info"
    "bg-blue-100 border-blue-400 text-blue-700 dark:bg-blue-900/50 dark:border-blue-600 dark:text-blue-200"
  else
    "bg-gray-100 border-gray-400 text-gray-700 dark:bg-gray-800 dark:border-gray-600 dark:text-gray-200"
  end

  icon = case type.to_s
  when "success", "notice"
    '<svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>'
  when "error", "alert"
    '<svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" /></svg>'
  when "warning"
    '<svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" /></svg>'
  when "info"
    '<svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>'
  else
    '<svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>'
  end
%>

<div class="flex items-center w-full max-w-md p-4 mb-4 border rounded-lg shadow-lg pointer-events-auto transform transition-all duration-300 ease-in-out <%= classes %>"
     role="alert"
     data-flash-target="message"
     data-transition-enter="transition ease-out duration-300"
     data-transition-enter-start="opacity-0 transform translate-y-2"
     data-transition-enter-end="opacity-100 transform translate-y-0"
     data-transition-leave="transition ease-in duration-200"
     data-transition-leave-start="opacity-100 transform translate-y-0"
     data-transition-leave-end="opacity-0 transform -translate-y-2">
  <div class="inline-flex flex-shrink-0 justify-center items-center w-8 h-8 mr-3">
    <%= icon.html_safe %>
  </div>
  <div class="flex-grow text-sm font-medium">
    <%= message %>
  </div>
  <button type="button" 
          class="ml-auto -mx-1.5 -my-1.5 rounded-lg p-1.5 inline-flex h-8 w-8 focus:outline-none focus:ring-2 focus:ring-opacity-50" 
          data-action="click->flash#closeMessage"
          aria-label="Close">
    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
    </svg>
  </button>
</div>