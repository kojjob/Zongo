<%# Transaction PIN Management Modal %>
<div id="pin-modal" class="fixed inset-0 z-50 hidden items-center justify-center p-4 sm:p-0 opacity-0" data-controller="modal pin">
  <div class="fixed inset-0 bg-gray-900 bg-opacity-80 backdrop-blur-sm transition-opacity" data-action="click->modal#close"></div>

  <div class="relative bg-white dark:bg-gray-800 rounded-xl shadow-xl transform transition-all w-full max-w-md p-6 sm:p-8 overflow-hidden backdrop-blur-xl -translate-y-4 opacity-0 border-2 border-gray-200 dark:border-gray-700" data-modal-target="container">
    <div class="absolute top-0 right-0 pt-4 pr-4">
      <button type="button" class="text-gray-400 hover:text-gray-500 dark:text-gray-500 dark:hover:text-gray-400" data-action="modal#close">
        <span class="sr-only">Close</span>
        <%= icon "x", class: "h-6 w-6" %>
      </button>
    </div>

    <div class="sm:flex sm:items-start">
      <div class="mx-auto flex-shrink-0 flex items-center justify-center h-12 w-12 rounded-full bg-primary-100 dark:bg-primary-900 sm:mx-0 sm:h-10 sm:w-10">
        <%= icon "lock", class: "h-6 w-6 text-primary-600 dark:text-primary-400" %>
      </div>
      <div class="mt-3 text-center sm:mt-0 sm:ml-4 sm:text-left">
        <h3 class="text-lg leading-6 font-medium text-gray-900 dark:text-white" id="modal-title">
          Manage Transaction PIN
        </h3>
        <div class="mt-2">
          <p class="text-sm text-gray-500 dark:text-gray-400">
            Your transaction PIN adds an extra layer of security for all financial transactions.
          </p>
        </div>
      </div>
    </div>

    <div class="mt-6">
      <div class="hidden bg-red-100 dark:bg-red-900/30 text-red-800 dark:text-red-300 p-3 rounded-lg mb-4 error-message" data-pin-target="error"></div>

      <form id="pin-form" class="space-y-6" data-pin-target="form">
        <div id="current-pin-section" data-pin-target="currentPinSection">
          <label for="current-pin" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Current PIN</label>
          <div class="mt-1 relative">
            <input type="password" name="current_pin" id="current-pin" maxlength="4"
                  class="form-input block w-full pr-10 focus:ring-primary-500 focus:border-primary-500 rounded-md"
                  placeholder="Enter current 4-digit PIN"
                  pattern="[0-9]{4}"
                  inputmode="numeric"
                  data-pin-target="currentPin">
            <div class="absolute inset-y-0 right-0 flex items-center pr-3">
              <button type="button" class="text-gray-400 hover:text-gray-500 dark:text-gray-500 dark:hover:text-gray-400 toggle-password" data-target="current-pin">
                <%= icon "eye", class: "h-5 w-5" %>
              </button>
            </div>
          </div>
        </div>

        <div>
          <label for="new-pin" class="block text-sm font-medium text-gray-700 dark:text-gray-300">New PIN</label>
          <div class="mt-1 relative">
            <input type="password" name="new_pin" id="new-pin" maxlength="4"
                  class="form-input block w-full pr-10 focus:ring-primary-500 focus:border-primary-500 rounded-md"
                  placeholder="Enter new 4-digit PIN"
                  pattern="[0-9]{4}"
                  inputmode="numeric"
                  data-pin-target="newPin">
            <div class="absolute inset-y-0 right-0 flex items-center pr-3">
              <button type="button" class="text-gray-400 hover:text-gray-500 dark:text-gray-500 dark:hover:text-gray-400 toggle-password" data-target="new-pin">
                <%= icon "eye", class: "h-5 w-5" %>
              </button>
            </div>
          </div>
          <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">PIN must be exactly 4 digits</p>
        </div>

        <div>
          <label for="confirm-pin" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Confirm New PIN</label>
          <div class="mt-1 relative">
            <input type="password" name="confirm_pin" id="confirm-pin" maxlength="4"
                  class="form-input block w-full pr-10 focus:ring-primary-500 focus:border-primary-500 rounded-md"
                  placeholder="Confirm new 4-digit PIN"
                  pattern="[0-9]{4}"
                  inputmode="numeric"
                  data-pin-target="confirmPin">
            <div class="absolute inset-y-0 right-0 flex items-center pr-3">
              <button type="button" class="text-gray-400 hover:text-gray-500 dark:text-gray-500 dark:hover:text-gray-400 toggle-password" data-target="confirm-pin">
                <%= icon "eye", class: "h-5 w-5" %>
              </button>
            </div>
          </div>
        </div>

        <div class="flex justify-end space-x-3">
          <button type="button" class="btn btn-white" data-action="modal#close">
            Cancel
          </button>
          <button type="submit" class="btn btn-primary">
            Save PIN
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
