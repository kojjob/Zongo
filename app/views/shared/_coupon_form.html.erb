<div class="coupon-form mt-6 mb-6" data-controller="coupon">
  <div class="flex items-center">
    <div class="relative flex-grow">
      <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
        <%= icon "ticket", class: "h-5 w-5 text-gray-400" %>
      </div>
      <input type="text" 
             name="coupon_code" 
             id="coupon_code" 
             class="block w-full pl-10 pr-12 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:text-white sm:text-sm" 
             placeholder="Enter coupon code"
             data-coupon-target="input"
             data-action="keyup->coupon#checkEnter">
    </div>
    <button type="button" 
            class="ml-3 inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500"
            data-coupon-target="applyButton"
            data-action="click->coupon#apply">
      Apply
    </button>
  </div>
  
  <div class="mt-2 text-sm text-red-600 dark:text-red-400 hidden" data-coupon-target="error"></div>
  
  <div class="mt-4 p-4 bg-green-50 dark:bg-green-900/20 border border-green-200 dark:border-green-800 rounded-md hidden" data-coupon-target="success">
    <div class="flex">
      <div class="flex-shrink-0">
        <%= icon "check-circle", class: "h-5 w-5 text-green-400" %>
      </div>
      <div class="ml-3">
        <h3 class="text-sm font-medium text-green-800 dark:text-green-300" data-coupon-target="successTitle">Coupon applied!</h3>
        <div class="mt-2 text-sm text-green-700 dark:text-green-400">
          <p data-coupon-target="successMessage">Your discount has been applied to your order.</p>
        </div>
        <div class="mt-4">
          <div class="-mx-2 -my-1.5 flex">
            <button type="button" 
                    class="px-2 py-1.5 rounded-md text-sm font-medium text-green-800 dark:text-green-300 hover:bg-green-100 dark:hover:bg-green-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500"
                    data-action="click->coupon#remove">
              Remove coupon
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
