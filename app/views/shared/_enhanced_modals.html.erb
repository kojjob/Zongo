<%# Standard Modal Component %>
<div
  id="<%= id %>"
  class="modal fixed inset-0 z-50 flex items-center justify-center hidden"
  data-controller="modal"
  data-action="keydown@window->modal#handleKeydown click@window->modal#handleBackdropClick"
  data-modal-allow-close-value="<%= defined?(allow_close) ? allow_close : true %>"
  role="dialog"
  aria-modal="true"
  aria-labelledby="<%= id %>-title"
  aria-describedby="<%= id %>-description"
>
  <%# Backdrop with blur effect %>
  <div 
    class="fixed inset-0 bg-black/40 dark:bg-black/60 backdrop-blur-sm opacity-0 transition-opacity duration-300" 
    data-modal-target="backdrop"
  ></div>
  
  <%# Modal Content with 3D animation %>
  <div 
    class="modal-content relative bg-white dark:bg-gray-800 rounded-2xl shadow-2xl w-full max-w-md mx-4 p-6 transform scale-90 opacity-0 transition-all duration-300 perspective-1000"
    data-modal-target="content"
  >
    <%# Close button - if allowed %>
    <% if !defined?(allow_close) || allow_close %>
      <button 
        type="button"
        class="absolute top-3 right-3 text-gray-400 dark:text-gray-500 hover:text-gray-700 dark:hover:text-gray-300 transition-colors duration-200 focus:outline-none"
        data-action="modal#close"
        aria-label="Close modal"
      >
        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    <% end %>
    
    <%# Modal Header %>
    <div class="mb-5">
      <% if defined?(icon) && icon.present? %>
        <div class="flex justify-center mb-4">
          <div class="inline-flex items-center justify-center p-3 rounded-full
            <% case defined?(icon_type) ? icon_type : 'default' 
              when 'success' then 'bg-green-100 dark:bg-green-900/30 text-green-600 dark:text-green-400'
              when 'warning' then 'bg-yellow-100 dark:bg-yellow-900/30 text-yellow-600 dark:text-yellow-400'
              when 'error' then 'bg-red-100 dark:bg-red-900/30 text-red-600 dark:text-red-400'
              when 'info' then 'bg-blue-100 dark:bg-blue-900/30 text-blue-600 dark:text-blue-400'
              else 'bg-primary-100 dark:bg-primary-900/30 text-primary-600 dark:text-primary-400'
            end %>"
          >
            <%= render partial: "shared/icon", locals: { name: icon, size: "lg" } %>
          </div>
        </div>
      <% end %>
      
      <h3 id="<%= id %>-title" class="text-xl font-bold text-gray-900 dark:text-white text-center"><%= title %></h3>
      
      <% if defined?(description) && description.present? %>
        <p id="<%= id %>-description" class="mt-2 text-gray-600 dark:text-gray-300 text-center">
          <%= description %>
        </p>
      <% end %>
    </div>
    
    <%# Modal Body - Yields the block content %>
    <div class="modal-body">
      <%= yield %>
    </div>
  </div>
</div>

<%# Slide-in Dialog Component (Side Panel) %>
<div
  id="<%= id %>"
  class="slide-dialog fixed inset-0 z-50 flex hidden"
  data-controller="slide-dialog"
  data-action="keydown@window->slide-dialog#handleKeydown click@window->slide-dialog#handleBackdropClick"
  data-slide-dialog-position-value="<%= defined?(position) ? position : 'right' %>"
  data-slide-dialog-width-value="<%= defined?(width) ? width : 'md' %>"
  role="dialog"
  aria-modal="true"
  aria-labelledby="<%= id %>-title"
>
  <%# Backdrop with blur effect %>
  <div 
    class="fixed inset-0 bg-black/40 dark:bg-black/60 backdrop-blur-sm opacity-0 transition-opacity duration-300" 
    data-slide-dialog-target="backdrop"
  ></div>
  
  <%# Panel Content - Position (left/right) is determined by controller %>
  <div
    class="slide-dialog-content fixed h-full bg-white dark:bg-gray-800 shadow-2xl overflow-hidden flex flex-col transform translate-x-full opacity-0 transition-all duration-300"
    data-slide-dialog-target="content"
  >
    <%# Dialog Header %>
    <div class="flex items-center justify-between px-6 py-4 border-b border-gray-200 dark:border-gray-700">
      <h3 id="<%= id %>-title" class="text-lg font-bold text-gray-900 dark:text-white">
        <% if defined?(icon) && icon.present? %>
          <span class="inline-flex items-center">
            <%= render partial: "shared/icon", locals: { name: icon, size: "md", class_name: "mr-2" } %>
            <%= title %>
          </span>
        <% else %>
          <%= title %>
        <% end %>
      </h3>
      
      <button 
        type="button"
        class="text-gray-400 dark:text-gray-500 hover:text-gray-700 dark:hover:text-gray-300 transition-colors duration-200 focus:outline-none"
        data-action="slide-dialog#close"
        aria-label="Close dialog"
      >
        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>
    
    <%# Dialog Body - Scrollable %>
    <div class="flex-1 overflow-y-auto p-6">
      <%= yield %>
    </div>
    
    <% if defined?(footer) && footer %>
      <%# Dialog Footer - Sticky at bottom %>
      <div class="px-6 py-4 bg-gray-50 dark:bg-gray-800 border-t border-gray-200 dark:border-gray-700">
        <div class="flex items-center justify-end space-x-4">
          <button 
            type="button"
            class="px-4 py-2 bg-white dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded-lg border border-gray-300 dark:border-gray-600 hover:bg-gray-50 dark:hover:bg-gray-600 transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500"
            data-action="slide-dialog#close"
          >
            <%= defined?(cancel_text) ? cancel_text : "Cancel" %>
          </button>
          
          <button 
            type="button"
            class="px-4 py-2 bg-primary-600 hover:bg-primary-700 text-white rounded-lg shadow-sm transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500"
            data-action="slide-dialog#confirm"
          >
            <%= defined?(confirm_text) ? confirm_text : "Confirm" %>
          </button>
        </div>
      </div>
    <% end %>
  </div>
</div>

<%# Bottom Sheet Dialog Component (Mobile Optimized) %>
<div
  id="<%= id %>"
  class="bottom-sheet fixed inset-0 z-50 flex items-end justify-center hidden"
  data-controller="bottom-sheet"
  data-action="keydown@window->bottom-sheet#handleKeydown click@window->bottom-sheet#handleBackdropClick touchstart->bottom-sheet#handleTouchStart touchmove->bottom-sheet#handleTouchMove touchend->bottom-sheet#handleTouchEnd"
  role="dialog"
  aria-modal="true"
  aria-labelledby="<%= id %>-title"
>
  <%# Backdrop %>
  <div 
    class="fixed inset-0 bg-black/40 dark:bg-black/60 backdrop-blur-sm opacity-0 transition-opacity duration-300" 
    data-bottom-sheet-target="backdrop"
  ></div>
  
  <%# Bottom Sheet Content - Slidable with touch gestures %>
  <div 
    class="fixed bottom-0 inset-x-0 bg-white dark:bg-gray-800 rounded-t-2xl shadow-2xl max-h-[90vh] overflow-hidden transform translate-y-full transition-transform duration-300"
    data-bottom-sheet-target="content"
  >
    <%# Drag handle %>
    <div 
      class="bg-gray-100 dark:bg-gray-700 cursor-grab flex justify-center py-2 sticky top-0 z-10"
      data-bottom-sheet-target="dragHandle"
    >
      <div class="w-12 h-1.5 rounded-full bg-gray-300 dark:bg-gray-600"></div>
    </div>
    
    <%# Sheet Header %>
    <div class="px-6 pt-2 pb-4">
      <h3 id="<%= id %>-title" class="text-lg font-bold text-gray-900 dark:text-white">
        <%= title %>
      </h3>
      
      <% if defined?(description) && description.present? %>
        <p class="mt-1 text-gray-600 dark:text-gray-300 text-sm">
          <%= description %>
        </p>
      <% end %>
    </div>
    
    <%# Sheet Body - Scrollable %>
    <div class="px-6 pb-6 overflow-y-auto" style="max-height: calc(80vh - 4rem);">
      <%= yield %>
    </div>
  </div>
</div>

<%# Alert Dialog Component (for confirmations, etc.) %>
<div
  id="<%= id %>"
  class="alert-dialog fixed inset-0 z-50 flex items-center justify-center hidden"
  data-controller="alert-dialog"
  data-action="keydown@window->alert-dialog#handleKeydown click@window->alert-dialog#handleBackdropClick"
  data-alert-dialog-type-value="<%= defined?(alert_type) ? alert_type : 'default' %>"
  role="alertdialog"
  aria-modal="true"
  aria-labelledby="<%= id %>-title"
  aria-describedby="<%= id %>-description"
>
  <%# Backdrop with blur effect %>
  <div 
    class="fixed inset-0 bg-black/40 dark:bg-black/60 backdrop-blur-sm opacity-0 transition-opacity duration-300" 
    data-alert-dialog-target="backdrop"
  ></div>
  
  <%# Alert Dialog Content with bounce animation %>
  <div 
    class="alert-dialog-content relative bg-white dark:bg-gray-800 rounded-2xl shadow-2xl w-full max-w-sm mx-4 p-6 transform scale-90 opacity-0 transition-all duration-300 bounce-animation"
    data-alert-dialog-target="content"
  >
    <%# Alert Icon - Type-specific %>
    <div class="flex justify-center mb-5">
      <div class="inline-flex items-center justify-center p-3 rounded-full
        <% case defined?(alert_type) ? alert_type : 'default'
          when 'success' then 'bg-green-100 dark:bg-green-900/30 text-green-600 dark:text-green-400'
          when 'warning' then 'bg-yellow-100 dark:bg-yellow-900/30 text-yellow-600 dark:text-yellow-400'
          when 'error' then 'bg-red-100 dark:bg-red-900/30 text-red-600 dark:text-red-400'
          when 'info' then 'bg-blue-100 dark:bg-blue-900/30 text-blue-600 dark:text-blue-400'
          when 'question' then 'bg-purple-100 dark:bg-purple-900/30 text-purple-600 dark:text-purple-400'
          else 'bg-primary-100 dark:bg-primary-900/30 text-primary-600 dark:text-primary-400'
        end %>"
      >
        <% 
          icon_name = case defined?(alert_type) ? alert_type : 'default'
            when 'success' then 'success'
            when 'warning' then 'warning' 
            when 'error' then 'error'
            when 'info' then 'info'
            when 'question' then 'question-mark-circle'
            else 'bell'
          end
        %>
        <%= render partial: "shared/icon", locals: { name: icon_name, size: "xl" } %>
      </div>
    </div>
    
    <%# Alert Content %>
    <div class="text-center mb-6">
      <h3 id="<%= id %>-title" class="text-xl font-bold text-gray-900 dark:text-white mb-2"><%= title %></h3>
      <p id="<%= id %>-description" class="text-gray-600 dark:text-gray-300">
        <%= defined?(description) ? description : yield %>
      </p>
    </div>
    
    <%# Alert Actions %>
    <div class="flex flex-col space-y-3">
      <% if defined?(confirm_text) %>
        <button 
          type="button"
          class="w-full px-4 py-2.5 rounded-xl text-white font-medium shadow-sm focus:outline-none focus:ring-2 focus:ring-offset-2 transition-colors duration-200
            <% case defined?(alert_type) ? alert_type : 'default'
              when 'success' then 'bg-green-600 hover:bg-green-700 focus:ring-green-500'
              when 'warning' then 'bg-yellow-600 hover:bg-yellow-700 focus:ring-yellow-500'
              when 'error' then 'bg-red-600 hover:bg-red-700 focus:ring-red-500'
              when 'info' then 'bg-blue-600 hover:bg-blue-700 focus:ring-blue-500'
              when 'question' then 'bg-purple-600 hover:bg-purple-700 focus:ring-purple-500'
              else 'bg-primary-600 hover:bg-primary-700 focus:ring-primary-500'
            end %>"
          data-action="alert-dialog#confirm"
          data-alert-dialog-primary-button
        >
          <%= confirm_text %>
        </button>
      <% end %>
      
      <% if defined?(cancel_text) %>
        <button 
          type="button"
          class="w-full px-4 py-2.5 rounded-xl bg-white dark:bg-gray-700 text-gray-700 dark:text-gray-300 font-medium border border-gray-300 dark:border-gray-600 hover:bg-gray-50 dark:hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transition-colors duration-200"
          data-action="alert-dialog#cancel"
        >
          <%= cancel_text %>
        </button>
      <% end %>
    </div>
  </div>
</div>

<%# Full Screen Modal (for immersive experiences) %>
<div
  id="<%= id %>"
  class="fullscreen-modal fixed inset-0 z-50 hidden"
  data-controller="fullscreen-modal"
  data-action="keydown@window->fullscreen-modal#handleKeydown"
  role="dialog"
  aria-modal="true"
  aria-labelledby="<%= id %>-title"
>
  <%# Full screen container with fade transition %>
  <div 
    class="fixed inset-0 bg-white dark:bg-gray-900 opacity-0 transition-opacity duration-300 overflow-y-auto"
    data-fullscreen-modal-target="container"
  >
    <%# Close button (always visible at top-right) %>
    <button 
      type="button"
      class="fixed top-4 right-4 z-10 flex items-center justify-center w-10 h-10 rounded-full bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500"
      data-action="fullscreen-modal#close"
      aria-label="Close"
    >
      <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>
    
    <%# Content area %>
    <div class="w-full h-full py-16 px-4">
      <div class="max-w-6xl mx-auto">
        <% if defined?(title) && title.present? %>
          <h2 id="<%= id %>-title" class="text-2xl font-bold text-gray-900 dark:text-white mb-6"><%= title %></h2>
        <% end %>
        
        <%= yield %>
      </div>
    </div>
  </div>
</div>

<%# Loading Dialog - Used for long operations %>
<div
  id="<%= id || 'loading-dialog' %>"
  class="loading-dialog fixed inset-0 z-50 flex items-center justify-center hidden"
  data-controller="loading-dialog"
  role="dialog"
  aria-modal="true"
  aria-labelledby="<%= id || 'loading-dialog' %>-title"
>
  <%# Backdrop with blur effect %>
  <div 
    class="fixed inset-0 bg-black/40 dark:bg-black/60 backdrop-blur-sm opacity-0 transition-opacity duration-300" 
    data-loading-dialog-target="backdrop"
  ></div>
  
  <%# Loading Dialog Content %>
  <div 
    class="loading-dialog-content relative bg-white dark:bg-gray-800 rounded-2xl shadow-2xl w-full max-w-sm mx-4 p-6 transform scale-90 opacity-0 transition-all duration-300"
    data-loading-dialog-target="content"
  >
    <%# Loading Spinner %>
    <div class="flex justify-center mb-5">
      <div class="inline-flex items-center justify-center">
        <svg class="animate-spin -ml-1 mr-3 h-10 w-10 text-primary-600 dark:text-primary-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
      </div>
    </div>
    
    <%# Loading Text %>
    <div class="text-center mb-2">
      <h3 id="<%= id || 'loading-dialog' %>-title" class="text-xl font-bold text-gray-900 dark:text-white">
        <%= defined?(title) ? title : "Loading..." %>
      </h3>
      
      <% if defined?(description) && description.present? %>
        <p class="mt-2 text-gray-600 dark:text-gray-300">
          <%= description %>
        </p>
      <% end %>
    </div>
    
    <%# Progress Bar (optional) %>
    <% if defined?(show_progress) && show_progress %>
      <div class="mt-4">
        <div class="w-full bg-gray-200 dark:bg-gray-700 rounded-full h-2.5 mb-1">
          <div 
            class="bg-primary-600 dark:bg-primary-500 h-2.5 rounded-full transition-all duration-300" 
            style="width: 0%"
            data-loading-dialog-target="progressBar"
          ></div>
        </div>
        <div class="flex justify-between text-xs text-gray-500 dark:text-gray-400">
          <span data-loading-dialog-target="progressText">0%</span>
          <span>Processing...</span>
        </div>
      </div>
    <% end %>
  </div>
</div>

