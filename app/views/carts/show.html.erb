<div class="bg-white dark:bg-gray-900">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="text-center">
      <h1 class="text-3xl font-extrabold tracking-tight text-gray-900 dark:text-white sm:text-4xl">
        Your Shopping Cart
      </h1>
      <p class="mt-4 max-w-2xl mx-auto text-xl text-gray-500 dark:text-gray-400">
        Review your items and proceed to checkout.
      </p>
    </div>

    <% if @cart.empty? %>
      <div class="mt-12 text-center py-12 bg-gray-50 dark:bg-gray-800 rounded-xl">
        <svg xmlns="http://www.w3.org/2000/svg" class="mx-auto h-24 w-24 text-gray-400 dark:text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
        </svg>
        <h2 class="mt-4 text-xl font-medium text-gray-900 dark:text-white">Your cart is empty</h2>
        <p class="mt-2 text-gray-500 dark:text-gray-400">Looks like you haven't added any products to your cart yet.</p>
        <div class="mt-6">
          <a href="<%= shop_path %>" class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500">
            Continue Shopping
          </a>
        </div>
      </div>
    <% else %>
      <div class="mt-12 lg:grid lg:grid-cols-12 lg:gap-x-12 lg:items-start">
        <div class="lg:col-span-7">
          <div class="bg-white dark:bg-gray-800 shadow-md rounded-xl overflow-hidden">
            <ul role="list" class="divide-y divide-gray-200 dark:divide-gray-700">
              <% @cart.cart_items.includes(:product).each do |item| %>
                <li class="p-6 flex">
                  <div class="flex-shrink-0 w-24 h-24 bg-gray-200 dark:bg-gray-700 rounded-md overflow-hidden">
                    <% if item.product.images.attached? %>
                      <%= image_tag item.product.images.first, class: "w-full h-full object-center object-cover" %>
                    <% else %>
                      <div class="w-full h-full flex items-center justify-center">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-gray-400 dark:text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                        </svg>
                      </div>
                    <% end %>
                  </div>

                  <div class="ml-6 flex-1 flex flex-col">
                    <div class="flex">
                      <div class="min-w-0 flex-1">
                        <h4 class="text-lg font-medium text-gray-900 dark:text-white">
                          <a href="<%= product_path(item.product) %>"><%= item.product.name %></a>
                        </h4>
                        <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
                          <%= item.product.shop_category.name %>
                        </p>
                        <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
                          <%= item.product.formatted_price %> each
                        </p>
                      </div>

                      <div class="ml-4 flex-shrink-0 flow-root">
                        <%= button_to remove_from_cart_path(product_id: item.product.id), method: :delete, class: "text-sm font-medium text-red-600 dark:text-red-400 hover:text-red-500 dark:hover:text-red-300" do %>
                          <span>Remove</span>
                        <% end %>
                      </div>
                    </div>

                    <div class="flex-1 pt-4 flex items-end justify-between">
                      <div class="flex items-center space-x-2">
                        <span class="text-gray-500 dark:text-gray-400">Qty</span>
                        <%= form_with url: update_cart_item_path, method: :patch, class: "flex items-center" do %>
                          <%= hidden_field_tag :product_id, item.product.id %>
                          <div class="flex items-center border border-gray-300 dark:border-gray-600 rounded-md">
                            <button type="button" data-action="decrement" class="p-2 text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300">
                              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4" />
                              </svg>
                            </button>
                            <%= number_field_tag :quantity, item.quantity, min: 1, max: item.product.stock_quantity, class: "w-12 text-center border-0 focus:ring-0 dark:bg-gray-800 dark:text-white" %>
                            <button type="button" data-action="increment" class="p-2 text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300">
                              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                              </svg>
                            </button>
                          </div>
                          <button type="submit" class="ml-2 text-sm text-primary-600 dark:text-primary-400 hover:text-primary-500 dark:hover:text-primary-300">
                            Update
                          </button>
                        <% end %>
                      </div>
                      <div class="ml-4">
                        <p class="text-lg font-medium text-gray-900 dark:text-white">
                          GHS <%= (item.product.price * item.quantity).round(2) %>
                        </p>
                      </div>
                    </div>
                  </div>
                </li>
              <% end %>
            </ul>

            <div class="border-t border-gray-200 dark:border-gray-700 py-6 px-6">
              <%= button_to clear_cart_path, method: :delete, class: "text-sm font-medium text-primary-600 dark:text-primary-400 hover:text-primary-500 dark:hover:text-primary-300 flex items-center" do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                </svg>
                Clear Cart
              <% end %>
            </div>
          </div>

          <div class="mt-6">
            <a href="<%= shop_path %>" class="text-sm font-medium text-primary-600 dark:text-primary-400 hover:text-primary-500 dark:hover:text-primary-300 flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M9.707 14.707a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 1.414L7.414 9H15a1 1 0 110 2H7.414l2.293 2.293a1 1 0 010 1.414z" clip-rule="evenodd" />
              </svg>
              Continue Shopping
            </a>
          </div>
        </div>

        <div class="mt-10 lg:mt-0 lg:col-span-5">
          <div class="bg-white dark:bg-gray-800 shadow-md rounded-xl overflow-hidden">
            <div class="px-6 py-6">
              <h2 class="text-lg font-medium text-gray-900 dark:text-white">Order Summary</h2>

              <!-- Coupon Form -->
              <% if user_signed_in? %>
                <%= render 'shared/coupon_form' %>
              <% end %>

              <div class="mt-6 space-y-4">
                <div class="flex items-center justify-between">
                  <p class="text-sm text-gray-600 dark:text-gray-400">Subtotal</p>
                  <p id="cart-subtotal" class="text-sm font-medium text-gray-900 dark:text-white">GHS <%= @cart.total_price.round(2) %></p>
                </div>

                <% if session[:coupon_discount].present? && session[:coupon_discount].to_f > 0 %>
                  <div class="flex items-center justify-between text-green-600 dark:text-green-400">
                    <p class="text-sm">Coupon Discount (<%= session[:coupon_code] %>)</p>
                    <p id="cart-discount" class="text-sm font-medium">-GHS <%= session[:coupon_discount].to_f.round(2) %></p>
                  </div>
                <% else %>
                  <div class="flex items-center justify-between text-green-600 dark:text-green-400 hidden">
                    <p class="text-sm">Coupon Discount</p>
                    <p id="cart-discount" class="text-sm font-medium">-GHS 0.00</p>
                  </div>
                <% end %>

                <div class="flex items-center justify-between">
                  <p class="text-sm text-gray-600 dark:text-gray-400">Shipping</p>
                  <p class="text-sm font-medium text-gray-900 dark:text-white">GHS 10.00</p>
                </div>

                <div class="flex items-center justify-between">
                  <p class="text-sm text-gray-600 dark:text-gray-400">Tax</p>
                  <p class="text-sm font-medium text-gray-900 dark:text-white">GHS <%= (@cart.total_price * 0.05).round(2) %></p>
                </div>

                <div class="border-t border-gray-200 dark:border-gray-700 pt-4 flex items-center justify-between">
                  <p class="text-base font-medium text-gray-900 dark:text-white">Order Total</p>
                  <%
                    discount = session[:coupon_discount].present? ? session[:coupon_discount].to_f : 0
                    total = (@cart.total_price - discount + 10 + @cart.total_price * 0.05).round(2)
                  %>
                  <p id="cart-total" class="text-base font-medium text-gray-900 dark:text-white">GHS <%= total %></p>
                </div>
              </div>

              <div class="mt-6">
                <% if user_signed_in? %>
                  <a href="<%= new_order_path %>" class="w-full flex justify-center items-center px-6 py-3 border border-transparent rounded-md shadow-sm text-base font-medium text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500">
                    Proceed to Checkout
                  </a>
                <% else %>
                  <div class="space-y-3">
                    <a href="<%= new_user_session_path %>" class="w-full flex justify-center items-center px-6 py-3 border border-transparent rounded-md shadow-sm text-base font-medium text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500">
                      Sign In to Checkout
                    </a>
                    <a href="<%= new_user_registration_path %>" class="w-full flex justify-center items-center px-6 py-3 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm text-base font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500">
                      Create an Account
                    </a>
                  </div>
                <% end %>
              </div>

              <div class="mt-6 flex items-center">
                <div class="flex-shrink-0">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-green-500" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                  </svg>
                </div>
                <p class="ml-2 text-sm text-gray-500 dark:text-gray-400">
                  Secure checkout powered by Zongo Pay
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Quantity increment/decrement buttons
    document.querySelectorAll('[data-action="decrement"]').forEach(button => {
      button.addEventListener('click', function() {
        const input = this.parentNode.querySelector('input[type="number"]');
        if (input.value > 1) {
          input.value = parseInt(input.value) - 1;
        }
      });
    });

    document.querySelectorAll('[data-action="increment"]').forEach(button => {
      button.addEventListener('click', function() {
        const input = this.parentNode.querySelector('input[type="number"]');
        const max = parseInt(input.getAttribute('max'));
        if (parseInt(input.value) < max) {
          input.value = parseInt(input.value) + 1;
        }
      });
    });
  });
</script>
