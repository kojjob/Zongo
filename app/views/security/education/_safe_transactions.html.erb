  <!-- Step-by-step guide with visuals -->
  <div class="mb-8">
    <h3 class="text-lg font-medium mb-6 text-gray-900 dark:text-white">Safe Transaction Checklist</h3>
    
    <div class="space-y-6">
      <!-- Step 1 -->
      <div class="flex flex-col md:flex-row items-start bg-blue-50 dark:bg-blue-900/20 rounded-lg p-4">
        <div class="flex-shrink-0 bg-blue-100 dark:bg-blue-800 h-12 w-12 rounded-full flex items-center justify-center mb-4 md:mb-0 md:mr-4">
          <span class="text-xl font-bold text-blue-700 dark:text-blue-300">1</span>
        </div>
        <div class="flex-1">
          <h4 class="text-lg font-medium text-blue-800 dark:text-blue-300 mb-2">Check Recipient Details</h4>
          <p class="text-gray-700 dark:text-gray-300 mb-3">
            Before sending money, make sure you have the correct name and number of the person you're sending to.
          </p>
          <div class="flex items-center bg-white dark:bg-gray-800 p-3 rounded-lg border border-blue-200 dark:border-blue-800">
            <div class="flex-shrink-0 mr-3">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5.121 17.804A13.937 13.937 0 0112 16c2.5 0 4.847.655 6.879 1.804M15 10a3 3 0 11-6 0 3 3 0 016 0zm6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <div>
              <div class="font-medium">Kofi Mensah</div>
              <div class="text-sm text-gray-500 dark:text-gray-400">+233 55 123 4567</div>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Step 2 -->
      <div class="flex flex-col md:flex-row items-start bg-blue-50 dark:bg-blue-900/20 rounded-lg p-4">
        <div class="flex-shrink-0 bg-blue-100 dark:bg-blue-800 h-12 w-12 rounded-full flex items-center justify-center mb-4 md:mb-0 md:mr-4">
          <span class="text-xl font-bold text-blue-700 dark:text-blue-300">2</span>
        </div>
        <div class="flex-1">
          <h4 class="text-lg font-medium text-blue-800 dark:text-blue-300 mb-2">Double-Check Amount</h4>
          <p class="text-gray-700 dark:text-gray-300 mb-3">
            Make sure the amount is correct. Check for extra zeros or decimal points.
          </p>
          <div class="flex items-center bg-white dark:bg-gray-800 p-3 rounded-lg border border-blue-200 dark:border-blue-800">
            <div class="flex-shrink-0 mr-3">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <div>
              <div class="font-medium">Amount</div>
              <div class="text-xl font-mono">₵ 200.00</div>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Step 3 -->
      <div class="flex flex-col md:flex-row items-start bg-blue-50 dark:bg-blue-900/20 rounded-lg p-4">
        <div class="flex-shrink-0 bg-blue-100 dark:bg-blue-800 h-12 w-12 rounded-full flex items-center justify-center mb-4 md:mb-0 md:mr-4">
          <span class="text-xl font-bold text-blue-700 dark:text-blue-300">3</span>
        </div>
        <div class="flex-1">
          <h4 class="text-lg font-medium text-blue-800 dark:text-blue-300 mb-2">Enter Your PIN</h4>
          <p class="text-gray-700 dark:text-gray-300 mb-3">
            Always use your PIN to confirm transactions. Never share your PIN with others.
          </p>
          <div class="flex items-center bg-white dark:bg-gray-800 p-3 rounded-lg border border-blue-200 dark:border-blue-800">
            <div class="flex-shrink-0 mr-3">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
              </svg>
            </div>
            <div>
              <div class="font-medium">Enter PIN</div>
              <div class="flex mt-1 space-x-2">
                <div class="h-4 w-4 rounded-full bg-blue-500"></div>
                <div class="h-4 w-4 rounded-full bg-blue-500"></div>
                <div class="h-4 w-4 rounded-full bg-blue-500"></div>
                <div class="h-4 w-4 rounded-full bg-blue-500"></div>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Step 4 -->
      <div class="flex flex-col md:flex-row items-start bg-blue-50 dark:bg-blue-900/20 rounded-lg p-4">
        <div class="flex-shrink-0 bg-blue-100 dark:bg-blue-800 h-12 w-12 rounded-full flex items-center justify-center mb-4 md:mb-0 md:mr-4">
          <span class="text-xl font-bold text-blue-700 dark:text-blue-300">4</span>
        </div>
        <div class="flex-1">
          <h4 class="text-lg font-medium text-blue-800 dark:text-blue-300 mb-2">Verify Receipt</h4>
          <p class="text-gray-700 dark:text-gray-300 mb-3">
            Always check the receipt or confirmation message to make sure your transaction was successful.
          </p>
          <div class="flex items-center bg-white dark:bg-gray-800 p-3 rounded-lg border border-blue-200 dark:border-blue-800">
            <div class="flex-shrink-0 mr-3">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <div>
              <div class="font-medium text-green-600 dark:text-green-400">Transaction Successful!</div>
              <div class="text-sm text-gray-500 dark:text-gray-400">Sent ₵200.00 to Kofi Mensah</div>
              <div class="text-xs text-gray-500 dark:text-gray-400">Transaction ID: TXN2023456789</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Warning Signs -->
  <div class="mb-6">
    <h3 class="text-lg font-medium mb-4 text-gray-900 dark:text-white flex items-center">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-yellow-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
