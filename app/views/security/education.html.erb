<!-- JavaScript for Security Quiz -->
<script>
  // This would be in a separate Stimulus controller in a real implementation
  document.addEventListener('DOMContentLoaded', function() {
    class SecurityQuizController {
      connect() {
        this.correctCount = 0;
        this.totalQuestions = document.querySelectorAll('[data-question-id]').length;
        this.answeredQuestions = new Set();
      }
      
      checkAnswer(event) {
        const button = event.currentTarget;
        const questionContainer = button.closest('[data-question-id]');
        const questionId = questionContainer.dataset.questionId;
        
        // If already answered, do nothing
        if (this.answeredQuestions.has(questionId)) return;
        
        const isCorrect = button.dataset.correct === 'true';
        const allButtons = questionContainer.querySelectorAll('[data-action="click->security-quiz#checkAnswer"]');
        
        // Disable all buttons in this question
        allButtons.forEach(btn => {
          btn.disabled = true;
          btn.classList.add('cursor-not-allowed');
        });
        
        // Mark the selected button
        if (isCorrect) {
          button.classList.add('bg-green-100', 'dark:bg-green-900/30', 'border-green-500');
          button.querySelector('div').classList.add('bg-green-500', 'border-green-500');
          button.querySelector('div').innerHTML = '<svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>';
          this.correctCount++;
          
          // Show correct feedback
          questionContainer.querySelector('[data-feedback-correct]').classList.remove('hidden');
        } else {
          button.classList.add('bg-red-100', 'dark:bg-red-900/30', 'border-red-500');
          button.querySelector('div').classList.add('bg-red-500', 'border-red-500');
          button.querySelector('div').innerHTML = '<svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" /></svg>';
          
          // Show incorrect feedback
          questionContainer.querySelector('[data-feedback-incorrect]').classList.remove('hidden');
          
          // Highlight the correct answer
          allButtons.forEach(btn => {
            if (btn.dataset.correct === 'true') {
              btn.classList.add('bg-green-100', 'dark:bg-green-900/30', 'border-green-500');
              btn.querySelector('div').classList.add('bg-green-500', 'border-green-500');
              btn.querySelector('div').innerHTML = '<svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>';
            }
          });
        }
        
        this.answeredQuestions.add(questionId);
        
        // Check if all questions have been answered
        if (this.answeredQuestions.size === this.totalQuestions) {
          this.showResults();
        }
      }
      
      showResults() {
        const resultsContainer = document.querySelector('[data-quiz-results]');
        const correctCountElement = document.querySelector('[data-correct-count]');
        
        if (resultsContainer && correctCountElement) {
          correctCountElement.textContent = this.correctCount;
          resultsContainer.classList.remove('hidden');
        }
      }
      
      resetQuiz() {
        // Reset counters
        this.correctCount = 0;
        this.answeredQuestions.clear();
        
        // Hide results
        const resultsContainer = document.querySelector('[data-quiz-results]');
        if (resultsContainer) {
          resultsContainer.classList.add('hidden');
        }
        
        // Reset all questions
        const questions = document.querySelectorAll('[data-question-id]');
        questions.forEach(question => {
          // Enable all buttons
          const buttons = question.querySelectorAll('[data-action="click->security-quiz#checkAnswer"]');
          buttons.forEach(btn => {
            btn.disabled = false;
            btn.classList.remove('cursor-not-allowed');
            btn.classList.remove('bg-green-100', 'dark:bg-green-900/30', 'border-green-500');
            btn.classList.remove('bg-red-100', 'dark:bg-red-900/30', 'border-red-500');
            
            // Reset the radio buttons
            const radioButton = btn.querySelector('div');
            radioButton.classList.remove('bg-green-500', 'border-green-500');
            radioButton.classList.remove('bg-red-500', 'border-red-500');
            radioButton.innerHTML = '';
          });
          
          // Hide feedback
          const correctFeedback = question.querySelector('[data-feedback-correct]');
          const incorrectFeedback = question.querySelector('[data-feedback-incorrect]');
          if (correctFeedback) correctFeedback.classList.add('hidden');
          if (incorrectFeedback) incorrectFeedback.classList.add('hidden');
        });
      }
    }
    
    // Initialize quiz controller
    const quizElement = document.querySelector('[data-controller="security-quiz"]');
    if (quizElement) {
      const controller = new SecurityQuizController();
      quizElement.addEventListener('click', function(event) {
        if (event.target.closest('[data-action="click->security-quiz#checkAnswer"]')) {
          controller.checkAnswer(event);
        } else if (event.target.closest('[data-action="click->security-quiz#resetQuiz"]')) {
          controller.resetQuiz();
        }
      });
      controller.connect();
    }
  });
</script>