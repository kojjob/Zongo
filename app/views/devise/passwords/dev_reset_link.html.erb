<div class="max-w-md mx-auto py-12">
  <div class="bg-white dark:bg-gray-800 rounded-2xl p-6 shadow-lg text-center">
    <div class="mb-6">
      <div class="mx-auto w-16 h-16 bg-green-100 dark:bg-green-900 rounded-full flex items-center justify-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-green-600 dark:text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
        </svg>
      </div>
      <h2 class="mt-4 text-xl font-bold text-gray-800 dark:text-white">Development Mode: Reset Password</h2>
      <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">Use the link below to reset the password for <%= @email %></p>
    </div>
    
    <div class="bg-yellow-50 dark:bg-yellow-900/20 rounded-xl p-4 mb-6">
      <p class="text-sm text-yellow-700 dark:text-yellow-400 mb-2">
        <strong>Reset Password Link:</strong>
      </p>
      <div class="bg-white dark:bg-gray-700 p-3 rounded-lg text-left overflow-x-auto">
        <code class="text-xs text-blue-600 dark:text-blue-400 break-all"><%= @reset_link %></code>
      </div>
      <p class="text-xs text-yellow-600 dark:text-yellow-500 mt-2">
        This link will expire in 6 hours.
      </p>
    </div>
    
    <div class="space-y-4">
      <a href="<%= @reset_link %>" class="w-full inline-block py-3 rounded-xl bg-primary-600 hover:bg-primary-700 text-white font-medium text-base transition-colors">
        Reset Password Now
      </a>
      
      <%= link_to "Back to Sign In", new_user_session_path, class: "text-sm text-primary-600 hover:text-primary-500" %>
    </div>
  </div>
</div>
